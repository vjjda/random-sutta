{"tha-ap473":{"tha-ap473:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap473'><header><ul><li class='division'>{}</li>"},"tha-ap473:0.2":{"pli":"Naḷamālivagga ","html":"<li>{}</li></ul>"},"tha-ap473:0.3":{"pli":"Naḷamāliyattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap473:1.1":{"pli":"“Suvaṇṇavaṇṇaṃ sambuddhaṃ, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap473:1.2":{"pli":"Āhutīnaṃ paṭiggahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap473:1.3":{"pli":"Vipinaggena gacchantaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap473:1.4":{"pli":"Addasaṃ lokanāyakaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap473:2.1":{"pli":"Naḷamālaṃ gahetvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap473:2.2":{"pli":"nikkhamanto ca tāvade; ","html":"<span class='verse-line'>{}</span>"},"tha-ap473:2.3":{"pli":"Tatthaddasāsiṃ sambuddhaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap473:2.4":{"pli":"oghatiṇṇamanāsavaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap473:3.1":{"pli":"Pasannacitto sumano, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap473:3.2":{"pli":"naḷamālamapūjayiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap473:3.3":{"pli":"Dakkhiṇeyyaṃ mahāvīraṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap473:3.4":{"pli":"sabbalokānukampakaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap473:4.1":{"pli":"Ekatiṃse ito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap473:4.2":{"pli":"yaṃ mālamabhiropayiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap473:4.3":{"pli":"Duggatiṃ nābhijānāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap473:4.4":{"pli":"buddhapūjāyidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap473:5.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap473:5.2":{"pli":"bhavā sabbe samūhatā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap473:5.3":{"pli":"Nāgova bandhanaṃ chetvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap473:5.4":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap473:6.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap473:6.2":{"pli":"mama buddhassa santike; ","html":"<span class='verse-line'>{}</span>"},"tha-ap473:6.3":{"pli":"Tisso vijjā anuppattā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap473:6.4":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap473:7.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap473:7.2":{"pli":"vimokkhāpi ca aṭṭhime; ","html":"<span class='verse-line'>{}</span>"},"tha-ap473:7.3":{"pli":"Chaḷabhiññā sacchikatā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap473:7.4":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap473:8.1":{"pli":"Itthaṃ sudaṃ āyasmā naḷamāliyo thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap473:9.1":{"pli":"Naḷamāliyattherassāpadānaṃ paṭhamaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"tha-ap474":{"tha-ap474:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap474'><header><ul><li class='division'>{}</li>"},"tha-ap474:0.2":{"pli":"Naḷamālivagga ","html":"<li>{}</li></ul>"},"tha-ap474:0.3":{"pli":"Maṇipūjakattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap474:1.1":{"pli":"“Padumuttaro nāma jino, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap474:1.2":{"pli":"sabbadhammāna pāragū; ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:1.3":{"pli":"Vivekakāmo sambuddho, ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:1.4":{"pli":"gacchate anilañjase. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap474:2.1":{"pli":"Avidūre himavantassa, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap474:2.2":{"pli":"mahājātassaro ahu; ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:2.3":{"pli":"Tattha me bhavanaṃ āsi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:2.4":{"pli":"puññakammena saṃyutaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap474:3.1":{"pli":"Bhavanā abhinikkhamma, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap474:3.2":{"pli":"addasaṃ lokanāyakaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:3.3":{"pli":"Indīvaraṃva jalitaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:3.4":{"pli":"ādittaṃva hutāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap474:4.1":{"pli":"Vicinaṃ naddasaṃ pupphaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap474:4.2":{"pli":"pūjayissanti nāyakaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:4.3":{"pli":"Sakaṃ cittaṃ pasādetvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:4.4":{"pli":"avandiṃ satthuno ahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap474:5.1":{"pli":"Mama sīse maṇiṃ gayha, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap474:5.2":{"pli":"pūjayiṃ lokanāyakaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:5.3":{"pli":"Imāya maṇipūjāya, ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:5.4":{"pli":"vipāko hotu bhaddako. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap474:6.1":{"pli":"Padumuttaro lokavidū, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap474:6.2":{"pli":"āhutīnaṃ paṭiggaho; ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:6.3":{"pli":"Antalikkhe ṭhito satthā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:6.4":{"pli":"imaṃ gāthaṃ abhāsatha. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap474:7.1":{"pli":"‘So te ijjhatu saṅkappo, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap474:7.2":{"pli":"labhassu vipulaṃ sukhaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:7.3":{"pli":"Imāya maṇipūjāya, ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:7.4":{"pli":"anubhohi mahāyasaṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap474:8.1":{"pli":"Idaṃ vatvāna bhagavā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap474:8.2":{"pli":"jalajuttamanāmako; ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:8.3":{"pli":"Agamāsi buddhaseṭṭho, ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:8.4":{"pli":"yattha cittaṃ paṇīhitaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap474:9.1":{"pli":"Saṭṭhikappāni devindo, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap474:9.2":{"pli":"devarajjamakārayiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:9.3":{"pli":"Anekasatakkhattuñca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:9.4":{"pli":"cakkavattī ahosahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap474:10.1":{"pli":"Pubbakammaṃ sarantassa, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap474:10.2":{"pli":"devabhūtassa me sato; ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:10.3":{"pli":"Maṇi nibbattate mayhaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:10.4":{"pli":"ālokakaraṇo mamaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap474:11.1":{"pli":"Chaḷasītisahassāni, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap474:11.2":{"pli":"nāriyo me pariggahā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:11.3":{"pli":"Vicittavatthābharaṇā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:11.4":{"pli":"āmukkamaṇikuṇḍalā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap474:12.1":{"pli":"Aḷārapamhā hasulā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap474:12.2":{"pli":"susaññā tanumajjhimā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:12.3":{"pli":"Parivārenti maṃ niccaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:12.4":{"pli":"maṇipūjāyidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap474:13.1":{"pli":"Soṇṇamayā maṇimayā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap474:13.2":{"pli":"lohitaṅgamayā tathā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:13.3":{"pli":"Bhaṇḍā me sukatā honti, ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:13.4":{"pli":"yadicchasi piḷandhanā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap474:14.1":{"pli":"Kūṭāgārā gahārammā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap474:14.2":{"pli":"sayanañca mahārahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:14.3":{"pli":"Mama saṅkappamaññāya, ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:14.4":{"pli":"nibbattanti yadicchakaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap474:15.1":{"pli":"Lābhā tesaṃ suladdhañca, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap474:15.2":{"pli":"ye labhanti upassutiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:15.3":{"pli":"Puññakkhettaṃ manussānaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:15.4":{"pli":"osadhaṃ sabbapāṇinaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap474:16.1":{"pli":"Mayhampi sukataṃ kammaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap474:16.2":{"pli":"yohaṃ adakkhi nāyakaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:16.3":{"pli":"Vinipātā pamuttomhi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:16.4":{"pli":"pattomhi acalaṃ padaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap474:17.1":{"pli":"Yaṃ yaṃ yonupapajjāmi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap474:17.2":{"pli":"devattaṃ atha mānusaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:17.3":{"pli":"Divasañceva rattiñca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:17.4":{"pli":"āloko hoti me sadā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap474:18.1":{"pli":"Tāyeva maṇipūjāya, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap474:18.2":{"pli":"anubhotvāna sampadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:18.3":{"pli":"Ñāṇāloko mayā diṭṭho, ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:18.4":{"pli":"pattomhi acalaṃ padaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap474:19.1":{"pli":"Satasahassito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap474:19.2":{"pli":"yaṃ maṇiṃ abhipūjayiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:19.3":{"pli":"Duggatiṃ nābhijānāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:19.4":{"pli":"maṇipūjāyidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap474:20.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap474:20.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:20.3":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap474:21.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap474:21.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:21.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap474:22.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap474:22.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap474:22.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap474:23.1":{"pli":"Itthaṃ sudaṃ āyasmā maṇipūjako thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap474:24.1":{"pli":"Maṇipūjakattherassāpadānaṃ dutiyaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"tha-ap475":{"tha-ap475:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap475'><header><ul><li class='division'>{}</li>"},"tha-ap475:0.2":{"pli":"Naḷamālivagga ","html":"<li>{}</li></ul>"},"tha-ap475:0.3":{"pli":"Ukkāsatikattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap475:1.1":{"pli":"“Kosiyo nāma bhagavā, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap475:1.2":{"pli":"cittakūṭe vasī tadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap475:1.3":{"pli":"Jhāyī jhānarato buddho, ","html":"<span class='verse-line'>{}</span>"},"tha-ap475:1.4":{"pli":"vivekābhirato muni. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap475:2.1":{"pli":"Ajjhogāhetvā himavantaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap475:2.2":{"pli":"Nārīgaṇapurakkhato; ","html":"<span class='verse-line'>{}</span>"},"tha-ap475:2.3":{"pli":"Addasaṃ kosiyaṃ buddhaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap475:2.4":{"pli":"Puṇṇamāyeva candimaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap475:3.1":{"pli":"Ukkāsate gahetvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap475:3.2":{"pli":"parivāresahaṃ tadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap475:3.3":{"pli":"Sattarattindivaṃ ṭhatvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap475:3.4":{"pli":"aṭṭhamena agacchahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap475:4.1":{"pli":"Vuṭṭhitaṃ kosiyaṃ buddhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap475:4.2":{"pli":"sayambhuṃ aparājitaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap475:4.3":{"pli":"Pasannacitto vanditvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap475:4.4":{"pli":"ekaṃ bhikkhaṃ adāsahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap475:5.1":{"pli":"Tena kammena dvipadinda, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap475:5.2":{"pli":"lokajeṭṭha narāsabha; ","html":"<span class='verse-line'>{}</span>"},"tha-ap475:5.3":{"pli":"Uppajjiṃ tusite kāye, ","html":"<span class='verse-line'>{}</span>"},"tha-ap475:5.4":{"pli":"