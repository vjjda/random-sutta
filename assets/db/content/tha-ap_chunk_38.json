{"tha-ap430":{"tha-ap430:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap430'><header><ul><li class='division'>{}</li>"},"tha-ap430:0.2":{"pli":"Sakiṃsammajjakavagga ","html":"<li>{}</li></ul>"},"tha-ap430:0.3":{"pli":"Sucintitattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap430:1.1":{"pli":"“Nagare haṃsavatiyā, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap430:1.2":{"pli":"ahosiṃ kassako tadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:1.3":{"pli":"Kasikammena jīvāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:1.4":{"pli":"tena posemi dārake. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap430:2.1":{"pli":"Susampannaṃ tadā khettaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap430:2.2":{"pli":"Dhaññaṃ me phalinaṃ ahu; ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:2.3":{"pli":"Pākakāle ca sampatte, ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:2.4":{"pli":"Evaṃ cintesahaṃ tadā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap430:3.1":{"pli":"Nacchannaṃ nappatirūpaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap430:3.2":{"pli":"jānantassa guṇāguṇaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:3.3":{"pli":"Yohaṃ saṅghe adatvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:3.4":{"pli":"aggaṃ bhuñjeyya ce tadā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap430:4.1":{"pli":"Ayaṃ buddho asamasamo, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap430:4.2":{"pli":"dvattiṃsavaralakkhaṇo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:4.3":{"pli":"Tato pabhāvito saṅgho, ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:4.4":{"pli":"puññakkhetto anuttaro. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap430:5.1":{"pli":"Tattha dassāmahaṃ dānaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap430:5.2":{"pli":"navasassaṃ pure pure; ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:5.3":{"pli":"Evāhaṃ cintayitvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:5.4":{"pli":"haṭṭho pīṇitamānaso. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap430:6.1":{"pli":"Khettato dhaññamāhatvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap430:6.2":{"pli":"sambuddhaṃ upasaṅkamiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:6.3":{"pli":"Upasaṅkamma sambuddhaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:6.4":{"pli":"lokajeṭṭhaṃ narāsabhaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:6.5":{"pli":"Vanditvā satthuno pāde, ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:6.6":{"pli":"idaṃ vacanamabraviṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap430:7.1":{"pli":"‘Navasassañca sampannaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap430:7.2":{"pli":"āyāgosi ca tvaṃ mune; ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:7.3":{"pli":"Anukampamupādāya, ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:7.4":{"pli":"adhivāsehi cakkhuma’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap430:8.1":{"pli":"Padumuttaro lokavidū, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap430:8.2":{"pli":"āhutīnaṃ paṭiggaho; ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:8.3":{"pli":"Mama saṅkappamaññāya, ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:8.4":{"pli":"idaṃ vacanamabravi. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap430:9.1":{"pli":"‘Cattāro ca paṭipannā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap430:9.2":{"pli":"cattāro ca phale ṭhitā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:9.3":{"pli":"Esa saṅgho ujubhūto, ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:9.4":{"pli":"paññāsīlasamāhito; ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:9.5":{"pli":"Yajantānaṃ manussānaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:9.6":{"pli":"puññapekkhāna pāṇinaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap430:10.1":{"pli":"Karotopadhikaṃ puññaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap430:10.2":{"pli":"saṅghe dinnaṃ mahapphalaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:10.3":{"pli":"Tasmiṃ saṅgheva dātabbaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:10.4":{"pli":"tava sassaṃ tathetaraṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap430:11.1":{"pli":"Saṅghato uddisitvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap430:11.2":{"pli":"bhikkhū netvāna saṅgharaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:11.3":{"pli":"Paṭiyattaṃ ghare santaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:11.4":{"pli":"bhikkhusaṅghassa dehi tvaṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap430:12.1":{"pli":"Saṅghato uddisitvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap430:12.2":{"pli":"bhikkhū netvāna saṅgharaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:12.3":{"pli":"Yaṃ ghare paṭiyattaṃ me, ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:12.4":{"pli":"bhikkhusaṅghassadāsahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap430:13.1":{"pli":"Tena kammena sukatena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap430:13.2":{"pli":"cetanāpaṇidhīhi ca; ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:13.3":{"pli":"Jahitvā mānusaṃ dehaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:13.4":{"pli":"tāvatiṃsamagacchahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap430:14.1":{"pli":"Tattha me sukataṃ byamhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap430:14.2":{"pli":"sovaṇṇaṃ sappabhassaraṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:14.3":{"pli":"Saṭṭhiyojanamubbedhaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:14.4":{"pli":"tiṃsayojanavitthataṃ. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap430:15.1":{"pli":"Ekūnavīsatimaṃ bhāṇavāraṃ. ","html":"<p class='endsutta'>{}</p>"},"tha-ap430:16.1":{"pli":"Ākiṇṇaṃ bhavanaṃ mayhaṃ, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap430:16.2":{"pli":"nārīgaṇasamākulaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:16.3":{"pli":"Tattha bhutvā pivitvā ca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:16.4":{"pli":"vasāmi tidase ahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap430:17.1":{"pli":"Satānaṃ tīṇikkhattuñca, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap430:17.2":{"pli":"devarajjamakārayiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:17.3":{"pli":"Satānaṃ pañcakkhattuñca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:17.4":{"pli":"cakkavattī ahosahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:17.5":{"pli":"Padesarajjaṃ vipulaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:17.6":{"pli":"gaṇanāto asaṅkhiyaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap430:18.1":{"pli":"Bhavābhave saṃsaranto, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap430:18.2":{"pli":"labhāmi amitaṃ dhanaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:18.3":{"pli":"Bhoge me ūnatā natthi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:18.4":{"pli":"navasassassidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap430:19.1":{"pli":"Hatthiyānaṃ assayānaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap430:19.2":{"pli":"sivikaṃ sandamānikaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:19.3":{"pli":"Labhāmi sabbamevetaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:19.4":{"pli":"navasassassidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap430:20.1":{"pli":"Navavatthaṃ navaphalaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap430:20.2":{"pli":"navaggarasabhojanaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:20.3":{"pli":"Labhāmi sabbamevetaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:20.4":{"pli":"navasassassidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap430:21.1":{"pli":"Koseyyakambaliyāni, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap430:21.2":{"pli":"khomakappāsikāni ca; ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:21.3":{"pli":"Labhāmi sabbamevetaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:21.4":{"pli":"navasassassidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap430:22.1":{"pli":"Dāsīgaṇaṃ dāsagaṇaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap430:22.2":{"pli":"nāriyo ca alaṅkatā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:22.3":{"pli":"Labhāmi sabbamevetaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:22.4":{"pli":"navasassassidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap430:23.1":{"pli":"Na maṃ sītaṃ vā uṇhaṃ vā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap430:23.2":{"pli":"pariḷāho na vijjati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:23.3":{"pli":"Atho cetasikaṃ dukkhaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:23.4":{"pli":"hadaye me na vijjati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap430:24.1":{"pli":"Idaṃ khāda idaṃ bhuñja, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap430:24.2":{"pli":"imamhi sayane saya; ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:24.3":{"pli":"Labhāmi sabbamevetaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:24.4":{"pli":"navasassassidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap430:25.1":{"pli":"Ayaṃ pacchimako dāni, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap430:25.2":{"pli":"carimo vattate bhavo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:25.3":{"pli":"Ajjāpi deyyadhammo me, ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:25.4":{"pli":"phalaṃ tosesi sabbadā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap430:26.1":{"pli":"Navasassaṃ daditvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap430:26.2":{"pli":"saṅghe gaṇavaruttame; ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:26.3":{"pli":"Aṭṭhānisaṃse anubhomi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:26.4":{"pli":"kammānucchavike mama. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap430:27.1":{"pli":"Vaṇṇavā yasavā homi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap430:27.2":{"pli":"mahābhogo anītiko; ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:27.3":{"pli":"Mahāpakkho sadā homi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:27.4":{"pli":"abhejjapariso sadā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap430:28.1":{"pli":"Sabbe maṃ apacāyanti, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap430:28.2":{"pli":"ye keci pathavissitā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:28.3":{"pli":"Deyyadhammā ca ye keci, ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:28.4":{"pli":"pure pure labhāmahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap430:29.1":{"pli":"Bhikkhusaṅghassa vā majjhe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap430:29.2":{"pli":"buddhaseṭṭhassa sammukhā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:29.3":{"pli":"Sabbepi samatikkamma, ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:29.4":{"pli":"denti mameva dāyakā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap430:30.1":{"pli":"Paṭhamaṃ navasassañhi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap430:30.2":{"pli":"datvā saṅghe gaṇuttame; ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:30.3":{"pli":"Imānisaṃse anubhomi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:30.4":{"pli":"navasassassidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap430:31.1":{"pli":"Satasahassito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap430:31.2":{"pli":"yaṃ dānamadadiṃ tadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:31.3":{"pli":"Duggatiṃ nābhijānāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:31.4":{"pli":"navasassassidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap430:32.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap430:32.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:32.3":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap430:33.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap430:33.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:33.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap430:34.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap430:34.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap430:34.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap430:35.1":{"pli":"Itthaṃ sudaṃ āyasmā sucintito thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap430:36.1":{"pli":"Sucintitattherassāpadānaṃ aṭṭhamaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"tha-ap431":{"tha-ap431:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap431'><header><ul><li class='division'>{}</li>"},"tha-ap431:0.2":{"pli":"Sakiṃsammajjakavagga ","html":"<li>{}</li></ul>"},"tha-ap431:0.3":{"pli":"9 Sovaṇṇakiṅkaṇiyattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap431:1.1":{"pli":"“Saddhāya abhinikkhamma, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap431:1.2":{"pli":"pabbajiṃ anagāriyaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap431:1.3":{"pli":"Vākacīradharo āsiṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap431:1.4":{"pli":"tapokammamapassito. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap431:2.1":{"pli":"Atthadassī tu bhagavā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap431:2.2":{"pli":"lokajeṭṭho narāsabho; ","html":"<span class='verse-line'>{}</span>"},"tha-ap431:2.3":{"pli":"Uppajji tamhi samaye, ","html":"<span class='verse-line'>{}</span>"},"tha-ap431:2.4":{"pli":"tārayanto mahājanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap431:3.1":{"pli":"Balañca vata me khīṇaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap431:3.2":{"pli":"byādhinā paramena taṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap431:3.3":{"pli":"Buddhaseṭṭhaṃ saritvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap431:3.4":{"pli":"puline thūpamuttamaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap431:4.1":{"pli":"Karitvā haṭṭhacittohaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap431:4.2":{"pli":"sahatthena samokiriṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap431:4.3":{"pli":"Soṇṇakiṅkaṇipupphāni, ","html":"<span class='verse-line'>{}</span>"},"tha-ap431:4.4":{"pli":"udaggamanaso ahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap431:5.1":{"pli":"Sammukhā viya sambuddhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap431:5.2":{"pli":"thūpaṃ paricariṃ ahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap431:5.3":{"pli":"Tena cetopasādena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap431:5.4":{"pli":"atthadassissa tādino. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap431:6.1":{"pli":"Devalokaṃ gato santo, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap431:6.2":{"pli":"labhāmi vipulaṃ sukhaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap431:6.3":{"pli":"Suvaṇṇavaṇṇo tatthāsiṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap431:6.4":{"pli":"buddhapūjāyidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap431:7.1":{"pli":"Asītikoṭiyo mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap431:7.2":{"pli":"nāriyo samalaṅkatā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap431:7.3":{"pli":"Sadā mayhaṃ upaṭṭhanti, ","html":"<span class='verse-line'>{}</span>"},"tha-ap431:7.4":{"pli":"buddhapūjāyidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap431:8.1":{"pli":"Saṭṭhituriyasahassāni, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap431:8.2":{"pli":"bheriyo paṇavāni ca; ","html":"<span class='verse-line'>{}</span>"},"tha-ap431:8.3":{"pli":"Saṅkhā ca ḍiṇḍimā tattha, ","html":"<span class='verse-line'>{}</span>"},"tha-ap431:8.4":{"pli":"vaggū vajjanti dundubhī. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap431:9.1":{"pli":"Cullāsītisahassāni, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap431:9.2":{"pli":"hatthino samalaṅkatā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap431:9.3":{"pli":"Tidhāpabhinnamātaṅgā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap431:9.4":{"pli":"kuñjarā saṭṭhihāyanā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap431:10.1":{"pli":"Hemajālābhisañchannā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap431:10.2":{"pli":"upaṭṭhānaṃ karonti me; ","html":"<span class='verse-line'>{}</span>"},"tha-ap431:10.3":{"pli":"Balakāye gaje ceva, ","html":"<span class='verse-line'>{}</span>"},"tha-ap431:10.4":{"pli":"ūnatā me na vijjati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap431:11.1":{"pli":"Soṇṇakiṅkaṇipupphānaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap431:11.2":{"pli":"vipākaṃ anubhomahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap431:11.3":{"pli":"Aṭṭhapaññāsakkhattuñca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap431:11.4":{"pli":"devarajjamakārayiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap431:12.1":{"pli":"Ekasattatikkhattuñca, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap431:12.2":{"pli":"cakkavattī ahosahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap431:12.3":{"pli":"Pathabyā rajjaṃ ekasataṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap431:12.4":{"pli":"mahiyā kārayiṃ ahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap431:13.1":{"pli":"So dāni amataṃ patto, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap431:13.2":{"pli":"asaṅkhataṃ sududdasaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap431:13.3":{"pli":"Saṃyojanaparikkhīṇo, ","html":"<span class='verse-line'>{}</span>"},"tha-ap431:13.4":{"pli":"natthi dāni punabbhavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap431:14.1":{"pli":"Aṭṭhārase kappasate, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap431:14.2":{"pli":"yaṃ pupphamabhiropayiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap431:14.3":{"pli":"Duggatiṃ nābhijānāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap431:14.4":{"pli":"buddhapūjāyidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap431:15.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap431:15.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap431:15.3":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap431:16.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap431:16.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap431:16.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap431:17.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap431:17.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap431:17.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap431:18.1":{"pli":"Itthaṃ sudaṃ āyasmā sovaṇṇakiṅkaṇiyo thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap431:19.1":{"pli":"Sovaṇṇakiṅkaṇiyattherassāpadānaṃ navamaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"tha-ap432":{"tha-ap432:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap432'><header><ul><li class='division'>{}</li>"},"tha-ap432:0.2":{"pli":"Sakiṃsammajjakavagga ","html":"<li>{}</li></ul>"},"tha-ap432:0.3":{"pli":"10 Soṇṇakontarikattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap432:1.1":{"pli":"“Manobhāvaniyaṃ buddhaṃ, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap432:1.2":{"pli":"attadantaṃ samāhitaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap432:1.3":{"pli":"Iriyamānaṃ brahmapathe, ","html":"<span class='verse-line'>{}</span>"},"tha-ap432:1.4":{"pli":"cittavūpasame rataṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap432:2.1":{"pli":"Nittiṇṇaoghaṃ sambuddhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap432:2.2":{"pli":"jhāyiṃ jhānarataṃ muniṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap432:2.3":{"pli":"Upatitthaṃ samāpannaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap432:2.4":{"pli":"indivaradalappabhaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap432:3.1":{"pli":"Alābunodakaṃ gayha, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap432:3.2":{"pli":"buddhaseṭṭhaṃ upāgamiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap432:3.3":{"pli":"Buddhassa pāde dhovitvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap432:3.4":{"pli":"alābukamadāsahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap432:4.1":{"pli":"Āṇāpesi ca sambuddho, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap432:4.2":{"pli":"padumuttaranāmako; ","html":"<span class='verse-line'>{}</span>"},"tha-ap432:4.3":{"pli":"‘Iminā dakamāhatvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap432:4.4":{"pli":"pādamūle ṭhapehi me’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap432:5.1":{"pli":"Sādhūtihaṃ paṭissutvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap432:5.2":{"pli":"satthugāravatāya ca; ","html":"<span class='verse-line'>{}</span>"},"tha-ap432:5.3":{"pli":"Dakaṃ alābunāhatvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap432:5.4":{"pli":"buddhaseṭṭhaṃ upāgamiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap432:6.1":{"pli":"Anumodi mahāvīro, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap432:6.2":{"pli":"cittaṃ nibbāpayaṃ mama; ","html":"<span class='verse-line'>{}</span>"},"tha-ap432:6.3":{"pli":"‘Iminālābudānena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap432:6.4":{"pli":"saṅkappo te samijjhatu’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap432:7.1":{"pli":"Pannarasesu kappesu, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap432:7.2":{"pli":"devaloke ramiṃ ahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap432:7.3":{"pli":"Tiṃsatikkhattuṃ rājā ca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap432:7.4":{"pli":"cakkavattī ahosahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap432:8.1":{"pli":"Divā vā yadi vā rattiṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap432:8.2":{"pli":"caṅkamantassa tiṭṭhato; ","html":"<span class='verse-line'>{}</span>"},"tha-ap432:8.3":{"pli":"Sovaṇṇaṃ kontaraṃ gayha, ","html":"<span class='verse-line'>{}</span>"},"tha-ap432:8.4":{"pli":"tiṭṭhate purato mama. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap432:9.1":{"pli":"Buddhassa datvānalābuṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap432:9.2":{"pli":"labhāmi soṇṇakontaraṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap432:9.3":{"pli":"Appakampi kataṃ kāraṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap432:9.4":{"pli":"vipulaṃ hoti tādisu. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap432:10.1":{"pli":"Satasahassito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap432:10.2":{"pli":"yaṃlābumadadiṃ tadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap432:10.3":{"pli":"Duggatiṃ nābhijānāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap432:10.4":{"pli":"alābussa idaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap432:11.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap432:11.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap432:11.3":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap432:12.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap432:12.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap432:12.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap432:13.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap432:13.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap432:13.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap432:14.1":{"pli":"Itthaṃ sudaṃ āyasmā soṇṇakontariko thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap432:15.1":{"pli":"Soṇṇakontarikattherassāpadānaṃ dasamaṃ. ","html":"<p class='endsutta'>{}</p>"},"tha-ap432:16.1":{"pli":"Sakiṃsammajjakavaggo tecattālīsamo. ","html":"<p class='endsection'>{}</p>"},"tha-ap432:17.1":{"pli":"Tassuddānaṃ ","html":"<p class='uddana-intro'>{}</p>"},"tha-ap432:18.1":{"pli":"Sakiṃsammajjako thero, ","html":"<blockquote class='uddanagatha'><p><span class='verse-line'>{}</span>"},"tha-ap432:18.2":{"pli":"ekadussī ekāsanī; ","html":"<span class='verse-line'>{}</span>"},"tha-ap432:18.3":{"pli":"Kadambakoraṇḍakado, ","html":"<span class='verse-line'>{}</span>"},"tha-ap432:18.4":{"pli":"ghatassavanikopi ca. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap432:19.1":{"pli":"Sucintiko kiṅkaṇiko, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap432:19.2":{"pli":"soṇṇakontarikopi ca; ","html":"<span class='verse-line'>{}</span>"},"tha-ap432:19.3":{"pli":"Ekagāthāsatañcettha, ","html":"<span class='verse-line'>{}</span>"},"tha-ap432:19.4":{"pli":"ekasattatimeva ca. ","html":"<span class='verse-line'>{}</span></p></blockquote></article>"}},"tha-ap433":{"tha-ap433:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap433'><header><ul><li class='division'>{}</li>"},"tha-ap433:0.2":{"pli":"Ekavihārivagga ","html":"<li>{}</li></ul>"},"tha-ap433:0.3":{"pli":"1 Ekavihārikattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap433:1.1":{"pli":"“Imamhi bhaddake kappe, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap433:1.2":{"pli":"brahmabandhu mahāyaso; ","html":"<span class='verse-line'>{}</span>"},"tha-ap433:1.3":{"pli":"Kassapo nāma gottena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap433:1.4":{"pli":"uppajji vadataṃ varo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap433:2.1":{"pli":"Nippapañco nirālambo, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap433:2.2":{"pli":"ākāsasamamānaso; ","html":"<span class='verse-line'>{}</span>"},"tha-ap433:2.3":{"pli":"Suññatābahulo tādī, ","html":"<span class='verse-line'>{}</span>"},"tha-ap433:2.4":{"pli":"animittarato vasī. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap433:3.1":{"pli":"Asaṅgacitto nikleso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap433:3.2":{"pli":"asaṃsaṭṭho kule gaṇe; ","html":"<span class='verse-line'>{}</span>"},"tha-ap433:3.3":{"pli":"Mahākāruṇiko vīro, ","html":"<span class='verse-line'>{}</span>"},"tha-ap433:3.4":{"pli":"vinayopāyakovido. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap433:4.1":{"pli":"Uyyutto parakiccesu, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap433:4.2":{"pli":"vinayanto sadevake; ","html":"<span class='verse-line'>{}</span>"},"tha-ap433:4.3":{"pli":"Nibbānagamanaṃ maggaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap433:4.4":{"pli":"gatiṃ paṅkavisosanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap433:5.1":{"pli":"Amataṃ paramassādaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap433:5.2":{"pli":"jarāmaccunivāraṇaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap433:5.3":{"pli":"Mahāparisamajjhe so, ","html":"<span class='verse-line'>{}</span>"},"tha-ap433:5.4":{"pli":"nisinno lokatārako. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap433:6.1":{"pli":"Karavīkaruto nātho, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap433:6.2":{"pli":"brahmaghoso tathāgato; ","html":"<span class='verse-line'>{}</span>"},"tha-ap433:6.3":{"pli":"Uddharanto mahāduggā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap433:6.4":{"pli":"vippanaṭṭhe anāyake. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap433:7.1":{"pli":"Desento virajaṃ dhammaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap433:7.2":{"pli":"diṭṭho me lokanāyako; ","html":"<span class='verse-line'>{}</span>"},"tha-ap433:7.3":{"pli":"Tassa dhammaṃ suṇitvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap433:7.4":{"pli":"pabbajiṃ anagāriyaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap433:8.1":{"pli":"Pabbajitvā tadāpāhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap433:8.2":{"pli":"cintento jinasāsanaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap433:8.3":{"pli":"Ekakova vane ramme, ","html":"<span class='verse-line'>{}</span>"},"tha-ap433:8.4":{"pli":"vasiṃ saṃsaggapīḷito. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap433:9.1":{"pli":"Sakkāyavūpakāso me, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap433:9.2":{"pli":"hetubhūto mamābhavī; ","html":"<span class='verse-line'>{}</span>"},"tha-ap433:9.3":{"pli":"Manaso vūpakāsassa, ","html":"<span class='verse-line'>{}</span>"},"tha-ap433:9.4":{"pli":"saṃsaggabhayadassino. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap433:10.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap433:10.2":{"pli":"bhavā sabbe samūhatā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap433:10.3":{"pli":"Nāgova bandhanaṃ chetvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap433:10.4":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap433:11.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap433:11.2":{"pli":"mama buddhassa santike; ","html":"<span class='verse-line'>{}</span>"},"tha-ap433:11.3":{"pli":"Tisso vijjā anuppattā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap433:11.4":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap433:12.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap433:12.2":{"pli":"vimokkhāpi ca aṭṭhime; ","html":"<span class='verse-line'>{}</span>"},"tha-ap433:12.3":{"pli":"Chaḷabhiññā sacchikatā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap433:12.4":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap433:13.1":{"pli":"Itthaṃ sudaṃ āyasmā ekavihāriko thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap433:14.1":{"pli":"Ekavihārikattherassāpadānaṃ paṭhamaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"tha-ap434":{"tha-ap434:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap434'><header><ul><li class='division'>{}</li>"},"tha-ap434:0.2":{"pli":"Ekavihārivagga ","html":"<li>{}</li></ul>"},"tha-ap434:0.3":{"pli":"Ekasaṅkhiyattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap434:1.1":{"pli":"“Vipassino bhagavato, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap434:1.2":{"pli":"mahābodhimaho ahu; ","html":"<span class='verse-line'>{}</span>"},"tha-ap434:1.3":{"pli":"Mahājanā samāgamma, ","html":"<span class='verse-line'>{}</span>"},"tha-ap434:1.4":{"pli":"pūjenti bodhimuttamaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap434:2.1":{"pli":"Na hi taṃ orakaṃ maññe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap434:2.2":{"pli":"buddhaseṭṭho bhavissati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap434:2.3":{"pli":"Yassāyaṃ īdisā bodhi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap434:2.4":{"pli":"pūjanīyā ca satthuno. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap434:3.1":{"pli":"Tato saṅkhaṃ gahetvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap434:3.2":{"pli":"bodhirukkhamupaṭṭhahiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap434:3.3":{"pli":"Dhamanto sabbadivasaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap434:3.4":{"pli":"avandiṃ bodhimuttamaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap434:4.1":{"pli":"Āsannake kataṃ kammaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap434:4.2":{"pli":"devalokaṃ apāpayī; ","html":"<span class='verse-line'>{}</span>"},"tha-ap434:4.3":{"pli":"Kaḷevaraṃ me patitaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap434:4.4":{"pli":"devaloke ramāmahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap434:5.1":{"pli":"Saṭṭhituriyasahassāni, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap434:5.2":{"pli":"tuṭṭhahaṭṭhā pamoditā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap434:5.3":{"pli":"Sadā mayhaṃ upaṭṭhanti, ","html":"<span class='verse-line'>{}</span>"},"tha-ap434:5.4":{"pli":"buddhapūjāyidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap434:6.1":{"pli":"Ekasattatime kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap434:6.2":{"pli":"rājā āsiṃ sudassano; ","html":"<span class='verse-line'>{}</span>"},"tha-ap434:6.3":{"pli":"Cāturanto vijitāvī, ","html":"<span class='verse-line'>{}</span>"},"tha-ap434:6.4":{"pli":"jambumaṇḍassa issaro. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap434:7.1":{"pli":"Tato aṅgasatā turiyā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap434:7.2":{"pli":"parivārenti maṃ sadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap434:7.3":{"pli":"Anubhomi sakaṃ kammaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap434:7.4":{"pli":"upaṭṭhānassidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap434:8.1":{"pli":"Yaṃ yaṃ yonupapajjāmi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap434:8.2":{"pli":"devattaṃ atha mānusaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap434:8.3":{"pli":"Mātukucchigatassāpi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap434:8.4":{"pli":"vajjare bheriyo sadā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap434:9.1":{"pli":"Upaṭṭhitvāna sambuddhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap434:9.2":{"pli":"anubhutvāna sampadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap434:9.3":{"pli":"Sivaṃ sukhemaṃ amataṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap434:9.4":{"pli":"pattomhi acalaṃ padaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap434:10.1":{"pli":"Ekanavutito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap434:10.2":{"pli":"yaṃ kammamakariṃ tadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap434:10.3":{"pli":"Duggatiṃ nābhijānāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap434:10.4":{"pli":"buddhapūjāyidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap434:11.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap434:11.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap434:11.3":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap434:12.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap434:12.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap434:12.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap434:13.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap434:13.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap434:13.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap434:14.1":{"pli":"Itthaṃ sudaṃ āyasmā ekasaṅkhiyo thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap434:15.1":{"pli":"Ekasaṅkhiyattherassāpadānaṃ dutiyaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"tha-ap435":{"tha-ap435:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap435'><header><ul><li class='division'>{}</li>"},"tha-ap435:0.2":{"pli":"Ekavihārivagga ","html":"<li>{}</li></ul>"},"tha-ap435:0.3":{"pli":"3 Pāṭihīrasaññakattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap435:1.1":{"pli":"“Padumuttaro nāma jino, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap435:1.2":{"pli":"āhutīnaṃ paṭiggaho; ","html":"<span class='verse-line'>{}</span>"},"tha-ap435:1.3":{"pli":"Vasīsatasahassehi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap435:1.4":{"pli":"nagaraṃ pāvisī tadā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap435:2.1":{"pli":"Nagaraṃ pavisantassa, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap435:2.2":{"pli":"upasantassa tādino; ","html":"<span class='verse-line'>{}</span>"},"tha-ap435:2.3":{"pli":"Ratanāni pajjotiṃsu, ","html":"<span class='verse-line'>{}</span>"},"tha-ap435:2.4":{"pli":"nigghoso āsi tāvade. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap435:3.1":{"pli":"Buddhassa ānubhāvena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap435:3.2":{"pli":"bherī vajjumaghaṭṭitā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap435:3.3":{"pli":"Sayaṃ vīṇā pavajjanti, ","html":"<span class='verse-line'>{}</span>"},"tha-ap435:3.4":{"pli":"buddhassa pavisato puraṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap435:4.1":{"pli":"Buddhaseṭṭhaṃ namassāmi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap435:4.2":{"pli":"padumuttaramahāmuniṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap435:4.3":{"pli":"Pāṭihīrañca passitvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap435:4.4":{"pli":"tattha cittaṃ pasādayiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap435:5.1":{"pli":"Aho buddhā aho dhammā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap435:5.2":{"pli":"aho no satthusampadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap435:5.3":{"pli":"Acetanāpi turiyā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap435:5.4":{"pli":"sayameva pavajjare. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap435:6.1":{"pli":"Satasahassito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap435:6.2":{"pli":"yaṃ saññamalabhiṃ tadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap435:6.3":{"pli":"Duggatiṃ nābhijānāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap435:6.4":{"pli":"buddhasaññāyidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap435:7.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap435:7.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap435:7.3":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap435:8.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap435:8.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap435:8.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap435:9.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap435:9.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap435:9.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap435:10.1":{"pli":"Itthaṃ sudaṃ āyasmā pāṭihīrasaññako thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap435:11.1":{"pli":"Pāṭihīrasaññakattherassāpadānaṃ tatiyaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"tha-ap436":{"tha-ap436:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap436'><header><ul><li class='division'>{}</li>"},"tha-ap436:0.2":{"pli":"Ekavihārivagga ","html":"<li>{}</li></ul>"},"tha-ap436:0.3":{"pli":"Ñāṇatthavikattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap436:1.1":{"pli":"“Kaṇikāraṃva jalitaṃ, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap436:1.2":{"pli":"dīparukkhaṃva jotitaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap436:1.3":{"pli":"Kañcanaṃva virocantaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap436:1.4":{"pli":"addasaṃ dvipaduttamaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap436:2.1":{"pli":"Kamaṇḍaluṃ ṭhapetvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap436:2.2":{"pli":"vākacīrañca kuṇḍikaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap436:2.3":{"pli":"Ekaṃsaṃ ajinaṃ katvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap436:2.4":{"pli":"buddhaseṭṭhaṃ thaviṃ ahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap436:3.1":{"pli":"‘Tamandhakāraṃ vidhamaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap436:3.2":{"pli":"mohajālasamākulaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap436:3.3":{"pli":"Ñāṇālokaṃ dassetvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap436:3.4":{"pli":"nittiṇṇosi mahāmuni. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap436:4.1":{"pli":"Samuddharasimaṃ lokaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap436:4.2":{"pli":"sabbāvantamanuttaraṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap436:4.3":{"pli":"Ñāṇe te upamā natthi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap436:4.4":{"pli":"yāvatājagatogati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap436:5.1":{"pli":"Tena ñāṇena sabbaññū, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap436:5.2":{"pli":"iti buddho pavuccati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap436:5.3":{"pli":"Vandāmi taṃ mahāvīraṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap436:5.4":{"pli":"sabbaññutamanāvaraṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap436:6.1":{"pli":"Satasahassito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap436:6.2":{"pli":"buddhaseṭṭhaṃ thaviṃ ahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap436:6.3":{"pli":"Duggatiṃ nābhijānāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap436:6.4":{"pli":"ñāṇatthavāyidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap436:7.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap436:7.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap436:7.3":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap436:8.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap436:8.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap436:8.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap436:9.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap436:9.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap436:9.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap436:10.1":{"pli":"Itthaṃ sudaṃ āyasmā ñāṇatthaviko thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap436:11.1":{"pli":"Ñāṇatthavikattherassāpadānaṃ catutthaṃ. ","html":"<p class='endsutta'>{}</p></article>"}}}