{"thi-ap33":{"thi-ap33:0.1":{"pli":"Therīapadāna ","html":"<article id='thi-ap33'><header><ul><li class='division'>{}</li>"},"thi-ap33:0.2":{"pli":"Khattiyāvagga ","html":"<li>{}</li></ul>"},"thi-ap33:0.3":{"pli":"Uppaladāyikātherīapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"thi-ap33:1.1":{"pli":"“Nagare aruṇavatiyā, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"thi-ap33:1.2":{"pli":"aruṇo nāma khattiyo; ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:1.3":{"pli":"Tassa rañño ahuṃ bhariyā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:1.4":{"pli":"ekajjhaṃ cārayāmahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap33:2.1":{"pli":"Rahogatā nisīditvā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap33:2.2":{"pli":"evaṃ cintesahaṃ tadā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:2.3":{"pli":"‘Kusalaṃ me kataṃ natthi, ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:2.4":{"pli":"ādāya gamiyaṃ mama. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap33:3.1":{"pli":"Mahābhitāpaṃ kaṭukaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap33:3.2":{"pli":"ghorarūpaṃ sudāruṇaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:3.3":{"pli":"Nirayaṃ nūna gacchāmi, ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:3.4":{"pli":"ettha me natthi saṃsayo’. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap33:4.1":{"pli":"Evāhaṃ cintayitvāna, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap33:4.2":{"pli":"pahaṃsetvāna mānasaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:4.3":{"pli":"Rājānaṃ upagantvāna, ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:4.4":{"pli":"idaṃ vacanamabraviṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap33:5.1":{"pli":"‘Itthī nāma mayaṃ deva, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap33:5.2":{"pli":"purisānittarā ahu; ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:5.3":{"pli":"Ekaṃ me samaṇaṃ dehi, ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:5.4":{"pli":"bhojayissāmi khattiya’. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap33:6.1":{"pli":"Adāsi me tadā rājā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap33:6.2":{"pli":"samaṇaṃ bhāvitindriyaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:6.3":{"pli":"Tassa pattaṃ gahetvāna, ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:6.4":{"pli":"paramannena pūrayiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap33:7.1":{"pli":"Pūretvā paramaṃ annaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap33:7.2":{"pli":"saha sugandhalepanaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:7.3":{"pli":"Mahācelena chāditvā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:7.4":{"pli":"adāsiṃ tuṭṭhamānasā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap33:8.1":{"pli":"Tena kammena sukatena, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap33:8.2":{"pli":"cetanāpaṇidhīhi ca; ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:8.3":{"pli":"Jahitvā mānusaṃ dehaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:8.4":{"pli":"tāvatiṃsamagacchahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap33:9.1":{"pli":"Sahassadevarājūnaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap33:9.2":{"pli":"mahesittamakārayiṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:9.3":{"pli":"Sahassacakkavattīnaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:9.4":{"pli":"mahesittamakārayiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap33:10.1":{"pli":"Padesarajjaṃ vipulaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap33:10.2":{"pli":"gaṇanāto asaṅkhiyaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:10.3":{"pli":"Nānāvidhaṃ bahuṃ aññaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:10.4":{"pli":"tassa kammaphalaṃ tato. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap33:11.1":{"pli":"Uppalasseva me vaṇṇo, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap33:11.2":{"pli":"abhirūpā sudassanā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:11.3":{"pli":"Itthisabbaṅgasampannā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:11.4":{"pli":"abhijātā jutindharā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap33:12.1":{"pli":"Pacchime bhave sampatte, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap33:12.2":{"pli":"ajāyiṃ sākiye kule; ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:12.3":{"pli":"Nārīsahassapāmokkhā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:12.4":{"pli":"suddhodanasutassahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap33:13.1":{"pli":"Nibbinditvā agārehaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap33:13.2":{"pli":"pabbajiṃ anagāriyaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:13.3":{"pli":"Sattamīrattisampattā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:13.4":{"pli":"catusaccamapāpuṇiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap33:14.1":{"pli":"Cīvaraṃ piṇḍapātañca, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap33:14.2":{"pli":"paccayaṃ sayanāsanaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:14.3":{"pli":"Parimetuṃ na sakkomi, ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:14.4":{"pli":"piṇḍapātassidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap33:15.1":{"pli":"Yaṃ mayhaṃ pūritaṃ kammaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap33:15.2":{"pli":"Kusalaṃ sarase muni; ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:15.3":{"pli":"Tuyhatthāya mahāvīra, ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:15.4":{"pli":"Paricattaṃ bahuṃ mayā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap33:16.1":{"pli":"Ekattiṃse ito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap33:16.2":{"pli":"yaṃ dānamadadiṃ tadā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:16.3":{"pli":"Duggatiṃ nābhijānāmi, ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:16.4":{"pli":"piṇḍapātassidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap33:17.1":{"pli":"Dve gatiyo pajānāmi, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap33:17.2":{"pli":"devattaṃ atha mānusaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:17.3":{"pli":"Aññaṃ gatiṃ na jānāmi, ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:17.4":{"pli":"piṇḍapātassidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap33:18.1":{"pli":"Ucce kule pajānāmi, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap33:18.2":{"pli":"mahāsāle mahaddhane; ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:18.3":{"pli":"Aññe kule na jānāmi, ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:18.4":{"pli":"piṇḍapātassidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap33:19.1":{"pli":"Bhavābhave saṃsaritvā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap33:19.2":{"pli":"sukkamūlena coditā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:19.3":{"pli":"Amanāpaṃ na passāmi, ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:19.4":{"pli":"somanassakataṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap33:20.1":{"pli":"Iddhīsu ca vasī homi, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap33:20.2":{"pli":"dibbāya sotadhātuyā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:20.3":{"pli":"Cetopariyañāṇassa, ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:20.4":{"pli":"vasī homi mahāmune. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap33:21.1":{"pli":"Pubbenivāsaṃ jānāmi, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap33:21.2":{"pli":"dibbacakkhu visodhitaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:21.3":{"pli":"Sabbāsavā parikkhīṇā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:21.4":{"pli":"natthi dāni punabbhavo. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap33:22.1":{"pli":"Atthadhammaniruttīsu, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap33:22.2":{"pli":"paṭibhāne tatheva ca; ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:22.3":{"pli":"Ñāṇaṃ mama mahāvīra, ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:22.4":{"pli":"uppannaṃ tava santike. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap33:23.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap33:23.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:23.3":{"pli":"viharāmi anāsavā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap33:24.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap33:24.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:24.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap33:25.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap33:25.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"thi-ap33:25.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"thi-ap33:26.1":{"pli":"Itthaṃ sudaṃ uppaladāyikā bhikkhunī bhagavato sammukhā imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"thi-ap33:27.1":{"pli":"Uppaladāyikātheriyāpadānaṃ tatiyaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"thi-ap34":{"thi-ap34:0.1":{"pli":"Therīapadāna ","html":"<article id='thi-ap34'><header><ul><li class='division'>{}</li>"},"thi-ap34:0.2":{"pli":"Khattiyāvagga ","html":"<li>{}</li></ul>"},"thi-ap34:0.3":{"pli":"4 Siṅgālamātutherīapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"thi-ap34:1.1":{"pli":"“Padumuttaro nāma jino, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"thi-ap34:1.2":{"pli":"sabbadhammāna pāragū; ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:1.3":{"pli":"Ito satasahassamhi, ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:1.4":{"pli":"kappe uppajji nāyako. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap34:2.1":{"pli":"Tadāhaṃ haṃsavatiyaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap34:2.2":{"pli":"jātāmaccakule ahuṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:2.3":{"pli":"Nānāratanapajjote, ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:2.4":{"pli":"iddhe phīte mahaddhane. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap34:3.1":{"pli":"Pitunā saha gantvāna, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap34:3.2":{"pli":"mahājanapurakkhatā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:3.3":{"pli":"Dhammaṃ buddhassa sutvāna, ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:3.4":{"pli":"pabbajiṃ anagāriyaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap34:4.1":{"pli":"Pabbajitvāna kāyena, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap34:4.2":{"pli":"pāpakammaṃ vivajjayiṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:4.3":{"pli":"Vacīduccaritaṃ hitvā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:4.4":{"pli":"ājīvaṃ parisodhayiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap34:5.1":{"pli":"Buddhe pasannā dhamme ca, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap34:5.2":{"pli":"saṅghe ca tibbagāravā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:5.3":{"pli":"Saddhammassavane yuttā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:5.4":{"pli":"buddhadassanalālasā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap34:6.1":{"pli":"Aggaṃ saddhādhimuttānaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap34:6.2":{"pli":"assosiṃ bhikkhuniṃ tadā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:6.3":{"pli":"Taṃ ṭhānaṃ patthayitvāna, ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:6.4":{"pli":"tisso sikkhā apūrayiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap34:7.1":{"pli":"Tato maṃ sugato āha, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap34:7.2":{"pli":"karuṇānugatāsayo; ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:7.3":{"pli":"‘Yassa saddhā tathāgate, ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:7.4":{"pli":"acalā suppatiṭṭhitā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:7.5":{"pli":"Sīlañca yassa kalyāṇaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:7.6":{"pli":"ariyakantaṃ pasaṃsitaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap34:8.1":{"pli":"Saṅghe pasādo yassatthi, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap34:8.2":{"pli":"ujubhūtañca dassanaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:8.3":{"pli":"Adaliddoti taṃ āhu, ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:8.4":{"pli":"amoghaṃ tassa jīvitaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap34:9.1":{"pli":"Tasmā saddhañca sīlañca, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap34:9.2":{"pli":"pasādaṃ dhammadassanaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:9.3":{"pli":"Anuyuñjetha medhāvī, ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:9.4":{"pli":"saraṃ buddhāna sāsanaṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap34:10.1":{"pli":"Taṃ sutvāhaṃ pamuditā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap34:10.2":{"pli":"apucchiṃ paṇidhiṃ mama; ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:10.3":{"pli":"Tadā anomo amito, ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:10.4":{"pli":"byākarittha vināyako; ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:10.5":{"pli":"‘Buddhe pasannā kalyāṇī, ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:10.6":{"pli":"lacchase taṃ supatthitaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap34:11.1":{"pli":"Satasahassito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap34:11.2":{"pli":"okkākakulasambhavo; ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:11.3":{"pli":"Gotamo nāma gottena, ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:11.4":{"pli":"satthā loke bhavissati. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap34:12.1":{"pli":"Tassa dhammesu dāyādā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap34:12.2":{"pli":"orasā dhammanimmitā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:12.3":{"pli":"Siṅgālakassa mātāti, ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:12.4":{"pli":"hessati satthu sāvikā’. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap34:13.1":{"pli":"Taṃ sutvā muditā hutvā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap34:13.2":{"pli":"yāvajīvaṃ tadā jinaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:13.3":{"pli":"Mettacittā paricariṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:13.4":{"pli":"paṭipattīhi nāyakaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap34:14.1":{"pli":"Tena kammena sukatena, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap34:14.2":{"pli":"cetanāpaṇidhīhi ca; ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:14.3":{"pli":"Jahitvā mānusaṃ dehaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:14.4":{"pli":"tāvatiṃsamagacchahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap34:15.1":{"pli":"Pacchime ca bhave dāni, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap34:15.2":{"pli":"giribbajapuruttame; ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:15.3":{"pli":"Jātā seṭṭhikule phīte, ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:15.4":{"pli":"mahāratanasañcaye. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap34:16.1":{"pli":"Putto siṅgālako nāma, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap34:16.2":{"pli":"mamāsi vipathe rato; ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:16.3":{"pli":"Diṭṭhigahanapakkhando, ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:16.4":{"pli":"disāpūjanatapparo. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap34:17.1":{"pli":"Nānādisā namassantaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap34:17.2":{"pli":"piṇḍāya nagaraṃ vajaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:17.3":{"pli":"Taṃ disvā ovadī buddho, ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:17.4":{"pli":"magge ṭhatvā vināyako. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap34:18.1":{"pli":"Tassa desayato dhammaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap34:18.2":{"pli":"panādo vimhayo ahu; ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:18.3":{"pli":"Dvekoṭinaranārīnaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:18.4":{"pli":"dhammābhisamayo ahu. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap34:19.1":{"pli":"Tadāhaṃ parisaṃ gantvā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap34:19.2":{"pli":"sutvā sugatabhāsitaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:19.3":{"pli":"Sotāpattiphalaṃ pattā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:19.4":{"pli":"pabbajiṃ anagāriyaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap34:20.1":{"pli":"Na cireneva kālena, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap34:20.2":{"pli":"buddhadassanalālasā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:20.3":{"pli":"Anussatiṃ taṃ bhāvetvā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap34:20.4":{"pli":"arahattamapāpuṇiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap34:21.1":{"pli":"Dassanatthāya buddhassa, ","html":"<