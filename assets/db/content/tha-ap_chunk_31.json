{"tha-ap402":{"tha-ap402:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap402'><header><ul><li class='division'>{}</li>"},"tha-ap402:0.2":{"pli":"Pilindavacchavagga ","html":"<li>{}</li></ul>"},"tha-ap402:0.3":{"pli":"Ajitattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap402:1.1":{"pli":"“Padumuttaro nāma jino, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap402:1.2":{"pli":"sabbadhammāna pāragū; ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:1.3":{"pli":"Ajjhogāhetvā himavantaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:1.4":{"pli":"nisīdi lokanāyako. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap402:2.1":{"pli":"Nāhaṃ addakkhiṃ sambuddhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap402:2.2":{"pli":"Napi saddaṃ suṇomahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:2.3":{"pli":"Mama bhakkhaṃ gavesanto, ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:2.4":{"pli":"Āhiṇḍāmi vane ahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap402:3.1":{"pli":"Tatthaddassāsiṃ sambuddhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap402:3.2":{"pli":"dvattiṃsavaralakkhaṇaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:3.3":{"pli":"Disvāna vittimāpajjiṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:3.4":{"pli":"satto ko nāmayaṃ bhave. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap402:4.1":{"pli":"Lakkhaṇāni viloketvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap402:4.2":{"pli":"mama vijjaṃ anussariṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:4.3":{"pli":"Sutañhi metaṃ vuḍḍhānaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:4.4":{"pli":"paṇḍitānaṃ subhāsitaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap402:5.1":{"pli":"Tesaṃ yathā taṃ vacanaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap402:5.2":{"pli":"ayaṃ buddho bhavissati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:5.3":{"pli":"Yannūnāhaṃ sakkareyyaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:5.4":{"pli":"gatiṃ me sodhayissati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap402:6.1":{"pli":"Khippaṃ assamamāgantvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap402:6.2":{"pli":"madhutelaṃ gahiṃ ahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:6.3":{"pli":"Kolambakaṃ gahetvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:6.4":{"pli":"upagacchiṃ vināyakaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap402:7.1":{"pli":"Tidaṇḍake gahetvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap402:7.2":{"pli":"abbhokāse ṭhapesahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:7.3":{"pli":"Padīpaṃ pajjalitvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:7.4":{"pli":"aṭṭhakkhattuṃ avandahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap402:8.1":{"pli":"Sattarattindivaṃ buddho, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap402:8.2":{"pli":"nisīdi purisuttamo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:8.3":{"pli":"Tato ratyā vivasāne, ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:8.4":{"pli":"vuṭṭhāsi lokanāyako. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap402:9.1":{"pli":"Pasannacitto sumano, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap402:9.2":{"pli":"sabbarattindivaṃ ahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:9.3":{"pli":"Dīpaṃ buddhassa pādāsiṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:9.4":{"pli":"pasanno sehi pāṇibhi. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap402:10.1":{"pli":"Sabbe vanā gandhamayā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap402:10.2":{"pli":"Pabbate gandhamādane; ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:10.3":{"pli":"Buddhassa ānubhāvena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:10.4":{"pli":"Āgacchuṃ buddhasantikaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap402:11.1":{"pli":"Ye keci pupphagandhāse, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap402:11.2":{"pli":"pupphitā dharaṇīruhā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:11.3":{"pli":"Buddhassa ānubhāvena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:11.4":{"pli":"sabbe sannipatuṃ tadā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap402:12.1":{"pli":"Yāvatā himavantamhi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap402:12.2":{"pli":"nāgā ca garuḷā ubho; ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:12.3":{"pli":"Dhammañca sotukāmā te, ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:12.4":{"pli":"āgacchuṃ buddhasantikaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap402:13.1":{"pli":"Devalo nāma samaṇo, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap402:13.2":{"pli":"buddhassa aggasāvako; ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:13.3":{"pli":"Vasīsatasahassehi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:13.4":{"pli":"buddhasantikupāgami. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap402:14.1":{"pli":"Padumuttaro lokavidū, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap402:14.2":{"pli":"āhutīnaṃ paṭiggaho; ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:14.3":{"pli":"Bhikkhusaṅghe nisīditvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:14.4":{"pli":"imā gāthā abhāsatha. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap402:15.1":{"pli":"‘Yo me dīpaṃ padīpesi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap402:15.2":{"pli":"pasanno sehi pāṇibhi; ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:15.3":{"pli":"Tamahaṃ kittayissāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:15.4":{"pli":"suṇātha mama bhāsato. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap402:16.1":{"pli":"Saṭṭhi kappasahassāni, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap402:16.2":{"pli":"devaloke ramissati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:16.3":{"pli":"Sahassakkhattuṃ rājā ca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:16.4":{"pli":"cakkavattī bhavissati. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap402:17.1":{"pli":"Soḷasamaṃ bhāṇavāraṃ. ","html":"<p class='endsutta'>{}</p>"},"tha-ap402:18.1":{"pli":"Chattiṃsakkhattuṃ devindo, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap402:18.2":{"pli":"devarajjaṃ karissati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:18.3":{"pli":"Pathaviyaṃ sattasataṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:18.4":{"pli":"vipulaṃ rajjaṃ karissati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap402:19.1":{"pli":"Padesarajjaṃ vipulaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap402:19.2":{"pli":"gaṇanāto asaṅkhiyaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:19.3":{"pli":"Iminā dīpadānena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:19.4":{"pli":"dibbacakkhu bhavissati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap402:20.1":{"pli":"Samantato aṭṭhakosaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap402:20.2":{"pli":"passissati ayaṃ sadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:20.3":{"pli":"Devalokā cavantassa, ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:20.4":{"pli":"nibbattantassa jantuno. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap402:21.1":{"pli":"Divā vā yadi vā rattiṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap402:21.2":{"pli":"padīpaṃ dhārayissati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:21.3":{"pli":"Jāyamānassa sattassa, ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:21.4":{"pli":"puññakammasamaṅgino. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap402:22.1":{"pli":"Yāvatā nagaraṃ āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap402:22.2":{"pli":"tāvatā jotayissati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:22.3":{"pli":"Upapajjati yaṃ yoniṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:22.4":{"pli":"devattaṃ atha mānusaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap402:23.1":{"pli":"Asseva dīpadānassa, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap402:23.2":{"pli":"aṭṭhadīpaphalena hi; ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:23.3":{"pli":"Na jayissantimaṃ jantū, ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:23.4":{"pli":"dīpadānassidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap402:24.1":{"pli":"Kappasatasahassamhi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap402:24.2":{"pli":"okkākakulasambhavo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:24.3":{"pli":"Gotamo nāma gottena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:24.4":{"pli":"satthā loke bhavissati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap402:25.1":{"pli":"Tassa dhammesu dāyādo, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap402:25.2":{"pli":"oraso dhammanimmito; ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:25.3":{"pli":"Sabbāsave pariññāya, ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:25.4":{"pli":"nibbāyissatināsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap402:26.1":{"pli":"Tosayitvāna sambuddhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap402:26.2":{"pli":"gotamaṃ sakyapuṅgavaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:26.3":{"pli":"Ajito nāma nāmena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:26.4":{"pli":"hessati satthu sāvako’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap402:27.1":{"pli":"Saṭṭhi kappasahassāni, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap402:27.2":{"pli":"devaloke ramiṃ ahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:27.3":{"pli":"Tatrāpi me dīpasataṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:27.4":{"pli":"jotate niccakālikaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap402:28.1":{"pli":"Devaloke manusse vā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap402:28.2":{"pli":"niddhāvanti pabhā mama; ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:28.3":{"pli":"Buddhaseṭṭhaṃ saritvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:28.4":{"pli":"bhiyyo hāsaṃ janesahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap402:29.1":{"pli":"Tusitāhaṃ cavitvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap402:29.2":{"pli":"okkamiṃ mātukucchiyaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:29.3":{"pli":"Jāyamānassa santassa, ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:29.4":{"pli":"āloko vipulo ahu. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap402:30.1":{"pli":"Agārā abhinikkhamma, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap402:30.2":{"pli":"pabbajiṃ anagāriyaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:30.3":{"pli":"Bāvariṃ upasaṅkamma, ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:30.4":{"pli":"sissattaṃ ajjhupāgamiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap402:31.1":{"pli":"Himavante vasantohaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap402:31.2":{"pli":"assosiṃ lokanāyakaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:31.3":{"pli":"Uttamatthaṃ gavesanto, ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:31.4":{"pli":"upagacchiṃ vināyakaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap402:32.1":{"pli":"Danto buddho dametāvī, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap402:32.2":{"pli":"oghatiṇṇo nirūpadhi; ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:32.3":{"pli":"Nibbānaṃ kathayī buddho, ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:32.4":{"pli":"sabbadukkhappamocanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap402:33.1":{"pli":"Taṃ me āgamanaṃ siddhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap402:33.2":{"pli":"tositohaṃ mahāmuniṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:33.3":{"pli":"Tisso vijjā anuppattā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:33.4":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap402:34.1":{"pli":"Satasahassito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap402:34.2":{"pli":"yaṃ dīpamadadiṃ tadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:34.3":{"pli":"Duggatiṃ nābhijānāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:34.4":{"pli":"dīpadānassidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap402:35.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap402:35.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:35.3":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap402:36.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap402:36.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:36.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap402:37.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap402:37.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:37.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap402:38.1":{"pli":"Itthaṃ sudaṃ āyasmā ajito thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap402:39.1":{"pli":"Ajitattherassāpadānaṃ dasamaṃ. ","html":"<p class='endsutta'>{}</p>"},"tha-ap402:39.2":{"pli":"Pilindavacchavaggo cattālīsamo. ","html":"<p class='endsection'>{}</p>"},"tha-ap402:40.1":{"pli":"Tassuddānaṃ ","html":"<p class='uddana-intro'>{}</p>"},"tha-ap402:41.1":{"pli":"Pilindavaccho selo ca, ","html":"<blockquote class='uddanagatha'><p><span class='verse-line'>{}</span>"},"tha-ap402:41.2":{"pli":"sabbakittī madhundado; ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:41.3":{"pli":"Kūṭāgārī bākulo ca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:41.4":{"pli":"giri saḷalasavhayo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap402:42.1":{"pli":"Sabbado ajito ceva, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap402:42.2":{"pli":"gāthāyo gaṇitā iha; ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:42.3":{"pli":"Satāni pañca gāthānaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:42.4":{"pli":"vīsati ca taduttarīti. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap402:43.1":{"pli":"Atha vagguddānaṃ ","html":"<p class='uddana-intro'>{}</p>"},"tha-ap402:44.1":{"pli":"Padumārakkhado ceva, ","html":"<blockquote class='uddanagatha'><p><span class='verse-line'>{}</span>"},"tha-ap402:44.2":{"pli":"umā gandhodakena ca; ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:44.3":{"pli":"Ekapadma saddasaññī, ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:44.4":{"pli":"mandāraṃ bodhivandako. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap402:45.1":{"pli":"Avaṭañca pilindi ca, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap402:45.2":{"pli":"gāthāyo gaṇitā iha; ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:45.3":{"pli":"Catusattati gāthāyo, ","html":"<span class='verse-line'>{}</span>"},"tha-ap402:45.4":{"pli":"ekādasa satāni ca. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap402:46.1":{"pli":"Padumavaggadasakaṃ. ","html":"<p class='endsutta'>{}</p>"},"tha-ap402:47.1":{"pli":"Catutthasatakaṃ samattaṃ. ","html":"<p class='endsection'>{}</p></article>"}},"tha-ap403":{"tha-ap403:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap403'><header><ul><li class='division'>{}</li>"},"tha-ap403:0.2":{"pli":"Metteyyavagga ","html":"<li>{}</li></ul>"},"tha-ap403:0.3":{"pli":"Tissametteyyattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap403:1.1":{"pli":"“Pabbhārakūṭaṃ nissāya, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap403:1.2":{"pli":"sobhito nāma tāpaso; ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:1.3":{"pli":"Pavattaphalaṃ bhuñjitvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:1.4":{"pli":"vasati pabbatantare. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap403:2.1":{"pli":"Aggiṃ dāruṃ āharitvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap403:2.2":{"pli":"ujjālesiṃ ahaṃ tadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:2.3":{"pli":"Uttamatthaṃ gavesanto, ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:2.4":{"pli":"brahmalokūpapattiyā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap403:3.1":{"pli":"Padumuttaro lokavidū, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap403:3.2":{"pli":"āhutīnaṃ paṭiggaho; ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:3.3":{"pli":"Mamuddharitukāmo so, ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:3.4":{"pli":"āgacchi mama santike. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap403:4.1":{"pli":"‘Kiṃ karosi mahāpuñña, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap403:4.2":{"pli":"dehi me aggidārukaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:4.3":{"pli":"Ahamaggiṃ paricare, ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:4.4":{"pli":"tato me suddhi hohiti’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap403:5.1":{"pli":"‘Subhaddako tvaṃ manuje, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap403:5.2":{"pli":"devate tvaṃ pajānasi; ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:5.3":{"pli":"Tuvaṃ aggiṃ paricara, ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:5.4":{"pli":"handa te aggidārukaṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap403:6.1":{"pli":"Tato kaṭṭhaṃ gahetvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap403:6.2":{"pli":"aggiṃ ujjālayī jino; ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:6.3":{"pli":"Na tattha kaṭṭhaṃ pajjhāyi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:6.4":{"pli":"pāṭiheraṃ mahesino. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap403:7.1":{"pli":"‘Na te aggi pajjalati, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap403:7.2":{"pli":"āhutī te na vijjati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:7.3":{"pli":"Niratthakaṃ vataṃ tuyhaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:7.4":{"pli":"aggiṃ paricarassu me’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap403:8.1":{"pli":"‘Kīdiso so mahāvīra, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap403:8.2":{"pli":"aggi tava pavuccati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:8.3":{"pli":"Mayhampi kathayassetaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:8.4":{"pli":"ubho paricarāmase’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap403:9.1":{"pli":"‘Hetudhammanirodhāya, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap403:9.2":{"pli":"kilesasamaṇāya ca; ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:9.3":{"pli":"Issāmacchariyaṃ hitvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:9.4":{"pli":"tayo ete mamāhutī’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap403:10.1":{"pli":"‘Kīdiso tvaṃ mahāvīra, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap403:10.2":{"pli":"kathaṃ gottosi mārisa; ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:10.3":{"pli":"Ācārapaṭipatti te, ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:10.4":{"pli":"bāḷhaṃ kho mama ruccati’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap403:11.1":{"pli":"‘Khattiyamhi kule jāto, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap403:11.2":{"pli":"abhiññāpāramiṃ gato; ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:11.3":{"pli":"Sabbāsavaparikkhīṇo, ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:11.4":{"pli":"natthi dāni punabbhavo’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap403:12.1":{"pli":"‘Yadi buddhosi sabbaññū, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap403:12.2":{"pli":"pabhaṅkara tamonuda; ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:12.3":{"pli":"Namassissāmi taṃ deva, ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:12.4":{"pli":"dukkhassantakaro tuvaṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap403:13.1":{"pli":"Pattharitvājinacammaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap403:13.2":{"pli":"nisīdanamadāsahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:13.3":{"pli":"Nisīda nātha sabbaññu, ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:13.4":{"pli":"upaṭṭhissāmahaṃ tuvaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap403:14.1":{"pli":"Nisīdi bhagavā tattha, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap403:14.2":{"pli":"ajinamhi suvitthate; ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:14.3":{"pli":"Nimantayitvā sambuddhaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:14.4":{"pli":"pabbataṃ agamāsahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap403:15.1":{"pli":"Khāribhārañca pūretvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap403:15.2":{"pli":"tindukaphalamāhariṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:15.3":{"pli":"Madhunā yojayitvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:15.4":{"pli":"phalaṃ buddhassadāsahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap403:16.1":{"pli":"Mama nijjhāyamānassa, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap403:16.2":{"pli":"paribhuñji tadā jino; ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:16.3":{"pli":"Tattha cittaṃ pasādesiṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:16.4":{"pli":"pekkhanto lokanāyakaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap403:17.1":{"pli":"Padumuttaro lokavidū, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap403:17.2":{"pli":"āhutīnaṃ paṭiggaho; ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:17.3":{"pli":"Mamassame nisīditvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:17.4":{"pli":"imā gāthā abhāsatha. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap403:18.1":{"pli":"‘Yo maṃ phalena tappesi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap403:18.2":{"pli":"pasanno sehi pāṇibhi; ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:18.3":{"pli":"Tamahaṃ kittayissāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:18.4":{"pli":"suṇātha mama bhāsato. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap403:19.1":{"pli":"Pañcavīsatikkhattuṃ so, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap403:19.2":{"pli":"devarajjaṃ karissati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:19.3":{"pli":"Sahassakkhattuṃ rājā ca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:19.4":{"pli":"cakkavattī bhavissati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap403:20.1":{"pli":"Tassa saṅkappamaññāya, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap403:20.2":{"pli":"pubbakammasamaṅgino; ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:20.3":{"pli":"Annaṃ pānañca vatthañca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:20.4":{"pli":"sayanañca mahārahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap403:21.1":{"pli":"Puññakammena saṃyuttā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap403:21.2":{"pli":"nibbattissanti tāvade; ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:21.3":{"pli":"Sadā pamudito cāyaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:21.4":{"pli":"bhavissati anāmayo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap403:22.1":{"pli":"Upapajjati yaṃ yoniṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap403:22.2":{"pli":"devattaṃ atha mānusaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:22.3":{"pli":"Sabbattha sukhito hutvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:22.4":{"pli":"manussattaṃ gamissati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap403:23.1":{"pli":"Ajjhāyako mantadharo, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap403:23.2":{"pli":"tiṇṇaṃ vedāna pāragū; ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:23.3":{"pli":"Sambuddhaṃ upagantvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:23.4":{"pli":"arahā so bhavissati’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap403:24.1":{"pli":"Yato sarāmi attānaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap403:24.2":{"pli":"yato pattosmi viññutaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:24.3":{"pli":"Bhoge me ūnatā natthi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:24.4":{"pli":"phaladānassidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap403:25.1":{"pli":"Varadhammamanuppatto, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap403:25.2":{"pli":"rāgadose samūhaniṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:25.3":{"pli":"Sabbāsavaparikkhīṇo, ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:25.4":{"pli":"natthi dāni punabbhavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap403:26.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap403:26.2":{"pli":"bhavā sabbe samūhatā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:26.3":{"pli":"Nāgova bandhanaṃ chetvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:26.4":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap403:27.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap403:27.2":{"pli":"mama buddhassa santike; ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:27.3":{"pli":"Tisso vijjā anuppattā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:27.4":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap403:28.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap403:28.2":{"pli":"vimokkhāpi ca aṭṭhime; ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:28.3":{"pli":"Chaḷabhiññā sacchikatā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap403:28.4":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap403:29.1":{"pli":"Itthaṃ sudaṃ āyasmā tissametteyyo thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap403:30.1":{"pli":"Tissametteyyattherassāpadānaṃ paṭhamaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"tha-ap404":{"tha-ap404:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap404'><header><ul><li class='division'>{}</li>"},"tha-ap404:0.2":{"pli":"Metteyyavagga ","html":"<li>{}</li></ul>"},"tha-ap404:0.3":{"pli":"Puṇṇakattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap404:1.1":{"pli":"“Pabbhārakūṭaṃ nissāya, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap404:1.2":{"pli":"sayambhū aparājito; ","html":"<span class='verse-line'>{}</span>"},"tha-ap404:1.3":{"pli":"Ābādhiko ca so buddho, ","html":"<span class='verse-line'>{}</span>"},"tha-ap404:1.4":{"pli":"vasati pabbatantare. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap404:2.1":{"pli":"Mama assamasāmantā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap404:2.2":{"pli":"panādo āsi tāvade; ","html":"<span class='verse-line'>{}</span>"},"tha-ap404:2.3":{"pli":"Buddhe nibbāyamānamhi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap404:2.4":{"pli":"āloko udapajjatha. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap404:3.1":{"pli":"Yāvatā vanasaṇḍasmiṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap404:3.2":{"pli":"acchakokataracchakā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap404:3.3":{"pli":"Vāḷā ca kesarī sabbe, ","html":"<span class='verse-line'>{}</span>"},"tha-ap404:3.4":{"pli":"abhigajjiṃsu tāvade. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap404:4.1":{"pli":"Uppātaṃ tamahaṃ disvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap404:4.2":{"pli":"pabbhāraṃ agamāsahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap404:4.3":{"pli":"Tatthaddassāsiṃ sambuddhaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap404:4.4":{"pli":"nibbutaṃ aparājitaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap404:5.1":{"pli":"Suphullaṃ sālarājaṃva, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap404:5.2":{"pli":"sataraṃsiṃva uggataṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap404:5.3":{"pli":"Vītaccikaṃva aṅgāraṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap404:5.4":{"pli":"nibbutaṃ aparājitaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap404:6.1":{"pli":"Tiṇaṃ kaṭṭhañca pūretvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap404:6.2":{"pli":"citakaṃ tatthakāsahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap404:6.3":{"pli":"Citakaṃ sukataṃ katvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap404:6.4":{"pli":"sarīraṃ jhāpayiṃ ahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap404:7.1":{"pli":"Sarīraṃ jhāpayitvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap404:7.2":{"pli":"gandhatoyaṃ samokiriṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap404:7.3":{"pli":"Antalikkhe ṭhito yakkho, ","html":"<span class='verse-line'>{}</span>"},"tha-ap404:7.4":{"pli":"nāmamaggahi tāvade. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap404:8.1":{"pli":"‘Yaṃ pūritaṃ tayā kiccaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap404:8.2":{"pli":"sayambhussa mahesino; ","html":"<span class='verse-line'>{}</span>"},"tha-ap404:8.3":{"pli":"Puṇṇako nāma nāmena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap404:8.4":{"pli":"sadā hohi tuvaṃ mune’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap404:9.1":{"pli":"Tamhā kāyā cavitvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap404:9.2":{"pli":"devalokaṃ agacchahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap404:9.3":{"pli":"Tattha dibbamayo gandho, ","html":"<span class='verse-line'>{}</span>"},"tha-ap404:9.4":{"pli":"antalikkhā pavassati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap404:10.1":{"pli":"Tatrāpi nāmadheyyaṃ me, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap404:10.2":{"pli":"puṇṇakoti ahū tadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap404:10.3":{"pli":"Devabhūto manusso vā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap404:10.4":{"pli":"saṅkappaṃ pūrayāmahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap404:11.1":{"pli":"Idaṃ pacchimakaṃ mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap404:11.2":{"pli":"carimo vattate bhavo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap404:11.3":{"pli":"Idhāpi puṇṇako nāma, ","html":"<span class='verse-line'>{}</span>"},"tha-ap404:11.4":{"pli":"nāmadheyyaṃ pakāsati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap404:12.1":{"pli":"Tosayitvāna sambuddhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap404:12.2":{"pli":"gotamaṃ sakyapuṅgavaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap404:12.3":{"pli":"Sabbāsave pariññāya, ","html":"<span class='verse-line'>{}</span>"},"tha-ap404:12.4":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap404:13.1":{"pli":"Ekanavutito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap404:13.2":{"pli":"yaṃ kammamakariṃ tadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap404:13.3":{"pli":"Duggatiṃ nābhijānāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap404:13.4":{"pli":"tanukiccassidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap404:14.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap404:14.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap404:14.3":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap404:15.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap404:15.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap404:15.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap404:16.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap404:16.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap404:16.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap404:17.1":{"pli":"Itthaṃ sudaṃ āyasmā puṇṇako thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap404:18.1":{"pli":"Puṇṇakattherassāpadānaṃ dutiyaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"tha-ap405":{"tha-ap405:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap405'><header><ul><li class='division'>{}</li>"},"tha-ap405:0.2":{"pli":"Metteyyavagga ","html":"<li>{}</li></ul>"},"tha-ap405:0.3":{"pli":"Mettaguttheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap405:1.1":{"pli":"“Himavantassāvidūre, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap405:1.2":{"pli":"asoko nāma pabbato; ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:1.3":{"pli":"Tatthāsi assamo mayhaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:1.4":{"pli":"vissakammena māpito. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap405:2.1":{"pli":"Sumedho nāma sambuddho, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap405:2.2":{"pli":"aggo kāruṇiko muni; ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:2.3":{"pli":"Nivāsayitvā pubbaṇhe, ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:2.4":{"pli":"piṇḍāya me upāgami. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap405:3.1":{"pli":"Upāgataṃ mahāvīraṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap405:3.2":{"pli":"sumedhaṃ lokanāyakaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:3.3":{"pli":"Paggayha sugatapattaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:3.4":{"pli":"sappitelaṃ apūrayiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap405:4.1":{"pli":"Datvānahaṃ buddhaseṭṭhe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap405:4.2":{"pli":"sumedhe lokanāyake; ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:4.3":{"pli":"Añjaliṃ paggahetvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:4.4":{"pli":"bhiyyo hāsaṃ janesahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap405:5.1":{"pli":"Iminā sappidānena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap405:5.2":{"pli":"cetanāpaṇidhīhi ca; ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:5.3":{"pli":"Devabhūto manusso vā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:5.4":{"pli":"labhāmi vipulaṃ sukhaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap405:6.1":{"pli":"Vinipātaṃ vivajjetvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap405:6.2":{"pli":"saṃsarāmi bhavābhave; ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:6.3":{"pli":"Tattha cittaṃ paṇidhitvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:6.4":{"pli":"labhāmi acalaṃ padaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap405:7.1":{"pli":"‘Lābhā tuyhaṃ suladdhaṃ te, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap405:7.2":{"pli":"yaṃ maṃ addakkhi brāhmaṇa; ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:7.3":{"pli":"Mama dassanamāgamma, ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:7.4":{"pli":"arahattaṃ bhavissati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap405:8.1":{"pli":"Vissattho hohi mā bhāyi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap405:8.2":{"pli":"adhigantvā mahāyasaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:8.3":{"pli":"Mamañhi sappiṃ datvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:8.4":{"pli":"parimokkhasi jātiyā’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap405:9.1":{"pli":"Iminā sappidānena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap405:9.2":{"pli":"cetanāpaṇidhīhi ca; ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:9.3":{"pli":"Devabhūto manusso vā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:9.4":{"pli":"labhase vipulaṃ sukhaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap405:10.1":{"pli":"Iminā sappidānena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap405:10.2":{"pli":"mettacittavatāya ca; ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:10.3":{"pli":"Aṭṭhārase kappasate, ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:10.4":{"pli":"devaloke ramissasi. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap405:11.1":{"pli":"Aṭṭhatiṃsatikkhattuñca, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap405:11.2":{"pli":"devarājā bhavissasi; ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:11.3":{"pli":"Padesarajjaṃ vipulaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:11.4":{"pli":"gaṇanāto asaṅkhiyaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap405:12.1":{"pli":"Ekapaññāsakkhattuñca, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap405:12.2":{"pli":"cakkavattī bhavissasi; ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:12.3":{"pli":"Cāturanto vijitāvī, ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:12.4":{"pli":"jambumaṇḍassa issaro. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap405:13.1":{"pli":"Mahāsamuddovakkhobho, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap405:13.2":{"pli":"duddharo pathavī yathā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:13.3":{"pli":"Evamevaṃ ca te bhogā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:13.4":{"pli":"appameyyā bhavissare. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap405:14.1":{"pli":"Saṭṭhikoṭī hiraññassa, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap405:14.2":{"pli":"cajitvā pabbajiṃ ahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:14.3":{"pli":"Kiṃ kusalaṃ gavesanto, ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:14.4":{"pli":"bāvariṃ upasaṅkamiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap405:15.1":{"pli":"Tattha mante adhīyāmi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap405:15.2":{"pli":"chaḷaṅgaṃ nāma lakkhaṇaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:15.3":{"pli":"Tamandhakāraṃ vidhamaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:15.4":{"pli":"uppajji tvaṃ mahāmuni. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap405:16.1":{"pli":"Tava dassanakāmohaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap405:16.2":{"pli":"āgatomhi mahāmuni; ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:16.3":{"pli":"Tava dhammaṃ suṇitvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:16.4":{"pli":"pattomhi acalaṃ padaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap405:17.1":{"pli":"Tiṃsakappasahassamhi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap405:17.2":{"pli":"sappiṃ buddhassadāsahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:17.3":{"pli":"Etthantare nābhijāne, ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:17.4":{"pli":"sappiṃ viññāpitaṃ mayā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap405:18.1":{"pli":"Mama saṅkappamaññāya, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap405:18.2":{"pli":"uppajjati yadicchakaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:18.3":{"pli":"Cittamaññāya nibbattaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:18.4":{"pli":"sabbe santappayāmahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap405:19.1":{"pli":"Aho buddhā aho dhammā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap405:19.2":{"pli":"aho no satthu sampadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:19.3":{"pli":"Thokañhi sappiṃ datvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:19.4":{"pli":"appameyyaṃ labhāmahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap405:20.1":{"pli":"Mahāsamudde udakaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap405:20.2":{"pli":"yāvatā nerupassato; ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:20.3":{"pli":"Mama sappiṃ upādāya, ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:20.4":{"pli":"kalabhāgaṃ na hessati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap405:21.1":{"pli":"Yāvatā cakkavāḷassa, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap405:21.2":{"pli":"kariyantassa rāsito; ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:21.3":{"pli":"Mama nibbattavatthānaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:21.4":{"pli":"okāso so na sammati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap405:22.1":{"pli":"Pabbatarājā himavā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap405:22.2":{"pli":"pavaropi siluccayo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:22.3":{"pli":"Mamānulittagandhassa, ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:22.4":{"pli":"upanidhiṃ na hessati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap405:23.1":{"pli":"Vatthaṃ gandhañca sappiñca, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap405:23.2":{"pli":"aññañca diṭṭhadhammikaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:23.3":{"pli":"Asaṅkhatañca nibbānaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:23.4":{"pli":"sappidānassidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap405:24.1":{"pli":"Satipaṭṭhānasayano, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap405:24.2":{"pli":"samādhijhānagocaro; ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:24.3":{"pli":"Bojjhaṅgabhojano ajja, ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:24.4":{"pli":"sappidānassidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap405:25.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap405:25.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:25.3":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap405:26.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap405:26.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:26.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap405:27.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap405:27.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap405:27.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap405:28.1":{"pli":"Itthaṃ sudaṃ āyasmā mettagū thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap405:29.1":{"pli":"Mettaguttherassāpadānaṃ tatiyaṃ. ","html":"<p class='endsutta'>{}</p></article>"}}}