{"cnd1":{"cnd1:0.1":{"pli":"Cūḷaniddesa ","html":"<article id='cnd1'><header><ul><li class='division'>{}</li>"},"cnd1:0.2":{"pli":"Pārāyanavaggagāthā ","html":"<li>{}</li></ul>"},"cnd1:0.3":{"pli":"1. Vatthugāthā ","html":"<h1 class='sutta-title'>{}</h1></header>"},"cnd1:0.4":{"pli":"Namo tassa Bhagavato Arahato Sammāsambuddhassa. ","html":"<p class='namo'>{}</p>"},"cnd1:1.1":{"pli":"Kosalānaṃ purā rammā, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"cnd1:1.2":{"pli":"agamā dakkhiṇāpathaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd1:1.3":{"pli":"Ākiñcaññaṃ patthayāno, ","html":"<span class='verse-line'>{}</span>"},"cnd1:1.4":{"pli":"brāhmaṇo mantapāragū. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:2.1":{"pli":"So assakassa visaye, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:2.2":{"pli":"maḷakassa samāsane; ","html":"<span class='verse-line'>{}</span>"},"cnd1:2.3":{"pli":"Vasi godhāvarīkūle, ","html":"<span class='verse-line'>{}</span>"},"cnd1:2.4":{"pli":"uñchena ca phalena ca. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:3.1":{"pli":"Tasseva upanissāya, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:3.2":{"pli":"gāmo ca vipulo ahu; ","html":"<span class='verse-line'>{}</span>"},"cnd1:3.3":{"pli":"Tato jātena āyena, ","html":"<span class='verse-line'>{}</span>"},"cnd1:3.4":{"pli":"mahāyaññamakappayi. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:4.1":{"pli":"Mahāyaññaṃ yajitvāna, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:4.2":{"pli":"puna pāvisi assamaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd1:4.3":{"pli":"Tasmiṃ paṭipaviṭṭhamhi, ","html":"<span class='verse-line'>{}</span>"},"cnd1:4.4":{"pli":"añño āgañchi brāhmaṇo. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:5.1":{"pli":"Ugghaṭṭapādo tasito, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:5.2":{"pli":"paṅkadanto rajassiro; ","html":"<span class='verse-line'>{}</span>"},"cnd1:5.3":{"pli":"So ca naṃ upasaṅkamma, ","html":"<span class='verse-line'>{}</span>"},"cnd1:5.4":{"pli":"satāni pañca yācati. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:6.1":{"pli":"Tamenaṃ bāvarī disvā, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:6.2":{"pli":"āsanena nimantayi; ","html":"<span class='verse-line'>{}</span>"},"cnd1:6.3":{"pli":"Sukhañca kusalaṃ pucchi, ","html":"<span class='verse-line'>{}</span>"},"cnd1:6.4":{"pli":"idaṃ vacanamabravi. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:7.1":{"pli":"“Yaṃ kho mama deyyadhammaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:7.2":{"pli":"Sabbaṃ visajjitaṃ mayā; ","html":"<span class='verse-line'>{}</span>"},"cnd1:7.3":{"pli":"Anujānāhi me brahme, ","html":"<span class='verse-line'>{}</span>"},"cnd1:7.4":{"pli":"Natthi pañcasatāni me”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:8.1":{"pli":"“Sace me yācamānassa, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:8.2":{"pli":"bhavaṃ nānupadassati; ","html":"<span class='verse-line'>{}</span>"},"cnd1:8.3":{"pli":"Sattame divase tuyhaṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd1:8.4":{"pli":"muddhā phalatu sattadhā”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:9.1":{"pli":"Abhisaṅkharitvā kuhako, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:9.2":{"pli":"bheravaṃ so akittayi; ","html":"<span class='verse-line'>{}</span>"},"cnd1:9.3":{"pli":"Tassa taṃ vacanaṃ sutvā, ","html":"<span class='verse-line'>{}</span>"},"cnd1:9.4":{"pli":"bāvarī dukkhito ahu. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:10.1":{"pli":"Ussussati anāhāro, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:10.2":{"pli":"sokasallasamappito; ","html":"<span class='verse-line'>{}</span>"},"cnd1:10.3":{"pli":"Athopi evaṃ cittassa, ","html":"<span class='verse-line'>{}</span>"},"cnd1:10.4":{"pli":"jhāne na ramatī mano. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:11.1":{"pli":"Utrastaṃ dukkhitaṃ disvā, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:11.2":{"pli":"devatā atthakāminī; ","html":"<span class='verse-line'>{}</span>"},"cnd1:11.3":{"pli":"Bāvariṃ upasaṅkamma, ","html":"<span class='verse-line'>{}</span>"},"cnd1:11.4":{"pli":"idaṃ vacanamabravi. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:12.1":{"pli":"“Na so muddhaṃ pajānāti, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:12.2":{"pli":"kuhako so dhanatthiko; ","html":"<span class='verse-line'>{}</span>"},"cnd1:12.3":{"pli":"Muddhani muddhapāte vā, ","html":"<span class='verse-line'>{}</span>"},"cnd1:12.4":{"pli":"ñāṇaṃ tassa na vijjati”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:13.1":{"pli":"“Bhotī carahi jānāti, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:13.2":{"pli":"Taṃ me akkhāhi pucchitā; ","html":"<span class='verse-line'>{}</span>"},"cnd1:13.3":{"pli":"Muddhaṃ muddhādhipātañca, ","html":"<span class='verse-line'>{}</span>"},"cnd1:13.4":{"pli":"Taṃ suṇoma vaco tava”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:14.1":{"pli":"“Ahampetaṃ na jānāmi, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:14.2":{"pli":"ñāṇaṃ mettha na vijjati; ","html":"<span class='verse-line'>{}</span>"},"cnd1:14.3":{"pli":"Muddhani muddhādhipāte ca, ","html":"<span class='verse-line'>{}</span>"},"cnd1:14.4":{"pli":"jinānaṃ hettha dassanaṃ”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:15.1":{"pli":"“Atha ko carahi jānāti, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:15.2":{"pli":"asmiṃ pathavimaṇḍale; ","html":"<span class='verse-line'>{}</span>"},"cnd1:15.3":{"pli":"Muddhaṃ muddhādhipātañca, ","html":"<span class='verse-line'>{}</span>"},"cnd1:15.4":{"pli":"taṃ me akkhāhi devate”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:16.1":{"pli":"“Purā kapilavatthumhā, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:16.2":{"pli":"nikkhanto lokanāyako; ","html":"<span class='verse-line'>{}</span>"},"cnd1:16.3":{"pli":"Apacco okkākarājassa, ","html":"<span class='verse-line'>{}</span>"},"cnd1:16.4":{"pli":"sakyaputto pabhaṅkaro. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:17.1":{"pli":"So hi brāhmaṇa sambuddho, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:17.2":{"pli":"sabbadhammāna pāragū; ","html":"<span class='verse-line'>{}</span>"},"cnd1:17.3":{"pli":"Sabbābhiññābalappatto, ","html":"<span class='verse-line'>{}</span>"},"cnd1:17.4":{"pli":"sabbadhammesu cakkhumā; ","html":"<span class='verse-line'>{}</span>"},"cnd1:17.5":{"pli":"Sabbakammakkhayaṃ patto, ","html":"<span class='verse-line'>{}</span>"},"cnd1:17.6":{"pli":"vimutto upadhikkhaye. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:18.1":{"pli":"Buddho so bhagavā loke, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:18.2":{"pli":"dhammaṃ deseti cakkhumā; ","html":"<span class='verse-line'>{}</span>"},"cnd1:18.3":{"pli":"Taṃ tvaṃ gantvāna pucchassu, ","html":"<span class='verse-line'>{}</span>"},"cnd1:18.4":{"pli":"so te taṃ byākarissati”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:19.1":{"pli":"Sambuddhoti vaco sutvā, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:19.2":{"pli":"udaggo bāvarī ahu; ","html":"<span class='verse-line'>{}</span>"},"cnd1:19.3":{"pli":"Sokassa tanuko āsi, ","html":"<span class='verse-line'>{}</span>"},"cnd1:19.4":{"pli":"pītiñca vipulaṃ labhi. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:20.1":{"pli":"So bāvarī attamano udaggo, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:20.2":{"pli":"Taṃ devataṃ pucchati vedajāto; ","html":"<span class='verse-line'>{}</span>"},"cnd1:20.3":{"pli":"“Katamamhi gāme nigamamhi vā pana, ","html":"<span class='verse-line'>{}</span>"},"cnd1:20.4":{"pli":"Katamamhi vā janapade lokanātho; ","html":"<span class='verse-line'>{}</span>"},"cnd1:20.5":{"pli":"Yattha gantvāna passemu, ","html":"<span class='verse-line'>{}</span>"},"cnd1:20.6":{"pli":"Sambuddhaṃ dvipaduttamaṃ”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:21.1":{"pli":"“Sāvatthiyaṃ kosalamandire jino, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:21.2":{"pli":"Pahūtapañño varabhūrimedhaso; ","html":"<span class='verse-line'>{}</span>"},"cnd1:21.3":{"pli":"So sakyaputto vidhuro anāsavo, ","html":"<span class='verse-line'>{}</span>"},"cnd1:21.4":{"pli":"Muddhādhipātassa vidū narāsabho”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:22.1":{"pli":"Tato āmantayī sisse, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:22.2":{"pli":"brāhmaṇe mantapāragū; ","html":"<span class='verse-line'>{}</span>"},"cnd1:22.3":{"pli":"“Etha māṇavā akkhissaṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd1:22.4":{"pli":"suṇātha vacanaṃ mama. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:23.1":{"pli":"Yasseso dullabho loke, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:23.2":{"pli":"pātubhāvo abhiṇhaso; ","html":"<span class='verse-line'>{}</span>"},"cnd1:23.3":{"pli":"Svājja lokamhi uppanno, ","html":"<span class='verse-line'>{}</span>"},"cnd1:23.4":{"pli":"sambuddho iti vissuto; ","html":"<span class='verse-line'>{}</span>"},"cnd1:23.5":{"pli":"Khippaṃ gantvāna sāvatthiṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd1:23.6":{"pli":"passavho dvipaduttamaṃ”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:24.1":{"pli":"“Kathaṃ carahi jānemu, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:24.2":{"pli":"disvā buddhoti brāhmaṇa; ","html":"<span class='verse-line'>{}</span>"},"cnd1:24.3":{"pli":"Ajānataṃ no pabrūhi, ","html":"<span class='verse-line'>{}</span>"},"cnd1:24.4":{"pli":"yathā jānemu taṃ mayaṃ”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:25.1":{"pli":"“Āgatāni hi mantesu, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:25.2":{"pli":"mahāpurisalakkhaṇā; ","html":"<span class='verse-line'>{}</span>"},"cnd1:25.3":{"pli":"Dvattiṃsāni ca byākkhātā, ","html":"<span class='verse-line'>{}</span>"},"cnd1:25.4":{"pli":"samattā anupubbaso. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:26.1":{"pli":"Yassete honti gattesu, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:26.2":{"pli":"mahāpurisalakkhaṇā; ","html":"<span class='verse-line'>{}</span>"},"cnd1:26.3":{"pli":"Dveyeva tassa gatiyo, ","html":"<span class='verse-line'>{}</span>"},"cnd1:26.4":{"pli":"tatiyā hi na vijjati. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:27.1":{"pli":"Sace agāraṃ āvasati, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:27.2":{"pli":"vijeyya pathaviṃ imaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd1:27.3":{"pli":"Adaṇḍena asatthena, ","html":"<span class='verse-line'>{}</span>"},"cnd1:27.4":{"pli":"dhammena anusāsati. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:28.1":{"pli":"Sace ca so pabbajati, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:28.2":{"pli":"Agārā anagāriyaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd1:28.3":{"pli":"Vivaṭṭacchado sambuddho, ","html":"<span class='verse-line'>{}</span>"},"cnd1:28.4":{"pli":"Arahā bhavati anuttaro. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:29.1":{"pli":"Jātiṃ gottañca lakkhaṇaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:29.2":{"pli":"mante sisse punāpare; ","html":"<span class='verse-line'>{}</span>"},"cnd1:29.3":{"pli":"Muddhaṃ muddhādhipātañca, ","html":"<span class='verse-line'>{}</span>"},"cnd1:29.4":{"pli":"manasāyeva pucchatha. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:30.1":{"pli":"Anāvaraṇadassāvī, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:30.2":{"pli":"yadi buddho bhavissati; ","html":"<span class='verse-line'>{}</span>"},"cnd1:30.3":{"pli":"Manasā pucchite pañhe, ","html":"<span class='verse-line'>{}</span>"},"cnd1:30.4":{"pli":"vācāya visajjessati”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:31.1":{"pli":"Bāvarissa vaco sutvā, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:31.2":{"pli":"sissā soḷasa brāhmaṇā; ","html":"<span class='verse-line'>{}</span>"},"cnd1:31.3":{"pli":"Ajito tissametteyyo, ","html":"<span class='verse-line'>{}</span>"},"cnd1:31.4":{"pli":"puṇṇako atha mettagū. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:32.1":{"pli":"Dhotako upasīvo ca, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:32.2":{"pli":"nando ca atha hemako; ","html":"<span class='verse-line'>{}</span>"},"cnd1:32.3":{"pli":"Todeyyakappā dubhayo, ","html":"<span class='verse-line'>{}</span>"},"cnd1:32.4":{"pli":"jatukaṇṇī ca paṇḍito. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:33.1":{"pli":"Bhadrāvudho udayo ca, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:33.2":{"pli":"posālo cāpi brāhmaṇo; ","html":"<span class='verse-line'>{}</span>"},"cnd1:33.3":{"pli":"Mogharājā ca medhāvī, ","html":"<span class='verse-line'>{}</span>"},"cnd1:33.4":{"pli":"piṅgiyo ca mahāisi. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:34.1":{"pli":"Paccekagaṇino sabbe, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:34.2":{"pli":"sabbalokassa vissutā; ","html":"<span class='verse-line'>{}</span>"},"cnd1:34.3":{"pli":"Jhāyī jhānaratā dhīrā, ","html":"<span class='verse-line'>{}</span>"},"cnd1:34.4":{"pli":"pubbavāsanavāsitā. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:35.1":{"pli":"Bāvariṃ abhivādetvā, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:35.2":{"pli":"katvā ca naṃ padakkhiṇaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd1:35.3":{"pli":"Jaṭājinadharā sabbe, ","html":"<span class='verse-line'>{}</span>"},"cnd1:35.4":{"pli":"pakkāmuṃ uttarāmukhā. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:36.1":{"pli":"Maḷakassa patiṭṭhānaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:36.2":{"pli":"puramāhissatiṃ tadā; ","html":"<span class='verse-line'>{}</span>"},"cnd1:36.3":{"pli":"Ujjeniñcāpi gonaddhaṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd1:36.4":{"pli":"vedisaṃ vanasavhayaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:37.1":{"pli":"Kosambiñcāpi sāketaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:37.2":{"pli":"sāvatthiñca puruttamaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd1:37.3":{"pli":"Setabyaṃ kapilavatthuṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd1:37.4":{"pli":"kusinārañca mandiraṃ. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:38.1":{"pli":"Pāvañca bhoganagaraṃ, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:38.2":{"pli":"vesāliṃ māgadhaṃ puraṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd1:38.3":{"pli":"Pāsāṇakaṃ cetiyañca, ","html":"<span class='verse-line'>{}</span>"},"cnd1:38.4":{"pli":"ramaṇīyaṃ manoramaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:39.1":{"pli":"Tasitovudakaṃ sītaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:39.2":{"pli":"mahālābhaṃva vāṇijo; ","html":"<span class='verse-line'>{}</span>"},"cnd1:39.3":{"pli":"Chāyaṃ ghammābhitattova, ","html":"<span class='verse-line'>{}</span>"},"cnd1:39.4":{"pli":"turitā pabbatamāruhuṃ. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:40.1":{"pli":"Bhagavā tamhi samaye, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:40.2":{"pli":"bhikkhusaṅghapurakkhato; ","html":"<span class='verse-line'>{}</span>"},"cnd1:40.3":{"pli":"Bhikkhūnaṃ dhammaṃ deseti, ","html":"<span class='verse-line'>{}</span>"},"cnd1:40.4":{"pli":"sīhova nadatī vane. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:41.1":{"pli":"Ajito addasa buddhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:41.2":{"pli":"Pītaraṃsiṃva bhāṇumaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd1:41.3":{"pli":"Candaṃ yathā pannarase, ","html":"<span class='verse-line'>{}</span>"},"cnd1:41.4":{"pli":"Paripūraṃ upāgataṃ. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:42.1":{"pli":"Athassa gatte disvāna, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:42.2":{"pli":"paripūrañca byañjanaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd1:42.3":{"pli":"Ekamantaṃ ṭhito haṭṭho, ","html":"<span class='verse-line'>{}</span>"},"cnd1:42.4":{"pli":"manopañhe apucchatha. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:43.1":{"pli":"“Ādissa jammanaṃ brūhi, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:43.2":{"pli":"gottaṃ brūhi salakkhaṇaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd1:43.3":{"pli":"Mantesu pāramiṃ brūhi, ","html":"<span class='verse-line'>{}</span>"},"cnd1:43.4":{"pli":"kati vāceti brāhmaṇo”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:44.1":{"pli":"“Vīsaṃ vassasataṃ āyu, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:44.2":{"pli":"so ca gottena bāvarī; ","html":"<span class='verse-line'>{}</span>"},"cnd1:44.3":{"pli":"Tīṇissa lakkhaṇā gatte, ","html":"<span class='verse-line'>{}</span>"},"cnd1:44.4":{"pli":"tiṇṇaṃ vedāna pāragū. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:45.1":{"pli":"Lakkhaṇe itihāse ca, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:45.2":{"pli":"sanighaṇḍusakeṭubhe; ","html":"<span class='verse-line'>{}</span>"},"cnd1:45.3":{"pli":"Pañcasatāni vāceti, ","html":"<span class='verse-line'>{}</span>"},"cnd1:45.4":{"pli":"sadhamme pāramiṃ gato”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:46.1":{"pli":"“Lakkhaṇānaṃ pavicayaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:46.2":{"pli":"bāvarissa naruttama; ","html":"<span class='verse-line'>{}</span>"},"cnd1:46.3":{"pli":"Taṇhacchida pakāsehi, ","html":"<span class='verse-line'>{}</span>"},"cnd1:46.4":{"pli":"mā no kaṅkhāyitaṃ ahu”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:47.1":{"pli":"“Mukhaṃ jivhāya chādeti, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:47.2":{"pli":"uṇṇassa bhamukantare; ","html":"<span class='verse-line'>{}</span>"},"cnd1:47.3":{"pli":"Kosohitaṃ vatthaguyhaṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd1:47.4":{"pli":"evaṃ jānāhi māṇava”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:48.1":{"pli":"Pucchañhi kiñci asuṇanto, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:48.2":{"pli":"sutvā pañhe viyākate; ","html":"<span class='verse-line'>{}</span>"},"cnd1:48.3":{"pli":"Vicinteti jano sabbo, ","html":"<span class='verse-line'>{}</span>"},"cnd1:48.4":{"pli":"vedajāto katañjalī. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:49.1":{"pli":"“Ko nu devo vā brahmā vā, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:49.2":{"pli":"indo vāpi sujampati; ","html":"<span class='verse-line'>{}</span>"},"cnd1:49.3":{"pli":"Manasā pucchite pañhe, ","html":"<span class='verse-line'>{}</span>"},"cnd1:49.4":{"pli":"kametaṃ paṭibhāsati”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:50.1":{"pli":"“Muddhaṃ muddhādhipātañca, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:50.2":{"pli":"bāvarī paripucchati; ","html":"<span class='verse-line'>{}</span>"},"cnd1:50.3":{"pli":"Taṃ byākarohi bhagavā, ","html":"<span class='verse-line'>{}</span>"},"cnd1:50.4":{"pli":"kaṅkhaṃ vinaya no ise”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:51.1":{"pli":"“Avijjā muddhāti jānāhi, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:51.2":{"pli":"vijjā muddhādhipātinī; ","html":"<span class='verse-line'>{}</span>"},"cnd1:51.3":{"pli":"Saddhāsatisamādhīhi, ","html":"<span class='verse-line'>{}</span>"},"cnd1:51.4":{"pli":"chandavīriyena saṃyutā”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:52.1":{"pli":"Tato vedena mahatā, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:52.2":{"pli":"santhambhetvāna māṇavo; ","html":"<span class='verse-line'>{}</span>"},"cnd1:52.3":{"pli":"Ekaṃsaṃ ajinaṃ katvā, ","html":"<span class='verse-line'>{}</span>"},"cnd1:52.4":{"pli":"pādesu sirasā pati. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:53.1":{"pli":"“Bāvarī brāhmaṇo bhoto, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:53.2":{"pli":"saha sissehi mārisa; ","html":"<span class='verse-line'>{}</span>"},"cnd1:53.3":{"pli":"Udaggacitto sumano, ","html":"<span class='verse-line'>{}</span>"},"cnd1:53.4":{"pli":"pāde vandati cakkhuma”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:54.1":{"pli":"“Sukhito bāvarī hotu, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:54.2":{"pli":"saha sissehi brāhmaṇo; ","html":"<span class='verse-line'>{}</span>"},"cnd1:54.3":{"pli":"Tvañcāpi sukhito hohi, ","html":"<span class='verse-line'>{}</span>"},"cnd1:54.4":{"pli":"ciraṃ jīvāhi māṇava. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:55.1":{"pli":"Bāvarissa ca tuyhaṃ vā, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:55.2":{"pli":"sabbesaṃ sabbasaṃsayaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd1:55.3":{"pli":"Katāvakāsā pucchavho, ","html":"<span class='verse-line'>{}</span>"},"cnd1:55.4":{"pli":"yaṃ kiñci manasicchatha”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd1:56.1":{"pli":"Sambuddhena katokāso, ","html":"<p><span class='verse-line'>{}</span>"},"cnd1:56.2":{"pli":"nisīditvāna pañjalī; ","html":"<span class='verse-line'>{}</span>"},"cnd1:56.3":{"pli":"Ajito paṭhamaṃ pañhaṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd1:56.4":{"pli":"tattha pucchi tathāgataṃ. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"cnd1:56.5":{"pli":"Vatthugāthā niṭṭhitā. ","html":"<p class='endsutta'>{}</p></article>"}}}