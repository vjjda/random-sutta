5:18.1":{"pli":"Itthaṃ sudaṃ āyasmā mahākaccāno thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap35:19.1":{"pli":"Mahākaccānattherassāpadānaṃ tatiyaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"tha-ap350":{"tha-ap350:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap350'><header><ul><li class='division'>{}</li>"},"tha-ap350:0.2":{"pli":"Ekapadumiyavagga ","html":"<li>{}</li></ul>"},"tha-ap350:0.3":{"pli":"Tiṇamuṭṭhidāyakattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap350:1.1":{"pli":"“Himavantassāvidūre, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap350:1.2":{"pli":"lambako nāma pabbato; ","html":"<span class='verse-line'>{}</span>"},"tha-ap350:1.3":{"pli":"Upatisso nāma sambuddho, ","html":"<span class='verse-line'>{}</span>"},"tha-ap350:1.4":{"pli":"abbhokāsamhi caṅkami. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap350:2.1":{"pli":"Migaluddo tadā āsiṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap350:2.2":{"pli":"araññe kānane ahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap350:2.3":{"pli":"Disvāna taṃ devadevaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap350:2.4":{"pli":"sayambhuṃ aparājitaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap350:3.1":{"pli":"Vippasannena cittena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap350:3.2":{"pli":"tadā tassa mahesino; ","html":"<span class='verse-line'>{}</span>"},"tha-ap350:3.3":{"pli":"Nisīdanatthaṃ buddhassa, ","html":"<span class='verse-line'>{}</span>"},"tha-ap350:3.4":{"pli":"tiṇamuṭṭhimadāsahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap350:4.1":{"pli":"Datvāna devadevassa, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap350:4.2":{"pli":"bhiyyo cittaṃ pasādayiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap350:4.3":{"pli":"Sambuddhaṃ abhivādetvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap350:4.4":{"pli":"pakkāmiṃ uttarāmukho. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap350:5.1":{"pli":"Aciraṃ gatamattaṃ maṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap350:5.2":{"pli":"migarājā apothayi; ","html":"<span class='verse-line'>{}</span>"},"tha-ap350:5.3":{"pli":"Sīhena pothito santo, ","html":"<span class='verse-line'>{}</span>"},"tha-ap350:5.4":{"pli":"tattha kālaṅkato ahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap350:6.1":{"pli":"Āsanne me kataṃ kammaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap350:6.2":{"pli":"buddhaseṭṭhe anāsave; ","html":"<span class='verse-line'>{}</span>"},"tha-ap350:6.3":{"pli":"Sumutto saravegova, ","html":"<span class='verse-line'>{}</span>"},"tha-ap350:6.4":{"pli":"devalokaṃ agañchahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap350:7.1":{"pli":"Yūpo tattha subho āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap350:7.2":{"pli":"puññakammābhinimmito; ","html":"<span class='verse-line'>{}</span>"},"tha-ap350:7.3":{"pli":"Sahassakaṇḍo satabheṇḍu, ","html":"<span class='verse-line'>{}</span>"},"tha-ap350:7.4":{"pli":"dhajālu haritāmayo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap350:8.1":{"pli":"Pabhā niddhāvate tassa, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap350:8.2":{"pli":"sataraṃsīva uggato; ","html":"<span class='verse-line'>{}</span>"},"tha-ap350:8.3":{"pli":"Ākiṇṇo devakaññāhi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap350:8.4":{"pli":"āmodiṃ kāmakāmahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap350:9.1":{"pli":"Devalokā cavitvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap350:9.2":{"pli":"sukkamūlena codito; ","html":"<span class='verse-line'>{}</span>"},"tha-ap350:9.3":{"pli":"Āgantvāna manussattaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap350:9.4":{"pli":"pattomhi āsavakkhayaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap350:10.1":{"pli":"Catunnavutito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap350:10.2":{"pli":"nisīdanamadāsahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap350:10.3":{"pli":"Duggatiṃ nābhijānāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap350:10.4":{"pli":"tiṇamuṭṭhiyidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap350:11.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap350:11.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap350:11.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap350:12.1":{"pli":"Itthaṃ sudaṃ āyasmā tiṇamuṭṭhidāyako thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap350:13.1":{"pli":"Tiṇamuṭṭhidāyakattherassāpadānaṃ aṭṭhamaṃ. ","html":"<p class='endsutta'>{}</p></article>"}}}