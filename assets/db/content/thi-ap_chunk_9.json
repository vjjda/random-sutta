{"thi-ap28":{"thi-ap28:0.1":{"pli":"Therīapadāna ","html":"<article id='thi-ap28'><header><ul><li class='division'>{}</li>"},"thi-ap28:0.2":{"pli":"Kuṇḍalakesīvagga ","html":"<li>{}</li></ul>"},"thi-ap28:0.3":{"pli":"Yasodharātherīapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"thi-ap28:1.1":{"pli":"Ekasmiṃ samaye ramme, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"thi-ap28:1.2":{"pli":"iddhe rājagahe pure; ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:1.3":{"pli":"Pabbhāramhi varekamhi, ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:1.4":{"pli":"vasante naranāyake. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap28:2.1":{"pli":"Vasantiyā tamhi nagare, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap28:2.2":{"pli":"ramme bhikkhunupassaye; ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:2.3":{"pli":"Yasodharābhikkhuniyā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:2.4":{"pli":"evaṃ āsi vitakkitaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap28:3.1":{"pli":"“Suddhodano mahārājā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap28:3.2":{"pli":"gotamī ca pajāpatī; ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:3.3":{"pli":"Abhiññātā mahātherā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:3.4":{"pli":"theriyo ca mahiddhikā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap28:4.1":{"pli":"Santiṃ gatāva āsuṃ te, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap28:4.2":{"pli":"dīpaccīva nirāsavā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:4.3":{"pli":"Lokanāthe dharanteva, ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:4.4":{"pli":"ahampi ca sivaṃ padaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap28:5.1":{"pli":"Gamissāmī”ti cintetvā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap28:5.2":{"pli":"passantī āyumattano; ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:5.3":{"pli":"Passitvā āyusaṅkhāraṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:5.4":{"pli":"tadaheva khayaṃ gataṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap28:6.1":{"pli":"Pattacīvaramādāya, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap28:6.2":{"pli":"nikkhamitvā sakassamā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:6.3":{"pli":"Purakkhatā bhikkhunībhi, ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:6.4":{"pli":"satehi sahassehi sā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap28:7.1":{"pli":"Mahiddhikā mahāpaññā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap28:7.2":{"pli":"sambuddhaṃ upasaṅkami; ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:7.3":{"pli":"Sambuddhaṃ abhivādetvā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:7.4":{"pli":"satthuno cakkalakkhaṇe; ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:7.5":{"pli":"Nisinnā ekamantamhi, ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:7.6":{"pli":"idaṃ vacanamabravi. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap28:8.1":{"pli":"“Aṭṭhasattativassāhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap28:8.2":{"pli":"pacchimo vattate vayo; ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:8.3":{"pli":"Pabbhāramhi anuppattā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:8.4":{"pli":"ārocemi mahāmuni. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap28:9.1":{"pli":"Paripakko vayo mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap28:9.2":{"pli":"parittaṃ mama jīvitaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:9.3":{"pli":"Pahāya vo gamissāmi, ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:9.4":{"pli":"kataṃ me saraṇamattano. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap28:10.1":{"pli":"Vayamhi pacchime kāle, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap28:10.2":{"pli":"maraṇaṃ uparuddhati; ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:10.3":{"pli":"Ajjarattiṃ mahāvīra, ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:10.4":{"pli":"pāpuṇissāmi nibbutiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap28:11.1":{"pli":"Natthi jāti jarā byādhi, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap28:11.2":{"pli":"maraṇañca mahāmune; ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:11.3":{"pli":"Ajarāmaraṇaṃ puraṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:11.4":{"pli":"gamissāmi asaṅkhataṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap28:12.1":{"pli":"Yāvatā parisā nāma, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap28:12.2":{"pli":"samupāsanti satthuno; ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:12.3":{"pli":"Aparādhamajānantī, ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:12.4":{"pli":"khamantaṃ sammukhā mune. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap28:13.1":{"pli":"Saṃsaritvā ca saṃsāre, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap28:13.2":{"pli":"khalitañce mamaṃ tayi; ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:13.3":{"pli":"Ārocemi mahāvīra, ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:13.4":{"pli":"aparādhaṃ khamassu me”. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap28:14.1":{"pli":"Sutvāna vacanaṃ tassā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap28:14.2":{"pli":"munindo idamabravi; ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:14.3":{"pli":"“Kimuttaraṃ te vakkhāmi, ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:14.4":{"pli":"nibbānāya vajantiyā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap28:15.1":{"pli":"Iddhiñcāpi nidassehi, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap28:15.2":{"pli":"mama sāsanakārike; ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:15.3":{"pli":"Parisānañca sabbāsaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:15.4":{"pli":"kaṅkhaṃ chindassu yāvatā”. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap28:16.1":{"pli":"Sutvā taṃ munino vācaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap28:16.2":{"pli":"bhikkhunī sā yasodharā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:16.3":{"pli":"Vanditvā munirājaṃ taṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:16.4":{"pli":"idaṃ vacanamabravi. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap28:17.1":{"pli":"“Yasodharā ahaṃ vīra, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap28:17.2":{"pli":"agāre te pajāpati; ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:17.3":{"pli":"Sākiyamhi kule jātā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:17.4":{"pli":"itthiaṅge patiṭṭhitā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap28:18.1":{"pli":"Thīnaṃ satasahassānaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap28:18.2":{"pli":"navutīnaṃ chaduttari; ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:18.3":{"pli":"Agāre te ahaṃ vīra, ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:18.4":{"pli":"pāmokkhā sabbā issarā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap28:19.1":{"pli":"Rūpācāraguṇūpetā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap28:19.2":{"pli":"yobbanaṭṭhā piyaṃvadā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:19.3":{"pli":"Sabbā maṃ apacāyanti, ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:19.4":{"pli":"devatā viya mānusā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap28:20.1":{"pli":"Kaññāsatasahassapamukhā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap28:20.2":{"pli":"Sakyaputtanivesane; ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:20.3":{"pli":"Samānasukhadukkhatā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:20.4":{"pli":"Devatā viya nandane. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap28:21.1":{"pli":"Kāmadhātumatikkamma, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap28:21.2":{"pli":"saṇṭhitā rūpadhātuyā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:21.3":{"pli":"Rūpena sadisā natthi, ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:21.4":{"pli":"ṭhapetvā lokanāyakaṃ”. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap28:22.1":{"pli":"Sambuddhaṃ abhivādetvā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap28:22.2":{"pli":"iddhiṃ dassesi satthuno; ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:22.3":{"pli":"Nekā nānāvidhākārā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:22.4":{"pli":"mahāiddhīpi dassayī. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap28:23.1":{"pli":"Cakkavāḷasamaṃ kāyaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap28:23.2":{"pli":"sīsaṃ uttarato kuru; ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:23.3":{"pli":"Ubho pakkhā duve dīpā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:23.4":{"pli":"jambudīpaṃ sarīrato. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap28:24.1":{"pli":"Dakkhiṇañca saraṃ piñchaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap28:24.2":{"pli":"nānāsākhā tu pattakā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:24.3":{"pli":"Candañca sūriyañcakkhi, ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:24.4":{"pli":"merupabbatato sikhaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap28:25.1":{"pli":"Cakkavāḷagiriṃ tuṇḍaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap28:25.2":{"pli":"jamburukkhaṃ samūlakaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:25.3":{"pli":"Bījamānā upāgantvā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:25.4":{"pli":"vandantī lokanāyakaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap28:26.1":{"pli":"Hatthivaṇṇaṃ tathevassaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap28:26.2":{"pli":"pabbataṃ jaladhiṃ tathā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:26.3":{"pli":"Candimaṃ sūriyaṃ meruṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:26.4":{"pli":"sakkavaṇṇañca dassayi. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap28:27.1":{"pli":"“Yasodharā ahaṃ vīra, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap28:27.2":{"pli":"pāde vandāmi cakkhuma”; ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:27.3":{"pli":"Sahassalokadhātūnaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:27.4":{"pli":"phullapadmena chādayi. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap28:28.1":{"pli":"Brahmavaṇṇañca māpetvā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap28:28.2":{"pli":"dhammaṃ desesi suññataṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:28.3":{"pli":"“Yasodharā ahaṃ vīra, ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:28.4":{"pli":"pāde vandāmi cakkhuma. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap28:29.1":{"pli":"Iddhīsu ca vasī homi, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap28:29.2":{"pli":"dibbāya sotadhātuyā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:29.3":{"pli":"Cetopariyañāṇassa, ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:29.4":{"pli":"vasī homi mahāmuni. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap28:30.1":{"pli":"Pubbenivāsaṃ jānāmi, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap28:30.2":{"pli":"dibbacakkhu visodhitaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:30.3":{"pli":"Sabbāsavā parikkhīṇā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:30.4":{"pli":"natthi dāni punabbhavo. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap28:31.1":{"pli":"Atthadhammaniruttīsu, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap28:31.2":{"pli":"paṭibhāne tatheva ca; ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:31.3":{"pli":"Ñāṇaṃ mayhaṃ mahāvīra, ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:31.4":{"pli":"uppannaṃ tava santike. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap28:32.1":{"pli":"Pubbānaṃ lokanāthānaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap28:32.2":{"pli":"saṅgamaṃ te nidassitaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:32.3":{"pli":"Adhikāraṃ bahuṃ mayhaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:32.4":{"pli":"tuyhatthāya mahāmune. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap28:33.1":{"pli":"Yaṃ mayhaṃ pūritaṃ kammaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap28:33.2":{"pli":"Kusalaṃ sarase mune; ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:33.3":{"pli":"Tuyhatthāya mahāvīra, ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:33.4":{"pli":"Puññaṃ upacitaṃ mayā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap28:34.1":{"pli":"Abhabbaṭṭhāne vajjetvā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap28:34.2":{"pli":"vārayitvā anācaraṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:34.3":{"pli":"Tuyhatthāya mahāvīra, ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:34.4":{"pli":"sañcattaṃ jīvitaṃ mayā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap28:35.1":{"pli":"Nekakoṭisahassāni, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap28:35.2":{"pli":"bhariyatthāyadāsi maṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:35.3":{"pli":"Na tattha vimanā homi, ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:35.4":{"pli":"tuyhatthāya mahāmuni. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap28:36.1":{"pli":"Nekakoṭisahassāni, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap28:36.2":{"pli":"upakārāyadāsi maṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap28:36.3":{"pli":"Na tattha vimanā homi, ","ht