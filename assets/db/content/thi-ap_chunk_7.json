{"thi-ap25":{"thi-ap25:0.1":{"pli":"Therīapadāna ","html":"<article id='thi-ap25'><header><ul><li class='division'>{}</li>"},"thi-ap25:0.2":{"pli":"Kuṇḍalakesīvagga ","html":"<li>{}</li></ul>"},"thi-ap25:0.3":{"pli":"5 Nandātherīapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"thi-ap25:1.1":{"pli":"“Padumuttaro nāma jino, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"thi-ap25:1.2":{"pli":"sabbadhammāna pāragū; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:1.3":{"pli":"Ito satasahassamhi, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:1.4":{"pli":"kappe uppajji nāyako. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:2.1":{"pli":"Ovādako viññāpako, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:2.2":{"pli":"tārako sabbapāṇinaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:2.3":{"pli":"Desanākusalo buddho, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:2.4":{"pli":"tāresi janataṃ bahuṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:3.1":{"pli":"Anukampako kāruṇiko, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:3.2":{"pli":"hitesī sabbapāṇinaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:3.3":{"pli":"Sampatte titthiye sabbe, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:3.4":{"pli":"pañcasīle patiṭṭhapi. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:4.1":{"pli":"Evaṃ nirākulaṃ āsi, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:4.2":{"pli":"suññataṃ titthiyehi ca; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:4.3":{"pli":"Vicittaṃ arahantehi, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:4.4":{"pli":"vasībhūtehi tādibhi. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:5.1":{"pli":"Ratanānaṭṭhapaññāsaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:5.2":{"pli":"uggatova mahāmuni; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:5.3":{"pli":"Kañcanagghiyasaṅkāso, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:5.4":{"pli":"bāttiṃsavaralakkhaṇo. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:6.1":{"pli":"Vassasatasahassāni, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:6.2":{"pli":"āyu vijjati tāvade; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:6.3":{"pli":"Tāvatā tiṭṭhamāno so, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:6.4":{"pli":"tāresi janataṃ bahuṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:7.1":{"pli":"Tadāhaṃ haṃsavatiyaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:7.2":{"pli":"jātā seṭṭhikule ahuṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:7.3":{"pli":"Nānāratanapajjote, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:7.4":{"pli":"mahāsukhasamappitā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:8.1":{"pli":"Upetvā taṃ mahāvīraṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:8.2":{"pli":"assosiṃ dhammadesanaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:8.3":{"pli":"Amataṃ paramassādaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:8.4":{"pli":"paramatthanivedakaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:9.1":{"pli":"Tadā nimantayitvāna, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:9.2":{"pli":"sasaṅghaṃ lokanāyakaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:9.3":{"pli":"Datvā tassa mahādānaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:9.4":{"pli":"pasannā sehi pāṇibhi. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:10.1":{"pli":"Jhāyinīnaṃ bhikkhunīnaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:10.2":{"pli":"aggaṭṭhānamapatthayiṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:10.3":{"pli":"Nipacca sirasā dhīraṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:10.4":{"pli":"sasaṅghaṃ lokanāyakaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:11.1":{"pli":"Tadā adantadamako, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:11.2":{"pli":"tilokasaraṇo pabhū; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:11.3":{"pli":"Byākāsi narasārathi, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:11.4":{"pli":"‘lacchase taṃ supatthitaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:12.1":{"pli":"Satasahassito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:12.2":{"pli":"okkākakulasambhavo; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:12.3":{"pli":"Gotamo nāma gottena, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:12.4":{"pli":"satthā loke bhavissati. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:13.1":{"pli":"Tassa dhammesu dāyādā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:13.2":{"pli":"orasā dhammanimmitā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:13.3":{"pli":"Nandāti nāma nāmena, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:13.4":{"pli":"hessati satthu sāvikā’. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:14.1":{"pli":"Taṃ sutvā muditā hutvā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:14.2":{"pli":"yāvajīvaṃ tadā jinaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:14.3":{"pli":"Mettacittā paricariṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:14.4":{"pli":"paccayehi vināyakaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:15.1":{"pli":"Tena kammena sukatena, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:15.2":{"pli":"cetanāpaṇidhīhi ca; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:15.3":{"pli":"Jahitvā mānusaṃ dehaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:15.4":{"pli":"tāvatiṃsamagacchahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:16.1":{"pli":"Tato cutā yāmamagaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:16.2":{"pli":"tatohaṃ tusitaṃ gatā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:16.3":{"pli":"Tato ca nimmānaratiṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:16.4":{"pli":"vasavattipuraṃ tato. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:17.1":{"pli":"Yattha yatthūpapajjāmi, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:17.2":{"pli":"tassa kammassa vāhasā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:17.3":{"pli":"Tattha tattheva rājūnaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:17.4":{"pli":"mahesittamakārayiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:18.1":{"pli":"Tato cutā manussatte, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:18.2":{"pli":"rājānaṃ cakkavattinaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:18.3":{"pli":"Maṇḍalīnañca rājūnaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:18.4":{"pli":"mahesittamakārayiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:19.1":{"pli":"Sampattiṃ anubhotvāna, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:19.2":{"pli":"devesu manujesu ca; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:19.3":{"pli":"Sabbattha sukhitā hutvā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:19.4":{"pli":"nekakappesu saṃsariṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:20.1":{"pli":"Pacchime bhave sampatte, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:20.2":{"pli":"suramme kapilavhaye; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:20.3":{"pli":"Rañño suddhodanassāhaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:20.4":{"pli":"dhītā āsiṃ aninditā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:21.1":{"pli":"Siriyā rūpiniṃ disvā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:21.2":{"pli":"nanditaṃ āsi taṃ kulaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:21.3":{"pli":"Tena nandāti me nāmaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:21.4":{"pli":"sundaraṃ pavaraṃ ahu. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:22.1":{"pli":"Yuvatīnañca sabbāsaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:22.2":{"pli":"kalyāṇīti ca vissutā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:22.3":{"pli":"Tasmimpi nagare ramme, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:22.4":{"pli":"ṭhapetvā taṃ yasodharaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:23.1":{"pli":"Jeṭṭho bhātā tilokaggo, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:23.2":{"pli":"pacchimo arahā tathā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:23.3":{"pli":"Ekākinī gahaṭṭhāhaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:23.4":{"pli":"mātarā paricoditā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:24.1":{"pli":"‘Sākiyamhi kule jātā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:24.2":{"pli":"putte buddhānujā tuvaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:24.3":{"pli":"Nandenapi vinā bhūtā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:24.4":{"pli":"agāre kiṃ nu acchasi. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:25.1":{"pli":"Jarāvasānaṃ yobbaññaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:25.2":{"pli":"rūpaṃ asucisammataṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:25.3":{"pli":"Rogantamapicārogyaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:25.4":{"pli":"jīvitaṃ maraṇantikaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:26.1":{"pli":"Idampi te subhaṃ rūpaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:26.2":{"pli":"sasīkantaṃ manoharaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:26.3":{"pli":"Bhūsanānaṃ alaṅkāraṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:26.4":{"pli":"sirisaṅghāṭasannibhaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:27.1":{"pli":"Puñjitaṃ lokasāraṃva, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:27.2":{"pli":"nayanānaṃ rasāyanaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:27.3":{"pli":"Puññānaṃ kittijananaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:27.4":{"pli":"ukkākakulanandanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:28.1":{"pli":"Na cireneva kālena, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:28.2":{"pli":"jarā samadhisessati; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:28.3":{"pli":"Vihāya gehaṃ kāruññe, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:28.4":{"pli":"cara dhammamanindite’. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:29.1":{"pli":"Sutvāhaṃ mātu vacanaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:29.2":{"pli":"pabbajiṃ anagāriyaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:29.3":{"pli":"Dehena na tu cittena, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:29.4":{"pli":"rūpayobbanalāḷitā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:30.1":{"pli":"Mahatā ca payattena, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:30.2":{"pli":"jhānajjhena paraṃ mama; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:30.3":{"pli":"Kātuñca vadate mātā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:30.4":{"pli":"na cāhaṃ tattha ussukā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:31.1":{"pli":"Tato mahākāruṇiko, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:31.2":{"pli":"disvā maṃ kāmalālasaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:31.3":{"pli":"Nibbindanatthaṃ rūpasmiṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:31.4":{"pli":"mama cakkhupathe jino. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:32.1":{"pli":"Sakena ānubhāvena, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:32.2":{"pli":"itthiṃ māpesi sobhiniṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:32.3":{"pli":"Dassanīyaṃ suruciraṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:32.4":{"pli":"mamatopi surūpiniṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:33.1":{"pli":"Tamahaṃ vimhitā disvā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:33.2":{"pli":"ativimhitadehiniṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:33.3":{"pli":"Cintayiṃ ‘saphalaṃ meti, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:33.4":{"pli":"nettalābhañca mānusaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:34.1":{"pli":"Tamahaṃ ehi subhage, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:34.2":{"pli":"yenattho taṃ vadehi me; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:34.3":{"pli":"Kulaṃ te nāmagottañca, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:34.4":{"pli":"vada me yadi te piyaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:35.1":{"pli":"Na vañcakālo subhage, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:35.2":{"pli":"ucchaṅge maṃ nivāsaya; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:35.3":{"pli":"Sīdantīva mamaṅgāni, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:35.4":{"pli":"pasuppaya muhuttakaṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:36.1":{"pli":"Tato sīsaṃ mamaṅge sā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:36.2":{"pli":"katvā sayi sulocanā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:36.3":{"pli":"Tassā nalāṭe patitā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:36.4":{"pli":"luddhā paramadāruṇā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:37.1":{"pli":"Saha tassā nipātena, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:37.2":{"pli":"piḷakā upapajjatha; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:37.3":{"pli":"Pagghariṃsu pabhinnā ca, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:37.4":{"pli":"kuṇapā pubbalohitā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:38.1":{"pli":"Pabhinnaṃ vadanañcāpi, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:38.2":{"pli":"kuṇapaṃ pūtigandhanaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:38.3":{"pli":"Uddhumātaṃ vinilañca, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:38.4":{"pli":"pubbañcāpi sarīrakaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:39.1":{"pli":"Sā paveditasabbaṅgī, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:39.2":{"pli":"nissasantī muhuṃ muhuṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:39.3":{"pli":"Vedayantī sakaṃ dukkhaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:39.4":{"pli":"karuṇaṃ paridevayi. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:40.1":{"pli":"‘Dukkhena dukkhitā homi, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:40.2":{"pli":"phusayanti ca vedanā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:40.3":{"pli":"Mahādukkhe nimuggamhi, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:40.4":{"pli":"saraṇaṃ hohi me sakhī. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:41.1":{"pli":"Kuhiṃ vadanasobhaṃ te, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:41.2":{"pli":"kuhiṃ te tuṅganāsikā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:41.3":{"pli":"Tambabimbavaroṭṭhaṃ te, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:41.4":{"pli":"vadanaṃ te kuhiṃ gataṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:42.1":{"pli":"Kuhiṃ sasīnibhaṃ vaṇṇaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:42.2":{"pli":"kambugīvā kuhiṃ gatā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:42.3":{"pli":"Doḷālolāva te kaṇṇā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:42.4":{"pli":"vevaṇṇaṃ samupāgatā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:43.1":{"pli":"Makuḷakhārakākārā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:43.2":{"pli":"kalikāva payodharā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:43.3":{"pli":"Pabhinnā pūtikuṇapā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:43.4":{"pli":"duṭṭhagandhittamāgatā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:44.1":{"pli":"Vedimajjhāva sussoṇī, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:44.2":{"pli":"sūnāva nītakibbisā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:44.3":{"pli":"Jātā amejjhabharitā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:44.4":{"pli":"aho rūpamasassataṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:45.1":{"pli":"Sabbaṃ sarīrasañjātaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:45.2":{"pli":"pūtigandhaṃ bhayānakaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:45.3":{"pli":"Susānamiva bībhacchaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:45.4":{"pli":"ramante yattha bālisā’. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:46.1":{"pli":"Tadā mahākāruṇiko, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:46.2":{"pli":"bhātā me lokanāyako; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:46.3":{"pli":"Disvā saṃviggacittaṃ maṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:46.4":{"pli":"imā gāthā abhāsatha. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:47.1":{"pli":"‘Āturaṃ kuṇapaṃ pūtiṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:47.2":{"pli":"passa nande samussayaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:47.3":{"pli":"Asubhāya cittaṃ bhāvehi, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:47.4":{"pli":"ekaggaṃ susamāhitaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:48.1":{"pli":"Yathā idaṃ tathā etaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:48.2":{"pli":"yathā etaṃ tathā idaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:48.3":{"pli":"Duggandhaṃ pūtikaṃ vāti, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:48.4":{"pli":"bālānaṃ abhinanditaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:49.1":{"pli":"Evametaṃ avekkhantī, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:49.2":{"pli":"rattindivamatanditā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:49.3":{"pli":"Tato sakāya paññāya, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:49.4":{"pli":"abhinibbijjha dakkhasi’. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:50.1":{"pli":"Tatohaṃ atisaṃviggā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:50.2":{"pli":"sutvā gāthā subhāsitā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:50.3":{"pli":"Tatraṭṭhitāvahaṃ santī, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:50.4":{"pli":"arahattamapāpuṇiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:51.1":{"pli":"Yattha yattha nisinnāhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:51.2":{"pli":"sadā jhānaparāyaṇā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:51.3":{"pli":"Jino tasmiṃ guṇe tuṭṭho, ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:51.4":{"pli":"etadagge ṭhapesi maṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:52.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:52.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:52.3":{"pli":"viharāmi anāsavā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:53.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:53.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:53.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap25:54.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap25:54.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"thi-ap25:54.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"thi-ap25:55.1":{"pli":"Itthaṃ sudaṃ nandā bhikkhunī janapadakalyāṇī imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"thi-ap25:56.1":{"pli":"Nandātheriyāpadānaṃ pañcamaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"thi-ap26":{"thi-ap26:0.1":{"pli":"Therīapadāna ","html":"<article id='thi-ap26'><header><ul><li class='division'>{}</li>"},"thi-ap26:0.2":{"pli":"Kuṇḍalakesīvagga ","html":"<li>{}</li></ul>"},"thi-ap26:0.3":{"pli":"Soṇātherīapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"thi-ap26:1.1":{"pli":"“Padumuttaro nāma jino, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"thi-ap26:1.2":{"pli":"sabbadhammāna pāragū; ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:1.3":{"pli":"Ito satasahassamhi, ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:1.4":{"pli":"kappe uppajji nāyako. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap26:2.1":{"pli":"Tadā seṭṭhikule jātā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap26:2.2":{"pli":"sukhitā pūjitā piyā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:2.3":{"pli":"Upetvā taṃ munivaraṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:2.4":{"pli":"assosiṃ madhuraṃ vacaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap26:3.1":{"pli":"Āraddhavīriyānaggaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap26:3.2":{"pli":"vaṇṇesi bhikkhuniṃ jino; ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:3.3":{"pli":"Taṃ sutvā muditā hutvā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:3.4":{"pli":"kāraṃ katvāna satthuno. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap26:4.1":{"pli":"Abhivādiya sambuddhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap26:4.2":{"pli":"ṭhānaṃ taṃ patthayiṃ tadā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:4.3":{"pli":"Anumodi mahāvīro, ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:4.4":{"pli":"‘sijjhataṃ paṇidhī tava. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap26:5.1":{"pli":"Satasahassito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap26:5.2":{"pli":"okkākakulasambhavo; ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:5.3":{"pli":"Gotamo nāma gottena, ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:5.4":{"pli":"satthā loke bhavissati. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap26:6.1":{"pli":"Tassa dhammesu dāyādā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap26:6.2":{"pli":"orasā dhammanimmitā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:6.3":{"pli":"Soṇāti nāma nāmena, ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:6.4":{"pli":"hessati satthu sāvikā’. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap26:7.1":{"pli":"Taṃ sutvā muditā hutvā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap26:7.2":{"pli":"yāvajīvaṃ tadā jinaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:7.3":{"pli":"Mettacittā paricariṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:7.4":{"pli":"paccayehi vināyakaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap26:8.1":{"pli":"Tena kammena sukatena, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap26:8.2":{"pli":"cetanāpaṇidhīhi ca; ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:8.3":{"pli":"Jahitvā mānusaṃ dehaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:8.4":{"pli":"tāvatiṃsamagacchahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap26:9.1":{"pli":"Pacchime ca bhave dāni, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap26:9.2":{"pli":"jātā seṭṭhikule ahaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:9.3":{"pli":"Sāvatthiyaṃ puravare, ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:9.4":{"pli":"iddhe phīte mahaddhane. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap26:10.1":{"pli":"Yadā ca yobbanappattā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap26:10.2":{"pli":"gantvā patikulaṃ ahaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:10.3":{"pli":"Dasa puttāni ajaniṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:10.4":{"pli":"surūpāni visesato. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap26:11.1":{"pli":"Sukhedhitā ca te sabbe, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap26:11.2":{"pli":"jananettamanoharā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:11.3":{"pli":"Amittānampi rucitā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:11.4":{"pli":"mama pageva te piyā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap26:12.1":{"pli":"Tato mayhaṃ akāmāya, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap26:12.2":{"pli":"dasaputtapurakkhato; ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:12.3":{"pli":"Pabbajittha sa me bhattā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:12.4":{"pli":"devadevassa sāsane. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap26:13.1":{"pli":"Tadekikā vicintesiṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap26:13.2":{"pli":"‘jīvitenālamatthu me; ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:13.3":{"pli":"Cattāya patiputtehi, ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:13.4":{"pli":"vuḍḍhāya ca varākiyā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap26:14.1":{"pli":"Ahampi tattha gacchissaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap26:14.2":{"pli":"sampatto yattha me pati’; ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:14.3":{"pli":"Evāhaṃ cintayitvāna, ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:14.4":{"pli":"pabbajiṃ anagāriyaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap26:15.1":{"pli":"Tato ca maṃ bhikkhuniyo, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap26:15.2":{"pli":"ekaṃ bhikkhunupassaye; ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:15.3":{"pli":"Vihāya gacchumovādaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:15.4":{"pli":"‘tāpehi udakaṃ’ iti. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap26:16.1":{"pli":"Tadā udakamāhitvā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap26:16.2":{"pli":"okiritvāna kumbhiyā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:16.3":{"pli":"Culle ṭhapetvā āsīnā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:16.4":{"pli":"tato cittaṃ samādahiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap26:17.1":{"pli":"Khandhe aniccato disvā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap26:17.2":{"pli":"dukkhato ca anattato; ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:17.3":{"pli":"Khepetvā āsave sabbe, ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:17.4":{"pli":"arahattamapāpuṇiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap26:18.1":{"pli":"Tadāgantvā bhikkhuniyo, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap26:18.2":{"pli":"uṇhodakamapucchisuṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:18.3":{"pli":"Tejodhātumadhiṭṭhāya, ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:18.4":{"pli":"khippaṃ santāpayiṃ jalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap26:19.1":{"pli":"Vimhitā tā jinavaraṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap26:19.2":{"pli":"etamatthamasāvayuṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:19.3":{"pli":"Taṃ sutvā mudito nātho, ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:19.4":{"pli":"imaṃ gāthaṃ abhāsatha. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap26:20.1":{"pli":"‘Yo ca vassasataṃ jīve, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap26:20.2":{"pli":"kusīto hīnavīriyo; ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:20.3":{"pli":"Ekāhaṃ jīvitaṃ seyyo, ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:20.4":{"pli":"vīriyamārabhato daḷhaṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap26:21.1":{"pli":"Ārādhito mahāvīro, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap26:21.2":{"pli":"mayā suppaṭipattiyā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:21.3":{"pli":"Āraddhavīriyānaggaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:21.4":{"pli":"mamāha sa mahāmuni. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap26:22.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap26:22.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:22.3":{"pli":"viharāmi anāsavā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap26:23.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap26:23.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:23.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap26:24.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap26:24.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"thi-ap26:24.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"thi-ap26:25.1":{"pli":"Itthaṃ sudaṃ soṇā bhikkhunī imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"thi-ap26:26.1":{"pli":"Soṇātheriyāpadānaṃ chaṭṭhaṃ. ","html":"<p class='endsutta'>{}</p></article>"}}}