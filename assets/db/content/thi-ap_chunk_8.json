{"thi-ap27":{"thi-ap27:0.1":{"pli":"Therīapadāna ","html":"<article id='thi-ap27'><header><ul><li class='division'>{}</li>"},"thi-ap27:0.2":{"pli":"Kuṇḍalakesīvagga ","html":"<li>{}</li></ul>"},"thi-ap27:0.3":{"pli":"Bhaddākāpilānītherīapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"thi-ap27:1.1":{"pli":"“Padumuttaro nāma jino, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"thi-ap27:1.2":{"pli":"sabbadhammāna pāragū; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:1.3":{"pli":"Ito satasahassamhi, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:1.4":{"pli":"kappe uppajji nāyako. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:2.1":{"pli":"Tadāhu haṃsavatiyaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:2.2":{"pli":"videho nāma nāmato; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:2.3":{"pli":"Seṭṭhī pahūtaratano, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:2.4":{"pli":"tassa jāyā ahosahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:3.1":{"pli":"Kadāci so narādiccaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:3.2":{"pli":"Upecca saparijjano; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:3.3":{"pli":"Dhammamassosi buddhassa, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:3.4":{"pli":"Sabbadukkhabhayappahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:4.1":{"pli":"Sāvakaṃ dhutavādānaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:4.2":{"pli":"aggaṃ kittesi nāyako; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:4.3":{"pli":"Sutvā sattāhikaṃ dānaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:4.4":{"pli":"datvā buddhassa tādino. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:5.1":{"pli":"Nipacca sirasā pāde, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:5.2":{"pli":"taṃ ṭhānamabhipatthayiṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:5.3":{"pli":"Sa hāsayanto parisaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:5.4":{"pli":"tadā hi narapuṅgavo. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:6.1":{"pli":"Seṭṭhino anukampāya, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:6.2":{"pli":"imā gāthā abhāsatha; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:6.3":{"pli":"‘Lacchase patthitaṃ ṭhānaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:6.4":{"pli":"nibbuto hohi puttaka. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:7.1":{"pli":"Satasahassito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:7.2":{"pli":"okkākakulasambhavo; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:7.3":{"pli":"Gotamo nāma gottena, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:7.4":{"pli":"satthā loke bhavissati. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:8.1":{"pli":"Tassa dhammesu dāyādo, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:8.2":{"pli":"oraso dhammanimmito; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:8.3":{"pli":"Kassapo nāma gottena, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:8.4":{"pli":"hessati satthu sāvako’. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:9.1":{"pli":"Taṃ sutvā mudito hutvā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:9.2":{"pli":"yāvajīvaṃ tadā jinaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:9.3":{"pli":"Mettacitto paricari, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:9.4":{"pli":"paccayehi vināyakaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:10.1":{"pli":"Sāsanaṃ jotayitvāna, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:10.2":{"pli":"so madditvā kutitthiye; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:10.3":{"pli":"Veneyyaṃ vinayitvā ca, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:10.4":{"pli":"nibbuto so sasāvako. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:11.1":{"pli":"Nibbute tamhi lokagge, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:11.2":{"pli":"pūjanatthāya satthuno; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:11.3":{"pli":"Ñātimitte samānetvā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:11.4":{"pli":"saha tehi akārayi. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:12.1":{"pli":"Sattayojanikaṃ thūpaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:12.2":{"pli":"ubbiddhaṃ ratanāmayaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:12.3":{"pli":"Jalantaṃ sataraṃsiṃva, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:12.4":{"pli":"sālarājaṃva phullitaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:13.1":{"pli":"Sattasatasahassāni, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:13.2":{"pli":"pātiyo tattha kārayi; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:13.3":{"pli":"Naḷaggī viya jotantī, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:13.4":{"pli":"rataneheva sattahi. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:14.1":{"pli":"Gandhatelena pūretvā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:14.2":{"pli":"dīpānujjalayī tahiṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:14.3":{"pli":"Pūjanatthāya mahesissa, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:14.4":{"pli":"sabbabhūtānukampino. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:15.1":{"pli":"Sattasatasahassāni, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:15.2":{"pli":"puṇṇakumbhāni kārayi; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:15.3":{"pli":"Rataneheva puṇṇāni, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:15.4":{"pli":"pūjanatthāya mahesino. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:16.1":{"pli":"Majjhe aṭṭhaṭṭhakumbhīnaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:16.2":{"pli":"ussitā kañcanagghiyo; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:16.3":{"pli":"Atirocanti vaṇṇena, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:16.4":{"pli":"saradeva divākaro. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:17.1":{"pli":"Catudvāresu sobhanti, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:17.2":{"pli":"toraṇā ratanāmayā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:17.3":{"pli":"Ussitā phalakā rammā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:17.4":{"pli":"sobhanti ratanāmayā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:18.1":{"pli":"Virocanti parikkhittā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:18.2":{"pli":"avaṭaṃsā sunimmitā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:18.3":{"pli":"Ussitāni paṭākāni, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:18.4":{"pli":"ratanāni virocare. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:19.1":{"pli":"Surattaṃ sukataṃ cittaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:19.2":{"pli":"cetiyaṃ ratanāmayaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:19.3":{"pli":"Atirocati vaṇṇena, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:19.4":{"pli":"sasañjhova divākaro. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:20.1":{"pli":"Thūpassa vediyo tisso, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:20.2":{"pli":"haritālena pūrayi; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:20.3":{"pli":"Ekaṃ manosilāyekaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:20.4":{"pli":"añjanena ca ekikaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:21.1":{"pli":"Pūjaṃ etādisaṃ rammaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:21.2":{"pli":"kāretvā varavādino; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:21.3":{"pli":"Adāsi dānaṃ saṅghassa, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:21.4":{"pli":"yāvajīvaṃ yathābalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:22.1":{"pli":"Sahāva seṭṭhinā tena, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:22.2":{"pli":"tāni puññāni sabbaso; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:22.3":{"pli":"Yāvajīvaṃ karitvāna, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:22.4":{"pli":"sahāva sugatiṃ gatā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:23.1":{"pli":"Sampattiyonubhotvāna, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:23.2":{"pli":"devatte atha mānuse; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:23.3":{"pli":"Chāyā viya sarīrena, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:23.4":{"pli":"saha teneva saṃsariṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:24.1":{"pli":"Ekanavutito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:24.2":{"pli":"vipassī nāma nāyako; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:24.3":{"pli":"Uppajji cārudassano, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:24.4":{"pli":"sabbadhammavipassako. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:25.1":{"pli":"Tadāyaṃ bandhumatiyaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:25.2":{"pli":"brāhmaṇo sādhusammato; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:25.3":{"pli":"Aḍḍho santo guṇenāpi, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:25.4":{"pli":"dhanena ca suduggato. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:26.1":{"pli":"Tadāpi tassāhaṃ āsiṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:26.2":{"pli":"brāhmaṇī samacetasā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:26.3":{"pli":"Kadāci so dijavaro, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:26.4":{"pli":"saṅgamesi mahāmuniṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:27.1":{"pli":"Nisinnaṃ janakāyamhi, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:27.2":{"pli":"desentaṃ amataṃ padaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:27.3":{"pli":"Sutvā dhammaṃ pamudito, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:27.4":{"pli":"adāsi ekasāṭakaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:28.1":{"pli":"Gharamekena vatthena, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:28.2":{"pli":"Gantvānetaṃ sa mabravi; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:28.3":{"pli":"‘Anumoda mahāpuññaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:28.4":{"pli":"Dinnaṃ buddhassa sāṭakaṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:29.1":{"pli":"Tadāhaṃ añjaliṃ katvā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:29.2":{"pli":"anumodiṃ supīṇitā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:29.3":{"pli":"‘Sudinno sāṭako sāmi, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:29.4":{"pli":"buddhaseṭṭhassa tādino’. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:30.1":{"pli":"Sukhito sajjito hutvā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:30.2":{"pli":"saṃsaranto bhavābhave; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:30.3":{"pli":"Bārāṇasipure ramme, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:30.4":{"pli":"rājā āsi mahīpati. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:31.1":{"pli":"Tadā tassa mahesīhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:31.2":{"pli":"itthigumbassa uttamā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:31.3":{"pli":"Tassāti dayitā āsiṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:31.4":{"pli":"pubbasnehena bhattuno. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:32.1":{"pli":"Piṇḍāya vicarante te, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:32.2":{"pli":"aṭṭha paccekanāyake; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:32.3":{"pli":"Disvā pamudito hutvā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:32.4":{"pli":"datvā piṇḍaṃ mahārahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:33.1":{"pli":"Puno nimantayitvāna, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:33.2":{"pli":"katvā ratanamaṇḍapaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:33.3":{"pli":"Kammārehi kataṃ pattaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:33.4":{"pli":"sovaṇṇaṃ vata tattakaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:34.1":{"pli":"Samānetvāna te sabbe, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:34.2":{"pli":"tesaṃ dānamadāsi so; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:34.3":{"pli":"Soṇṇāsane paviṭṭhānaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:34.4":{"pli":"pasanno sehi pāṇibhi. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:35.1":{"pli":"Tampi dānaṃ sahādāsiṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:35.2":{"pli":"kāsirājenahaṃ tadā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:35.3":{"pli":"Punāhaṃ bārāṇasiyaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:35.4":{"pli":"jātā kāsikagāmake. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:36.1":{"pli":"Kuṭumbikakule phīte, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:36.2":{"pli":"sukhito so sabhātuko; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:36.3":{"pli":"Jeṭṭhassa bhātuno jāyā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:36.4":{"pli":"ahosiṃ supatibbatā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:37.1":{"pli":"Paccekabuddhaṃ disvāna, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:37.2":{"pli":"kaniyassa mama bhattuno; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:37.3":{"pli":"Bhāgannaṃ tassa datvāna, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:37.4":{"pli":"āgate tamhi pāvadiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:38.1":{"pli":"Nābhinandittha so dānaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:38.2":{"pli":"tato tassa adāsahaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:38.3":{"pli":"Ukhā āniya taṃ annaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:38.4":{"pli":"puno tasseva so adā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:39.1":{"pli":"Tadannaṃ chaḍḍayitvāna, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:39.2":{"pli":"duṭṭhā buddhassahaṃ tadā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:39.3":{"pli":"Pattaṃ kalalapuṇṇaṃ taṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:39.4":{"pli":"adāsiṃ tassa tādino. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:40.1":{"pli":"Dāne ca gahaṇe ceva, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:40.2":{"pli":"apace padusepi ca; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:40.3":{"pli":"Samacittamukhaṃ disvā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:40.4":{"pli":"tadāhaṃ saṃvijiṃ bhusaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:41.1":{"pli":"Puno pattaṃ gahetvāna, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:41.2":{"pli":"sodhayitvā sugandhinā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:41.3":{"pli":"Pasannacittā pūretvā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:41.4":{"pli":"saghataṃ sakkaraṃ adaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:42.1":{"pli":"Yattha yatthūpapajjāmi, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:42.2":{"pli":"surūpā homi dānato; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:42.3":{"pli":"Buddhassa apakārena, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:42.4":{"pli":"duggandhā vadanena ca. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:43.1":{"pli":"Puna kassapavīrassa, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:43.2":{"pli":"nidhāyantamhi cetiye; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:43.3":{"pli":"Sovaṇṇaṃ iṭṭhakaṃ varaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:43.4":{"pli":"adāsiṃ muditā ahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:44.1":{"pli":"Catujjātena gandhena, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:44.2":{"pli":"nicayitvā tamiṭṭhakaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:44.3":{"pli":"Muttā duggandhadosamhā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:44.4":{"pli":"sabbaṅgasusamāgatā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:45.1":{"pli":"Sattapātisahassāni, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:45.2":{"pli":"rataneheva sattahi; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:45.3":{"pli":"Kāretvā ghatapūrāni, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:45.4":{"pli":"vaṭṭīni ca sahassaso. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:46.1":{"pli":"Pakkhipitvā padīpetvā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:46.2":{"pli":"ṭhapayiṃ sattapantiyo; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:46.3":{"pli":"Pūjanatthaṃ lokanāthassa, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:46.4":{"pli":"vippasannena cetasā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:47.1":{"pli":"Tadāpi tamhi puññamhi, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:47.2":{"pli":"bhāginīhaṃ visesato; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:47.3":{"pli":"Puna kāsīsu sañjāto, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:47.4":{"pli":"sumitto iti vissuto. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:48.1":{"pli":"Tassāhaṃ bhariyā āsiṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:48.2":{"pli":"sukhitā sajjitā piyā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:48.3":{"pli":"Tadā paccekamunino, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:48.4":{"pli":"adāsiṃ ghanaveṭhanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:49.1":{"pli":"Tassāpi bhāginī āsiṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:49.2":{"pli":"moditvā dānamuttamaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:49.3":{"pli":"Punāpi kāsiraṭṭhamhi, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:49.4":{"pli":"jāto koliyajātiyā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:50.1":{"pli":"Tadā koliyaputtānaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:50.2":{"pli":"satehi saha pañcahi; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:50.3":{"pli":"Pañcapaccekabuddhānaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:50.4":{"pli":"satāni samupaṭṭhahi. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:51.1":{"pli":"Temāsaṃ tappayitvāna, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:51.2":{"pli":"adāsi ca ticīvaraṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:51.3":{"pli":"Jāyā tassa tadā āsiṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:51.4":{"pli":"puññakammapathānugā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:52.1":{"pli":"Tato cuto ahu rājā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:52.2":{"pli":"nando nāma mahāyaso; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:52.3":{"pli":"Tassāpi mahesī āsiṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:52.4":{"pli":"sabbakāmasamiddhinī. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:53.1":{"pli":"Tadā rājā bhavitvāna, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:53.2":{"pli":"brahmadatto mahīpati; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:53.3":{"pli":"Padumavatīputtānaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:53.4":{"pli":"paccekamuninaṃ tadā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:54.1":{"pli":"Satāni pañcanūnāni, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:54.2":{"pli":"yāvajīvaṃ upaṭṭhahiṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:54.3":{"pli":"Rājuyyāne nivāsetvā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:54.4":{"pli":"nibbutāni ca pūjayiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:55.1":{"pli":"Cetiyāni ca kāretvā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:55.2":{"pli":"pabbajitvā ubho mayaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:55.3":{"pli":"Bhāvetvā appamaññāyo, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:55.4":{"pli":"brahmalokaṃ agamhase. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:56.1":{"pli":"Tato cuto mahātitthe, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:56.2":{"pli":"sujāto pipphalāyano; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:56.3":{"pli":"Mātā sumanadevīti, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:56.4":{"pli":"kosigotto dijo pitā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:57.1":{"pli":"Ahaṃ madde janapade, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:57.2":{"pli":"sākalāya puruttame; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:57.3":{"pli":"Kappilassa dijassāsiṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:57.4":{"pli":"dhītā mātā sucīmati. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:58.1":{"pli":"Ghanakañcanabimbena, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:58.2":{"pli":"nimminitvāna maṃ pitā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:58.3":{"pli":"Adā kassapadhīrassa, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:58.4":{"pli":"kāmehi vajjitassamaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:59.1":{"pli":"Kadāci so kāruṇiko, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:59.2":{"pli":"gantvā kammantapekkhako; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:59.3":{"pli":"Kākādikehi khajjante, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:59.4":{"pli":"pāṇe disvāna saṃviji. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:60.1":{"pli":"Gharevāhaṃ tile jāte, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:60.2":{"pli":"disvānātapatāpane; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:60.3":{"pli":"Kimī kākehi khajjante, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:60.4":{"pli":"saṃvegamalabhiṃ tadā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:61.1":{"pli":"Tadā so pabbajī dhīro, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:61.2":{"pli":"ahaṃ tamanupabbajiṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:61.3":{"pli":"Pañcavassāni nivasiṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:61.4":{"pli":"paribbājavate ahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:62.1":{"pli":"Yadā pabbajitā āsi, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:62.2":{"pli":"gotamī jinaposikā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:62.3":{"pli":"Tadāhaṃ tamupagantvā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:62.4":{"pli":"buddhena anusāsitā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:63.1":{"pli":"Na cireneva kālena, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:63.2":{"pli":"arahattamapāpuṇiṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:63.3":{"pli":"Aho kalyāṇamittattaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:63.4":{"pli":"kassapassa sirīmato. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:64.1":{"pli":"Suto buddhassa dāyādo, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:64.2":{"pli":"kassapo susamāhito; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:64.3":{"pli":"Pubbenivāsaṃ yo vedi, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:64.4":{"pli":"saggāpāyañca passati. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:65.1":{"pli":"Atho jātikkhayaṃ patto, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:65.2":{"pli":"abhiññāvosito muni; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:65.3":{"pli":"Etāhi tīhi vijjāhi, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:65.4":{"pli":"tevijjo hoti brāhmaṇo. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:66.1":{"pli":"Tatheva bhaddākāpilānī, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:66.2":{"pli":"tevijjā maccuhāyinī; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:66.3":{"pli":"Dhāreti antimaṃ dehaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:66.4":{"pli":"jitvā māraṃ savāhanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:67.1":{"pli":"Disvā ādīnavaṃ loke, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:67.2":{"pli":"ubho pabbajitā mayaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:67.3":{"pli":"Tyamha khīṇāsavā dantā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:67.4":{"pli":"sītibhūtāmha nibbutā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:68.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:68.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:68.3":{"pli":"viharāmi anāsavā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:69.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:69.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:69.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap27:70.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap27:70.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"thi-ap27:70.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"thi-ap27:71.1":{"pli":"Itthaṃ sudaṃ bhaddākāpilānī bhikkhunī imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"thi-ap27:72.1":{"pli":"Bhaddākāpilānītheriyāpadānaṃ sattamaṃ. ","html":"<p class='endsutta'>{}</p></article>"}}}