{"pv30":{"pv30:0.1":{"pli":"Petavatthu ","html":"<article id='pv30'><header><ul><li class='division'>{}</li>"},"pv30:0.2":{"pli":"Cūḷavagga ","html":"<li>{}</li></ul>"},"pv30:0.3":{"pli":"5. Kumārapetavatthu ","html":"<h1 class='sutta-title'>{}</h1></header>"},"pv30:1.1":{"pli":"Accherarūpaṃ sugatassa ñāṇaṃ, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"pv30:1.2":{"pli":"Satthā yathā puggalaṃ byākāsi; ","html":"<span class='verse-line'>{}</span>"},"pv30:1.3":{"pli":"Ussannapuññāpi bhavanti heke, ","html":"<span class='verse-line'>{}</span>"},"pv30:1.4":{"pli":"Parittapuññāpi bhavanti heke. ","html":"<span class='verse-line'>{}</span></p>"},"pv30:2.1":{"pli":"Ayaṃ kumāro sīvathikāya chaḍḍito, ","html":"<p><span class='verse-line'>{}</span>"},"pv30:2.2":{"pli":"Aṅguṭṭhasnehena yāpeti rattiṃ; ","html":"<span class='verse-line'>{}</span>"},"pv30:2.3":{"pli":"Na yakkhabhūtā na sarīsapā vā, ","html":"<span class='verse-line'>{}</span>"},"pv30:2.4":{"pli":"Viheṭhayeyyuṃ katapuññaṃ kumāraṃ. ","html":"<span class='verse-line'>{}</span></p>"},"pv30:3.1":{"pli":"Sunakhāpimassa palihiṃsu pāde, ","html":"<p><span class='verse-line'>{}</span>"},"pv30:3.2":{"pli":"Dhaṅkā siṅgālā parivattayanti; ","html":"<span class='verse-line'>{}</span>"},"pv30:3.3":{"pli":"Gabbhāsayaṃ pakkhigaṇā haranti, ","html":"<span class='verse-line'>{}</span>"},"pv30:3.4":{"pli":"Kākā pana akkhimalaṃ haranti. ","html":"<span class='verse-line'>{}</span></p>"},"pv30:4.1":{"pli":"Nayimassa rakkhaṃ vidahiṃsu keci, ","html":"<p><span class='verse-line'>{}</span>"},"pv30:4.2":{"pli":"Na osadhaṃ sāsapadhūpanaṃ vā; ","html":"<span class='verse-line'>{}</span>"},"pv30:4.3":{"pli":"Nakkhattayogampi na aggahesuṃ, ","html":"<span class='verse-line'>{}</span>"},"pv30:4.4":{"pli":"Na sabbadhaññānipi ākiriṃsu. ","html":"<span class='verse-line'>{}</span></p>"},"pv30:5.1":{"pli":"Etādisaṃ uttamakicchapattaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"pv30:5.2":{"pli":"Rattābhataṃ sīvathikāya chaḍḍitaṃ; ","html":"<span class='verse-line'>{}</span>"},"pv30:5.3":{"pli":"Nonītapiṇḍaṃva pavedhamānaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv30:5.4":{"pli":"Sasaṃsayaṃ jīvitasāvasesaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"pv30:6.1":{"pli":"Tamaddasā devamanussapūjito, ","html":"<p><span class='verse-line'>{}</span>"},"pv30:6.2":{"pli":"Disvā ca taṃ byākari bhūripañño; ","html":"<span class='verse-line'>{}</span>"},"pv30:6.3":{"pli":"“Ayaṃ kumāro nagarassimassa, ","html":"<span class='verse-line'>{}</span>"},"pv30:6.4":{"pli":"Aggakuliko bhavissati bhogato ca”. ","html":"<span class='verse-line'>{}</span></p>"},"pv30:7.1":{"pli":"“Kissa vataṃ kiṃ pana brahmacariyaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"pv30:7.2":{"pli":"Kissa suciṇṇassa ayaṃ vipāko; ","html":"<span class='verse-line'>{}</span>"},"pv30:7.3":{"pli":"Etādisaṃ byasanaṃ pāpuṇitvā, ","html":"<span class='verse-line'>{}</span>"},"pv30:7.4":{"pli":"Taṃ tādisaṃ paccanubhossatiddhin”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv30:8.1":{"pli":"Buddhapamukhassa bhikkhusaṅghassa, ","html":"<p><span class='verse-line'>{}</span>"},"pv30:8.2":{"pli":"Pūjaṃ akāsi janatā uḷāraṃ; ","html":"<span class='verse-line'>{}</span>"},"pv30:8.3":{"pli":"Tatrassa cittassahu aññathattaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv30:8.4":{"pli":"Vācaṃ abhāsi pharusaṃ asabbhaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"pv30:9.1":{"pli":"So taṃ vitakkaṃ pavinodayitvā, ","html":"<p><span class='verse-line'>{}</span>"},"pv30:9.2":{"pli":"Pītiṃ pasādaṃ paṭiladdhā pacchā; ","html":"<span class='verse-line'>{}</span>"},"pv30:9.3":{"pli":"Tathāgataṃ jetavane vasantaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv30:9.4":{"pli":"Yāguyā upaṭṭhāsi sattarattaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"pv30:10.1":{"pli":"Tassa vataṃ taṃ pana brahmacariyaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"pv30:10.2":{"pli":"Tassa suciṇṇassa ayaṃ vipāko; ","html":"<span class='verse-line'>{}</span>"},"pv30:10.3":{"pli":"Etādisaṃ byasanaṃ pāpuṇitvā, ","html":"<span class='verse-line'>{}</span>"},"pv30:10.4":{"pli":"Taṃ tādisaṃ paccanubhossatiddhiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"pv30:11.1":{"pli":"Ṭhatvāna so vassasataṃ idheva, ","html":"<p><span class='verse-line'>{}</span>"},"pv30:11.2":{"pli":"Sabbehi kāmehi samaṅgibhūto; ","html":"<span class='verse-line'>{}</span>"},"pv30:11.3":{"pli":"Kāyassa bhedā abhisamparāyaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv30:11.4":{"pli":"Sahabyataṃ gacchati vāsavassāti. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"pv30:12.1":{"pli":"Kumārapetavatthu pañcamaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"pv31":{"pv31:0.1":{"pli":"Petavatthu ","html":"<article id='pv31'><header><ul><li class='division'>{}</li>"},"pv31:0.2":{"pli":"Cūḷavagga ","html":"<li>{}</li></ul>"},"pv31:0.3":{"pli":"6. Seriṇīpetivatthu ","html":"<h1 class='sutta-title'>{}</h1></header>"},"pv31:1.1":{"pli":"“Naggā dubbaṇṇarūpāsi, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"pv31:1.2":{"pli":"kisā dhamanisanthatā; ","html":"<span class='verse-line'>{}</span>"},"pv31:1.3":{"pli":"Upphāsulike kisike, ","html":"<span class='verse-line'>{}</span>"},"pv31:1.4":{"pli":"kā nu tvaṃ idha tiṭṭhasī”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv31:2.1":{"pli":"“Ahaṃ bhadante petīmhi, ","html":"<p><span class='verse-line'>{}</span>"},"pv31:2.2":{"pli":"duggatā yamalokikā; ","html":"<span class='verse-line'>{}</span>"},"pv31:2.3":{"pli":"Pāpakammaṃ karitvāna, ","html":"<span class='verse-line'>{}</span>"},"pv31:2.4":{"pli":"petalokaṃ ito gatā”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv31:3.1":{"pli":"“Kiṃ nu kāyena vācāya, ","html":"<p><span class='verse-line'>{}</span>"},"pv31:3.2":{"pli":"manasā dukkaṭaṃ kataṃ; ","html":"<span class='verse-line'>{}</span>"},"pv31:3.3":{"pli":"Kissa kammavipākena, ","html":"<span class='verse-line'>{}</span>"},"pv31:3.4":{"pli":"petalokaṃ ito gatā”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv31:4.1":{"pli":"“Anāvaṭesu titthesu, ","html":"<p><span class='verse-line'>{}</span>"},"pv31:4.2":{"pli":"viciniṃ aḍḍhamāsakaṃ; ","html":"<span class='verse-line'>{}</span>"},"pv31:4.3":{"pli":"Santesu deyyadhammesu, ","html":"<span class='verse-line'>{}</span>"},"pv31:4.4":{"pli":"dīpaṃ nākāsimattano. ","html":"<span class='verse-line'>{}</span></p>"},"pv31:5.1":{"pli":"Nadiṃ upemi tasitā, ","html":"<p><span class='verse-line'>{}</span>"},"pv31:5.2":{"pli":"rittakā parivattati; ","html":"<span class='verse-line'>{}</span>"},"pv31:5.3":{"pli":"Chāyaṃ upemi uṇhesu, ","html":"<span class='verse-line'>{}</span>"},"pv31:5.4":{"pli":"ātapo parivattati. ","html":"<span class='verse-line'>{}</span></p>"},"pv31:6.1":{"pli":"Aggivaṇṇo ca me vāto, ","html":"<p><span class='verse-line'>{}</span>"},"pv31:6.2":{"pli":"ḍahanto upavāyati; ","html":"<span class='verse-line'>{}</span>"},"pv31:6.3":{"pli":"Etañca bhante arahāmi, ","html":"<span class='verse-line'>{}</span>"},"pv31:6.4":{"pli":"aññañca pāpakaṃ tato. ","html":"<span class='verse-line'>{}</span></p>"},"pv31:7.1":{"pli":"Gantvāna hatthiniṃ puraṃ, ","html":"<p><span class='verse-line'>{}</span>"},"pv31:7.2":{"pli":"vajjesi mayha mātaraṃ; ","html":"<span class='verse-line'>{}</span>"},"pv31:7.3":{"pli":"‘Dhītā ca te mayā diṭṭhā, ","html":"<span class='verse-line'>{}</span>"},"pv31:7.4":{"pli":"duggatā yamalokikā; ","html":"<span class='verse-line'>{}</span>"},"pv31:7.5":{"pli":"Pāpakammaṃ karitvāna, ","html":"<span class='verse-line'>{}</span>"},"pv31:7.6":{"pli":"petalokaṃ ito gatā’. ","html":"<span class='verse-line'>{}</span></p>"},"pv31:8.1":{"pli":"Atthi me ettha nikkhittaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"pv31:8.2":{"pli":"anakkhātañca taṃ mayā; ","html":"<span class='verse-line'>{}</span>"},"pv31:8.3":{"pli":"Cattārisatasahassāni, ","html":"<span class='verse-line'>{}</span>"},"pv31:8.4":{"pli":"pallaṅkassa ca heṭṭhato. ","html":"<span class='verse-line'>{}</span></p>"},"pv31:9.1":{"pli":"Tato me dānaṃ dadatu, ","html":"<p><span class='verse-line'>{}</span>"},"pv31:9.2":{"pli":"tassā ca hotu jīvikā; ","html":"<span class='verse-line'>{}</span>"},"pv31:9.3":{"pli":"Dānaṃ datvā ca me mātā, ","html":"<span class='verse-line'>{}</span>"},"pv31:9.4":{"pli":"dakkhiṇaṃ anudicchatu; ","html":"<span class='verse-line'>{}</span>"},"pv31:9.5":{"pli":"Tadāhaṃ sukhitā hessaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv31:9.6":{"pli":"sabbakāmasamiddhinī”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv31:10.1":{"pli":"“Sādhū”ti so paṭissutvā, ","html":"<p><span class='verse-line'>{}</span>"},"pv31:10.2":{"pli":"gantvāna hatthiniṃ puraṃ; ","html":"<span class='verse-line'>{}</span>"},"pv31:10.3":{"pli":"Avoca tassā mātaraṃ—","html":"<span class='verse-line'>{}</span></p>"},"pv31:11.1":{"pli":"“Dhītā ca te mayā diṭṭhā, ","html":"<p><span class='verse-line'>{}</span>"},"pv31:11.2":{"pli":"duggatā yamalokikā; ","html":"<span class='verse-line'>{}</span>"},"pv31:11.3":{"pli":"Pāpakammaṃ karitvāna, ","html":"<span class='verse-line'>{}</span>"},"pv31:11.4":{"pli":"petalokaṃ ito gatā. ","html":"<span class='verse-line'>{}</span></p>"},"pv31:12.1":{"pli":"Sā maṃ tattha samādapesi, (…) ","html":"<p><span class='verse-line'>{}</span>"},"pv31:12.2":{"pli":"Vajjesi mayha mātaraṃ; ","html":"<span class='verse-line'>{}</span>"},"pv31:12.3":{"pli":"‘Dhītā ca te mayā diṭṭhā, ","html":"<span class='verse-line'>{}</span>"},"pv31:12.4":{"pli":"Duggatā yamalokikā; ","html":"<span class='verse-line'>{}</span>"},"pv31:12.5":{"pli":"Pāpakammaṃ karitvāna, ","html":"<span class='verse-line'>{}</span>"},"pv31:12.6":{"pli":"Petalokaṃ ito gatā. ","html":"<span class='verse-line'>{}</span></p>"},"pv31:13.1":{"pli":"Atthi ca me ettha nikkhittaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"pv31:13.2":{"pli":"anakkhātañca taṃ mayā; ","html":"<span class='verse-line'>{}</span>"},"pv31:13.3":{"pli":"Cattārisatasahassāni, ","html":"<span class='verse-line'>{}</span>"},"pv31:13.4":{"pli":"pallaṅkassa ca heṭṭhato. ","html":"<span class='verse-line'>{}</span></p>"},"pv31:14.1":{"pli":"Tato me dānaṃ dadatu, ","html":"<p><span class='verse-line'>{}</span>"},"pv31:14.2":{"pli":"tassā ca hotu jīvikā; ","html":"<span class='verse-line'>{}</span>"},"pv31:14.3":{"pli":"Dānaṃ datvā ca me mātā, ","html":"<span class='verse-line'>{}</span>"},"pv31:14.4":{"pli":"dakkhiṇaṃ anudicchatu (…); ","html":"<span class='verse-line'>{}</span>"},"pv31:14.5":{"pli":"Tadāhaṃ sukhitā hessaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv31:14.6":{"pli":"sabbakāmasamiddhinī’”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv31:15.1":{"pli":"Tato hi sā dānamadā, ","html":"<p><span class='verse-line'>{}</span>"},"pv31:15.2":{"pli":"tassā dakkhiṇamādisī; ","html":"<span class='verse-line'>{}</span>"},"pv31:15.3":{"pli":"Petī ca sukhitā āsi, ","html":"<span class='verse-line'>{}</span>"},"pv31:15.4":{"pli":"tassā cāsi sujīvikāti. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"pv31:16.1":{"pli":"Seriṇīpetivatthu chaṭṭhaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"pv32":{"pv32:0.1":{"pli":"Petavatthu ","html":"<article id='pv32'><header><ul><li class='division'>{}</li>"},"pv32:0.2":{"pli":"Cūḷavagga ","html":"<li>{}</li></ul>"},"pv32:0.3":{"pli":"7. Migaluddakapetavatthu ","html":"<h1 class='sutta-title'>{}</h1></header>"},"pv32:1.1":{"pli":"“Naranāripurakkhato yuvā, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"pv32:1.2":{"pli":"Rajanīyehi kāmaguṇehi sobhasi; ","html":"<span class='verse-line'>{}</span>"},"pv32:1.3":{"pli":"Divasaṃ anubhosi kāraṇaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv32:1.4":{"pli":"Kimakāsi purimāya jātiyā”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv32:2.1":{"pli":"“Ahaṃ rājagahe ramme, ","html":"<p><span class='verse-line'>{}</span>"},"pv32:2.2":{"pli":"ramaṇīye giribbaje; ","html":"<span class='verse-line'>{}</span>"},"pv32:2.3":{"pli":"Migaluddo pure āsiṃ, ","html":"<span class='verse-line'>{}</span>"},"pv32:2.4":{"pli":"lohitapāṇi dāruṇo. ","html":"<span class='verse-line'>{}</span></p>"},"pv32:3.1":{"pli":"Avirodhakaresu pāṇisu, ","html":"<p><span class='verse-line'>{}</span>"},"pv32:3.2":{"pli":"Puthusattesu paduṭṭhamānaso; ","html":"<span class='verse-line'>{}</span>"},"pv32:3.3":{"pli":"Vicariṃ atidāruṇo sadā, ","html":"<span class='verse-line'>{}</span>"},"pv32:3.4":{"pli":"Parahiṃsāya rato asaññato. ","html":"<span class='verse-line'>{}</span></p>"},"pv32:4.1":{"pli":"Tassa me sahāyo suhadayo, ","html":"<p><span class='verse-line'>{}</span>"},"pv32:4.2":{"pli":"Saddho āsi upāsako; ","html":"<span class='verse-line'>{}</span>"},"pv32:4.3":{"pli":"Sopi maṃ anukampanto, ","html":"<span class='verse-line'>{}</span>"},"pv32:4.4":{"pli":"Nivāresi punappunaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"pv32:5.1":{"pli":"‘Mākāsi pāpakaṃ kammaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"pv32:5.2":{"pli":"Mā tāta duggatiṃ agā; ","html":"<span class='verse-line'>{}</span>"},"pv32:5.3":{"pli":"Sace icchasi pecca sukhaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv32:5.4":{"pli":"Virama pāṇavadhā asaṃyamā’. ","html":"<span class='verse-line'>{}</span></p>"},"pv32:6.1":{"pli":"Tassāhaṃ vacanaṃ sutvā, ","html":"<p><span class='verse-line'>{}</span>"},"pv32:6.2":{"pli":"Sukhakāmassa hitānukampino; ","html":"<span class='verse-line'>{}</span>"},"pv32:6.3":{"pli":"Nākāsiṃ sakalānusāsaniṃ, ","html":"<span class='verse-line'>{}</span>"},"pv32:6.4":{"pli":"Cirapāpābhirato abuddhimā. ","html":"<span class='verse-line'>{}</span></p>"},"pv32:7.1":{"pli":"So maṃ puna bhūrisumedhaso, ","html":"<p><span class='verse-line'>{}</span>"},"pv32:7.2":{"pli":"Anukampāya saṃyame nivesayi; ","html":"<span class='verse-line'>{}</span>"},"pv32:7.3":{"pli":"‘Sace divā hanasi pāṇino, ","html":"<span class='verse-line'>{}</span>"},"pv32:7.4":{"pli":"Atha te rattiṃ bhavatu saṃyamo’. ","html":"<span class='verse-line'>{}</span></p>"},"pv32:8.1":{"pli":"Svāhaṃ divā hanitvā pāṇino, ","html":"<p><span class='verse-line'>{}</span>"},"pv32:8.2":{"pli":"Virato rattimahosi saññato; ","html":"<span class='verse-line'>{}</span>"},"pv32:8.3":{"pli":"Rattāhaṃ paricāremi, ","html":"<span class='verse-line'>{}</span>"},"pv32:8.4":{"pli":"Divā khajjāmi duggato. ","html":"<span class='verse-line'>{}</span></p>"},"pv32:9.1":{"pli":"Tassa kammassa kusalassa, ","html":"<p><span class='verse-line'>{}</span>"},"pv32:9.2":{"pli":"Anubhomi rattiṃ amānusiṃ; ","html":"<span class='verse-line'>{}</span>"},"pv32:9.3":{"pli":"Divā paṭihatāva kukkurā, ","html":"<span class='verse-line'>{}</span>"},"pv32:9.4":{"pli":"Upadhāvanti samantā khādituṃ. ","html":"<span class='verse-line'>{}</span></p>"},"pv32:10.1":{"pli":"Ye ca te satatānuyogino, ","html":"<p><span class='verse-line'>{}</span>"},"pv32:10.2":{"pli":"Dhuvaṃ payuttā sugatassa sāsane; ","html":"<span class='verse-line'>{}</span>"},"pv32:10.3":{"pli":"Maññāmi te amatameva kevalaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv32:10.4":{"pli":"Adhigacchanti padaṃ asaṅkhatan”ti. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"pv32:11.1":{"pli":"Migaluddakapetavatthu sattamaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"pv33":{"pv33:0.1":{"pli":"Petavatthu ","html":"<article id='pv33'><header><ul><li class='division'>{}</li>"},"pv33:0.2":{"pli":"Cūḷavagga ","html":"<li>{}</li></ul>"},"pv33:0.3":{"pli":"8. Dutiyamigaluddakapetavatthu ","html":"<h1 class='sutta-title'>{}</h1></header>"},"pv33:1.1":{"pli":"“Kūṭāgāre ca pāsāde, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"pv33:1.2":{"pli":"pallaṅke gonakatthate; ","html":"<span class='verse-line'>{}</span>"},"pv33:1.3":{"pli":"Pañcaṅgikena turiyena, ","html":"<span class='verse-line'>{}</span>"},"pv33:1.4":{"pli":"ramasi suppavādite. ","html":"<span class='verse-line'>{}</span></p>"},"pv33:2.1":{"pli":"Tato ratyā vivasāne, ","html":"<p><span class='verse-line'>{}</span>"},"pv33:2.2":{"pli":"sūriyuggamanaṃ pati; ","html":"<span class='verse-line'>{}</span>"},"pv33:2.3":{"pli":"Apaviddho susānasmiṃ, ","html":"<span class='verse-line'>{}</span>"},"pv33:2.4":{"pli":"bahudukkhaṃ nigacchasi. ","html":"<span class='verse-line'>{}</span></p>"},"pv33:3.1":{"pli":"Kiṃ nu kāyena vācāya, ","html":"<p><span class='verse-line'>{}</span>"},"pv33:3.2":{"pli":"manasā dukkaṭaṃ kataṃ; ","html":"<span class='verse-line'>{}</span>"},"pv33:3.3":{"pli":"Kissa kammavipākena, ","html":"<span class='verse-line'>{}</span>"},"pv33:3.4":{"pli":"idaṃ dukkhaṃ nigacchasi”. ","html":"<span class='verse-line'>{}</span></p>"},"pv33:4.1":{"pli":"“Ahaṃ rājagahe ramme, ","html":"<p><span class='verse-line'>{}</span>"},"pv33:4.2":{"pli":"ramaṇīye giribbaje; ","html":"<span class='verse-line'>{}</span>"},"pv33:4.3":{"pli":"Migaluddo pure āsiṃ, ","html":"<span class='verse-line'>{}</span>"},"pv33:4.4":{"pli":"luddo cāsimasaññato. ","html":"<span class='verse-line'>{}</span></p>"},"pv33:5.1":{"pli":"Tassa me sahāyo suhadayo, ","html":"<p><span class='verse-line'>{}</span>"},"pv33:5.2":{"pli":"Saddho āsi upāsako; ","html":"<span class='verse-line'>{}</span>"},"pv33:5.3":{"pli":"Tassa kulupako bhikkhu, ","html":"<span class='verse-line'>{}</span>"},"pv33:5.4":{"pli":"Āsi gotamasāvako; ","html":"<span class='verse-line'>{}</span>"},"pv33:5.5":{"pli":"Sopi maṃ anukampanto, ","html":"<span class='verse-line'>{}</span>"},"pv33:5.6":{"pli":"Nivāresi punappunaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"pv33:6.1":{"pli":"‘Mākāsi pāpakaṃ kammaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"pv33:6.2":{"pli":"Mā tāta duggatiṃ agā; ","html":"<span class='verse-line'>{}</span>"},"pv33:6.3":{"pli":"Sace icchasi pecca sukhaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv33:6.4":{"pli":"Virama pāṇavadhā asaṃyamā’. ","html":"<span class='verse-line'>{}</span></p>"},"pv33:7.1":{"pli":"Tassāhaṃ vacanaṃ sutvā, ","html":"<p><span class='verse-line'>{}</span>"},"pv33:7.2":{"pli":"Sukhakāmassa hitānukampino; ","html":"<span class='verse-line'>{}</span>"},"pv33:7.3":{"pli":"Nākāsiṃ sakalānusāsaniṃ, ","html":"<span class='verse-line'>{}</span>"},"pv33:7.4":{"pli":"Cirapāpābhirato abuddhimā. ","html":"<span class='verse-line'>{}</span></p>"},"pv33:8.1":{"pli":"So maṃ puna bhūrisumedhaso, ","html":"<p><span class='verse-line'>{}</span>"},"pv33:8.2":{"pli":"Anukampāya saṃyame nivesayi; ","html":"<span class='verse-line'>{}</span>"},"pv33:8.3":{"pli":"‘Sace divā hanasi pāṇino, ","html":"<span class='verse-line'>{}</span>"},"pv33:8.4":{"pli":"Atha te rattiṃ bhavatu saṃyamo’. ","html":"<span class='verse-line'>{}</span></p>"},"pv33:9.1":{"pli":"Svāhaṃ divā hanitvā pāṇino, ","html":"<p><span class='verse-line'>{}</span>"},"pv33:9.2":{"pli":"Virato rattimahosi saññato; ","html":"<span class='verse-line'>{}</span>"},"pv33:9.3":{"pli":"Rattāhaṃ paricāremi, ","html":"<span class='verse-line'>{}</span>"},"pv33:9.4":{"pli":"Divā khajjāmi duggato. ","html":"<span class='verse-line'>{}</span></p>"},"pv33:10.1":{"pli":"Tassa kammassa kusalassa, ","html":"<p><span class='verse-line'>{}</span>"},"pv33:10.2":{"pli":"Anubhomi rattiṃ amānusiṃ; ","html":"<span class='verse-line'>{}</span>"},"pv33:10.3":{"pli":"Divā paṭihatāva kukkurā, ","html":"<span class='verse-line'>{}</span>"},"pv33:10.4":{"pli":"Upadhāvanti samantā khādituṃ. ","html":"<span class='verse-line'>{}</span></p>"},"pv33:11.1":{"pli":"Ye ca te satatānuyogino, ","html":"<p><span class='verse-line'>{}</span>"},"pv33:11.2":{"pli":"Dhuvaṃ payuttā sugatassa sāsane; ","html":"<span class='verse-line'>{}</span>"},"pv33:11.3":{"pli":"Maññāmi te amatameva kevalaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv33:11.4":{"pli":"Adhigacchanti padaṃ asaṅkhatan”ti. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"pv33:12.1":{"pli":"Dutiyamigaluddakapetavatthu aṭṭhamaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"pv34":{"pv34:0.1":{"pli":"Petavatthu ","html":"<article id='pv34'><header><ul><li class='division'>{}</li>"},"pv34:0.2":{"pli":"Cūḷavagga ","html":"<li>{}</li></ul>"},"pv34:0.3":{"pli":"9. Kūṭavinicchayikapetavatthu ","html":"<h1 class='sutta-title'>{}</h1></header>"},"pv34:1.1":{"pli":"“Mālī kiriṭī kāyūrī, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"pv34:1.2":{"pli":"gattā te candanussadā; ","html":"<span class='verse-line'>{}</span>"},"pv34:1.3":{"pli":"Pasannamukhavaṇṇosi, ","html":"<span class='verse-line'>{}</span>"},"pv34:1.4":{"pli":"sūriyavaṇṇova sobhasi. ","html":"<span class='verse-line'>{}</span></p>"},"pv34:2.1":{"pli":"Amānusā pārisajjā, ","html":"<p><span class='verse-line'>{}</span>"},"pv34:2.2":{"pli":"ye teme paricārakā; ","html":"<span class='verse-line'>{}</span>"},"pv34:2.3":{"pli":"Dasa kaññāsahassāni, ","html":"<span class='verse-line'>{}</span>"},"pv34:2.4":{"pli":"yā temā paricārikā; ","html":"<span class='verse-line'>{}</span>"},"pv34:2.5":{"pli":"Tā kambukāyūradharā, ","html":"<span class='verse-line'>{}</span>"},"pv34:2.6":{"pli":"kañcanāveḷabhūsitā. ","html":"<span class='verse-line'>{}</span></p>"},"pv34:3.1":{"pli":"Mahānubhāvosi tuvaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"pv34:3.2":{"pli":"lomahaṃsanarūpavā; ","html":"<span class='verse-line'>{}</span>"},"pv34:3.3":{"pli":"Piṭṭhimaṃsāni attano, ","html":"<span class='verse-line'>{}</span>"},"pv34:3.4":{"pli":"sāmaṃ ukkacca khādasi. ","html":"<span class='verse-line'>{}</span></p>"},"pv34:4.1":{"pli":"Kiṃ nu kāyena vācāya, ","html":"<p><span class='verse-line'>{}</span>"},"pv34:4.2":{"pli":"manasā dukkuṭaṃ kataṃ; ","html":"<span class='verse-line'>{}</span>"},"pv34:4.3":{"pli":"Kissa kammavipākena, ","html":"<span class='verse-line'>{}</span>"},"pv34:4.4":{"pli":"piṭṭhimaṃsāni attano; ","html":"<span class='verse-line'>{}</span>"},"pv34:4.5":{"pli":"Sāmaṃ ukkacca khādasī”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv34:5.1":{"pli":"“Attanohaṃ anatthāya, ","html":"<p><span class='verse-line'>{}</span>"},"pv34:5.2":{"pli":"jīvaloke acārisaṃ; ","html":"<span class='verse-line'>{}</span>"},"pv34:5.3":{"pli":"Pesuññamusāvādena, ","html":"<span class='verse-line'>{}</span>"},"pv34:5.4":{"pli":"nikativañcanāya ca. ","html":"<span class='verse-line'>{}</span></p>"},"pv34:6.1":{"pli":"Tatthāhaṃ parisaṃ gantvā, ","html":"<p><span class='verse-line'>{}</span>"},"pv34:6.2":{"pli":"Saccakāle upaṭṭhite; ","html":"<span class='verse-line'>{}</span>"},"pv34:6.3":{"pli":"Atthaṃ dhammaṃ nirākatvā, ","html":"<span class='verse-line'>{}</span>"},"pv34:6.4":{"pli":"Adhammamanuvattisaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"pv34:7.1":{"pli":"Evaṃ so khādatattānaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"pv34:7.2":{"pli":"yo hoti piṭṭhimaṃsiko; ","html":"<span class='verse-line'>{}</span>"},"pv34:7.3":{"pli":"Yathāhaṃ ajja khādāmi, ","html":"<span class='verse-line'>{}</span>"},"pv34:7.4":{"pli":"piṭṭhimaṃsāni attano. ","html":"<span class='verse-line'>{}</span></p>"},"pv34:8.1":{"pli":"Tayidaṃ tayā nārada sāmaṃ diṭṭhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"pv34:8.2":{"pli":"Anukampakā ye kusalā vadeyyuṃ; ","html":"<span class='verse-line'>{}</span>"},"pv34:8.3":{"pli":"Mā pesuṇaṃ mā ca musā abhāṇi, ","html":"<span class='verse-line'>{}</span>"},"pv34:8.4":{"pli":"Mā khosi piṭṭhimaṃsiko tuvan”ti. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"pv34:9.1":{"pli":"Kūṭavinicchayikapetavatthu navamaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"pv35":{"pv35:0.1":{"pli":"Petavatthu ","html":"<article id='pv35'><header><ul><li class='division'>{}</li>"},"pv35:0.2":{"pli":"Cūḷavagga ","html":"<li>{}</li></ul>"},"pv35:0.3":{"pli":"10. Dhātuvivaṇṇapetavatthu ","html":"<h1 class='sutta-title'>{}</h1></header>"},"pv35:1.1":{"pli":"“Antalikkhasmiṃ tiṭṭhanto, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"pv35:1.2":{"pli":"Duggandho pūti vāyasi; ","html":"<span class='verse-line'>{}</span>"},"pv35:1.3":{"pli":"Mukhañca te kimayo pūtigandhaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv35:1.4":{"pli":"Khādanti kiṃ kammamakāsi pubbe. ","html":"<span class='verse-line'>{}</span></p>"},"pv35:2.1":{"pli":"Tato satthaṃ gahetvāna, ","html":"<p><span class='verse-line'>{}</span>"},"pv35:2.2":{"pli":"okkantanti punappunaṃ; ","html":"<span class='verse-line'>{}</span>"},"pv35:2.3":{"pli":"Khārena paripphositvā, ","html":"<span class='verse-line'>{}</span>"},"pv35:2.4":{"pli":"okkantanti punappunaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"pv35:3.1":{"pli":"Kiṃ nu kāyena vācāya, ","html":"<p><span class='verse-line'>{}</span>"},"pv35:3.2":{"pli":"manasā dukkaṭaṃ kataṃ; ","html":"<span class='verse-line'>{}</span>"},"pv35:3.3":{"pli":"Kissa kammavipākena, ","html":"<span class='verse-line'>{}</span>"},"pv35:3.4":{"pli":"idaṃ dukkhaṃ nigacchasī”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv35:4.1":{"pli":"“Ahaṃ rājagahe ramme, ","html":"<p><span class='verse-line'>{}</span>"},"pv35:4.2":{"pli":"ramaṇīye giribbaje; ","html":"<span class='verse-line'>{}</span>"},"pv35:4.3":{"pli":"Issaro dhanadhaññassa, ","html":"<span class='verse-line'>{}</span>"},"pv35:4.4":{"pli":"supahūtassa mārisa. ","html":"<span class='verse-line'>{}</span></p>"},"pv35:5.1":{"pli":"Tassāyaṃ me bhariyā ca, ","html":"<p><span class='verse-line'>{}</span>"},"pv35:5.2":{"pli":"dhītā ca suṇisā ca me; ","html":"<span class='verse-line'>{}</span>"},"pv35:5.3":{"pli":"Tā mālaṃ uppalañcāpi, ","html":"<span class='verse-line'>{}</span>"},"pv35:5.4":{"pli":"paccagghañca vilepanaṃ; ","html":"<span class='verse-line'>{}</span>"},"pv35:5.5":{"pli":"Thūpaṃ harantiyo vāresiṃ, ","html":"<span class='verse-line'>{}</span>"},"pv35:5.6":{"pli":"taṃ pāpaṃ pakataṃ mayā. ","html":"<span class='verse-line'>{}</span></p>"},"pv35:6.1":{"pli":"Chaḷāsītisahassāni, ","html":"<p><span class='verse-line'>{}</span>"},"pv35:6.2":{"pli":"mayaṃ paccattavedanā; ","html":"<span class='verse-line'>{}</span>"},"pv35:6.3":{"pli":"Thūpapūjaṃ vivaṇṇetvā, ","html":"<span class='verse-line'>{}</span>"},"pv35:6.4":{"pli":"paccāma niraye bhusaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"pv35:7.1":{"pli":"Ye ca kho thūpapūjāya, ","html":"<p><span class='verse-line'>{}</span>"},"pv35:7.2":{"pli":"vattante arahato mahe; ","html":"<span class='verse-line'>{}</span>"},"pv35:7.3":{"pli":"Ādīnavaṃ pakāsenti, ","html":"<span class='verse-line'>{}</span>"},"pv35:7.4":{"pli":"vivecayetha ne tato. ","html":"<span class='verse-line'>{}</span></p>"},"pv35:8.1":{"pli":"Imā ca passa āyantiyo, ","html":"<p><span class='verse-line'>{}</span>"},"pv35:8.2":{"pli":"Māladhārī alaṅkatā; ","html":"<span class='verse-line'>{}</span>"},"pv35:8.3":{"pli":"Mālāvipākaṃnubhontiyo, ","html":"<span class='verse-line'>{}</span>"},"pv35:8.4":{"pli":"Samiddhā ca tā yasassiniyo. ","html":"<span class='verse-line'>{}</span></p>"},"pv35:9.1":{"pli":"Tañca disvāna accheraṃ, ","html":"<p><span class='verse-line'>{}</span>"},"pv35:9.2":{"pli":"abbhutaṃ lomahaṃsanaṃ; ","html":"<span class='verse-line'>{}</span>"},"pv35:9.3":{"pli":"Namo karonti sappaññā, ","html":"<span class='verse-line'>{}</span>"},"pv35:9.4":{"pli":"vandanti taṃ mahāmuniṃ. ","html":"<span class='verse-line'>{}</span></p>"},"pv35:10.1":{"pli":"Sohaṃ nūna ito gantvā, ","html":"<p><span class='verse-line'>{}</span>"},"pv35:10.2":{"pli":"yoniṃ laddhāna mānusiṃ; ","html":"<span class='verse-line'>{}</span>"},"pv35:10.3":{"pli":"Thūpapūjaṃ karissāmi, ","html":"<span class='verse-line'>{}</span>"},"pv35:10.4":{"pli":"appamatto punappunan”ti. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"pv35:11.1":{"pli":"Dhātuvivaṇṇapetavatthu dasamaṃ. ","html":"<p class='endsutta'>{}</p>"},"pv35:12.1":{"pli":"Cūḷavaggo tatiyo. ","html":"<p class='endsection'>{}</p>"},"pv35:13.1":{"pli":"Tassuddānaṃ ","html":"<p class='uddana-intro'>{}</p>"},"pv35:14.1":{"pli":"Abhijjamāno kuṇḍiyo, ","html":"<blockquote class='uddanagatha'><p><span class='verse-line'>{}</span>"},"pv35:14.2":{"pli":"rathakārī bhusena ca; ","html":"<span class='verse-line'>{}</span>"},"pv35:14.3":{"pli":"Kumāro gaṇikā ceva, ","html":"<span class='verse-line'>{}</span>"},"pv35:14.4":{"pli":"dve luddā piṭṭhipūjanā; ","html":"<span class='verse-line'>{}</span>"},"pv35:14.5":{"pli":"Vaggo tena pavuccatīti. ","html":"<span class='verse-line'>{}</span></p></blockquote></article>"}}}