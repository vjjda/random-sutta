{"tha-ap484":{"tha-ap484:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap484'><header><ul><li class='division'>{}</li>"},"tha-ap484:0.2":{"pli":"Paṃsukūlavagga ","html":"<li>{}</li></ul>"},"tha-ap484:0.3":{"pli":"Buddhasaññakattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap484:1.1":{"pli":"“Ajjhāyako mantadharo, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap484:1.2":{"pli":"tiṇṇaṃ vedāna pāragū; ","html":"<span class='verse-line'>{}</span>"},"tha-ap484:1.3":{"pli":"Lakkhaṇe itihāse ca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap484:1.4":{"pli":"sanighaṇḍusakeṭubhe. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap484:2.1":{"pli":"Nadīsotapaṭibhāgā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap484:2.2":{"pli":"sissā āyanti me tadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap484:2.3":{"pli":"Tesāhaṃ mante vācemi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap484:2.4":{"pli":"rattindivamatandito. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap484:3.1":{"pli":"Siddhattho nāma sambuddho, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap484:3.2":{"pli":"loke uppajji tāvade; ","html":"<span class='verse-line'>{}</span>"},"tha-ap484:3.3":{"pli":"Tamandhakāraṃ nāsetvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap484:3.4":{"pli":"ñāṇālokaṃ pavattayi. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap484:4.1":{"pli":"Mama aññataro sisso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap484:4.2":{"pli":"sissānaṃ so kathesi me; ","html":"<span class='verse-line'>{}</span>"},"tha-ap484:4.3":{"pli":"Sutvāna te etamatthaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap484:4.4":{"pli":"ārocesuṃ mamaṃ tadā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap484:5.1":{"pli":"‘Buddho loke samuppanno, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap484:5.2":{"pli":"sabbaññū lokanāyako; ","html":"<span class='verse-line'>{}</span>"},"tha-ap484:5.3":{"pli":"Tassānuvattati jano, ","html":"<span class='verse-line'>{}</span>"},"tha-ap484:5.4":{"pli":"lābho amhaṃ na vijjati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap484:6.1":{"pli":"Adhiccuppattikā buddhā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap484:6.2":{"pli":"cakkhumanto mahāyasā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap484:6.3":{"pli":"Yannūnāhaṃ buddhaseṭṭhaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap484:6.4":{"pli":"passeyyaṃ lokanāyakaṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap484:7.1":{"pli":"Ajinaṃ me gahetvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap484:7.2":{"pli":"vākacīraṃ kamaṇḍaluṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap484:7.3":{"pli":"Assamā abhinikkhamma, ","html":"<span class='verse-line'>{}</span>"},"tha-ap484:7.4":{"pli":"sisse āmantayiṃ ahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap484:8.1":{"pli":"Odumbarikapupphaṃva, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap484:8.2":{"pli":"candamhi sasakaṃ yathā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap484:8.3":{"pli":"Vāyasānaṃ yathā khīraṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap484:8.4":{"pli":"dullabho lokanāyako. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap484:9.1":{"pli":"Buddho lokamhi uppanno, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap484:9.2":{"pli":"manussattampi dullabhaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap484:9.3":{"pli":"Ubhosu vijjamānesu, ","html":"<span class='verse-line'>{}</span>"},"tha-ap484:9.4":{"pli":"savanañca sudullabhaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap484:10.1":{"pli":"Buddho loke samuppanno, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap484:10.2":{"pli":"cakkhuṃ lacchāma no bhavaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap484:10.3":{"pli":"Etha sabbe gamissāma, ",