a-ap54:6.2":{"pli":"buddhaseṭṭho ca thomito; ","html":"<span class='verse-line'>{}</span>"},"tha-ap54:6.3":{"pli":"Tiṃsakappasahassāni, ","html":"<span class='verse-line'>{}</span>"},"tha-ap54:6.4":{"pli":"devarajjaṃ karissati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap54:7.1":{"pli":"Kappasatasahassamhi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap54:7.2":{"pli":"aṅgīrasasanāmako; ","html":"<span class='verse-line'>{}</span>"},"tha-ap54:7.3":{"pli":"Vivaṭṭacchado sambuddho, ","html":"<span class='verse-line'>{}</span>"},"tha-ap54:7.4":{"pli":"uppajjissati tāvade. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap54:8.1":{"pli":"Tassa dhammesu dāyādo, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap54:8.2":{"pli":"oraso dhammanimmito; ","html":"<span class='verse-line'>{}</span>"},"tha-ap54:8.3":{"pli":"Sataraṃsīti nāmena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap54:8.4":{"pli":"arahā so bhavissati’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap54:9.1":{"pli":"Jātiyā sattavassohaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap54:9.2":{"pli":"pabbajiṃ anagāriyaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap54:9.3":{"pli":"Sataraṃsimhi nāmena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap54:9.4":{"pli":"pabhā niddhāvate mama. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap54:10.1":{"pli":"Maṇḍape rukkhamūle vā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap54:10.2":{"pli":"jhāyī jhānarato ahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap54:10.3":{"pli":"Dhāremi antimaṃ dehaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap54:10.4":{"pli":"sammāsambuddhasāsane. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap54:11.1":{"pli":"Saṭṭhikappasahassamhi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap54:11.2":{"pli":"caturo rāmanāmakā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap54:11.3":{"pli":"Sattaratanasampannā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap54:11.4":{"pli":"cakkavattī mahabbalā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap54:12.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap54:12.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap54:12.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap54:13.1":{"pli":"Itthaṃ sudaṃ āyasmā sataraṃsi thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap54:14.1":{"pli":"Sataraṃsittherassāpadānaṃ dutiyaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"tha-ap540":{"tha-ap540:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap540'><header><ul><li class='division'>{}</li>"},"tha-ap540:0.2":{"pli":"Kaccāyanavagga ","html":"<li>{}</li></ul>"},"tha-ap540:0.3":{"pli":"8 Uruveḷakassapattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap540:1.1":{"pli":"“Padumuttaro nāma jino, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap540:1.2":{"pli":"sabbalokavidū muni; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:1.3":{"pli":"Ito satasahassamhi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:1.4":{"pli":"kappe uppajji cakkhumā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:2.1":{"pli":"Ovādako viññāpako, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:2.2":{"pli":"tārako sabbapāṇinaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:2.3":{"pli":"Desanākusalo buddho, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:2.4":{"pli":"tāresi janataṃ bahuṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:3.1":{"pli":"Anukampako kāruṇiko, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:3.2":{"pli":"hitesī sabbapāṇinaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:3.3":{"pli":"Sampatte titthiye sabbe, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:3.4":{"pli":"pañcasīle patiṭṭhapi. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:4.1":{"pli":"Evaṃ nirākulaṃ āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:4.2":{"pli":"suññataṃ titthiyehi ca; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:4.3":{"pli":"Vicittaṃ arahantehi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:4.4":{"pli":"vasībhūtehi tādibhi. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:5.1":{"pli":"Ratanānaṭṭhapaññāsaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:5.2":{"pli":"uggato so mahāmuni; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:5.3":{"pli":"Kañcanagghiyasaṅkāso, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:5.4":{"pli":"bāttiṃsavaralakkhaṇo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:6.1":{"pli":"Vassasatasahassāni, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:6.2":{"pli":"āyu vijjati tāvade; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:6.3":{"pli":"Tāvatā tiṭṭhamāno so, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:6.4":{"pli":"tāresi janataṃ bahuṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:7.1":{"pli":"Tadāhaṃ haṃsavatiyā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:7.2":{"pli":"brāhmaṇo sādhusammato; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:7.3":{"pli":"Upecca lokapajjotaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:7.4":{"pli":"assosiṃ dhammadesanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:8.1":{"pli":"Tadā mahāparisatiṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:8.2":{"pli":"mahāparisasāvakaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:8.3":{"pli":"Ṭhapentaṃ etadaggamhi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:8.4":{"pli":"sutvāna mudito ahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:9.1":{"pli":"Mahatā parivārena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:9.2":{"pli":"nimantetvā mahājinaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:9.3":{"pli":"Brāhmaṇānaṃ sahassena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:9.4":{"pli":"sahadānamadāsahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:10.1":{"pli":"Mahādānaṃ daditvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:10.2":{"pli":"abhivādiya nāyakaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:10.3":{"pli":"Ekamantaṃ ṭhito haṭṭho, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:10.4":{"pli":"idaṃ vacanamabraviṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:11.1":{"pli":"‘Tayi saddhāya me vīra, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:11.2":{"pli":"adhikāraguṇena ca; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:11.3":{"pli":"Parisā mahatī hotu, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:11.4":{"pli":"nibbattassa tahiṃ tahiṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:12.1":{"pli":"Tadā avoca parisaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:12.2":{"pli":"gajagajjitasussaro; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:12.3":{"pli":"Karavīkaruto satthā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:12.4":{"pli":"‘etaṃ passatha brāhmaṇaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:13.1":{"pli":"Hemavaṇṇaṃ mahābāhuṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:13.2":{"pli":"kamalānanalocanaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:13.3":{"pli":"Udaggatanujaṃ haṭṭhaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:13.4":{"pli":"saddhavantaṃ guṇe mama. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:14.1":{"pli":"Esa patthayate ṭhānaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:14.2":{"pli":"sīhaghosassa bhikkhuno; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:14.3":{"pli":"Anāgatamhi addhāne, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:14.4":{"pli":"lacchase taṃ manorathaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:15.1":{"pli":"Satasahassito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:15.2":{"pli":"okkākakulasambhavo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:15.3":{"pli":"Gotamo nāma gottena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:15.4":{"pli":"satthā loke bhavissati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:16.1":{"pli":"Tassa dhammesu dāyādo, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:16.2":{"pli":"oraso dhammanimmito; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:16.3":{"pli":"Kassapo nāma gottena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:16.4":{"pli":"hessati satthu sāvako’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:17.1":{"pli":"Ito dvenavute kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:17.2":{"pli":"ahu satthā anuttaro; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:17.3":{"pli":"Anūpamo asadiso, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:17.4":{"pli":"phusso lokagganāyako. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:18.1":{"pli":"So ca sabbaṃ tamaṃ hantvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:18.2":{"pli":"vijaṭetvā mahājaṭaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:18.3":{"pli":"Vassate amataṃ vuṭṭhiṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:18.4":{"pli":"tappayanto sadevakaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:19.1":{"pli":"Tadā hi bārāṇasiyaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:19.2":{"pli":"rājā paccā ahumhase; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:19.3":{"pli":"Bhātaromha tayo sabbe, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:19.4":{"pli":"saṃvisaṭṭhāva rājino. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:20.1":{"pli":"Vīraṅgarūpā balino, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:20.2":{"pli":"saṅgāme aparājitā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:20.3":{"pli":"Tadā kupitapaccanto, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:20.4":{"pli":"amhe āha mahīpati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:21.1":{"pli":"‘Etha gantvāna paccantaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:21.2":{"pli":"sodhetvā aṭṭavībalaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:21.3":{"pli":"Khemaṃ vijiritaṃ katvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:21.4":{"pli":"puna dethāti bhāsatha’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:22.1":{"pli":"Tato mayaṃ avocumha, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:22.2":{"pli":"yadi deyyāsi nāyakaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:22.3":{"pli":"Upaṭṭhānāya amhākaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:22.4":{"pli":"sādhayissāma vo tato. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:23.1":{"pli":"Tato mayaṃ laddhavarā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:23.2":{"pli":"bhūmipālena pesitā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:23.3":{"pli":"Nikkhittasatthaṃ paccantaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:23.4":{"pli":"katvā punarupacca taṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:24.1":{"pli":"Yācitvā satthupaṭṭhānaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:24.2":{"pli":"rājānaṃ lokanāyakaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:24.3":{"pli":"Munivīraṃ labhitvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:24.4":{"pli":"yāvajīvaṃ yajimha taṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:25.1":{"pli":"Mahagghāni ca vatthāni, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:25.2":{"pli":"paṇītāni rasāni ca; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:25.3":{"pli":"Senāsanāni rammāni, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:25.4":{"pli":"bhesajjāni hitāni ca. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:26.1":{"pli":"Datvā sasaṅghamunino, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:26.2":{"pli":"dhammenuppāditāni no; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:26.3":{"pli":"Sīlavanto kāruṇikā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:26.4":{"pli":"bhāvanāyuttamānasā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:27.1":{"pli":"Saddhā paricaritvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:27.2":{"pli":"mettacittena nāyakaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:27.3":{"pli":"Nibbute tamhi lokagge, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:27.4":{"pli":"pūjaṃ katvā yathābalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:28.1":{"pli":"Tato cutā santusitaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:28.2":{"pli":"gatā tattha mahāsukhaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:28.3":{"pli":"Anubhūtā mayaṃ sabbe, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:28.4":{"pli":"buddhapūjāyidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:29.1":{"pli":"Māyākāro yathā raṅge, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:29.2":{"pli":"dassesi vikatiṃ bahuṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:29.3":{"pli":"Tathā bhave bhamantohaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:29.4":{"pli":"videhādhipatī ahuṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:30.1":{"pli":"Guṇāceḷassa vākyena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:30.2":{"pli":"micchādiṭṭhigatāsayo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:30.3":{"pli":"Narakaṃ maggamārūḷho, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:30.4":{"pli":"rucāya mama dhītuyā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:31.1":{"pli":"Ovādaṃ nādiyitvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:31.2":{"pli":"brahmunā nāradenahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:31.3":{"pli":"Bahudhā saṃsito santo, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:31.4":{"pli":"diṭṭhiṃ hitvāna pāpikaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:32.1":{"pli":"Pūrayitvā visesena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:32.2":{"pli":"dasa kammapathānihaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:32.3":{"pli":"Hitvāna dehamagamiṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:32.4":{"pli":"saggaṃ sabhavanaṃ yathā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:33.1":{"pli":"Pacchime bhave sampatte, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:33.2":{"pli":"brahmabandhu ahosahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:33.3":{"pli":"Bārāṇasiyaṃ phītāyaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:33.4":{"pli":"jāto vippamahākule. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:34.1":{"pli":"Maccubyādhijarā bhīto, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:34.2":{"pli":"ogāhetvā mahāvanaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:34.3":{"pli":"Nibbānaṃ padamesanto, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:34.4":{"pli":"jaṭilesu paribbajiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:35.1":{"pli":"Tadā dve bhātaro mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:35.2":{"pli":"pabbajiṃsu mayā saha; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:35.3":{"pli":"Uruvelāyaṃ māpetvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:35.4":{"pli":"assamaṃ nivasiṃ ahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:36.1":{"pli":"Kassapo nāma gottena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:36.2":{"pli":"uruveḷanivāsiko; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:36.3":{"pli":"Tato me āsi paññatti, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:36.4":{"pli":"uruveḷakassapo iti. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:37.1":{"pli":"Nadīsakāse bhātā me, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:37.2":{"pli":"nadīkassapasavhayo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:37.3":{"pli":"Āsī sakāsanāmena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:37.4":{"pli":"gayāyaṃ gayākassapo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:38.1":{"pli":"Dve satāni kaniṭṭhassa, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:38.2":{"pli":"tīṇi majjhassa bhātuno; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:38.3":{"pli":"Mama pañca satānūnā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:38.4":{"pli":"sissā sabbe mamānugā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:39.1":{"pli":"Tadā upecca maṃ buddho, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:39.2":{"pli":"katvāna vividhāni me; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:39.3":{"pli":"Pāṭihīrāni lokaggo, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:39.4":{"pli":"vinesi narasārathi. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:40.1":{"pli":"Sahassaparivārena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:40.2":{"pli":"ahosiṃ ehibhikkhuko; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:40.3":{"pli":"Teheva saha sabbehi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:40.4":{"pli":"arahattamapāpuṇiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:41.1":{"pli":"Te cevaññe ca bahavo, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:41.2":{"pli":"sissā maṃ parivārayuṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:41.3":{"pli":"Sāsituñca samatthohaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:41.4":{"pli":"tato maṃ isisattamo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:42.1":{"pli":"Mahāparisabhāvasmiṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:42.2":{"pli":"etadagge ṭhapesi maṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:42.3":{"pli":"Aho buddhe kataṃ kāraṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:42.4":{"pli":"saphalaṃ me ajāyatha. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:43.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:43.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:43.3":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:44.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:44.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:44.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap540:45.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap540:45.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap540:45.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap540:46.1":{"pli":"Itthaṃ sudaṃ āyasmā uruveḷakassapo thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap540:47.1":{"pli":"Uruveḷakassapattherassāpadānaṃ aṭṭhamaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"tha-ap541":{"tha-ap541:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap541'><header><ul><li class='division'>{}</li>"},"tha-ap541:0.2":{"pli":"Kaccāyanavagga ","html":"<li>{}</li></ul>"},"tha-ap541:0.3":{"pli":"Rādhattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap541:1.1":{"pli":"“Padumuttaro nāma jino, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap541:1.2":{"pli":"sabbalokavidū muni; ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:1.3":{"pli":"Ito satasahassamhi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:1.4":{"pli":"kappe uppajji cakkhumā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap541:2.1":{"pli":"Ovādako viññāpako, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap541:2.2":{"pli":"tārako sabbapāṇinaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:2.3":{"pli":"Desanākusalo buddho, ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:2.4":{"pli":"tāresi janataṃ bahuṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap541:3.1":{"pli":"Anukampako kāruṇiko, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap541:3.2":{"pli":"hitesī sabbapāṇinaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:3.3":{"pli":"Sampatte titthiye sabbe, ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:3.4":{"pli":"pañcasīle patiṭṭhapi. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap541:4.1":{"pli":"Evaṃ nirākulaṃ āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap541:4.2":{"pli":"suññataṃ titthiyehi ca; ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:4.3":{"pli":"Vicittaṃ arahantehi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:4.4":{"pli":"vasībhūtehi tādibhi. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap541:5.1":{"pli":"Ratanānaṭṭhapaññāsaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap541:5.2":{"pli":"uggato so mahāmuni; ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:5.3":{"pli":"Kañcanagghiyasaṅkāso, ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:5.4":{"pli":"bāttiṃsavaralakkhaṇo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap541:6.1":{"pli":"Vassasatasahassāni, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap541:6.2":{"pli":"āyu vijjati tāvade; ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:6.3":{"pli":"Tāvatā tiṭṭhamāno so, ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:6.4":{"pli":"tāresi janataṃ bahuṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap541:7.1":{"pli":"Tadāhaṃ haṃsavatiyaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap541:7.2":{"pli":"brāhmaṇo mantapāragū; ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:7.3":{"pli":"Upecca taṃ naravaraṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:7.4":{"pli":"assosiṃ dhammadesanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap541:8.1":{"pli":"Paññāpentaṃ mahāvīraṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap541:8.2":{"pli":"parisāsu visāradaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:8.3":{"pli":"Paṭibhāneyyakaṃ bhikkhuṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:8.4":{"pli":"etadagge vināyakaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap541:9.1":{"pli":"Tadāhaṃ kāraṃ katvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap541:9.2":{"pli":"sasaṅghe lokanāyake; ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:9.3":{"pli":"Nipacca sirasā pāde, ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:9.4":{"pli":"taṃ ṭhānaṃ abhipatthayiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap541:10.1":{"pli":"Tato maṃ bhagavā āha, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap541:10.2":{"pli":"siṅgīnikkhasamappabho; ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:10.3":{"pli":"Sarena rajanīyena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:10.4":{"pli":"kilesamalahārinā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap541:11.1":{"pli":"‘Sukhī bhavassu dīghāyu, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap541:11.2":{"pli":"sijjhatu paṇidhī tava; ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:11.3":{"pli":"Sasaṅghe me kataṃ kāraṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:11.4":{"pli":"atīva vipulaṃ tayā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap541:12.1":{"pli":"Satasahassito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap541:12.2":{"pli":"okkākakulasambhavo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:12.3":{"pli":"Gotamo nāma gottena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:12.4":{"pli":"satthā loke bhavissati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap541:13.1":{"pli":"Tassa dhammesu dāyādo, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap541:13.2":{"pli":"oraso dhammanimmito; ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:13.3":{"pli":"Rādhoti nāmadheyyena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:13.4":{"pli":"hessati satthu sāvako. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap541:14.1":{"pli":"Sa te hetuguṇe tuṭṭho, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap541:14.2":{"pli":"sakyaputto narāsabho; ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:14.3":{"pli":"Paṭibhāneyyakānaggaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:14.4":{"pli":"paññapessati nāyako’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap541:15.1":{"pli":"Taṃ sutvā mudito hutvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap541:15.2":{"pli":"yāvajīvaṃ tadā jinaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:15.3":{"pli":"Mettacitto paricariṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:15.4":{"pli":"sato paññāsamāhito. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap541:16.1":{"pli":"Tena kammena sukatena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap541:16.2":{"pli":"cetanāpaṇidhīhi ca; ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:16.3":{"pli":"Jahitvā mānusaṃ dehaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:16.4":{"pli":"tāvatiṃsamagacchahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap541:17.1":{"pli":"Satānaṃ tīṇikkhattuñca, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap541:17.2":{"pli":"devarajjamakārayiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:17.3":{"pli":"Satānaṃ pañcakkhattuñca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:17.4":{"pli":"cakkavattī ahosahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap541:18.1":{"pli":"Padesarajjaṃ vipulaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap541:18.2":{"pli":"gaṇanāto asaṅkhiyaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:18.3":{"pli":"Sabbattha sukhito āsiṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:18.4":{"pli":"tassa kammassa vāhasā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap541:19.1":{"pli":"Pacchime bhave sampatte, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap541:19.2":{"pli":"giribbajapuruttame; ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:19.3":{"pli":"Jāto vippakule niddhe, ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:19.4":{"pli":"vikalacchādanāsane. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap541:20.1":{"pli":"Kaṭacchubhikkhaṃ pādāsiṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap541:20.2":{"pli":"sāriputtassa tādino; ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:20.3":{"pli":"Yadā jiṇṇo ca vuddho ca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:20.4":{"pli":"tadārāmamupāgamiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap541:21.1":{"pli":"Pabbajati na maṃ koci, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap541:21.2":{"pli":"jiṇṇadubbalathāmakaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:21.3":{"pli":"Tena dīno vivaṇṇaṅgo, ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:21.4":{"pli":"soko cāsiṃ tadā ahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap541:22.1":{"pli":"Disvā mahākāruṇiko, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap541:22.2":{"pli":"mamamāha mahāmuni; ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:22.3":{"pli":"‘Kimatthaṃ puttasokaṭṭo, ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:22.4":{"pli":"brūhi te cittajaṃ rujaṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap541:23.1":{"pli":"‘Pabbajjaṃ na labhe vīra, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap541:23.2":{"pli":"svākkhāte tava sāsane; ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:23.3":{"pli":"Tena sokena dīnosmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:23.4":{"pli":"saraṇaṃ hohi nāyaka’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap541:24.1":{"pli":"Tadā bhikkhū samānetvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap541:24.2":{"pli":"apucchi munisattamo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:24.3":{"pli":"‘Imassa adhikāraṃ ye, ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:24.4":{"pli":"saranti byāharantu te’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap541:25.1":{"pli":"Sāriputto tadāvoca, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap541:25.2":{"pli":"‘kāramassa sarāmahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:25.3":{"pli":"Kaṭacchubhikkhaṃ dāpesi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:25.4":{"pli":"piṇḍāya carato mama’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap541:26.1":{"pli":"‘Sādhu sādhu kataññūsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap541:26.2":{"pli":"sāriputta imaṃ tuvaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:26.3":{"pli":"Pabbājehi dijaṃ vuḍḍhaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:26.4":{"pli":"hessatājāniyo ayaṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap541:27.1":{"pli":"Tato alatthaṃ pabbajjaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap541:27.2":{"pli":"kammavācopasampadaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:27.3":{"pli":"Na cireneva kālena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:27.4":{"pli":"pāpuṇiṃ āsavakkhayaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap541:28.1":{"pli":"Sakkaccaṃ munino vākyaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap541:28.2":{"pli":"suṇāmi mudito yato; ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:28.3":{"pli":"Paṭibhāneyyakānaggaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:28.4":{"pli":"tato maṃ ṭhapayī jino. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap541:29.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap541:29.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:29.3":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap541:30.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap541:30.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:30.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap541:31.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap541:31.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap541:31.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap541:32.1":{"pli":"Itthaṃ sudaṃ āyasmā rādho thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap541:33.1":{"pli":"Rādhattherassāpadānaṃ navamaṃ. ","html":"<p class='endsutta'>{}</p></article>"}}}