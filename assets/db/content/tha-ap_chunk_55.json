{"tha-ap548":{"tha-ap548:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap548'><header><ul><li class='division'>{}</li>"},"tha-ap548:0.2":{"pli":"Bhaddiyavagga ","html":"<li>{}</li></ul>"},"tha-ap548:0.3":{"pli":"Kāḷudāyittheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap548:1.1":{"pli":"“Padumuttaro nāma jino, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap548:1.2":{"pli":"sabbadhammesu cakkhumā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:1.3":{"pli":"Ito satasahassamhi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:1.4":{"pli":"kappe uppajji nāyako. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap548:2.1":{"pli":"Nāyakānaṃ varo satthā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap548:2.2":{"pli":"guṇāguṇavidū jino; ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:2.3":{"pli":"Kataññū katavedī ca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:2.4":{"pli":"titthe yojeti pāṇine. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap548:3.1":{"pli":"Sabbaññutena ñāṇena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap548:3.2":{"pli":"tulayitvā dayāsayo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:3.3":{"pli":"Deseti pavaraṃ dhammaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:3.4":{"pli":"anantaguṇasañcayo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap548:4.1":{"pli":"Sa kadāci mahāvīro, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap548:4.2":{"pli":"anantajinasaṃsari; ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:4.3":{"pli":"Deseti madhuraṃ dhammaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:4.4":{"pli":"catusaccūpasañhitaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap548:5.1":{"pli":"Sutvāna taṃ dhammavaraṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap548:5.2":{"pli":"ādimajjhantasobhanaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:5.3":{"pli":"Pāṇasatasahassānaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:5.4":{"pli":"dhammābhisamayo ahu. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap548:6.1":{"pli":"Ninnāditā tadā bhūmi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap548:6.2":{"pli":"gajjiṃsu ca payodharā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:6.3":{"pli":"Sādhukāraṃ pavattiṃsu, ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:6.4":{"pli":"devabrahmanarāsurā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap548:7.1":{"pli":"‘Aho kāruṇiko satthā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap548:7.2":{"pli":"aho saddhammadesanā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:7.3":{"pli":"Aho bhavasamuddamhi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:7.4":{"pli":"nimugge uddharī jino’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap548:8.1":{"pli":"Evaṃ pavedajātesu, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap548:8.2":{"pli":"sanarāmarabrahmasu; ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:8.3":{"pli":"Kulappasādakānaggaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:8.4":{"pli":"sāvakaṃ vaṇṇayī jino. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap548:9.1":{"pli":"Tadāhaṃ haṃsavatiyaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap548:9.2":{"pli":"jātomaccakule ahuṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:9.3":{"pli":"Pāsādiko dassaniyo, ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:9.4":{"pli":"pahūtadhanadhaññavā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap548:10.1":{"pli":"Haṃsārāmamupeccāhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap548:10.2":{"pli":"vanditvā taṃ tathāgataṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:10.3":{"pli":"Suṇitvā madhuraṃ dhammaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:10.4":{"pli":"kāraṃ katvā ca tādino. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap548:11.1":{"pli":"Nipacca pādamūlehaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap548:11.2":{"pli":"imaṃ vacanamabraviṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:11.3":{"pli":"‘Kulappasādakānaggo, ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:11.4":{"pli":"yo tayā santhuto mune. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap548:12.1":{"pli":"Tādiso homahaṃ vīra, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap548:12.2":{"pli":"buddhaseṭṭhassa sāsane’; ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:12.3":{"pli":"Tadā mahākāruṇiko, ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:12.4":{"pli":"siñcanto vāmatena maṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap548:13.1":{"pli":"Āha maṃ ‘putta uttiṭṭha, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap548:13.2":{"pli":"lacchase taṃ manorathaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:13.3":{"pli":"Kathaṃ nāma jine kāraṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:13.4":{"pli":"katvāna viphalo siyā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap548:14.1":{"pli":"Satasahassito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap548:14.2":{"pli":"okkākakulasambhavo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:14.3":{"pli":"Gotamo nāma gottena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:14.4":{"pli":"satthā loke bhavissati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap548:15.1":{"pli":"Tassa dhammesu dāyādo, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap548:15.2":{"pli":"oraso dhammanimmito; ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:15.3":{"pli":"Udāyi nāma nāmena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:15.4":{"pli":"hessati satthu sāvako’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap548:16.1":{"pli":"Taṃ sutvā mudito hutvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap548:16.2":{"pli":"yāvajīvaṃ tadā jinaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:16.3":{"pli":"Mettacitto paricariṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:16.4":{"pli":"paccayehi vināyakaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap548:17.1":{"pli":"Tena kammavipākena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap548:17.2":{"pli":"cetanāpaṇidhīhi ca; ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:17.3":{"pli":"Jahitvā mānusaṃ dehaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:17.4":{"pli":"tāvatiṃsamagacchahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap548:18.1":{"pli":"Pacchime ca bhave dāni, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap548:18.2":{"pli":"ramme kapilavatthave; ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:18.3":{"pli":"Jāto mahāmaccakule, ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:18.4":{"pli":"suddhodanamahīpate. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap548:19.1":{"pli":"Tadā ajāyi siddhattho, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap548:19.2":{"pli":"ramme lumbinikānane; ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:19.3":{"pli":"Hitāya sabbalokassa, ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:19.4":{"pli":"sukhāya ca narāsabho. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap548:20.1":{"pli":"Tadaheva ahaṃ jāto, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap548:20.2":{"pli":"saha teneva vaḍḍhito; ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:20.3":{"pli":"Piyo sahāyo dayito, ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:20.4":{"pli":"viyatto nītikovido. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap548:21.1":{"pli":"Ekūnatiṃso vayasā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap548:21.2":{"pli":"nikkhamitvā agārato; ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:21.3":{"pli":"Chabbassaṃ vītināmetvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:21.4":{"pli":"āsi buddho vināyako. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap548:22.1":{"pli":"Jetvā sasenakaṃ māraṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap548:22.2":{"pli":"khepayitvāna āsave; ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:22.3":{"pli":"Bhavaṇṇavaṃ taritvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:22.4":{"pli":"buddho āsi sadevake. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap548:23.1":{"pli":"Isivhayaṃ gamitvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap548:23.2":{"pli":"vinetvā pañcavaggiye; ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:23.3":{"pli":"Tato vinesi bhagavā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:23.4":{"pli":"gantvā gantvā tahiṃ tahiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap548:24.1":{"pli":"Veneyye vinayanto so, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap548:24.2":{"pli":"saṅgaṇhanto sadevakaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:24.3":{"pli":"Upecca magadhe giriṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:24.4":{"pli":"viharittha tadā jino. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap548:25.1":{"pli":"Tadā suddhodanenāhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap548:25.2":{"pli":"bhūmipālena pesito; ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:25.3":{"pli":"Gantvā disvā dasabalaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:25.4":{"pli":"pabbajitvārahā ahuṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap548:26.1":{"pli":"Tadā mahesiṃ yācitvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap548:26.2":{"pli":"pāpayiṃ kapilavhayaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:26.3":{"pli":"Tato purāhaṃ gantvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:26.4":{"pli":"pasādesiṃ mahākulaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap548:27.1":{"pli":"Jino tasmiṃ guṇe tuṭṭho, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap548:27.2":{"pli":"maṃ mahāparisāya so; ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:27.3":{"pli":"Kulappasādakānaggaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:27.4":{"pli":"paññāpesi vināyako. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap548:28.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap548:28.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:28.3":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap548:29.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap548:29.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:29.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap548:30.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap548:30.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap548:30.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap548:31.1":{"pli":"Itthaṃ sudaṃ āyasmā kāḷudāyī thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap548:32.1":{"pli":"Kāḷudāyittherassāpadānaṃ chaṭṭhaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"tha-ap549":{"tha-ap549:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap549'><header><ul><li class='division'>{}</li>"},"tha-ap549:0.2":{"pli":"Bhaddiyavagga ","html":"<li>{}</li></ul>"},"tha-ap549:0.3":{"pli":"Abhayattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap549:1.1":{"pli":"“Padumuttaro nāma jino, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap549:1.2":{"pli":"sabbadhammesu cakkhumā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:1.3":{"pli":"Ito satasahassamhi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:1.4":{"pli":"kappe uppajji nāyako. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap549:2.1":{"pli":"Saraṇagamane kiñci, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap549:2.2":{"pli":"nivesesi tathāgato; ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:2.3":{"pli":"Kiñci sīle nivesesi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:2.4":{"pli":"dasakammapathuttame. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap549:3.1":{"pli":"Deti kassaci so vīro, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap549:3.2":{"pli":"sāmaññaphalamuttamaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:3.3":{"pli":"Samāpattī tathā aṭṭha, ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:3.4":{"pli":"tisso vijjā pavecchati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap549:4.1":{"pli":"Chaḷabhiññāsu yojesi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap549:4.2":{"pli":"kiñci sattaṃ naruttamo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:4.3":{"pli":"Deti kassaci nātho so, ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:4.4":{"pli":"catasso paṭisambhidā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap549:5.1":{"pli":"Bodhaneyyaṃ pajaṃ disvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap549:5.2":{"pli":"asaṅkheyyampi yojanaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:5.3":{"pli":"Khaṇena upagantvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:5.4":{"pli":"vineti narasārathi. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap549:6.1":{"pli":"Tadāhaṃ haṃsavatiyaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap549:6.2":{"pli":"ahosiṃ brāhmaṇatrajo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:6.3":{"pli":"Pāragū sabbavedānaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:6.4":{"pli":"veyyākaraṇasammato. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap549:7.1":{"pli":"Niruttiyā ca kusalo, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap549:7.2":{"pli":"nighaṇḍumhi visārado; ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:7.3":{"pli":"Padako keṭubhavidū, ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:7.4":{"pli":"chandovicitikovido. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap549:8.1":{"pli":"Jaṅghāvihāraṃ vicaraṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap549:8.2":{"pli":"haṃsārāmamupeccahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:8.3":{"pli":"Addasaṃ varadaṃ seṭṭhaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:8.4":{"pli":"mahājanapurakkhataṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap549:9.1":{"pli":"Desentaṃ virajaṃ dhammaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap549:9.2":{"pli":"paccanīkamatī ahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:9.3":{"pli":"Upetvā tassa kalyāṇaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:9.4":{"pli":"sutvāna vimalaṃ ahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap549:10.1":{"pli":"Byāhataṃ punaruttaṃ vā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap549:10.2":{"pli":"apatthaṃ vā niratthakaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:10.3":{"pli":"Nāddasaṃ tassa munino, ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:10.4":{"pli":"tato pabbajito ahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap549:11.1":{"pli":"Nacireneva kālena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap549:11.2":{"pli":"sabbasattavisārado; ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:11.3":{"pli":"Nipuṇo buddhavacane, ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:11.4":{"pli":"ahosiṃ guṇisammato. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap549:12.1":{"pli":"Tadā catasso gāthāyo, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap549:12.2":{"pli":"ganthayitvā subyañjanā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:12.3":{"pli":"Santhavitvā tilokaggaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:12.4":{"pli":"desayissaṃ dine dine. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap549:13.1":{"pli":"‘Virattosi mahāvīro, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap549:13.2":{"pli":"saṃsāre sabhaye vasaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:13.3":{"pli":"Karuṇāya na nibbāyi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:13.4":{"pli":"tato kāruṇiko muni. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap549:14.1":{"pli":"Puthujjano vayo santo, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap549:14.2":{"pli":"na kilesavaso ahu; ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:14.3":{"pli":"Sampajāno satiyutto, ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:14.4":{"pli":"tasmā eso acintiyo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap549:15.1":{"pli":"Dubbalāni kilesāni, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap549:15.2":{"pli":"yassāsayagatāni me; ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:15.3":{"pli":"Ñāṇaggiparidaḍḍhāni, ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:15.4":{"pli":"na khīyiṃsu tamabbhutaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap549:16.1":{"pli":"Yo sabbalokassa garu, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap549:16.2":{"pli":"loko yassa tathā garu; ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:16.3":{"pli":"Tathāpi lokācariyo, ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:16.4":{"pli":"loko tassānuvattako’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap549:17.1":{"pli":"Evamādīhi sambuddhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap549:17.2":{"pli":"kittayaṃ dhammadesanaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:17.3":{"pli":"Yāvajīvaṃ karitvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:17.4":{"pli":"gato saggaṃ tato cuto. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap549:18.1":{"pli":"Satasahassito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap549:18.2":{"pli":"yaṃ buddhamabhikittayiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:18.3":{"pli":"Duggatiṃ nābhijānāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:18.4":{"pli":"kittanāya idaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap549:19.1":{"pli":"Devaloke mahārajjaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap549:19.2":{"pli":"pādesiṃ kañcanagghiyaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:19.3":{"pli":"Cakkavattī mahārajjaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:19.4":{"pli":"bahusonubhaviṃ ahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap549:20.1":{"pli":"Duve bhave pajāyāmi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap549:20.2":{"pli":"devatte atha mānuse; ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:20.3":{"pli":"Aññaṃ gatiṃ na jānāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:20.4":{"pli":"kittanāya idaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap549:21.1":{"pli":"Duve kule pajāyāmi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap549:21.2":{"pli":"khattiye atha brāhmaṇe; ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:21.3":{"pli":"Nīce kule na jāyāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:21.4":{"pli":"kittanāya idaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap549:22.1":{"pli":"Pacchime ca bhave dāni, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap549:22.2":{"pli":"giribbajapuruttame; ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:22.3":{"pli":"Raññohaṃ bimbisārassa, ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:22.4":{"pli":"putto nāmena cābhayo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap549:23.1":{"pli":"Pāpamittavasaṃ gantvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap549:23.2":{"pli":"nigaṇṭhena vimohito; ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:23.3":{"pli":"Pesito nāṭaputtena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:23.4":{"pli":"buddhaseṭṭhamupeccahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap549:24.1":{"pli":"Pucchitvā nipuṇaṃ pañhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap549:24.2":{"pli":"sutvā byākaraṇuttamaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:24.3":{"pli":"Pabbajitvāna naciraṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:24.4":{"pli":"arahattamapāpuṇiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap549:25.1":{"pli":"Kittayitvā jinavaraṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap549:25.2":{"pli":"kittito homi sabbadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:25.3":{"pli":"Sugandhadehavadano, ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:25.4":{"pli":"āsiṃ sukhasamappito. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap549:26.1":{"pli":"Tikkhahāsalahupañño, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap549:26.2":{"pli":"mahāpañño tathevahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:26.3":{"pli":"Vicittapaṭibhāno ca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:26.4":{"pli":"tassa kammassa vāhasā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap549:27.1":{"pli":"Abhitthavitvā padumuttarāhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap549:27.2":{"pli":"Pasannacitto asamaṃ sayambhuṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:27.3":{"pli":"Na gacchi kappāni apāyabhūmiṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:27.4":{"pli":"Sataṃsahassāni balena tassa. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap549:28.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap549:28.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:28.3":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap549:29.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap549:29.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:29.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap549:30.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap549:30.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap549:30.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap549:31.1":{"pli":"Itthaṃ sudaṃ āyasmā abhayo thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap549:32.1":{"pli":"Abhayattherassāpadānaṃ sattamaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"tha-ap55":{"tha-ap55:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap55'><header><ul><li class='division'>{}</li>"},"tha-ap55:0.2":{"pli":"Bījanivagga ","html":"<li>{}</li></ul>"},"tha-ap55:0.3":{"pli":"Sayanadāyakattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap55:1.1":{"pli":"“Padumuttarabuddhassa, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap55:1.2":{"pli":"sabbalokānukampino; ","html":"<span class='verse-line'>{}</span>"},"tha-ap55:1.3":{"pli":"Sayanaṃ tassa pādāsiṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap55:1.4":{"pli":"vippasannena cetasā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap55:2.1":{"pli":"Tena sayanadānena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap55:2.2":{"pli":"sukhette bījasampadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap55:2.3":{"pli":"Bhogā nibbattare tassa, ","html":"<span class='verse-line'>{}</span>"},"tha-ap55:2.4":{"pli":"sayanassa idaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap55:3.1":{"pli":"Ākāse seyyaṃ kappemi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap55:3.2":{"pli":"dhāremi pathaviṃ imaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap55:3.3":{"pli":"Pāṇesu me issariyaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap55:3.4":{"pli":"sayanassa idaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap55:4.1":{"pli":"Pañcakappasahassamhi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap55:4.2":{"pli":"aṭṭha āsuṃ mahātejā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap55:4.3":{"pli":"Catuttiṃse kappasate, ","html":"<span class='verse-line'>{}</span>"},"tha-ap55:4.4":{"pli":"caturo ca mahabbalā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap55:5.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap55:5.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap55:5.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap55:6.1":{"pli":"Itthaṃ sudaṃ āyasmā sayanadāyako thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap55:7.1":{"pli":"Sayanadāyakattherassāpadānaṃ tatiyaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"tha-ap550":{"tha-ap550:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap550'><header><ul><li class='division'>{}</li>"},"tha-ap550:0.2":{"pli":"Bhaddiyavagga ","html":"<li>{}</li></ul>"},"tha-ap550:0.3":{"pli":"8 Lomasakaṅgiyattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap550:1.1":{"pli":"“Imamhi bhaddake kappe, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap550:1.2":{"pli":"brahmabandhu mahāyaso; ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:1.3":{"pli":"Kassapo nāma gottena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:1.4":{"pli":"uppajji vadataṃ varo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap550:2.1":{"pli":"Tadāhaṃ candano ceva, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap550:2.2":{"pli":"pabbajitvāna sāsane; ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:2.3":{"pli":"Āpāṇakoṭikaṃ dhammaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:2.4":{"pli":"pūrayitvāna sāsane. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap550:3.1":{"pli":"Tato cutā santusitaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap550:3.2":{"pli":"upapannā ubho mayaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:3.3":{"pli":"Tattha dibbehi naccehi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:3.4":{"pli":"gītehi vāditehi ca. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap550:4.1":{"pli":"Rūpādidasahaṅgehi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap550:4.2":{"pli":"abhibhotvāna sesake; ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:4.3":{"pli":"Yāvatāyuṃ vasitvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:4.4":{"pli":"anubhotvā mahāsukhaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap550:5.1":{"pli":"Tato cavitvā tidasaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap550:5.2":{"pli":"candano upapajjatha; ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:5.3":{"pli":"Ahaṃ kapilavatthusmiṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:5.4":{"pli":"ajāyiṃ sākiyatrajo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap550:6.1":{"pli":"Yadā udāyittherena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap550:6.2":{"pli":"ajjhiṭṭho lokanāyako; ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:6.3":{"pli":"Anukampiya sakyānaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:6.4":{"pli":"upesi kapilavhayaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap550:7.1":{"pli":"Tadātimānino sakyā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap550:7.2":{"pli":"na buddhassa guṇaññuno; ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:7.3":{"pli":"Paṇamanti na sambuddhaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:7.4":{"pli":"jātithaddhā anādarā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap550:8.1":{"pli":"Tesaṃ saṅkappamaññāya, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap550:8.2":{"pli":"ākāse caṅkamī jino; ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:8.3":{"pli":"Pajjunno viya vassittha, ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:8.4":{"pli":"pajjalittha yathā sikhī. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap550:9.1":{"pli":"Dassetvā rūpamatulaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap550:9.2":{"pli":"puna antaradhāyatha; ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:9.3":{"pli":"Ekopi hutvā bahudhā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:9.4":{"pli":"ahosi punarekako. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap550:10.1":{"pli":"Andhakāraṃ pakāsañca, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap550:10.2":{"pli":"dassayitvā anekadhā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:10.3":{"pli":"Pāṭiheraṃ karitvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:10.4":{"pli":"vinayī ñātake muni. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap550:11.1":{"pli":"Cātuddīpo mahāmegho, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap550:11.2":{"pli":"tāvadeva pavassatha; ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:11.3":{"pli":"Tadā hi jātakaṃ buddho, ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:11.4":{"pli":"vessantaramadesayi. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap550:12.1":{"pli":"Tadā te khattiyā sabbe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap550:12.2":{"pli":"nihantvā jātijaṃ madaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:12.3":{"pli":"Upesuṃ saraṇaṃ buddhaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:12.4":{"pli":"āha suddhodano tadā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap550:13.1":{"pli":"‘Idaṃ tatiyaṃ tava bhūripañña, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap550:13.2":{"pli":"Pādāni vandāmi samantacakkhu; ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:13.3":{"pli":"Yadābhijāto pathavī pakampayī, ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:13.4":{"pli":"Yadā ca taṃ najjahi jambuchāyā’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap550:14.1":{"pli":"Tadā buddhānubhāvaṃ taṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap550:14.2":{"pli":"disvā vimhitamānaso; ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:14.3":{"pli":"Pabbajitvāna tattheva, ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:14.4":{"pli":"nivasiṃ mātupūjako. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap550:15.1":{"pli":"Candano devaputto maṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap550:15.2":{"pli":"upagantvānupucchatha; ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:15.3":{"pli":"Bhaddekarattassa tadā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:15.4":{"pli":"saṅkhepavitthāraṃ nayaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap550:16.1":{"pli":"Coditohaṃ tadā tena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap550:16.2":{"pli":"upecca naranāyakaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:16.3":{"pli":"Bhaddekarattaṃ sutvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:16.4":{"pli":"saṃviggo vanamāmako. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap550:17.1":{"pli":"Tadā mātaramapucchiṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap550:17.2":{"pli":"‘vane vacchāmi ekako’; ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:17.3":{"pli":"‘Sukhumālo’ti me mātā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:17.4":{"pli":"vārayī taṃ tadā vacaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap550:18.1":{"pli":"‘Kāsaṃ kusaṃ poṭakilaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap550:18.2":{"pli":"usīraṃ muñjapabbajaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:18.3":{"pli":"Urasā panudissāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:18.4":{"pli":"vivekamanubrūhayaṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap550:19.1":{"pli":"Tadā vanaṃ paviṭṭhohaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap550:19.2":{"pli":"saritvā jinasāsanaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:19.3":{"pli":"Bhaddekarattaovādaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:19.4":{"pli":"arahattamapāpuṇiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap550:20.1":{"pli":"‘Atītaṃ nānvāgameyya, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap550:20.2":{"pli":"nappaṭikaṅkhe anāgataṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:20.3":{"pli":"Yadatītaṃ pahīnaṃ taṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:20.4":{"pli":"appattañca anāgataṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap550:21.1":{"pli":"Paccuppannañca yo dhammaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap550:21.2":{"pli":"tattha tattha vipassati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:21.3":{"pli":"Asaṃhīraṃ asaṅkuppaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:21.4":{"pli":"taṃ vidvā manubrūhaye. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap550:22.1":{"pli":"Ajjeva kiccamātappaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap550:22.2":{"pli":"ko jaññā maraṇaṃ suve; ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:22.3":{"pli":"Na hi no saṅgaraṃ tena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:22.4":{"pli":"mahāsenena maccunā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap550:23.1":{"pli":"Evaṃvihāriṃ ātāpiṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap550:23.2":{"pli":"ahorattamatanditaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:23.3":{"pli":"Taṃ ve bhaddekarattoti, ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:23.4":{"pli":"santo ācikkhate muni’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap550:24.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap550:24.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:24.3":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap550:25.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap550:25.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:25.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap550:26.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap550:26.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap550:26.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap550:27.1":{"pli":"Itthaṃ sudaṃ āyasmā lomasakaṅgiyo thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap550:28.1":{"pli":"Lomasakaṅgiyattherassāpadānaṃ aṭṭhamaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"tha-ap551":{"tha-ap551:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap551'><header><ul><li class='division'>{}</li>"},"tha-ap551:0.2":{"pli":"Bhaddiyavagga ","html":"<li>{}</li></ul>"},"tha-ap551:0.3":{"pli":"Vanavacchattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap551:1.1":{"pli":"“Imamhi bhaddake kappe, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap551:1.2":{"pli":"brahmabandhu mahāyaso; ","html":"<span class='verse-line'>{}</span>"},"tha-ap551:1.3":{"pli":"Kassapo nāma gottena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap551:1.4":{"pli":"uppajji vadataṃ varo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap551:2.1":{"pli":"Tadāhaṃ pabbajitvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap551:2.2":{"pli":"tassa buddhassa sāsane; ","html":"<span class='verse-line'>{}</span>"},"tha-ap551:2.3":{"pli":"Yāvajīvaṃ caritvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap551:2.4":{"pli":"brahmacāraṃ tato cuto. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap551:3.1":{"pli":"Tena kammena sukatena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap551:3.2":{"pli":"cetanāpaṇidhīhi ca; ","html":"<span class='verse-line'>{}</span>"},"tha-ap551:3.3":{"pli":"Jahitvā mānusaṃ dehaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap551:3.4":{"pli":"tāvatiṃsamagacchahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap551:4.1":{"pli":"Tato cuto araññamhi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap551:4.2":{"pli":"kapoto āsahaṃ tahiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap551:4.3":{"pli":"Vasate guṇasampanno, ","html":"<span class='verse-line'>{}</span>"},"tha-ap551:4.4":{"pli":"bhikkhu jhānarato sadā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap551:5.1":{"pli":"Mettacitto kāruṇiko, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap551:5.2":{"pli":"sadā pamuditānano; ","html":"<span class='verse-line'>{}</span>"},"tha-ap551:5.3":{"pli":"Upekkhako mahāvīro, ","html":"<span class='verse-line'>{}</span>"},"tha-ap551:5.4":{"pli":"appamaññāsu kovido. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap551:6.1":{"pli":"Vinīvaraṇasaṅkappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap551:6.2":{"pli":"sabbasattahitāsaye; ","html":"<span class='verse-line'>{}</span>"},"tha-ap551:6.3":{"pli":"Visaṭṭho nacirenāsiṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap551:6.4":{"pli":"tasmiṃ sugatasāvake. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap551:7.1":{"pli":"Upecca pādamūlamhi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap551:7.2":{"pli":"nisinnassa tadāssame; ","html":"<span class='verse-line'>{}</span>"},"tha-ap551:7.3":{"pli":"Kadāci sāmisaṃ deti, ","html":"<span class='verse-line'>{}</span>"},"tha-ap551:7.4":{"pli":"dhammaṃ desesi cekadā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap551:8.1":{"pli":"Tadā vipulapemena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap551:8.2":{"pli":"upāsitvā jinatrajaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap551:8.3":{"pli":"Tato cuto gato saggaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap551:8.4":{"pli":"pavāso sagharaṃ yathā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap551:9.1":{"pli":"Saggā cuto manussesu, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap551:9.2":{"pli":"nibbatto puññakammunā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap551:9.3":{"pli":"Agāraṃ chaḍḍayitvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap551:9.4":{"pli":"pabbajiṃ bahuso ahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap551:10.1":{"pli":"Samaṇo tāpaso vippo, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap551:10.2":{"pli":"paribbajo tathevahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap551:10.3":{"pli":"Hutvā vasiṃ araññamhi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap551:10.4":{"pli":"anekasataso ahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap551:11.1":{"pli":"Pacchime ca bhave dāni, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap551:11.2":{"pli":"ramme kapilavatthave; ","html":"<span class='verse-line'>{}</span>"},"tha-ap551:11.3":{"pli":"Vacchagotto dijo tassa, ","html":"<span class='verse-line'>{}</span>"},"tha-ap551:11.4":{"pli":"jāyāya ahamokkamiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap551:12.1":{"pli":"Mātu me dohaḷo āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap551:12.2":{"pli":"tirokucchigatassa me; ","html":"<span class='verse-line'>{}</span>"},"tha-ap551:12.3":{"pli":"Jāyamānasamīpamhi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap551:12.4":{"pli":"vanavāsāya nicchayo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap551:13.1":{"pli":"Tato me ajanī mātā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap551:13.2":{"pli":"ramaṇīye vanantare; ","html":"<span class='verse-line'>{}</span>"},"tha-ap551:13.3":{"pli":"Gabbhato nikkhamantaṃ maṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap551:13.4":{"pli":"kāsāyena paṭiggahuṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap551:14.1":{"pli":"Tato kumāro siddhattho, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap551:14.2":{"pli":"jāto sakyakuladdhajo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap551:14.3":{"pli":"Tassa mitto piyo āsiṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap551:14.4":{"pli":"saṃvisaṭṭho sumāniyo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap551:15.1":{"pli":"Sattasārebhinikkhante, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap551:15.2":{"pli":"ohāya vipulaṃ yasaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap551:15.3":{"pli":"Ahampi pabbajitvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap551:15.4":{"pli":"himavantamupāgamiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap551:16.1":{"pli":"Vanālayaṃ bhāvanīyaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap551:16.2":{"pli":"kassapaṃ dhutavādikaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap551:16.3":{"pli":"Disvā sutvā jinuppādaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap551:16.4":{"pli":"upesiṃ narasārathiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap551:17.1":{"pli":"So me dhammamadesesi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap551:17.2":{"pli":"sabbatthaṃ sampakāsayaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap551:17.3":{"pli":"Tatohaṃ pabbajitvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap551:17.4":{"pli":"vanameva punāgamaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap551:18.1":{"pli":"Tatthāppamatto viharaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap551:18.2":{"pli":"chaḷabhiññā aphassayiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap551:18.3":{"pli":"Aho suladdhalābhomhi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap551:18.4":{"pli":"sumittenānukampito. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap551:19.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap551:19.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap551:19.3":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap551:20.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap551:20.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap551:20.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap551:21.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap551:21.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap551:21.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap551:22.1":{"pli":"Itthaṃ sudaṃ āyasmā vanavaccho thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap551:23.1":{"pli":"Vanavacchattherassāpadānaṃ navamaṃ. ","html":"<p class='endsutta'>{}</p></article>"}}}