{"tha-ap536":{"tha-ap536:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap536'><header><ul><li class='division'>{}</li>"},"tha-ap536:0.2":{"pli":"Kaccāyanavagga ","html":"<li>{}</li></ul>"},"tha-ap536:0.3":{"pli":"Dabbamallaputtattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap536:1.1":{"pli":"“Padumuttaro nāma jino, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap536:1.2":{"pli":"sabbalokavidū muni; ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:1.3":{"pli":"Ito satasahassamhi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:1.4":{"pli":"kappe uppajji cakkhumā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:2.1":{"pli":"Ovādako viññāpako, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:2.2":{"pli":"tārako sabbapāṇinaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:2.3":{"pli":"Desanākusalo buddho, ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:2.4":{"pli":"tāresi janataṃ bahuṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:3.1":{"pli":"Anukampako kāruṇiko, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:3.2":{"pli":"hitesī sabbapāṇinaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:3.3":{"pli":"Sampatte titthiye sabbe, ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:3.4":{"pli":"pañcasīle patiṭṭhapi. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:4.1":{"pli":"Evaṃ nirākulaṃ āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:4.2":{"pli":"suññataṃ titthiyehi ca; ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:4.3":{"pli":"Vicittaṃ arahantehi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:4.4":{"pli":"vasībhūtehi tādibhi. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:5.1":{"pli":"Ratanānaṭṭhapaññāsaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:5.2":{"pli":"uggato so mahāmuni; ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:5.3":{"pli":"Kañcanagghiyasaṅkāso, ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:5.4":{"pli":"bāttiṃsavaralakkhaṇo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:6.1":{"pli":"Vassasatasahassāni, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:6.2":{"pli":"āyu vijjati tāvade; ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:6.3":{"pli":"Tāvatā tiṭṭhamāno so, ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:6.4":{"pli":"tāresi janataṃ bahuṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:7.1":{"pli":"Tadāhaṃ haṃsavatiyaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:7.2":{"pli":"seṭṭhiputto mahāyaso; ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:7.3":{"pli":"Upetvā lokapajjotaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:7.4":{"pli":"assosiṃ dhammadesanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:8.1":{"pli":"Senāsanāni bhikkhūnaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:8.2":{"pli":"paññāpentaṃ sasāvakaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:8.3":{"pli":"Kittayantassa vacanaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:8.4":{"pli":"suṇitvā mudito ahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:9.1":{"pli":"Adhikāraṃ sasaṅghassa, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:9.2":{"pli":"katvā tassa mahesino; ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:9.3":{"pli":"Nipacca sirasā pāde, ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:9.4":{"pli":"taṃ ṭhānamabhipatthayiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:10.1":{"pli":"Tadāha sa mahāvīro, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:10.2":{"pli":"mama kammaṃ pakittayaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:10.3":{"pli":"‘Yo sasaṅghamabhojesi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:10.4":{"pli":"sattāhaṃ lokanāyakaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:11.1":{"pli":"Soyaṃ kamalapattakkho, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:11.2":{"pli":"sīhaṃso kanakattaco; ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:11.3":{"pli":"Mama pādamūle nipati, ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:11.4":{"pli":"patthayaṃ ṭhānamuttamaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:12.1":{"pli":"Satasahassito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:12.2":{"pli":"okkākakulasambhavo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:12.3":{"pli":"Gotamo nāma gottena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:12.4":{"pli":"satthā loke bhavissati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:13.1":{"pli":"Sāvako tassa buddhassa, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:13.2":{"pli":"dabbo nāmena vissuto; ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:13.3":{"pli":"Senāsanapaññāpako, ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:13.4":{"pli":"aggo hessatiyaṃ tadā’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:14.1":{"pli":"Tena kammena sukatena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:14.2":{"pli":"cetanāpaṇidhīhi ca; ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:14.3":{"pli":"Jahitvā mānusaṃ dehaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:14.4":{"pli":"tāvatiṃsamagacchahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:15.1":{"pli":"Satānaṃ tīṇikkhattuñca, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:15.2":{"pli":"devarajjamakārayiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:15.3":{"pli":"Satānaṃ pañcakkhattuñca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:15.4":{"pli":"cakkavattī ahosahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:16.1":{"pli":"Padesarajjaṃ vipulaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:16.2":{"pli":"gaṇanāto asaṅkhiyaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:16.3":{"pli":"Sabbattha sukhito āsiṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:16.4":{"pli":"tassa kammassa vāhasā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:17.1":{"pli":"Ekanavutito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:17.2":{"pli":"vipassī nāma nāyako; ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:17.3":{"pli":"Uppajji cārudassano, ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:17.4":{"pli":"sabbadhammavipassako. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:18.1":{"pli":"Duṭṭhacitto upavadiṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:18.2":{"pli":"sāvakaṃ tassa tādino; ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:18.3":{"pli":"Sabbāsavaparikkhīṇaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:18.4":{"pli":"suddhoti ca vijāniya. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:19.1":{"pli":"Tasseva naravīrassa, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:19.2":{"pli":"sāvakānaṃ mahesinaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:19.3":{"pli":"Salākañca gahetvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:19.4":{"pli":"khīrodanamadāsahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:20.1":{"pli":"Imamhi bhaddake kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:20.2":{"pli":"brahmabandhu mahāyaso; ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:20.3":{"pli":"Kassapo nāma gottena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:20.4":{"pli":"uppajji vadataṃ varo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:21.1":{"pli":"Sāsanaṃ jotayitvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:21.2":{"pli":"abhibhuyya kutitthiye; ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:21.3":{"pli":"Vineyye vinayitvāva, ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:21.4":{"pli":"nibbuto so sasāvako. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:22.1":{"pli":"Sasisse nibbute nāthe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:22.2":{"pli":"atthamentamhi sāsane; ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:22.3":{"pli":"Devā kandiṃsu saṃviggā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:22.4":{"pli":"muttakesā rudammukhā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:23.1":{"pli":"‘Nibbāyissati dhammakkho, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:23.2":{"pli":"na passissāma subbate; ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:23.3":{"pli":"Na suṇissāma saddhammaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:23.4":{"pli":"aho no appapuññatā’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:24.1":{"pli":"Tadāyaṃ pathavī sabbā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:24.2":{"pli":"acalā sā calācalā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:24.3":{"pli":"Sāgaro ca sasokova, ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:24.4":{"pli":"vinadī karuṇaṃ giraṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:25.1":{"pli":"Catuddisā dundubhiyo, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:25.2":{"pli":"nādayiṃsu amānusā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:25.3":{"pli":"Samantato asaniyo, ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:25.4":{"pli":"phaliṃsu ca bhayāvahā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:26.1":{"pli":"Ukkā patiṃsu nabhasā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:26.2":{"pli":"dhūmaketu ca dissati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:26.3":{"pli":"Sadhūmā jālavaṭṭā ca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:26.4":{"pli":"raviṃsu karuṇaṃ migā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:27.1":{"pli":"Uppāde dāruṇe disvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:27.2":{"pli":"sāsanatthaṅgasūcake; ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:27.3":{"pli":"Saṃviggā bhikkhavo satta, ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:27.4":{"pli":"cintayimha mayaṃ tadā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:28.1":{"pli":"‘Sāsanena vināmhākaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:28.2":{"pli":"jīvitena alaṃ mayaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:28.3":{"pli":"Pavisitvā mahāraññaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:28.4":{"pli":"yuñjāma jinasāsanaṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:29.1":{"pli":"Addasamha tadāraññe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:29.2":{"pli":"ubbiddhaṃ selamuttamaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:29.3":{"pli":"Nisseṇiyā tamāruyha, ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:29.4":{"pli":"nisseṇiṃ pātayimhase. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:30.1":{"pli":"Tadā ovadi no thero, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:30.2":{"pli":"‘buddhuppādo sudullabho; ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:30.3":{"pli":"Saddhātidullabhā laddhā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:30.4":{"pli":"thokaṃ sesañca sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:31.1":{"pli":"Nipatanti khaṇātītā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:31.2":{"pli":"anante dukkhasāgare; ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:31.3":{"pli":"Tasmā payogo kattabbo, ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:31.4":{"pli":"yāva ṭhāti mune mataṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:32.1":{"pli":"Arahā āsi so thero, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:32.2":{"pli":"anāgāmī tadānugo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:32.3":{"pli":"Susīlā itare yuttā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:32.4":{"pli":"devalokaṃ agamhase. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:33.1":{"pli":"Nibbuto tiṇṇasaṃsāro, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:33.2":{"pli":"suddhāvāse ca ekako; ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:33.3":{"pli":"Ahañca pakkusāti ca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:33.4":{"pli":"sabhiyo bāhiyo tathā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:34.1":{"pli":"Kumārakassapo ceva, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:34.2":{"pli":"tattha tatthūpagā mayaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:34.3":{"pli":"Saṃsārabandhanā muttā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:34.4":{"pli":"gotamenānukampitā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:35.1":{"pli":"Mallesu kusinārāyaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:35.2":{"pli":"jāto gabbheva me sato; ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:35.3":{"pli":"Mātā matā citāruḷhā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:35.4":{"pli":"tato nippatito ahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:36.1":{"pli":"Patito dabbapuñjamhi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:36.2":{"pli":"tato dabboti vissuto; ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:36.3":{"pli":"Brahmacārībalenāhaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:36.4":{"pli":"vimutto sattavassiko. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:37.1":{"pli":"Khīrodanabalenāhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:37.2":{"pli":"pañcahaṅgehupāgato; ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:37.3":{"pli":"Khīṇāsavopavādena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:37.4":{"pli":"pāpehi bahucodito. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:38.1":{"pli":"Ubho puññañca pāpañca, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:38.2":{"pli":"vītivattomhi dānihaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:38.3":{"pli":"Patvāna paramaṃ santiṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:38.4":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:39.1":{"pli":"Senāsanaṃ paññāpayiṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:39.2":{"pli":"hāsayitvāna subbate; ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:39.3":{"pli":"Jino tasmiṃ guṇe tuṭṭho, ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:39.4":{"pli":"etadagge ṭhapesi maṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:40.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:40.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:40.3":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:41.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:41.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:41.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap536:42.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap536:42.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap536:42.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap536:43.1":{"pli":"Itthaṃ sudaṃ āyasmā dabbamallaputto thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap536:44.1":{"pli":"Dabbamallaputtattherassāpadānaṃ catutthaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"tha-ap537":{"tha-ap537:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap537'><header><ul><li class='division'>{}</li>"},"tha-ap537:0.2":{"pli":"Kaccāyanavagga ","html":"<li>{}</li></ul>"},"tha-ap537:0.3":{"pli":"Kumārakassapattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap537:1.1":{"pli":"“Ito satasahassamhi, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap537:1.2":{"pli":"kappe uppajji nāyako; ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:1.3":{"pli":"Sabbalokahito vīro, ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:1.4":{"pli":"padumuttaranāmako. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap537:2.1":{"pli":"Tadāhaṃ brāhmaṇo hutvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap537:2.2":{"pli":"vissuto vedapāragū; ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:2.3":{"pli":"Divāvihāraṃ vicaraṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:2.4":{"pli":"addasaṃ lokanāyakaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap537:3.1":{"pli":"Catusaccaṃ pakāsentaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap537:3.2":{"pli":"bodhayantaṃ sadevakaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:3.3":{"pli":"Vicittakathikānaggaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:3.4":{"pli":"vaṇṇayantaṃ mahājane. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap537:4.1":{"pli":"Tadā muditacittohaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap537:4.2":{"pli":"nimantetvā tathāgataṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:4.3":{"pli":"Nānārattehi vatthehi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:4.4":{"pli":"alaṅkaritvāna maṇḍapaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap537:5.1":{"pli":"Nānāratanapajjotaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap537:5.2":{"pli":"sasaṅghaṃ bhojayiṃ tahiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:5.3":{"pli":"Bhojayitvāna sattāhaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:5.4":{"pli":"nānaggarasabhojanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap537:6.1":{"pli":"Nānācittehi pupphehi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap537:6.2":{"pli":"pūjayitvā sasāvakaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:6.3":{"pli":"Nipacca pādamūlamhi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:6.4":{"pli":"taṃ ṭhānaṃ patthayiṃ ahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap537:7.1":{"pli":"Tadā munivaro āha, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap537:7.2":{"pli":"karuṇekarasāsayo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:7.3":{"pli":"‘Passathetaṃ dijavaraṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:7.4":{"pli":"padumānanalocanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap537:8.1":{"pli":"Pītipāmojjabahulaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap537:8.2":{"pli":"samuggatatanūruhaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:8.3":{"pli":"Hāsamhitavisālakkhaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:8.4":{"pli":"mama sāsanalālasaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap537:9.1":{"pli":"Patitaṃ pādamūle me, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap537:9.2":{"pli":"ekāvatthasumānasaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:9.3":{"pli":"Esa pattheti taṃ ṭhānaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:9.4":{"pli":"vicittakathikattanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap537:10.1":{"pli":"Satasahassito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap537:10.2":{"pli":"okkākakulasambhavo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:10.3":{"pli":"Gotamo nāma gottena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:10.4":{"pli":"satthā loke bhavissati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap537:11.1":{"pli":"Tassa dhammesu dāyādo, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap537:11.2":{"pli":"oraso dhammanimmito; ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:11.3":{"pli":"Kumārakassapo nāma, ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:11.4":{"pli":"hessati satthu sāvako. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap537:12.1":{"pli":"Vicittapupphadussānaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap537:12.2":{"pli":"ratanānañca vāhasā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:12.3":{"pli":"Vicittakathikānaṃ so, ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:12.4":{"pli":"aggataṃ pāpuṇissati’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap537:13.1":{"pli":"Tena kammena sukatena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap537:13.2":{"pli":"cetanāpaṇidhīhi ca; ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:13.3":{"pli":"Jahitvā mānusaṃ dehaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:13.4":{"pli":"tāvatiṃsamagacchahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap537:14.1":{"pli":"Paribbhamaṃ bhavābhave, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap537:14.2":{"pli":"raṅgamajjhe yathā naṭo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:14.3":{"pli":"Sākhamigatrajo hutvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:14.4":{"pli":"migiyā kucchimokkamiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap537:15.1":{"pli":"Tadā mayi kucchigate, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap537:15.2":{"pli":"vajjhavāro upaṭṭhito; ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:15.3":{"pli":"Sākhena cattā me mātā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:15.4":{"pli":"nigrodhaṃ saraṇaṃ gatā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap537:16.1":{"pli":"Tena sā migarājena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap537:16.2":{"pli":"maraṇā parimocitā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:16.3":{"pli":"Pariccajitvā sapāṇaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:16.4":{"pli":"mamevaṃ ovadī tadā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap537:17.1":{"pli":"‘Nigrodhameva seveyya, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap537:17.2":{"pli":"na sākhamupasaṃvase; ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:17.3":{"pli":"Nigrodhasmiṃ mataṃ seyyo, ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:17.4":{"pli":"yañce sākhamhi jīvitaṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap537:18.1":{"pli":"Tenānusiṭṭhā migayūthapena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap537:18.2":{"pli":"Ahañca mātā ca tathetare ca; ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:18.3":{"pli":"Āgamma rammaṃ tusitādhivāsaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:18.4":{"pli":"Gatā pavāsaṃ sagharaṃ yatheva. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap537:19.1":{"pli":"Puno kassapavīrassa, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap537:19.2":{"pli":"atthamentamhi sāsane; ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:19.3":{"pli":"Āruyha selasikharaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:19.4":{"pli":"yuñjitvā jinasāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap537:20.1":{"pli":"Idānāhaṃ rājagahe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap537:20.2":{"pli":"jāto seṭṭhikule ahuṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:20.3":{"pli":"Āpannasattā me mātā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:20.4":{"pli":"pabbaji anagāriyaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap537:21.1":{"pli":"Sagabbhaṃ taṃ viditvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap537:21.2":{"pli":"devadattamupānayuṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:21.3":{"pli":"So avoca ‘vināsetha, ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:21.4":{"pli":"pāpikaṃ bhikkhuniṃ imaṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap537:22.1":{"pli":"Idānipi munindena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap537:22.2":{"pli":"jinena anukampitā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:22.3":{"pli":"Sukhinī ajanī mayhaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:22.4":{"pli":"mātā bhikkhunupassaye. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap537:23.1":{"pli":"Taṃ viditvā mahīpālo, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap537:23.2":{"pli":"kosalo maṃ aposayi; ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:23.3":{"pli":"Kumāraparihārena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:23.4":{"pli":"nāmenāhañca kassapo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap537:24.1":{"pli":"Mahākassapamāgamma, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap537:24.2":{"pli":"ahaṃ kumārakassapo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:24.3":{"pli":"Vammikasadisaṃ kāyaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:24.4":{"pli":"sutvā buddhena desitaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap537:25.1":{"pli":"Tato cittaṃ vimucci me, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap537:25.2":{"pli":"anupādāya sabbaso; ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:25.3":{"pli":"Pāyāsiṃ damayitvāhaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:25.4":{"pli":"etadaggamapāpuṇiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap537:26.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap537:26.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:26.3":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap537:27.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap537:27.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:27.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap537:28.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap537:28.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap537:28.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap537:29.1":{"pli":"Itthaṃ sudaṃ āyasmā kumārakassapo thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap537:30.1":{"pli":"Kumārakassapattherassāpadānaṃ pañcamaṃ. ","html":"<p class='endsutta'>{}<br>"},"tha-ap537:30.2":{"pli":"Catuvīsatimaṃ bhāṇavāraṃ. ","html":"{}</p></article>"}},"tha-ap538":{"tha-ap538:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap538'><header><ul><li class='division'>{}</li>"},"tha-ap538:0.2":{"pli":"Kaccāyanavagga ","html":"<li>{}</li></ul>"},"tha-ap538:0.3":{"pli":"Bāhiyattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap538:1.1":{"pli":"“Ito satasahassamhi, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap538:1.2":{"pli":"kappe uppajji nāyako; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:1.3":{"pli":"Mahappabho tilokaggo, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:1.4":{"pli":"nāmena padumuttaro. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:2.1":{"pli":"Khippābhiññassa bhikkhussa, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:2.2":{"pli":"guṇaṃ kittayato mune; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:2.3":{"pli":"Sutvā udaggacittohaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:2.4":{"pli":"kāraṃ katvā mahesino. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:3.1":{"pli":"Datvā sattāhikaṃ dānaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:3.2":{"pli":"sasissassa mune ahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:3.3":{"pli":"Abhivādiya sambuddhaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:3.4":{"pli":"taṃ ṭhānaṃ patthayiṃ tadā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:4.1":{"pli":"Tato maṃ byākari buddho, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:4.2":{"pli":"‘etaṃ passatha brāhmaṇaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:4.3":{"pli":"Patitaṃ pādamūle me, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:4.4":{"pli":"cariyaṃ paccavekkhaṇaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:5.1":{"pli":"Hemayaññopacitaṅgaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:5.2":{"pli":"avadātatanuttacaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:5.3":{"pli":"Palambabimbatamboṭṭhaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:5.4":{"pli":"setatiṇhasamaṃ dijaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:6.1":{"pli":"Guṇathāmabahutaraṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:6.2":{"pli":"samuggatatanūruhaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:6.3":{"pli":"Guṇoghāyatanībhūtaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:6.4":{"pli":"pītisamphullitānanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:7.1":{"pli":"Eso patthayate ṭhānaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:7.2":{"pli":"khippābhiññassa bhikkhuno; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:7.3":{"pli":"Anāgate mahāvīro, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:7.4":{"pli":"gotamo nāma hessati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:8.1":{"pli":"Tassa dhammesu dāyādo, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:8.2":{"pli":"oraso dhammanimmito; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:8.3":{"pli":"Bāhiyo nāma nāmena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:8.4":{"pli":"hessati satthu sāvako’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:9.1":{"pli":"Tadā hi tuṭṭho vuṭṭhāya, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:9.2":{"pli":"yāvajīvaṃ mahāmune; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:9.3":{"pli":"Kāraṃ katvā cuto saggaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:9.4":{"pli":"agaṃ sabhavanaṃ yathā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:10.1":{"pli":"Devabhūto manusso vā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:10.2":{"pli":"sukhito tassa kammuno; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:10.3":{"pli":"Vāhasā saṃsaritvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:10.4":{"pli":"sampattimanubhomahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:11.1":{"pli":"Puna kassapavīrassa, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:11.2":{"pli":"atthamentamhi sāsane; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:11.3":{"pli":"Āruyha selasikharaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:11.4":{"pli":"yuñjitvā jinasāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:12.1":{"pli":"Visuddhasīlo sappañño, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:12.2":{"pli":"jinasāsanakārako; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:12.3":{"pli":"Tato cutā pañca janā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:12.4":{"pli":"devalokaṃ agamhase. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:13.1":{"pli":"Tatohaṃ bāhiyo jāto, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:13.2":{"pli":"bhārukacche puruttame; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:13.3":{"pli":"Tato nāvāya pakkhando, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:13.4":{"pli":"sāgaraṃ appasiddhiyaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:14.1":{"pli":"Tato nāvā abhijjittha, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:14.2":{"pli":"gantvāna katipāhakaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:14.3":{"pli":"Tadā bhīsanake ghore, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:14.4":{"pli":"patito makarākare. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:15.1":{"pli":"Tadāhaṃ vāyamitvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:15.2":{"pli":"santaritvā mahodadhiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:15.3":{"pli":"Suppārapaṭṭanavaraṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:15.4":{"pli":"sampatto mandavedhito. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:16.1":{"pli":"Dārucīraṃ nivāsetvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:16.2":{"pli":"gāmaṃ piṇḍāya pāvisiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:16.3":{"pli":"Tadāha so jano tuṭṭho, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:16.4":{"pli":"‘arahāyamidhāgato. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:17.1":{"pli":"Imaṃ annena pānena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:17.2":{"pli":"vatthena sayanena ca; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:17.3":{"pli":"Bhesajjena ca sakkatvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:17.4":{"pli":"hessāma sukhitā mayaṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:18.1":{"pli":"Paccayānaṃ tadā lābhī, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:18.2":{"pli":"tehi sakkatapūjito; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:18.3":{"pli":"Arahāhanti saṅkappaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:18.4":{"pli":"uppādesiṃ ayoniso. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:19.1":{"pli":"Tato me cittamaññāya, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:19.2":{"pli":"codayī pubbadevatā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:19.3":{"pli":"‘Na tvaṃ upāyamaggaññū, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:19.4":{"pli":"kuto tvaṃ arahā bhave’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:20.1":{"pli":"Codito tāya saṃviggo, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:20.2":{"pli":"tadāhaṃ paripucchi taṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:20.3":{"pli":"‘Ke vā ete kuhiṃ loke, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:20.4":{"pli":"arahanto naruttamā’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:21.1":{"pli":"‘Sāvatthiyaṃ kosalamandire jino, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:21.2":{"pli":"Pahūtapañño varabhūrimedhaso; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:21.3":{"pli":"So sakyaputto arahā anāsavo, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:21.4":{"pli":"Deseti dhammaṃ arahattapattiyā’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:22.1":{"pli":"Tadassa sutvā vacanaṃ supīṇito, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:22.2":{"pli":"Nidhiṃva laddhā kapaṇoti vimhito; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:22.3":{"pli":"Udaggacitto arahattamuttamaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:22.4":{"pli":"Sudassanaṃ daṭṭhumanantagocaraṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:23.1":{"pli":"Tadā tato nikkhamitvāna ‘satthuno, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:23.2":{"pli":"Sadā jinaṃ passāmi vimalānanaṃ’; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:23.3":{"pli":"Upecca rammaṃ vijitavhayaṃ vanaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:23.4":{"pli":"Dije apucchiṃ ‘kuhiṃ lokanandano’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:24.1":{"pli":"‘Tato avocuṃ naradevavandito, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:24.2":{"pli":"Puraṃ paviṭṭho asanesanāya so; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:24.3":{"pli":"Sasova khippaṃ munidassanussuko, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:24.4":{"pli":"Upecca vandāhi tamaggapuggalaṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:25.1":{"pli":"Tatohaṃ tuvaṭaṃ gantvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:25.2":{"pli":"sāvatthiṃ puramuttamaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:25.3":{"pli":"Vicarantaṃ tamaddakkhiṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:25.4":{"pli":"piṇḍatthaṃ apihāgidhaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:26.1":{"pli":"Pattapāṇiṃ alolakkhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:26.2":{"pli":"pācayantaṃ pītākaraṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:26.3":{"pli":"Sirīnilayasaṅkāsaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:26.4":{"pli":"ravidittiharānanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:27.1":{"pli":"Taṃ samecca nipaccāhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:27.2":{"pli":"idaṃ vacanamabraviṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:27.3":{"pli":"‘Kupathe vippanaṭṭhassa, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:27.4":{"pli":"saraṇaṃ hohi gotama’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:28.1":{"pli":"‘Pāṇasantāraṇatthāya, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:28.2":{"pli":"piṇḍāya vicarāmahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:28.3":{"pli":"Na te dhammakathākālo’, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:28.4":{"pli":"iccāha munisattamo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:29.1":{"pli":"Tadā punappunaṃ buddhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:29.2":{"pli":"āyāciṃ dhammalālaso; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:29.3":{"pli":"Yo me dhammamadesesi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:29.4":{"pli":"gambhīraṃ suññataṃ padaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:30.1":{"pli":"Tassa dhammaṃ suṇitvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:30.2":{"pli":"pāpuṇiṃ āsavakkhayaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:30.3":{"pli":"Parikkhīṇāyuko santo, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:30.4":{"pli":"aho satthānukampako. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:31.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:31.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:31.3":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:32.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:32.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:32.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:33.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:33.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:33.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:34.1":{"pli":"Evaṃ thero viyākāsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:34.2":{"pli":"bāhiyo dārucīriyo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:34.3":{"pli":"Saṅkārakūṭe patito, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:34.4":{"pli":"bhūtāviṭṭhāya gāviyā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:35.1":{"pli":"Attano pubbacariyaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:35.2":{"pli":"kittayitvā mahāmati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:35.3":{"pli":"Parinibbāyi so thero, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:35.4":{"pli":"sāvatthiyaṃ puruttame. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:36.1":{"pli":"Nagarā nikkhamanto taṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:36.2":{"pli":"disvāna isisattamo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:36.3":{"pli":"Dārucīradharaṃ dhīraṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:36.4":{"pli":"bāhiyaṃ bāhitāgamaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:37.1":{"pli":"Bhūmiyaṃ patitaṃ dantaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:37.2":{"pli":"indaketūva pātitaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:37.3":{"pli":"Gatāyuṃ sukkhakilesaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:37.4":{"pli":"jinasāsanakārakaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:38.1":{"pli":"Tato āmantayī satthā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:38.2":{"pli":"sāvake sāsane rate; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:38.3":{"pli":"‘Gaṇhatha netvā jhāpetha, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:38.4":{"pli":"tanuṃ sabrahmacārino. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:39.1":{"pli":"Thūpaṃ karotha pūjetha, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:39.2":{"pli":"nibbuto so mahāmati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:39.3":{"pli":"Khippābhiññānamesaggo, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:39.4":{"pli":"sāvako me vacokaro. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:40.1":{"pli":"Sahassamapi ce gāthā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:40.2":{"pli":"anatthapadasañhitā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:40.3":{"pli":"Ekaṃ gāthāpadaṃ seyyo, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:40.4":{"pli":"yaṃ sutvā upasammati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:41.1":{"pli":"Yattha āpo ca pathavī, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:41.2":{"pli":"tejo vāyo na gādhati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:41.3":{"pli":"Na tattha sukkā jotanti, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:41.4":{"pli":"ādicco na pakāsati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:42.1":{"pli":"Na tattha candimā bhāti, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:42.2":{"pli":"tamo tattha na vijjati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:42.3":{"pli":"Yadā ca attanā vedi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:42.4":{"pli":"munimonena brāhmaṇo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap538:43.1":{"pli":"Atha rūpā arūpā ca, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap538:43.2":{"pli":"sukhadukkhā vimuccati’; ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:43.3":{"pli":"Iccevaṃ abhaṇī nātho, ","html":"<span class='verse-line'>{}</span>"},"tha-ap538:43.4":{"pli":"tilokasaraṇo muni”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap538:44.1":{"pli":"Itthaṃ sudaṃ āyasmā bāhiyo thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap538:45.1":{"pli":"Bāhiyattherassāpadānaṃ chaṭṭhaṃ. ","html":"<p class='endsutta'>{}</p></article>"}}}