31.3":{"pli":"Nikkhantadivaseyeva, ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:31.4":{"pli":"pabbajiṃ anagāriyaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap545:32.1":{"pli":"Upajjhā sāriputto me, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap545:32.2":{"pli":"moggallāno mahiddhiko; ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:32.3":{"pli":"Kese oropayanto me, ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:32.4":{"pli":"anusāsi mahāmati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap545:33.1":{"pli":"Kesesu chijjamānesu, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap545:33.2":{"pli":"arahattamapāpuṇiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:33.3":{"pli":"Devā nāgā manussā ca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:33.4":{"pli":"paccaye upanenti me. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap545:34.1":{"pli":"Padumuttaranāthañca, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap545:34.2":{"pli":"vipassiñca vināyakaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:34.3":{"pli":"Yaṃ pūjayiṃ pamudito, ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:34.4":{"pli":"paccayehi visesato. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap545:35.1":{"pli":"Tato tesaṃ visesena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap545:35.2":{"pli":"kammānaṃ vipuluttamaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:35.3":{"pli":"Lābhaṃ labhāmi sabbattha, ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:35.4":{"pli":"vane gāme jale thale. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap545:36.1":{"pli":"Revataṃ dassanatthāya, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap545:36.2":{"pli":"yadā yāti vināyako; ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:36.3":{"pli":"Tiṃsabhikkhusahassehi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:36.4":{"pli":"saha lokagganāyako. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap545:37.1":{"pli":"Tadā devopaṇītehi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap545:37.2":{"pli":"mamatthāya mahāmati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:37.3":{"pli":"Paccayehi mahāvīro, ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:37.4":{"pli":"sasaṅgho lokanāyako. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap545:38.1":{"pli":"Upaṭṭhito mayā buddho, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap545:38.2":{"pli":"gantvā revatamaddasa; ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:38.3":{"pli":"Tato jetavanaṃ gantvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:38.4":{"pli":"etadagge ṭhapesi maṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap545:39.1":{"pli":"‘Lābhīnaṃ sīvali aggo, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap545:39.2":{"pli":"mama sissesu bhikkhavo’; ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:39.3":{"pli":"Sabbalokahito satthā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:39.4":{"pli":"kittayī parisāsu maṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap545:40.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap545:40.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:40.3":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap545:41.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap545:41.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:41.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap545:42.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap545:42.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:42.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap545:43.1":{"pli":"Itthaṃ sudaṃ āyasmā sīvalithero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap545:44.1":{"pli":"Sīvalittherassāpadānaṃ tatiyaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"tha-ap546":{"tha-ap546:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap546'><header><ul><li class='division'>{}</li>"},"tha-ap546:0.2":{"pli":"Bhaddiyavagga ","html":"<li>{}</li></ul>"},"tha-ap546:0.3":{"pli":"Vaṅgīsattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap546:1.1":{"pli":"“Padumuttaro nāma jino, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap546:1.2":{"pli":"sabbadhammesu cakkhumā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:1.3":{"pli":"Ito satasahassamhi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:1.4":{"pli":"kappe uppajji nāyako. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:2.1":{"pli":"Yathāpi sāgare ūmi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:2.2":{"pli":"gagane viya tārakā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:2.3":{"pli":"Evaṃ pāvacanaṃ tassa, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:2.4":{"pli":"arahantehi cittitaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:3.1":{"pli":"Sadevāsuranāgehi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:3.2":{"pli":"manujehi purakkhato; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:3.3":{"pli":"Samaṇabrāhmaṇākiṇṇe, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:3.4":{"pli":"janamajjhe jinuttamo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:4.1":{"pli":"Pabhāhi anurañjanto, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:4.2":{"pli":"loke lokantagū jino; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:4.3":{"pli":"Vacanena vibodhento, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:4.4":{"pli":"veneyyapadumāni so. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:5.1":{"pli":"Vesārajjehi sampanno, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:5.2":{"pli":"catūhi purisuttamo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:5.3":{"pli":"Pahīnabhayasārajjo, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:5.4":{"pli":"khemappatto visārado. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:6.1":{"pli":"Āsabhaṃ pavaraṃ ṭhānaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:6.2":{"pli":"buddhabhūmiñca kevalaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:6.3":{"pli":"Paṭijānāti lokaggo, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:6.4":{"pli":"natthi sañcodako kvaci. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:7.1":{"pli":"Sīhanādamasambhītaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:7.2":{"pli":"nadato tassa tādino; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:7.3":{"pli":"Devo naro vā brahmā vā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:7.4":{"pli":"paṭivattā na vijjati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:8.1":{"pli":"Desento pavaraṃ dhammaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:8.2":{"pli":"santārento sadevakaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:8.3":{"pli":"Dhammacakkaṃ pavatteti, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:8.4":{"pli":"parisāsu visārado. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:9.1":{"pli":"Paṭibhānavataṃ aggaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:9.2":{"pli":"sāvakaṃ sādhusammataṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:9.3":{"pli":"Guṇaṃ bahuṃ pakittetvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:9.4":{"pli":"etadagge ṭhapesi taṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:10.1":{"pli":"Tadāhaṃ haṃsavatiyaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:10.2":{"pli":"brāhmaṇo sādhusammato; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:10.3":{"pli":"Sabbavedavidū jāto, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:10.4":{"pli":"vāgīso vādisūdano. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:11.1":{"pli":"Upecca taṃ mahāvīraṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:11.2":{"pli":"sutvāhaṃ dhammadesanaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:11.3":{"pli":"Pītivaraṃ paṭilabhiṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:11.4":{"pli":"sāvakassa guṇe rato. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:12.1":{"pli":"Nimantetvāva sugataṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:12.2":{"pli":"sasaṅghaṃ lokanandanaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:12.3":{"pli":"Sattāhaṃ bhojayitvāhaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:12.4":{"pli":"dussehacchādayiṃ tadā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:13.1":{"pli":"Nipacca sirasā pāde, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:13.2":{"pli":"katokāso katañjalī; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:13.3":{"pli":"Ekamantaṃ ṭhito haṭṭho, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:13.4":{"pli":"santhaviṃ jinamuttamaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:14.1":{"pli":"‘Namo te vādimaddana, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:14.2":{"pli":"namo te isisattama; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:14.3":{"pli":"Namo te sabbalokagga, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:14.4":{"pli":"namo te abhayaṃ kara. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:15.1":{"pli":"Namo te māramathana, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:15.2":{"pli":"namo te diṭṭhisūdana; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:15.3":{"pli":"Namo te santisukhada, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:15.4":{"pli":"namo te saraṇaṃ kara. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:16.1":{"pli":"Anāthānaṃ bhavaṃ nātho, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:16.2":{"pli":"bhītānaṃ abhayappado; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:16.3":{"pli":"Vissāmabhūmi santānaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:16.4":{"pli":"saraṇaṃ saraṇesinaṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:17.1":{"pli":"Evamādīhi sambuddhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:17.2":{"pli":"santhavitvā mahāguṇaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:17.3":{"pli":"Avocaṃ vādisūdassa, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:17.4":{"pli":"gatiṃ pappomi bhikkhuno. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:18.1":{"pli":"Tadā avoca bhagavā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:18.2":{"pli":"anantapaṭibhānavā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:18.3":{"pli":"‘Yo so buddhaṃ abhojesi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:18.4":{"pli":"sattāhaṃ sahasāvakaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:19.1":{"pli":"Guṇañca me pakittesi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:19.2":{"pli":"pasanno sehi pāṇibhi; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:19.3":{"pli":"Eso patthayate ṭhānaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:19.4":{"pli":"vādisūdassa bhikkhuno. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:20.1":{"pli":"Anāgatamhi addhāne, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:20.2":{"pli":"lacchase taṃ manorathaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:20.3":{"pli":"Devamānusasampattiṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:20.4":{"pli":"anubhotvā anappakaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:21.1":{"pli":"Satasahassito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:21.2":{"pli":"okkākakulasambhavo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:21.3":{"pli":"Gotamo nāma gottena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:21.4":{"pli":"satthā loke bhavissati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:22.1":{"pli":"Tassa dhammesu dāyādo, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:22.2":{"pli":"oraso dhammanimmito; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:22.3":{"pli":"Vaṅgīso nāma nāmena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:22.4":{"pli":"hessati satthu sāvako’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:23.1":{"pli":"Taṃ sutvā mudito hutvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:23.2":{"pli":"yāvajīvaṃ tadā jinaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:23.3":{"pli":"Paccayehi upaṭṭhāsiṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:23.4":{"pli":"mettacitto tathāgataṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:24.1":{"pli":"Tena kammena sukatena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:24.2":{"pli":"cetanāpaṇidhīhi ca; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:24.3":{"pli":"Jahitvā mānusaṃ dehaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:24.4":{"pli":"tusitaṃ agamāsahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:25.1":{"pli":"Pacchime ca bhave dāni, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:25.2":{"pli":"jāto vippakule ahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:25.3":{"pli":"Paccājāto yadā āsiṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:25.4":{"pli":"jātiyā sattavassiko. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:26.1":{"pli":"Sabbavedavidū jāto, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:26.2":{"pli":"vādasatthavisārado; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:26.3":{"pli":"Vādissaro cittakathī, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:26.4":{"pli":"paravādappamaddano. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:27.1":{"pli":"Vaṅge jātoti vaṅgīso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:27.2":{"pli":"vacane issaroti vā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:27.3":{"pli":"Vaṅgīso iti me nāmaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:27.4":{"pli":"abhavī lokasammataṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:28.1":{"pli":"Yadāhaṃ viññutaṃ patto, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:28.2":{"pli":"ṭhito paṭhamayobbane; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:28.3":{"pli":"Tadā rājagahe ramme, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:28.4":{"pli":"sāriputtamahaddasaṃ. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap546:29.1":{"pli":"Pañcavīsatimaṃ bhāṇavāraṃ. ","html":"<p class='endsutta'>{}</p>"},"tha-ap546:30.1":{"pli":"Piṇḍāya vicarantaṃ taṃ, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap546:30.2":{"pli":"pattapāṇiṃ susaṃvutaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:30.3":{"pli":"Alolakkhiṃ mitabhāṇiṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:30.4":{"pli":"yugamattaṃ nidakkhitaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:31.1":{"pli":"Taṃ disvā vimhito hutvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:31.2":{"pli":"avocaṃ mamanucchavaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:31.3":{"pli":"Kaṇikāraṃva nicitaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:31.4":{"pli":"cittaṃ gāthāpadaṃ ahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:32.1":{"pli":"Ācikkhi so me satthāraṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:32.2":{"pli":"sambuddhaṃ lokanāyakaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:32.3":{"pli":"Tadā so paṇḍito vīro, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:32.4":{"pli":"uttariṃ samavoca me. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:33.1":{"pli":"Virāgasaṃhitaṃ vākyaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:33.2":{"pli":"katvā duddasamuttamaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:33.3":{"pli":"Vicittapaṭibhānehi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:33.4":{"pli":"tosito tena tādinā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:34.1":{"pli":"Nipacca sirasā pāde, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:34.2":{"pli":"‘pabbājehī’ti maṃ bravi; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:34.3":{"pli":"Tato maṃ sa mahāpañño, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:34.4":{"pli":"buddhaseṭṭhamupānayi. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:35.1":{"pli":"Nipacca sirasā pāde, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:35.2":{"pli":"nisīdiṃ satthu santike; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:35.3":{"pli":"Mamāha vadataṃ seṭṭho, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:35.4":{"pli":"‘kacci vaṅgīsa jānāsi’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:36.1":{"pli":"Kiñci sippanti tassāhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:36.2":{"pli":"‘jānāmī’ti ca abraviṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:36.3":{"pli":"‘Matasīsaṃ vanacchuddhaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:36.4":{"pli":"api bārasavassikaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:36.5":{"pli":"Tava vijjāvisesena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:36.6":{"pli":"sace sakkosi vācaya’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:37.1":{"pli":"‘Āmoti me paṭiññāte, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:37.2":{"pli":"tīṇi sīsāni dassayi; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:37.3":{"pli":"Nirayanaradevesu, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:37.4":{"pli":"upapanne avācayiṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:38.1":{"pli":"Tadā khīṇāsavasseva, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:38.2":{"pli":"sīsaṃ dassesi nāyako; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:38.3":{"pli":"Tatohaṃ vihatārambho, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:38.4":{"pli":"pabbajjaṃ samayācisaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:39.1":{"pli":"Pabbajitvāna sugataṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:39.2":{"pli":"santhavāmi tahiṃ tahiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:39.3":{"pli":"Tato maṃ kabbavittosi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:39.4":{"pli":"ujjhāyantiha bhikkhavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:40.1":{"pli":"Tato vīmaṃsanatthaṃ me, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:40.2":{"pli":"āha buddho vināyako; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:40.3":{"pli":"‘Takkikā panimā gāthā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:40.4":{"pli":"ṭhānaso paṭibhanti taṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:41.1":{"pli":"‘Na kabbavittohaṃ vīra, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:41.2":{"pli":"ṭhānaso paṭibhanti maṃ’; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:41.3":{"pli":"‘Tena hi dāni vaṅgīsa, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:41.4":{"pli":"ṭhānaso santhavāhi maṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:42.1":{"pli":"Tadāhaṃ santhaviṃ vīraṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:42.2":{"pli":"gāthāhi isisattamaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:42.3":{"pli":"Ṭhānaso me tadā tuṭṭho, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:42.4":{"pli":"jino agge ṭhapesi maṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:43.1":{"pli":"Paṭibhānena cittena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:43.2":{"pli":"aññesamatimaññahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:43.3":{"pli":"Pesale tena saṃviggo, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:43.4":{"pli":"arahattamapāpuṇiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:44.1":{"pli":"‘Paṭibhānavataṃ aggo, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:44.2":{"pli":"añño koci na vijjati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:44.3":{"pli":"Yathāyaṃ bhikkhu vaṅgīso, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:44.4":{"pli":"evaṃ dhāretha bhikkhavo’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:45.1":{"pli":"Satasahasse kataṃ kammaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:45.2":{"pli":"phalaṃ dassesi me idha; ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:45.3":{"pli":"Sumutto saravegova, ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:45.4":{"pli":"kilese jhāpayiṃ mama. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:46.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:46.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:46.3":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:47.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:47.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:47.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap546:48.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap546:48.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap546:48.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap546:49.1":{"pli":"Itthaṃ sudaṃ āyasmā vaṅgīso thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap546:50.1":{"pli":"Vaṅgīsattherassāpadānaṃ catutthaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"tha-ap547":{"tha-ap547:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap547'><header><ul><li class='division'>{}</li>"},"tha-ap547:0.2":{"pli":"Bhaddiyavagga ","html":"<li>{}</li></ul>"},"tha-ap547:0.3":{"pli":"Nandakattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap547:1.1":{"pli":"“Padumuttaro nāma jino, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap547:1.2":{"pli":"sabbadhammesu cakkhumā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:1.3":{"pli":"Ito satasahassamhi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:1.4":{"pli":"kappe uppajji nāyako. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap547:2.1":{"pli":"Hitāya sabbasattānaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap547:2.2":{"pli":"sukhāya vadataṃ varo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:2.3":{"pli":"Atthāya purisājañño, ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:2.4":{"pli":"paṭipanno sadevake. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap547:3.1":{"pli":"Yasaggapatto sirimā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap547:3.2":{"pli":"kittivaṇṇabhato jino; ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:3.3":{"pli":"Pūjito sabbalokassa, ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:3.4":{"pli":"disā sabbāsu vissuto. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap547:4.1":{"pli":"Uttiṇṇavicikiccho so, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap547:4.2":{"pli":"vītivattakathaṅkatho; ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:4.3":{"pli":"Paripuṇṇamanasaṅkappo, ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:4.4":{"pli":"patto sambodhimuttamaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap547:5.1":{"pli":"Anuppannassa maggassa, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap547:5.2":{"pli":"uppādetā naruttamo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:5.3":{"pli":"Anakkhātañca akkhāsi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:5.4":{"pli":"asañjātañca sañjanī. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap547:6.1":{"pli":"Maggaññū maggavidū ca, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap547:6.2":{"pli":"maggakkhāyī narāsabho; ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:6.3":{"pli":"Maggassa kusalo satthā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:6.4":{"pli":"sārathīnaṃ varuttamo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap547:7.1":{"pli":"Tadā mahākāruṇiko, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap547:7.2":{"pli":"dhammaṃ desesi nāyako; ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:7.3":{"pli":"Nimugge kāmapaṅkamhi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:7.4":{"pli":"samuddharati pāṇine. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap547:8.1":{"pli":"Bhikkhunīnaṃ ovadane, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap547:8.2":{"pli":"sāvakaṃ seṭṭhasammataṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:8.3":{"pli":"Vaṇṇayaṃ etadaggamhi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:8.4":{"pli":"paññapesi mahāmuni. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap547:9.1":{"pli":"Taṃ sutvāhaṃ pamudito, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap547:9.2":{"pli":"nimantetvā tathāgataṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:9.3":{"pli":"Bhojayitvā sasaṅghaṃ taṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:9.4":{"pli":"patthayiṃ ṭhānamuttamaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap547:10.1":{"pli":"Tadā pamudito nātho, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap547:10.2":{"pli":"maṃ avoca mahāisi; ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:10.3":{"pli":"‘Sukhī bhavassu dīghāvu, ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:10.4":{"pli":"lacchase taṃ manorathaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap547:11.1":{"pli":"Satasahassito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap547:11.2":{"pli":"okkākakulasambhavo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:11.3":{"pli":"Gotamo nāma gottena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:11.4":{"pli":"satthā loke bhavissati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap547:12.1":{"pli":"Tassa dhammesu dāyādo, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap547:12.2":{"pli":"oraso dhammanimmito; ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:12.3":{"pli":"Nandako nāma nāmena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:12.4":{"pli":"hessati satthu sāvako’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap547:13.1":{"pli":"Tena kammena sukatena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap547:13.2":{"pli":"cetanāpaṇidhīhi ca; ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:13.3":{"pli":"Jahitvā mānusaṃ dehaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:13.4":{"pli":"tāvatiṃsūpago ahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap547:14.1":{"pli":"Pacchime ca bhave dāni, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap547:14.2":{"pli":"jāto seṭṭhikule ahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:14.3":{"pli":"Sāvatthiyaṃ pure vare, ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:14.4":{"pli":"iddhe phīte mahaddhane. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap547:15.1":{"pli":"Purappavese sugataṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap547:15.2":{"pli":"disvā vimhitamānaso; ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:15.3":{"pli":"Jetārāmapaṭiggāhe, ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:15.4":{"pli":"pabbajiṃ anagāriyaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap547:16.1":{"pli":"Nacireneva kālena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap547:16.2":{"pli":"arahattamapāpuṇiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:16.3":{"pli":"Tatohaṃ tiṇṇasaṃsāro, ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:16.4":{"pli":"sāsito sabbadassinā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap547:17.1":{"pli":"Bhikkhunīnaṃ dhammakathaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap547:17.2":{"pli":"paṭipucchākariṃ ahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:17.3":{"pli":"Sāsitā tā mayā sabbā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:17.4":{"pli":"abhaviṃsu anāsavā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap547:18.1":{"pli":"Satāni pañcanūnāni, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap547:18.2":{"pli":"tadā tuṭṭho mahāhito; ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:18.3":{"pli":"Bhikkhunīnaṃ ovadataṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:18.4":{"pli":"aggaṭṭhāne ṭhapesi maṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap547:19.1":{"pli":"Satasahasse kataṃ kammaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap547:19.2":{"pli":"phalaṃ dassesi me idha; ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:19.3":{"pli":"Sumutto saravegova, ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:19.4":{"pli":"kilese jhāpayiṃ mama. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap547:20.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap547:20.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:20.3":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap547:21.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap547:21.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:21.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap547:22.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap547:22.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap547:22.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap547:23.1":{"pli":"Itthaṃ sudaṃ āyasmā nandako thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap547:24.1":{"pli":"Nandakattherassāpadānaṃ pañcamaṃ. ","html":"<p class='endsutta'>{}</p></article>"}}}