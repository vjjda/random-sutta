{"tha-ap545":{"tha-ap545:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap545'><header><ul><li class='division'>{}</li>"},"tha-ap545:0.2":{"pli":"Bhaddiyavagga ","html":"<li>{}</li></ul>"},"tha-ap545:0.3":{"pli":"Sīvalittheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap545:1.1":{"pli":"“Padumuttaro nāma jino, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap545:1.2":{"pli":"sabbadhammesu cakkhumā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:1.3":{"pli":"Ito satasahassamhi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:1.4":{"pli":"kappe uppajji nāyako. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap545:2.1":{"pli":"Sīlaṃ tassa asaṅkheyyaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap545:2.2":{"pli":"samādhi vajirūpamo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:2.3":{"pli":"Asaṅkheyyaṃ ñāṇavaraṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:2.4":{"pli":"vimutti ca anopamā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap545:3.1":{"pli":"Manujāmaranāgānaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap545:3.2":{"pli":"brahmānañca samāgame; ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:3.3":{"pli":"Samaṇabrāhmaṇākiṇṇe, ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:3.4":{"pli":"dhammaṃ desesi nāyako. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap545:4.1":{"pli":"Sasāvakaṃ mahālābhiṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap545:4.2":{"pli":"puññavantaṃ jutindharaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:4.3":{"pli":"Ṭhapesi etadaggamhi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:4.4":{"pli":"parisāsu visārado. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap545:5.1":{"pli":"Tadāhaṃ khattiyo āsiṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap545:5.2":{"pli":"nagare haṃsasavhaye; ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:5.3":{"pli":"Sutvā jinassa taṃ vākyaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:5.4":{"pli":"sāvakassa guṇaṃ bahuṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap545:6.1":{"pli":"Nimantayitvā sattāhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap545:6.2":{"pli":"bhojayitvā sasāvakaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:6.3":{"pli":"Mahādānaṃ daditvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:6.4":{"pli":"taṃ ṭhānamabhipatthayiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap545:7.1":{"pli":"Tadā maṃ vinataṃ pāde, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap545:7.2":{"pli":"disvāna purisāsabho; ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:7.3":{"pli":"Sarena mahatā vīro, ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:7.4":{"pli":"idaṃ vacanamabravi. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap545:8.1":{"pli":"‘Tato jinassa vacanaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap545:8.2":{"pli":"sotukāmā mahājanā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:8.3":{"pli":"Devadānavagandhabbā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:8.4":{"pli":"brahmāno ca mahiddhikā’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap545:9.1":{"pli":"Samaṇabrāhmaṇā ceva, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap545:9.2":{"pli":"namassiṃsu katañjalī; ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:9.3":{"pli":"‘Namo te purisājañña, ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:9.4":{"pli":"namo te purisuttama. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap545:10.1":{"pli":"Khattiyena mahādānaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap545:10.2":{"pli":"dinnaṃ sattāhikampi vo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:10.3":{"pli":"Sotukāmā phalaṃ tassa, ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:10.4":{"pli":"byākarohi mahāmune’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap545:11.1":{"pli":"Tato avoca bhagavā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap545:11.2":{"pli":"‘suṇātha mama bhāsitaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:11.3":{"pli":"Appameyyamhi buddhamhi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:11.4":{"pli":"sasaṅghamhi patiṭṭhitā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap545:12.1":{"pli":"Dakkhiṇā tāya ko vattā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap545:12.2":{"pli":"appameyyaphalā hi sā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:12.3":{"pli":"Api ce sa mahābhogo, ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:12.4":{"pli":"ṭhānaṃ pattheti uttamaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap545:13.1":{"pli":"Lābhī vipulalābhānaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap545:13.2":{"pli":"yathā bhikkhu sudassano; ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:13.3":{"pli":"Tathāhampi bhaveyyanti, ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:13.4":{"pli":"lacchase taṃ anāgate. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap545:14.1":{"pli":"Satasahassito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap545:14.2":{"pli":"okkākakulasambhavo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:14.3":{"pli":"Gotamo nāma gottena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:14.4":{"pli":"satthā loke bhavissati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap545:15.1":{"pli":"Tassa dhammesu dāyādo, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap545:15.2":{"pli":"oraso dhammanimmito; ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:15.3":{"pli":"Sīvali nāma nāmena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:15.4":{"pli":"hessati satthu sāvako’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap545:16.1":{"pli":"Tena kammena sukatena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap545:16.2":{"pli":"cetanāpaṇidhīhi ca; ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:16.3":{"pli":"Jahitvā mānusaṃ dehaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:16.4":{"pli":"tāvatiṃsūpago ahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap545:17.1":{"pli":"Ekanavutito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap545:17.2":{"pli":"vipassī lokanāyako; ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:17.3":{"pli":"Uppajji cārudassano, ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:17.4":{"pli":"sabbadhammavipassako. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap545:18.1":{"pli":"Tadāhaṃ bandhumatiyaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap545:18.2":{"pli":"kulassaññatarassa ca; ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:18.3":{"pli":"Dayito passito ceva, ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:18.4":{"pli":"āsiṃ kammantavāvaṭo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap545:19.1":{"pli":"Tadā aññataro pūgo, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap545:19.2":{"pli":"vipassissa mahesino; ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:19.3":{"pli":"Parivesaṃ akārayi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:19.4":{"pli":"mahantamativissutaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap545:20.1":{"pli":"Niṭṭhite ca mahādāne, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap545:20.2":{"pli":"daduṃ khajjakasañhitaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:20.3":{"pli":"Navaṃ dadhiṃ madhuñceva, ","html":"<span class='verse-line'>{}</span>"},"tha-ap545:20.4":{"pli":"vicinaṃ neva addasuṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap545:21.1":{"pli":"Tadāhaṃ taṃ gahetvāna, ","html":