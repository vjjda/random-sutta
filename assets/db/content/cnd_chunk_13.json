{"cnd3":{"cnd3:0.1":{"pli":"Cūḷaniddesa ","html":"<article id='cnd3'><header><ul><li class='division'>{}</li>"},"cnd3:0.2":{"pli":"Pārāyanavaggagāthā ","html":"<li>{}</li></ul>"},"cnd3:0.3":{"pli":"3. Pārāyanatthutigāthā ","html":"<h1 class='sutta-title'>{}</h1></header>"},"cnd3:1.1":{"pli":"Idamavoca bhagavā magadhesu viharanto pāsāṇake cetiye, paricārakasoḷasānaṃ brāhmaṇānaṃ ajjhiṭṭho puṭṭho puṭṭho pañhaṃ byākāsi. ","html":"<p>{}"},"cnd3:1.2":{"pli":"Ekamekassa cepi pañhassa atthamaññāya dhammamaññāya dhammānudhammaṃ paṭipajjeyya, gaccheyyeva jarāmaraṇassa pāraṃ. ","html":"{}"},"cnd3:1.3":{"pli":"“Pāraṅgamanīyā ime dhammā”ti—","html":"{}"},"cnd3:1.4":{"pli":"tasmā imassa dhammapariyāyassa pārāyananteva adhivacanaṃ. ","html":"{}</p>"},"cnd3:2.1":{"pli":"Ajito tissametteyyo, ","html":"<blockquote class='gatha'><p data-counter='11'><span class='verse-line'>{}</span>"},"cnd3:2.2":{"pli":"puṇṇako atha mettagū; ","html":"<span class='verse-line'>{}</span>"},"cnd3:2.3":{"pli":"Dhotako upasīvo ca, ","html":"<span class='verse-line'>{}</span>"},"cnd3:2.4":{"pli":"nando ca atha hemako. ","html":"<span class='verse-line'>{}</span></p>"},"cnd3:3.1":{"pli":"Todeyyakappā dubhayo, ","html":"<p data-counter='21'><span class='verse-line'>{}</span>"},"cnd3:3.2":{"pli":"jatukaṇṇī ca paṇḍito; ","html":"<span class='verse-line'>{}</span>"},"cnd3:3.3":{"pli":"Bhadrāvudho udayo ca, ","html":"<span class='verse-line'>{}</span>"},"cnd3:3.4":{"pli":"posālo cāpi brāhmaṇo; ","html":"<span class='verse-line'>{}</span>"},"cnd3:3.5":{"pli":"Mogharājā ca medhāvī, ","html":"<span class='verse-line'>{}</span>"},"cnd3:3.6":{"pli":"piṅgiyo ca mahāisi. ","html":"<span class='verse-line'>{}</span></p>"},"cnd3:4.1":{"pli":"Ete buddhaṃ upāgacchuṃ, ","html":"<p data-counter='31'><span class='verse-line'>{}</span>"},"cnd3:4.2":{"pli":"Sampannacaraṇaṃ isiṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd3:4.3":{"pli":"Pucchantā nipuṇe pañhe, ","html":"<span class='verse-line'>{}</span>"},"cnd3:4.4":{"pli":"Buddhaseṭṭhaṃ upāgamuṃ. ","html":"<span class='verse-line'>{}</span></p>"},"cnd3:5.1":{"pli":"Tesaṃ buddho pabyākāsi, ","html":"<p data-counter='41'><span class='verse-line'>{}</span>"},"cnd3:5.2":{"pli":"pañhe puṭṭho yathātathaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd3:5.3":{"pli":"Pañhānaṃ veyyākaraṇena, ","html":"<span class='verse-line'>{}</span>"},"cnd3:5.4":{"pli":"tosesi brāhmaṇe muni. ","html":"<span class='verse-line'>{}</span></p>"},"cnd3:6.1":{"pli":"Te tositā cakkhumatā, ","html":"<p data-counter='51'><span class='verse-line'>{}</span>"},"cnd3:6.2":{"pli":"buddhenādiccabandhunā; ","html":"<span class='verse-line'>{}</span>"},"cnd3:6.3":{"pli":"Brahmacariyamacariṃsu, ","html":"<span class='verse-line'>{}</span>"},"cnd3:6.4":{"pli":"varapaññassa santike. ","html":"<span class='verse-line'>{}</span></p>"},"cnd3:7.1":{"pli":"Ekamekassa pañhassa, ","html":"<p data-counter='61'><span class='verse-line'>{}</span>"},"cnd3:7.2":{"pli":"yathā buddhena desitaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd3:7.3":{"pli":"Tathā yo paṭipajjeyya, ","html":"<span class='verse-line'>{}</span>"},"cnd3:7.4":{"pli":"gacche pāraṃ apārato. ","html":"<span class='verse-line'>{}</span></p>"},"cnd3:8.1":{"pli":"Apārā pāraṃ gaccheyya, ","html":"<p data-counter='71'><span class='verse-line'>{}</span>"},"cnd3:8.2":{"pli":"bhāvento maggamuttamaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd3:8.3":{"pli":"Maggo so pāraṃ gamanāya, ","html":"<span class='verse-line'>{}</span>"},"cnd3:8.4":{"pli":"tasmā pārāyanaṃ iti. ","html":"<span class='verse-line'>{}</span></p></blockquote></article>"}},"cnd4":{"cnd4:0.1":{"pli":"Cūḷaniddesa ","html":"<article id='cnd4'><header><ul><li class='division'>{}</li>"},"cnd4:0.2":{"pli":"Pārāyanavaggagāthā ","html":"<li>{}</li></ul>"},"cnd4:0.3":{"pli":"4. Pārāyanānugītigāthā ","html":"<h1 class='sutta-title'>{}</h1></header>"},"cnd4:1.1":{"pli":"“Pārāyanamanugāyissaṃ, ","html":"<blockquote class='gatha'><p data-counter='1'><span class='verse-line'>{}</span>"},"cnd4:1.2":{"pli":"(iccāyasmā piṅgiyo) ","html":"<span class='speaker'>{}</span>"},"cnd4:1.3":{"pli":"Yathāddakkhi tathākkhāsi; ","html":"<span class='verse-line'>{}</span>"},"cnd4:1.4":{"pli":"Vimalo bhūrimedhaso, ","html":"<span class='verse-line'>{}</span>"},"cnd4:1.5":{"pli":"Nikkāmo nibbano nāgo; ","html":"<span class='verse-line'>{}</span>"},"cnd4:1.6":{"pli":"Kissa hetu musā bhaṇe. ","html":"<span class='verse-line'>{}</span></p>"},"cnd4:2.1":{"pli":"Pahīnamalamohassa, ","html":"<p data-counter='21'><span class='verse-line'>{}</span>"},"cnd4:2.2":{"pli":"mānamakkhappahāyino; ","html":"<span class='verse-line'>{}</span>"},"cnd4:2.3":{"pli":"Handāhaṃ kittayissāmi, ","html":"<span class='verse-line'>{}</span>"},"cnd4:2.4":{"pli":"giraṃ vaṇṇūpasañhitaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"cnd4:3.1":{"pli":"Tamonudo buddho samantacakkhu, ","html":"<p data-counter='31'><span class='verse-line'>{}</span>"},"cnd4:3.2":{"pli":"Lokantagū sabbabhavātivatto; ","html":"<span class='verse-line'>{}</span>"},"cnd4:3.3":{"pli":"Anāsavo sabbadukkhappahīno, ","html":"<span class='verse-line'>{}</span>"},"cnd4:3.4":{"pli":"Saccavhayo brahme upāsito me. ","html":"<span class='verse-line'>{}</span></p>"},"cnd4:4.1":{"pli":"Dijo yathā kubbanakaṃ pahāya, ","html":"<p data-counter='41'><span class='verse-line'>{}</span>"},"cnd4:4.2":{"pli":"Bahupphalaṃ kānanamāvaseyya; ","html":"<span class='verse-line'>{}</span>"},"cnd4:4.3":{"pli":"Evampahaṃ appadasse pahāya, ","html":"<span class='verse-line'>{}</span>"},"cnd4:4.4":{"pli":"Mahodadhiṃ haṃsoriva ajjhapatto. ","html":"<span class='verse-line'>{}</span></p>"},"cnd4:5.1":{"pli":"Yeme pubbe viyākaṃsu, ","html":"<p data-counter='51'><span class='verse-line'>{}</span>"},"cnd4:5.2":{"pli":"Huraṃ gotamasāsanā; ","html":"<span class='verse-line'>{}</span>"},"cnd4:5.3":{"pli":"Iccāsi iti bhavissati, ","html":"<span class='verse-line'>{}</span>"},"cnd4:5.4":{"pli":"Sabbaṃ taṃ itihītihaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd4:5.5":{"pli":"Sabbaṃ taṃ takkavaḍḍhanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"cnd4:6.1":{"pli":"Eko tamonudāsino, ","html":"<p data-counter='61'><span class='verse-line'>{}</span>"},"cnd4:6.2":{"pli":"jutimā so pabhaṅkaro; ","html":"<span class='verse-line'>{}</span>"},"cnd4:6.3":{"pli":"Gotamo bhūripaññāṇo, ","html":"<span class='verse-line'>{}</span>"},"cnd4:6.4":{"pli":"gotamo bhūrimedhaso. ","html":"<span class='verse-line'>{}</span></p>"},"cnd4:7.1":{"pli":"Yo me dhammamadesesi, ","html":"<p data-counter='71'><span class='verse-line'>{}</span>"},"cnd4:7.2":{"pli":"Sandiṭṭhikamakālikaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd4:7.3":{"pli":"Taṇhakkhayamanītikaṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd4:7.4":{"pli":"Yassa natthi upamā kvaci”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd4:8.1":{"pli":"“Kiṃ nu tamhā vippavasasi, ","html":"<p data-counter='81'><span class='verse-line'>{}</span>"},"cnd4:8.2":{"pli":"muhuttamapi piṅgiya; ","html":"<span class='verse-line'>{}</span>"},"cnd4:8.3":{"pli":"Gotamā bhūripaññāṇā, ","html":"<span class='verse-line'>{}</span>"},"cnd4:8.4":{"pli":"gotamā bhūrimedhasā. ","html":"<span class='verse-line'>{}</span></p>"},"cnd4:9.1":{"pli":"Yo te dhammamadesesi, ","html":"<p data-counter='91'><span class='verse-line'>{}</span>"},"cnd4:9.2":{"pli":"Sandiṭṭhikamakālikaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd4:9.3":{"pli":"Taṇhakkhayamanītikaṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd4:9.4":{"pli":"Yassa natthi upamā kvaci”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd4:10.1":{"pli":"“Nāhaṃ tamhā vippavasāmi, ","html":"<p data-counter='101'><span class='verse-line'>{}</span>"},"cnd4:10.2":{"pli":"Muhuttamapi brāhmaṇa; ","html":"<span class='verse-line'>{}</span>"},"cnd4:10.3":{"pli":"Gotamā bhūripaññāṇā, ","html":"<span class='verse-line'>{}</span>"},"cnd4:10.4":{"pli":"Gotamā bhūrimedhasā. ","html":"<span class='verse-line'>{}</span></p>"},"cnd4:11.1":{"pli":"Yo me dhammamadesesi, ","html":"<p data-counter='111'><span class='verse-line'>{}</span>"},"cnd4:11.2":{"pli":"Sandiṭṭhikamakālikaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd4:11.3":{"pli":"Taṇhakkhayamanītikaṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd4:11.4":{"pli":"Yassa natthi upamā kvaci. ","html":"<span class='verse-line'>{}</span></p>"},"cnd4:12.1":{"pli":"Passāmi naṃ manasā cakkhunāva, ","html":"<p data-counter='121'><span class='verse-line'>{}</span>"},"cnd4:12.2":{"pli":"Rattindivaṃ brāhmaṇa appamatto; ","html":"<span class='verse-line'>{}</span>"},"cnd4:12.3":{"pli":"Namassamāno vivasemi rattiṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd4:12.4":{"pli":"Teneva maññāmi avippavāsaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"cnd4:13.1":{"pli":"Saddhā ca pīti ca mano sati ca, ","html":"<p data-counter='131'><span class='verse-line'>{}</span>"},"cnd4:13.2":{"pli":"Nāpentime gotamasāsanamhā; ","html":"<span class='verse-line'>{}</span>"},"cnd4:13.3":{"pli":"Yaṃ yaṃ disaṃ vajati bhūripañño, ","html":"<span class='verse-line'>{}</span>"},"cnd4:13.4":{"pli":"Sa tena teneva natohamasmi. ","html":"<span class='verse-line'>{}</span></p>"},"cnd4:14.1":{"pli":"Jiṇṇassa me dubbalathāmakassa, ","html":"<p data-counter='141'><span class='verse-line'>{}</span>"},"cnd4:14.2":{"pli":"Teneva kāyo na paleti tattha; ","html":"<span class='verse-line'>{}</span>"},"cnd4:14.3":{"pli":"Saṅkappayantāya vajāmi niccaṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd4:14.4":{"pli":"Mano hi me brāhmaṇa tena yutto. ","html":"<span class='verse-line'>{}</span></p>"},"cnd4:15.1":{"pli":"Paṅke sayāno pariphandamāno, ","html":"<p data-counter='151'><span class='verse-line'>{}</span>"},"cnd4:15.2":{"pli":"Dīpā dīpaṃ upallaviṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd4:15.3":{"pli":"Athaddasāsiṃ sambuddhaṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd4:15.4":{"pli":"Oghatiṇṇamanāsavaṃ”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd4:16.1":{"pli":"“Yathā ahū vakkali muttasaddho, ","html":"<p data-counter='161'><span class='verse-line'>{}</span>"},"cnd4:16.2":{"pli":"Bhadrāvudho āḷavigotamo ca; ","html":"<span class='verse-line'>{}</span>"},"cnd4:16.3":{"pli":"Evameva tvampi pamuñcassu saddhaṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd4:16.4":{"pli":"Gamissasi tvaṃ piṅgiya maccudheyyassa pāraṃ”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd4:17.1":{"pli":"“Esa bhiyyo pasīdāmi, ","html":"<p data-counter='171'><span class='verse-line'>{}</span>"},"cnd4:17.2":{"pli":"Sutvāna munino vaco; ","html":"<span class='verse-line'>{}</span>"},"cnd4:17.3":{"pli":"Vivaṭṭacchado sambuddho, ","html":"<span class='verse-line'>{}</span>"},"cnd4:17.4":{"pli":"Akhilo paṭibhānavā. ","html":"<span class='verse-line'>{}</span></p>"},"cnd4:18.1":{"pli":"Adhideve abhiññāya, ","html":"<p data-counter='181'><span class='verse-line'>{}</span>"},"cnd4:18.2":{"pli":"Sabbaṃ vedi paroparaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd4:18.3":{"pli":"Pañhānantakaro satthā, ","html":"<span class='verse-line'>{}</span>"},"cnd4:18.4":{"pli":"Kaṅkhīnaṃ paṭijānataṃ. ","html":"<span class='verse-line'>{}</span></p>"},"cnd4:19.1":{"pli":"Asaṃhīraṃ asaṅkuppaṃ, ","html":"<p data-counter='191'><span class='verse-line'>{}</span>"},"cnd4:19.2":{"pli":"Yassa natthi upamā kvaci; ","html":"<span class='verse-line'>{}</span>"},"cnd4:19.3":{"pli":"Addhā gamissāmi na mettha kaṅkhā, ","html":"<span class='verse-line'>{}</span>"},"cnd4:19.4":{"pli":"Evaṃ maṃ dhārehi adhimuttacittan”ti. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"cnd4:19.5":{"pli":"Pārāyanānugītigāthā niṭṭhitā. ","html":"<p class='endsection'>{}</p></article>"}}}