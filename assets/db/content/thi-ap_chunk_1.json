{"thi-ap15":{"thi-ap15:0.1":{"pli":"Therīapadāna ","html":"<article id='thi-ap15'><header><ul><li class='division'>{}</li>"},"thi-ap15:0.2":{"pli":"Ekūposathikavagga ","html":"<li>{}</li></ul>"},"thi-ap15:0.3":{"pli":"Pañcadīpadāyikātherīapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"thi-ap15:1.1":{"pli":"“Nagare haṃsavatiyā, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"thi-ap15:1.2":{"pli":"cārikī āsahaṃ tadā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:1.3":{"pli":"Ārāmena ca ārāmaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:1.4":{"pli":"carāmi kusalatthikā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap15:2.1":{"pli":"Kāḷapakkhamhi divase, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap15:2.2":{"pli":"addasaṃ bodhimuttamaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:2.3":{"pli":"Tattha cittaṃ pasādetvā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:2.4":{"pli":"bodhimūle nisīdahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap15:3.1":{"pli":"Garucittaṃ upaṭṭhetvā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap15:3.2":{"pli":"sire katvāna añjaliṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:3.3":{"pli":"Somanassaṃ pavedetvā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:3.4":{"pli":"evaṃ cintesi tāvade. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap15:4.1":{"pli":"‘Yadi buddho amitaguṇo, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap15:4.2":{"pli":"asamappaṭipuggalo; ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:4.3":{"pli":"Dassetu pāṭihīraṃ me, ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:4.4":{"pli":"bodhi obhāsatu ayaṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap15:5.1":{"pli":"Saha āvajjite mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap15:5.2":{"pli":"bodhi pajjali tāvade; ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:5.3":{"pli":"Sabbasoṇṇamayā āsi, ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:5.4":{"pli":"disā sabbā virocati. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap15:6.1":{"pli":"Sattarattindivaṃ tattha, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap15:6.2":{"pli":"bodhimūle nisīdahaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:6.3":{"pli":"Sattame divase patte, ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:6.4":{"pli":"dīpapūjaṃ akāsahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap15:7.1":{"pli":"Āsanaṃ parivāretvā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap15:7.2":{"pli":"pañca dīpāni pajjaluṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:7.3":{"pli":"Yāva udeti sūriyo, ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:7.4":{"pli":"dīpā me pajjaluṃ tadā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap15:8.1":{"pli":"Tena kammena sukatena, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap15:8.2":{"pli":"cetanāpaṇidhīhi ca; ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:8.3":{"pli":"Jahitvā mānusaṃ dehaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:8.4":{"pli":"tāvatiṃsamagacchahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap15:9.1":{"pli":"Tattha me sukataṃ byamhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap15:9.2":{"pli":"pañcadīpāti vuccati; ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:9.3":{"pli":"Saṭṭhiyojanamubbedhaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:9.4":{"pli":"tiṃsayojanavitthataṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap15:10.1":{"pli":"Asaṅkhiyāni dīpāni, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap15:10.2":{"pli":"parivāre jaliṃsu me; ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:10.3":{"pli":"Yāvatā devabhavanaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:10.4":{"pli":"dīpālokena jotati. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap15:11.1":{"pli":"Parammukhā nisīditvā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap15:11.2":{"pli":"yadi icchāmi passituṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:11.3":{"pli":"Uddhaṃ adho ca tiriyaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:11.4":{"pli":"sabbaṃ passāmi cakkhunā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap15:12.1":{"pli":"Yāvatā abhikaṅkhāmi, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap15:12.2":{"pli":"daṭṭhuṃ sugataduggate; ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:12.3":{"pli":"Tattha āvaraṇaṃ natthi, ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:12.4":{"pli":"rukkhesu pabbatesu vā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap15:13.1":{"pli":"Asīti devarājūnaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap15:13.2":{"pli":"mahesittamakārayiṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:13.3":{"pli":"Satānaṃ cakkavattīnaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:13.4":{"pli":"mahesittamakārayiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap15:14.1":{"pli":"Yaṃ yaṃ yonupapajjāmi, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap15:14.2":{"pli":"devattaṃ atha mānusaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:14.3":{"pli":"Dīpasatasahassāni, ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:14.4":{"pli":"parivāre jalanti me. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap15:15.1":{"pli":"Devalokā cavitvāna, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap15:15.2":{"pli":"uppajjiṃ mātukucchiyaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:15.3":{"pli":"Mātukucchigatā santī, ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:15.4":{"pli":"akkhi me na nimīlati. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap15:16.1":{"pli":"Dīpasatasahassāni, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap15:16.2":{"pli":"puññakammasamaṅgitā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:16.3":{"pli":"Jalanti sūtikāgehe, ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:16.4":{"pli":"pañcadīpānidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap15:17.1":{"pli":"Pacchime bhave sampatte, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap15:17.2":{"pli":"mānasaṃ vinivattayiṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:17.3":{"pli":"Ajarāmataṃ sītibhāvaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:17.4":{"pli":"nibbānaṃ phassayiṃ ahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap15:18.1":{"pli":"Jātiyā sattavassāhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap15:18.2":{"pli":"arahattamapāpuṇiṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:18.3":{"pli":"Upasampādayī buddho, ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:18.4":{"pli":"guṇamaññāya gotamo. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap15:19.1":{"pli":"Maṇḍape rukkhamūle vā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap15:19.2":{"pli":"suññāgāre vasantiyā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:19.3":{"pli":"Sadā pajjalate dīpaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:19.4":{"pli":"pañcadīpānidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap15:20.1":{"pli":"Dibbacakkhuvisuddhaṃ me, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap15:20.2":{"pli":"samādhikusalā ahaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:20.3":{"pli":"Abhiññāpāramippattā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:20.4":{"pli":"pañcadīpānidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap15:21.1":{"pli":"Sabbavositavosānā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap15:21.2":{"pli":"katakiccā anāsavā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:21.3":{"pli":"Pañcadīpā mahāvīra, ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:21.4":{"pli":"pāde vandāmi cakkhuma. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap15:22.1":{"pli":"Satasahassito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap15:22.2":{"pli":"yaṃ dīpamadadiṃ tadā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:22.3":{"pli":"Duggatiṃ nābhijānāmi, ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:22.4":{"pli":"pañcadīpānidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap15:23.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap15:23.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:23.3":{"pli":"viharāmi anāsavā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap15:24.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap15:24.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:24.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap15:25.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap15:25.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"thi-ap15:25.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"thi-ap15:26.1":{"pli":"Itthaṃ sudaṃ pañcadīpadāyikā bhikkhunī imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"thi-ap15:27.1":{"pli":"Pañcadīpadāyikātheriyāpadānaṃ pañcamaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"thi-ap16":{"thi-ap16:0.1":{"pli":"Therīapadāna ","html":"<article id='thi-ap16'><header><ul><li class='division'>{}</li>"},"thi-ap16:0.2":{"pli":"Ekūposathikavagga ","html":"<li>{}</li></ul>"},"thi-ap16:0.3":{"pli":"6 Naḷamālikātherīapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"thi-ap16:1.1":{"pli":"“Candabhāgānadītīre, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"thi-ap16:1.2":{"pli":"ahosiṃ kinnarī tadā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap16:1.3":{"pli":"Addasaṃ virajaṃ buddhaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap16:1.4":{"pli":"sayambhuṃ aparājitaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap16:2.1":{"pli":"Pasannacittā sumanā, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap16:2.2":{"pli":"vedajātā katañjalī; ","html":"<span class='verse-line'>{}</span>"},"thi-ap16:2.3":{"pli":"Naḷamālaṃ gahetvāna, ","html":"<span class='verse-line'>{}</span>"},"thi-ap16:2.4":{"pli":"sayambhuṃ abhipūjayiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap16:3.1":{"pli":"Tena kammena sukatena, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap16:3.2":{"pli":"cetanāpaṇidhīhi ca; ","html":"<span class='verse-line'>{}</span>"},"thi-ap16:3.3":{"pli":"Jahitvā kinnarīdehaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap16:3.4":{"pli":"tāvatiṃsamagacchahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap16:4.1":{"pli":"Chattiṃsadevarājūnaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap16:4.2":{"pli":"mahesittamakārayiṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap16:4.3":{"pli":"Manasā patthitaṃ mayhaṃ, ","html":"<span class='verse-line'>{}</span>"},"thi-ap16:4.4":{"pli":"nibbattati yathicchitaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap16:5.1":{"pli":"Dasannaṃ cakkavattīnaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap16:5.2":{"pli":"mahesittamakārayiṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap16:5.3":{"pli":"Ocitattāva hutvāna, ","html":"<span class='verse-line'>{}</span>"},"thi-ap16:5.4":{"pli":"saṃsarāmi bhavesvahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap16:6.1":{"pli":"Kusalaṃ vijjate mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap16:6.2":{"pli":"pabbajiṃ anagāriyaṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap16:6.3":{"pli":"Pūjārahā ahaṃ ajja, ","html":"<span class='verse-line'>{}</span>"},"thi-ap16:6.4":{"pli":"sakyaputtassa sāsane. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap16:7.1":{"pli":"Visuddhamanasā ajja, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap16:7.2":{"pli":"apetamanapāpikā; ","html":"<span class='verse-line'>{}</span>"},"thi-ap16:7.3":{"pli":"Sabbāsavā parikkhīṇā, ","html":"<span class='verse-line'>{}</span>"},"thi-ap16:7.4":{"pli":"natthi dāni punabbhavo. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap16:8.1":{"pli":"Catunnavutito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap16:8.2":{"pli":"yaṃ buddhamabhipūjayiṃ; ","html":"<span class='verse-line'>{}</span>"},"thi-ap16:8.3":{"pli":"Duggatiṃ nābhijānāmi, ","html":"<span class='verse-line'>{}</span>"},"thi-ap16:8.4":{"pli":"naḷamālāyidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap16:9.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap16:9.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"thi-ap16:9.3":{"pli":"viharāmi anāsavā. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap16:10.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap16:10.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"thi-ap16:10.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"thi-ap16:11.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"thi-ap16:11.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"thi-ap16:11.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"thi-ap16:12.1":{"pli":"Itthaṃ sudaṃ naḷamālikā bhikkhunī imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"thi-ap16:13.1":{"pli":"Naḷamālikātheriyāpadānaṃ chaṭṭhaṃ. ","html":"<p class='endsutta'>{}</p></article>"}}}