{"ps1.0":{"ps1.0:0.1":{"pli":"Paṭisambhidāmagga ","html":"<article id='ps1.0'><header><ul><li class='division'>{}</li>"},"ps1.0:0.2":{"pli":"1 Mahāvagga ","html":"<li>{}</li></ul>"},"ps1.0:0.3":{"pli":"1.0 Mātikā ","html":"<h1 class='sutta-title'>{}</h1></header>"},"ps1.0:0.4":{"pli":"Namo tassa Bhagavato Arahato Sammāsambuddhassa. ","html":"<p class='namo'>{}</p>"},"ps1.0:1.1":{"pli":"Sotāvadhāne paññā sutamaye ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:2.1":{"pli":"Sutvāna saṃvare paññā sīlamaye ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:3.1":{"pli":"Saṃvaritvā samādahane paññā samādhibhāvanāmaye ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:4.1":{"pli":"Paccayapariggahe paññā dhammaṭṭhitiñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:5.1":{"pli":"Atītānāgatapaccuppannānaṃ dhammānaṃ saṅkhipitvā vavatthāne paññā sammasane ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:6.1":{"pli":"Paccuppannānaṃ dhammānaṃ vipariṇāmānupassane paññā udayabbayānupassane ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:7.1":{"pli":"Ārammaṇaṃ paṭisaṅkhā bhaṅgānupassane paññā vipassane ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:8.1":{"pli":"Bhayatupaṭṭhāne paññā ādīnave ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:9.1":{"pli":"Muñcitukamyatāpaṭisaṅkhāsantiṭṭhanā paññā saṅkhārupekkhāsu ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:10.1":{"pli":"Bahiddhā vuṭṭhānavivaṭṭane paññā gotrabhuñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:11.1":{"pli":"Dubhato vuṭṭhānavivaṭṭane paññā magge ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:12.1":{"pli":"Payogappaṭippassaddhi paññā phale ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:13.1":{"pli":"Chinnavaṭumānupassane paññā vimuttiñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:14.1":{"pli":"Tadā samudāgate dhamme passane paññā paccavekkhaṇe ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:15.1":{"pli":"Ajjhattavavatthāne paññā vatthunānatte ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:16.1":{"pli":"Bahiddhāvavatthāne paññā gocaranānatte ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:17.1":{"pli":"Cariyāvavatthāne paññā cariyānānatte ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:18.1":{"pli":"Catudhammavavatthāne paññā bhūminānatte ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:19.1":{"pli":"Navadhammavavatthāne paññā dhammanānatte ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:20.1":{"pli":"Abhiññāpaññā ñātaṭṭhe ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:21.1":{"pli":"Pariññāpaññā tīraṇaṭṭhe ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:22.1":{"pli":"Pahāne paññā pariccāgaṭṭhe ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:23.1":{"pli":"Bhāvanāpaññā ekarasaṭṭhe ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:24.1":{"pli":"Sacchikiriyāpaññā phassanaṭṭhe ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:25.1":{"pli":"Atthanānatte paññā atthapaṭisambhide ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:26.1":{"pli":"Dhammanānatte paññā dhammapaṭisambhide ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:27.1":{"pli":"Niruttinānatte paññā niruttipaṭisambhide ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:28.1":{"pli":"Paṭibhānanānatte paññā paṭibhānapaṭisambhide ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:29.1":{"pli":"Vihāranānatte paññā vihāraṭṭhe ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:30.1":{"pli":"Samāpattinānatte paññā samāpattaṭṭhe ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:31.1":{"pli":"Vihārasamāpattinānatte paññā vihārasamāpattaṭṭhe ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:32.1":{"pli":"Avikkhepaparisuddhattā āsavasamucchede paññā ānantarikasamādhimhi ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:33.1":{"pli":"Dassanādhipateyyaṃ santo ca vihārādhigamo paṇītādhimuttatā paññā araṇavihāre ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:34.1":{"pli":"Dvīhi balehi samannāgatattā tayo ca saṅkhārānaṃ paṭippassaddhiyā soḷasahi ñāṇacariyāhi navahi samādhicariyāhi vasibhāvatā paññā nirodhasamāpattiyā ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:35.1":{"pli":"Sampajānassa pavattapariyādāne paññā parinibbāne ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:36.1":{"pli":"Sabbadhammānaṃ sammā samucchede nirodhe ca anupaṭṭhānatā paññā samasīsaṭṭhe ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:37.1":{"pli":"Puthunānattatejapariyādāne paññā sallekhaṭṭhe ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:38.1":{"pli":"Asallīnattapahitattapaggahaṭṭhe paññā vīriyārambhe ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:39.1":{"pli":"Nānādhammappakāsanatā paññā atthasandassane ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:40.1":{"pli":"Sabbadhammānaṃ ekasaṅgahatānānattekattapaṭivedhe paññā dassanavisuddhiñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:41.1":{"pli":"Viditattā paññā khantiñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:42.1":{"pli":"Phuṭṭhattā paññā pariyogāhaṇe ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:43.1":{"pli":"Samodahane paññā padesavihāre ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:44.1":{"pli":"Adhipatattā paññā saññāvivaṭṭe ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:45.1":{"pli":"Nānatte paññā cetovivaṭṭe ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:46.1":{"pli":"Adhiṭṭhāne paññā cittavivaṭṭe ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:47.1":{"pli":"Suññate paññā ñāṇavivaṭṭe ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:48.1":{"pli":"Vosagge paññā vimokkhavivaṭṭe ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:49.1":{"pli":"Tathaṭṭhe paññā saccavivaṭṭe ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:50.1":{"pli":"Kāyampi cittampi ekavavatthānatā sukhasaññañca lahusaññañca adhiṭṭhānavasena ijjhanaṭṭhe paññā iddhividhe ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:51.1":{"pli":"Vitakkavipphāravasena nānattekattasaddanimittānaṃ pariyogāhaṇe paññā sotadhātuvisuddhiñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:52.1":{"pli":"Tiṇṇannaṃ cittānaṃ vipphārattā indriyānaṃ pasādavasena nānattekattaviññāṇacariyā pariyogāhaṇe paññā cetopariyañāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:53.1":{"pli":"Paccayappavattānaṃ dhammānaṃ nānattekattakammavipphāravasena pariyogāhaṇe paññā pubbenivāsānussatiñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:54.1":{"pli":"Obhāsavasena nānattekattarūpanimittānaṃ dassanaṭṭhe paññā dibbacakkhuñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:55.1":{"pli":"Catusaṭṭhiyā ākārehi tiṇṇannaṃ indriyānaṃ vasibhāvatā paññā āsavānaṃ khaye ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:56.1":{"pli":"Pariññaṭṭhe paññā dukkhe ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:57.1":{"pli":"Pahānaṭṭhe paññā samudaye ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:58.1":{"pli":"Sacchikiriyaṭṭhe paññā nirodhe ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:59.1":{"pli":"Bhāvanaṭṭhe paññā magge ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:60.1":{"pli":"Dukkhe ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:61.1":{"pli":"Dukkhasamudaye ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:62.1":{"pli":"Dukkhanirodhe ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:63.1":{"pli":"Dukkhanirodhagāminiyā paṭipadāya ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:64.1":{"pli":"Atthapaṭisambhide ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:65.1":{"pli":"Dhammapaṭisambhide ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:66.1":{"pli":"Niruttipaṭisambhide ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:67.1":{"pli":"Paṭibhānapaṭisambhide ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:68.1":{"pli":"Indriyaparopariyattañāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:69.1":{"pli":"Sattānaṃ āsayānusaye ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:70.1":{"pli":"Yamakapāṭihīre ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:71.1":{"pli":"Mahākaruṇāsamāpattiyā ñāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:72.1":{"pli":"Sabbaññutaññāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:73.1":{"pli":"Anāvaraṇañāṇaṃ. ","html":"<p>{}</p>"},"ps1.0:74.1":{"pli":"Imāni tesattati ñāṇāni. ","html":"<p>{}"},"ps1.0:74.2":{"pli":"Imesaṃ tesattatiyā ñāṇānaṃ sattasaṭṭhi ñāṇāni sāvakasādhāraṇāni; ","html":"{}"},"ps1.0:74.3":{"pli":"cha ñāṇāni asādhāraṇāni sāvakehi. ","html":"{}</p>"},"ps1.0:74.4":{"pli":"Mātikā niṭṭhitā. ","html":"<p class='endsutta'>{}</p></article>"}}}