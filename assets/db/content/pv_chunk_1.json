{"pv15":{"pv15:0.1":{"pli":"Petavatthu ","html":"<article id='pv15'><header><ul><li class='division'>{}</li>"},"pv15:0.2":{"pli":"Ubbarivagga ","html":"<li>{}</li></ul>"},"pv15:0.3":{"pli":"3. Mattāpetivatthu ","html":"<h1 class='sutta-title'>{}</h1></header>"},"pv15:1.1":{"pli":"“Naggā dubbaṇṇarūpāsi, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"pv15:1.2":{"pli":"kisā dhamanisanthatā; ","html":"<span class='verse-line'>{}</span>"},"pv15:1.3":{"pli":"Upphāsulike kisike, ","html":"<span class='verse-line'>{}</span>"},"pv15:1.4":{"pli":"kā nu tvaṃ idha tiṭṭhasī”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv15:2.1":{"pli":"“Ahaṃ mattā tuvaṃ tissā, ","html":"<p><span class='verse-line'>{}</span>"},"pv15:2.2":{"pli":"sapattī te pure ahuṃ; ","html":"<span class='verse-line'>{}</span>"},"pv15:2.3":{"pli":"Pāpakammaṃ karitvāna, ","html":"<span class='verse-line'>{}</span>"},"pv15:2.4":{"pli":"petalokaṃ ito gatā”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv15:3.1":{"pli":"“Kiṃ nu kāyena vācāya, ","html":"<p><span class='verse-line'>{}</span>"},"pv15:3.2":{"pli":"manasā dukkaṭaṃ kataṃ; ","html":"<span class='verse-line'>{}</span>"},"pv15:3.3":{"pli":"Kissa kammavipākena, ","html":"<span class='verse-line'>{}</span>"},"pv15:3.4":{"pli":"petalokaṃ ito gatā”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv15:4.1":{"pli":"“Caṇḍī ca pharusā cāsiṃ, ","html":"<p><span class='verse-line'>{}</span>"},"pv15:4.2":{"pli":"issukī maccharī saṭhā; ","html":"<span class='verse-line'>{}</span>"},"pv15:4.3":{"pli":"Tāhaṃ duruttaṃ vatvāna, ","html":"<span class='verse-line'>{}</span>"},"pv15:4.4":{"pli":"petalokaṃ ito gatā”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv15:5.1":{"pli":"“Sabbaṃ ahampi jānāmi, ","html":"<p><span class='verse-line'>{}</span>"},"pv15:5.2":{"pli":"yathā tvaṃ caṇḍikā ahu; ","html":"<span class='verse-line'>{}</span>"},"pv15:5.3":{"pli":"Aññañca kho taṃ pucchāmi, ","html":"<span class='verse-line'>{}</span>"},"pv15:5.4":{"pli":"kenāsi paṃsukunthitā”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv15:6.1":{"pli":"“Sīsaṃnhātā tuvaṃ āsi, ","html":"<p><span class='verse-line'>{}</span>"},"pv15:6.2":{"pli":"sucivatthā alaṅkatā; ","html":"<span class='verse-line'>{}</span>"},"pv15:6.3":{"pli":"Ahañca kho adhimattaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv15:6.4":{"pli":"samalaṅkatatarā tayā. ","html":"<span class='verse-line'>{}</span></p>"},"pv15:7.1":{"pli":"Tassā me pekkhamānāya, ","html":"<p><span class='verse-line'>{}</span>"},"pv15:7.2":{"pli":"sāmikena samantayi; ","html":"<span class='verse-line'>{}</span>"},"pv15:7.3":{"pli":"Tato me issā vipulā, ","html":"<span class='verse-line'>{}</span>"},"pv15:7.4":{"pli":"kodho me samajāyatha. ","html":"<span class='verse-line'>{}</span></p>"},"pv15:8.1":{"pli":"Tato paṃsuṃ gahetvāna, ","html":"<p><span class='verse-line'>{}</span>"},"pv15:8.2":{"pli":"paṃsunā taṃ hi okiriṃ; ","html":"<span class='verse-line'>{}</span>"},"pv15:8.3":{"pli":"Tassa kammavipākena, ","html":"<span class='verse-line'>{}</span>"},"pv15:8.4":{"pli":"tenamhi paṃsukunthitā”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv15:9.1":{"pli":"“Sabbaṃ ahampi jānāmi, ","html":"<p><span class='verse-line'>{}</span>"},"pv15:9.2":{"pli":"paṃsunā maṃ tvamokiri; ","html":"<span class='verse-line'>{}</span>"},"pv15:9.3":{"pli":"Aññañca kho taṃ pucchāmi, ","html":"<span class='verse-line'>{}</span>"},"pv15:9.4":{"pli":"kena khajjasi kacchuyā”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv15:10.1":{"pli":"“Bhesajjahārī ubhayo, ","html":"<p><span class='verse-line'>{}</span>"},"pv15:10.2":{"pli":"vanantaṃ agamimhase; ","html":"<span class='verse-line'>{}</span>"},"pv15:10.3":{"pli":"Tvañca bhesajjamāhari, ","html":"<span class='verse-line'>{}</span>"},"pv15:10.4":{"pli":"ahañca kapikacchuno. ","html":"<span class='verse-line'>{}</span></p>"},"pv15:11.1":{"pli":"Tassā tyājānamānāya, ","html":"<p><span class='verse-line'>{}</span>"},"pv15:11.2":{"pli":"seyyaṃ tyāhaṃ samokiriṃ; ","html":"<span class='verse-line'>{}</span>"},"pv15:11.3":{"pli":"Tassa kammavipākena, ","html":"<span class='verse-line'>{}</span>"},"pv15:11.4":{"pli":"tena khajjāmi kacchuyā”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv15:12.1":{"pli":"“Sabbaṃ ahampi jānāmi, ","html":"<p><span class='verse-line'>{}</span>"},"pv15:12.2":{"pli":"seyyaṃ me tvaṃ samokiri; ","html":"<span class='verse-line'>{}</span>"},"pv15:12.3":{"pli":"Aññañca kho taṃ pucchāmi, ","html":"<span class='verse-line'>{}</span>"},"pv15:12.4":{"pli":"kenāsi naggiyā tuvan”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv15:13.1":{"pli":"“Sahāyānaṃ samayo āsi, ","html":"<p><span class='verse-line'>{}</span>"},"pv15:13.2":{"pli":"ñātīnaṃ samitī ahu; ","html":"<span class='verse-line'>{}</span>"},"pv15:13.3":{"pli":"Tvañca āmantitā āsi, ","html":"<span class='verse-line'>{}</span>"},"pv15:13.4":{"pli":"sasāminī no ca kho ahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"pv15:14.1":{"pli":"Tassā tyājānamānāya, ","html":"<p><span class='verse-line'>{}</span>"},"pv15:14.2":{"pli":"dussaṃ tyāhaṃ apānudiṃ; ","html":"<span class='verse-line'>{}</span>"},"pv15:14.3":{"pli":"Tassa kammavipākena, ","html":"<span class='verse-line'>{}</span>"},"pv15:14.4":{"pli":"tenamhi naggiyā ahan”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv15:15.1":{"pli":"“Sabbaṃ ahampi jānāmi, ","html":"<p><span class='verse-line'>{}</span>"},"pv15:15.2":{"pli":"dussaṃ me tvaṃ apānudi; ","html":"<span class='verse-line'>{}</span>"},"pv15:15.3":{"pli":"Aññañca kho taṃ pucchāmi, ","html":"<span class='verse-line'>{}</span>"},"pv15:15.4":{"pli":"kenāsi gūthagandhinī”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv15:16.1":{"pli":"“Tava gandhañca mālañca, ","html":"<p><span class='verse-line'>{}</span>"},"pv15:16.2":{"pli":"paccagghañca vilepanaṃ; ","html":"<span class='verse-line'>{}</span>"},"pv15:16.3":{"pli":"Gūthakūpe atāresiṃ, ","html":"<span class='verse-line'>{}</span>"},"pv15:16.4":{"pli":"taṃ pāpaṃ pakataṃ mayā; ","html":"<span class='verse-line'>{}</span>"},"pv15:16.5":{"pli":"Tassa kammavipākena, ","html":"<span class='verse-line'>{}</span>"},"pv15:16.6":{"pli":"tenamhi gūthagandhinī”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv15:17.1":{"pli":"“Sabbaṃ ahampi jānāmi, ","html":"<p><span class='verse-line'>{}</span>"},"pv15:17.2":{"pli":"taṃ pāpaṃ pakataṃ tayā; ","html":"<span class='verse-line'>{}</span>"},"pv15:17.3":{"pli":"Aññañca kho taṃ pucchāmi, ","html":"<span class='verse-line'>{}</span>"},"pv15:17.4":{"pli":"kenāsi duggatā tuvan”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv15:18.1":{"pli":"“Ubhinnaṃ samakaṃ āsi, ","html":"<p><span class='verse-line'>{}</span>"},"pv15:18.2":{"pli":"yaṃ gehe vijjate dhanaṃ; ","html":"<span class='verse-line'>{}</span>"},"pv15:18.3":{"pli":"Santesu deyyadhammesu, ","html":"<span class='verse-line'>{}</span>"},"pv15:18.4":{"pli":"dīpaṃ nākāsimattano; ","html":"<span class='verse-line'>{}</span>"},"pv15:18.5":{"pli":"Tassa kammavipākena, ","html":"<span class='verse-line'>{}</span>"},"pv15:18.6":{"pli":"tenamhi duggatā ahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"pv15:19.1":{"pli":"Tadeva maṃ tvaṃ avaca, ","html":"<p><span class='verse-line'>{}</span>"},"pv15:19.2":{"pli":"‘pāpakammaṃ nisevasi; ","html":"<span class='verse-line'>{}</span>"},"pv15:19.3":{"pli":"Na hi pāpehi kammehi, ","html":"<span class='verse-line'>{}</span>"},"pv15:19.4":{"pli":"sulabhā hoti suggatī’”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv15:20.1":{"pli":"“Vāmato maṃ tvaṃ paccesi, ","html":"<p><span class='verse-line'>{}</span>"},"pv15:20.2":{"pli":"athopi maṃ usūyasi; ","html":"<span class='verse-line'>{}</span>"},"pv15:20.3":{"pli":"Passa pāpānaṃ kammānaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv15:20.4":{"pli":"vipāko hoti yādiso. ","html":"<span class='verse-line'>{}</span></p>"},"pv15:21.1":{"pli":"Te gharā tā ca dāsiyo, ","html":"<p><span class='verse-line'>{}</span>"},"pv15:21.2":{"pli":"tānevābharaṇānime; ","html":"<span class='verse-line'>{}</span>"},"pv15:21.3":{"pli":"Te aññe paricārenti, ","html":"<span class='verse-line'>{}</span>"},"pv15:21.4":{"pli":"na bhogā honti sassatā. ","html":"<span class='verse-line'>{}</span></p>"},"pv15:22.1":{"pli":"Idāni bhūtassa pitā, ","html":"<p><span class='verse-line'>{}</span>"},"pv15:22.2":{"pli":"āpaṇā gehamehiti; ","html":"<span class='verse-line'>{}</span>"},"pv15:22.3":{"pli":"Appeva te dade kiñci, ","html":"<span class='verse-line'>{}</span>"},"pv15:22.4":{"pli":"mā su tāva ito agā”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv15:23.1":{"pli":"“Naggā dubbaṇṇarūpāmhi, ","html":"<p><span class='verse-line'>{}</span>"},"pv15:23.2":{"pli":"kisā dhamanisanthatā; ","html":"<span class='verse-line'>{}</span>"},"pv15:23.3":{"pli":"Kopīnametaṃ itthīnaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv15:23.4":{"pli":"mā maṃ bhūtapitāddasā”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv15:24.1":{"pli":"“Handa kiṃ vā tyāhaṃ dammi, ","html":"<p><span class='verse-line'>{}</span>"},"pv15:24.2":{"pli":"Kiṃ vā tedha karomahaṃ; ","html":"<span class='verse-line'>{}</span>"},"pv15:24.3":{"pli":"Yena tvaṃ sukhitā assa, ","html":"<span class='verse-line'>{}</span>"},"pv15:24.4":{"pli":"Sabbakāmasamiddhinī”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv15:25.1":{"pli":"“Cattāro bhikkhū saṅghato, ","html":"<p><span class='verse-line'>{}</span>"},"pv15:25.2":{"pli":"cattāro pana puggale; ","html":"<span class='verse-line'>{}</span>"},"pv15:25.3":{"pli":"Aṭṭha bhikkhū bhojayitvā, ","html":"<span class='verse-line'>{}</span>"},"pv15:25.4":{"pli":"mama dakkhiṇamādisa; ","html":"<span class='verse-line'>{}</span>"},"pv15:25.5":{"pli":"Tadāhaṃ sukhitā hessaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv15:25.6":{"pli":"sabbakāmasamiddhinī”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv15:26.1":{"pli":"Sādhūti sā paṭissutvā, ","html":"<p><span class='verse-line'>{}</span>"},"pv15:26.2":{"pli":"bhojayitvāṭṭha bhikkhavo; ","html":"<span class='verse-line'>{}</span>"},"pv15:26.3":{"pli":"Vatthehacchādayitvāna, ","html":"<span class='verse-line'>{}</span>"},"pv15:26.4":{"pli":"tassā dakkhiṇamādisī. ","html":"<span class='verse-line'>{}</span></p>"},"pv15:27.1":{"pli":"Samanantarānuddiṭṭhe, ","html":"<p><span class='verse-line'>{}</span>"},"pv15:27.2":{"pli":"vipāko udapajjatha; ","html":"<span class='verse-line'>{}</span>"},"pv15:27.3":{"pli":"Bhojanacchādanapānīyaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv15:27.4":{"pli":"dakkhiṇāya idaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"pv15:28.1":{"pli":"Tato suddhā sucivasanā, ","html":"<p><span class='verse-line'>{}</span>"},"pv15:28.2":{"pli":"kāsikuttamadhārinī; ","html":"<span class='verse-line'>{}</span>"},"pv15:28.3":{"pli":"Vicittavatthābharaṇā, ","html":"<span class='verse-line'>{}</span>"},"pv15:28.4":{"pli":"sapattiṃ upasaṅkami. ","html":"<span class='verse-line'>{}</span></p>"},"pv15:29.1":{"pli":"“Abhikkantena vaṇṇena, ","html":"<p><span class='verse-line'>{}</span>"},"pv15:29.2":{"pli":"yā tvaṃ tiṭṭhasi devate; ","html":"<span class='verse-line'>{}</span>"},"pv15:29.3":{"pli":"Obhāsentī disā sabbā, ","html":"<span class='verse-line'>{}</span>"},"pv15:29.4":{"pli":"osadhī viya tārakā. ","html":"<span class='verse-line'>{}</span></p>"},"pv15:30.1":{"pli":"Kena tetādiso vaṇṇo, ","html":"<p><span class='verse-line'>{}</span>"},"pv15:30.2":{"pli":"kena te idha mijjhati; ","html":"<span class='verse-line'>{}</span>"},"pv15:30.3":{"pli":"Uppajjanti ca te bhogā, ","html":"<span class='verse-line'>{}</span>"},"pv15:30.4":{"pli":"ye keci manaso piyā. ","html":"<span class='verse-line'>{}</span></p>"},"pv15:31.1":{"pli":"Pucchāmi taṃ devi mahānubhāve, ","html":"<p><span class='verse-line'>{}</span>"},"pv15:31.2":{"pli":"Manussabhūtā kimakāsi puññaṃ; ","html":"<span class='verse-line'>{}</span>"},"pv15:31.3":{"pli":"Kenāsi evaṃ jalitānubhāvā, ","html":"<span class='verse-line'>{}</span>"},"pv15:31.4":{"pli":"Vaṇṇo ca te sabbadisā pabhāsatī”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv15:32.1":{"pli":"“Ahaṃ mattā tuvaṃ tissā, ","html":"<p><span class='verse-line'>{}</span>"},"pv15:32.2":{"pli":"sapattī te pure ahuṃ; ","html":"<span class='verse-line'>{}</span>"},"pv15:32.3":{"pli":"Pāpakammaṃ karitvāna, ","html":"<span class='verse-line'>{}</span>"},"pv15:32.4":{"pli":"petalokaṃ ito gatā. ","html":"<span class='verse-line'>{}</span></p>"},"pv15:33.1":{"pli":"Tava dinnena dānena, ","html":"<p><span class='verse-line'>{}</span>"},"pv15:33.2":{"pli":"modāmi akutobhayā; ","html":"<span class='verse-line'>{}</span>"},"pv15:33.3":{"pli":"Ciraṃ jīvāhi bhagini, ","html":"<span class='verse-line'>{}</span>"},"pv15:33.4":{"pli":"saha sabbehi ñātibhi; ","html":"<span class='verse-line'>{}</span>"},"pv15:33.5":{"pli":"Asokaṃ virajaṃ ṭhānaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv15:33.6":{"pli":"āvāsaṃ vasavattinaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"pv15:34.1":{"pli":"Idha dhammaṃ caritvāna, ","html":"<p><span class='verse-line'>{}</span>"},"pv15:34.2":{"pli":"Dānaṃ datvāna sobhane; ","html":"<span class='verse-line'>{}</span>"},"pv15:34.3":{"pli":"Vineyya maccheramalaṃ samūlaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv15:34.4":{"pli":"Aninditā saggamupehi ṭhānan”ti. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"pv15:35.1":{"pli":"Mattāpetivatthu tatiyaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"pv16":{"pv16:0.1":{"pli":"Petavatthu ","html":"<article id='pv16'><header><ul><li class='division'>{}</li>"},"pv16:0.2":{"pli":"Ubbarivagga ","html":"<li>{}</li></ul>"},"pv16:0.3":{"pli":"4. Nandāpetivatthu ","html":"<h1 class='sutta-title'>{}</h1></header>"},"pv16:1.1":{"pli":"“Kāḷī dubbaṇṇarūpāsi, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"pv16:1.2":{"pli":"pharusā bhīrudassanā; ","html":"<span class='verse-line'>{}</span>"},"pv16:1.3":{"pli":"Piṅgalāsi kaḷārāsi, ","html":"<span class='verse-line'>{}</span>"},"pv16:1.4":{"pli":"na taṃ maññāmi mānusin”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv16:2.1":{"pli":"“Ahaṃ nandā nandisena, ","html":"<p><span class='verse-line'>{}</span>"},"pv16:2.2":{"pli":"bhariyā te pure ahuṃ; ","html":"<span class='verse-line'>{}</span>"},"pv16:2.3":{"pli":"Pāpakammaṃ karitvāna, ","html":"<span class='verse-line'>{}</span>"},"pv16:2.4":{"pli":"petalokaṃ ito gatā”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv16:3.1":{"pli":"“Kiṃ nu kāyena vācāya, ","html":"<p><span class='verse-line'>{}</span>"},"pv16:3.2":{"pli":"manasā dukkaṭaṃ kataṃ; ","html":"<span class='verse-line'>{}</span>"},"pv16:3.3":{"pli":"Kissa kammavipākena, ","html":"<span class='verse-line'>{}</span>"},"pv16:3.4":{"pli":"petalokaṃ ito gatā”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv16:4.1":{"pli":"“Caṇḍī ca pharusā cāsiṃ, ","html":"<p><span class='verse-line'>{}</span>"},"pv16:4.2":{"pli":"tayi cāpi agāravā; ","html":"<span class='verse-line'>{}</span>"},"pv16:4.3":{"pli":"Tāhaṃ duruttaṃ vatvāna, ","html":"<span class='verse-line'>{}</span>"},"pv16:4.4":{"pli":"petalokaṃ ito gatā”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv16:5.1":{"pli":"“Handuttarīyaṃ dadāmi te, ","html":"<p><span class='verse-line'>{}</span>"},"pv16:5.2":{"pli":"imaṃ dussaṃ nivāsaya; ","html":"<span class='verse-line'>{}</span>"},"pv16:5.3":{"pli":"Imaṃ dussaṃ nivāsetvā, ","html":"<span class='verse-line'>{}</span>"},"pv16:5.4":{"pli":"ehi nessāmi taṃ gharaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"pv16:6.1":{"pli":"Vatthañca annapānañca, ","html":"<p><span class='verse-line'>{}</span>"},"pv16:6.2":{"pli":"lacchasi tvaṃ gharaṃ gatā; ","html":"<span class='verse-line'>{}</span>"},"pv16:6.3":{"pli":"Putte ca te passissasi, ","html":"<span class='verse-line'>{}</span>"},"pv16:6.4":{"pli":"suṇisāyo ca dakkhasī”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv16:7.1":{"pli":"“Hatthena hatthe te dinnaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"pv16:7.2":{"pli":"na mayhaṃ upakappati; ","html":"<span class='verse-line'>{}</span>"},"pv16:7.3":{"pli":"Bhikkhū ca sīlasampanne, ","html":"<span class='verse-line'>{}</span>"},"pv16:7.4":{"pli":"vītarāge bahussute. ","html":"<span class='verse-line'>{}</span></p>"},"pv16:8.1":{"pli":"Tappehi annapānena, ","html":"<p><span class='verse-line'>{}</span>"},"pv16:8.2":{"pli":"mama dakkhiṇamādisa; ","html":"<span class='verse-line'>{}</span>"},"pv16:8.3":{"pli":"Tadāhaṃ sukhitā hessaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv16:8.4":{"pli":"sabbakāmasamiddhinī”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv16:9.1":{"pli":"Sādhūti so paṭissutvā, ","html":"<p><span class='verse-line'>{}</span>"},"pv16:9.2":{"pli":"dānaṃ vipulamākiri; ","html":"<span class='verse-line'>{}</span>"},"pv16:9.3":{"pli":"Annaṃ pānaṃ khādanīyaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv16:9.4":{"pli":"vatthasenāsanāni ca; ","html":"<span class='verse-line'>{}</span>"},"pv16:9.5":{"pli":"Chattaṃ gandhañca mālañca, ","html":"<span class='verse-line'>{}</span>"},"pv16:9.6":{"pli":"vividhā ca upāhanā. ","html":"<span class='verse-line'>{}</span></p>"},"pv16:10.1":{"pli":"Bhikkhū ca sīlasampanne, ","html":"<p><span class='verse-line'>{}</span>"},"pv16:10.2":{"pli":"vītarāge bahussute; ","html":"<span class='verse-line'>{}</span>"},"pv16:10.3":{"pli":"Tappetvā annapānena, ","html":"<span class='verse-line'>{}</span>"},"pv16:10.4":{"pli":"tassā dakkhiṇamādisī. ","html":"<span class='verse-line'>{}</span></p>"},"pv16:11.1":{"pli":"Samanantarānuddiṭṭhe, ","html":"<p><span class='verse-line'>{}</span>"},"pv16:11.2":{"pli":"vipāko udapajjatha; ","html":"<span class='verse-line'>{}</span>"},"pv16:11.3":{"pli":"Bhojanacchādanapānīyaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv16:11.4":{"pli":"dakkhiṇāya idaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"pv16:12.1":{"pli":"Tato suddhā sucivasanā, ","html":"<p><span class='verse-line'>{}</span>"},"pv16:12.2":{"pli":"kāsikuttamadhārinī; ","html":"<span class='verse-line'>{}</span>"},"pv16:12.3":{"pli":"Vicittavatthābharaṇā, ","html":"<span class='verse-line'>{}</span>"},"pv16:12.4":{"pli":"sāmikaṃ upasaṅkami. ","html":"<span class='verse-line'>{}</span></p>"},"pv16:13.1":{"pli":"“Abhikkantena vaṇṇena, ","html":"<p><span class='verse-line'>{}</span>"},"pv16:13.2":{"pli":"yā tvaṃ tiṭṭhasi devate; ","html":"<span class='verse-line'>{}</span>"},"pv16:13.3":{"pli":"Obhāsentī disā sabbā, ","html":"<span class='verse-line'>{}</span>"},"pv16:13.4":{"pli":"osadhī viya tārakā. ","html":"<span class='verse-line'>{}</span></p>"},"pv16:14.1":{"pli":"Kena tetādiso vaṇṇo, ","html":"<p><span class='verse-line'>{}</span>"},"pv16:14.2":{"pli":"kena te idha mijjhati; ","html":"<span class='verse-line'>{}</span>"},"pv16:14.3":{"pli":"Uppajjanti ca te bhogā, ","html":"<span class='verse-line'>{}</span>"},"pv16:14.4":{"pli":"ye keci manaso piyā. ","html":"<span class='verse-line'>{}</span></p>"},"pv16:15.1":{"pli":"Pucchāmi taṃ devi mahānubhāve, ","html":"<p><span class='verse-line'>{}</span>"},"pv16:15.2":{"pli":"Manussabhūtā kimakāsi puññaṃ; ","html":"<span class='verse-line'>{}</span>"},"pv16:15.3":{"pli":"Kenāsi evaṃ jalitānubhāvā, ","html":"<span class='verse-line'>{}</span>"},"pv16:15.4":{"pli":"Vaṇṇo ca te sabbadisā pabhāsatī”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv16:16.1":{"pli":"“Ahaṃ nandā nandisena, ","html":"<p><span class='verse-line'>{}</span>"},"pv16:16.2":{"pli":"bhariyā te pure ahuṃ; ","html":"<span class='verse-line'>{}</span>"},"pv16:16.3":{"pli":"Pāpakammaṃ karitvāna, ","html":"<span class='verse-line'>{}</span>"},"pv16:16.4":{"pli":"petalokaṃ ito gatā. ","html":"<span class='verse-line'>{}</span></p>"},"pv16:17.1":{"pli":"Tava dinnena dānena, ","html":"<p><span class='verse-line'>{}</span>"},"pv16:17.2":{"pli":"modāmi akutobhayā; ","html":"<span class='verse-line'>{}</span>"},"pv16:17.3":{"pli":"Ciraṃ jīva gahapati, ","html":"<span class='verse-line'>{}</span>"},"pv16:17.4":{"pli":"saha sabbehi ñātibhi; ","html":"<span class='verse-line'>{}</span>"},"pv16:17.5":{"pli":"Asokaṃ virajaṃ khemaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv16:17.6":{"pli":"āvāsaṃ vasavattinaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"pv16:18.1":{"pli":"Idha dhammaṃ caritvāna, ","html":"<p><span class='verse-line'>{}</span>"},"pv16:18.2":{"pli":"Dānaṃ datvā gahapati; ","html":"<span class='verse-line'>{}</span>"},"pv16:18.3":{"pli":"Vineyya maccheramalaṃ samūlaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv16:18.4":{"pli":"Anindito saggamupehi ṭhānan”ti. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"pv16:19.1":{"pli":"Nandāpetivatthu catutthaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"pv17":{"pv17:0.1":{"pli":"Petavatthu ","html":"<article id='pv17'><header><ul><li class='division'>{}</li>"},"pv17:0.2":{"pli":"Ubbarivagga ","html":"<li>{}</li></ul>"},"pv17:0.3":{"pli":"5. Maṭṭhakuṇḍalīpetavatthu ","html":"<h1 class='sutta-title'>{}</h1></header>"},"pv17:1.1":{"pli":"“Alaṅkato maṭṭhakuṇḍalī, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"pv17:1.2":{"pli":"Māladhārī haricandanussado; ","html":"<span class='verse-line'>{}</span>"},"pv17:1.3":{"pli":"Bāhā paggayha kandasi, ","html":"<span class='verse-line'>{}</span>"},"pv17:1.4":{"pli":"Vanamajjhe kiṃ dukkhito tuvan”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv17:2.1":{"pli":"“Sovaṇṇamayo pabhassaro, ","html":"<p><span class='verse-line'>{}</span>"},"pv17:2.2":{"pli":"Uppanno rathapañjaro mama; ","html":"<span class='verse-line'>{}</span>"},"pv17:2.3":{"pli":"Tassa cakkayugaṃ na vindāmi, ","html":"<span class='verse-line'>{}</span>"},"pv17:2.4":{"pli":"Tena dukkhena jahāmi jīvitan”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv17:3.1":{"pli":"“Sovaṇṇamayaṃ maṇimayaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"pv17:3.2":{"pli":"Lohitakamayaṃ atha rūpiyamayaṃ; ","html":"<span class='verse-line'>{}</span>"},"pv17:3.3":{"pli":"Ācikkha me bhaddamāṇava, ","html":"<span class='verse-line'>{}</span>"},"pv17:3.4":{"pli":"Cakkayugaṃ paṭipādayāmi te”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv17:4.1":{"pli":"So māṇavo tassa pāvadi, ","html":"<p><span class='verse-line'>{}</span>"},"pv17:4.2":{"pli":"“Candasūriyā ubhayettha dissare; ","html":"<span class='verse-line'>{}</span>"},"pv17:4.3":{"pli":"Sovaṇṇamayo ratho mama, ","html":"<span class='verse-line'>{}</span>"},"pv17:4.4":{"pli":"Tena cakkayugena sobhatī”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv17:5.1":{"pli":"“Bālo kho tvaṃ asi māṇava, ","html":"<p><span class='verse-line'>{}</span>"},"pv17:5.2":{"pli":"Yo tvaṃ patthayase apatthiyaṃ; ","html":"<span class='verse-line'>{}</span>"},"pv17:5.3":{"pli":"Maññāmi tuvaṃ marissasi, ","html":"<span class='verse-line'>{}</span>"},"pv17:5.4":{"pli":"Na hi tvaṃ lacchasi candasūriye”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv17:6.1":{"pli":"“Gamanāgamanampi dissati, ","html":"<p><span class='verse-line'>{}</span>"},"pv17:6.2":{"pli":"Vaṇṇadhātu ubhayattha vīthiyā; ","html":"<span class='verse-line'>{}</span>"},"pv17:6.3":{"pli":"Peto kālakato na dissati, ","html":"<span class='verse-line'>{}</span>"},"pv17:6.4":{"pli":"Ko nidha kandataṃ bālyataro”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv17:7.1":{"pli":"“Saccaṃ kho vadesi māṇava, ","html":"<p><span class='verse-line'>{}</span>"},"pv17:7.2":{"pli":"Ahameva kandataṃ bālyataro; ","html":"<span class='verse-line'>{}</span>"},"pv17:7.3":{"pli":"Candaṃ viya dārako rudaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv17:7.4":{"pli":"Petaṃ kālakatābhipatthayinti. ","html":"<span class='verse-line'>{}</span></p>"},"pv17:8.1":{"pli":"Ādittaṃ vata maṃ santaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"pv17:8.2":{"pli":"ghatasittaṃva pāvakaṃ; ","html":"<span class='verse-line'>{}</span>"},"pv17:8.3":{"pli":"Vārinā viya osiñcaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv17:8.4":{"pli":"sabbaṃ nibbāpaye daraṃ. ","html":"<span class='verse-line'>{}</span></p>"},"pv17:9.1":{"pli":"Abbahī vata me sallaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"pv17:9.2":{"pli":"sokaṃ hadayanissitaṃ; ","html":"<span class='verse-line'>{}</span>"},"pv17:9.3":{"pli":"Yo me sokaparetassa, ","html":"<span class='verse-line'>{}</span>"},"pv17:9.4":{"pli":"puttasokaṃ apānudi. ","html":"<span class='verse-line'>{}</span></p>"},"pv17:10.1":{"pli":"Svāhaṃ abbūḷhasallosmi, ","html":"<p><span class='verse-line'>{}</span>"},"pv17:10.2":{"pli":"sītibhūtosmi nibbuto; ","html":"<span class='verse-line'>{}</span>"},"pv17:10.3":{"pli":"Na socāmi na rodāmi, ","html":"<span class='verse-line'>{}</span>"},"pv17:10.4":{"pli":"tava sutvāna māṇavā”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv17:11.1":{"pli":"“Devatā nusi gandhabbo, ","html":"<p><span class='verse-line'>{}</span>"},"pv17:11.2":{"pli":"adu sakko purindado; ","html":"<span class='verse-line'>{}</span>"},"pv17:11.3":{"pli":"Ko vā tvaṃ kassa vā putto, ","html":"<span class='verse-line'>{}</span>"},"pv17:11.4":{"pli":"kathaṃ jānemu taṃ mayan”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv17:12.1":{"pli":"“Yañca kandasi yañca rodasi, ","html":"<p><span class='verse-line'>{}</span>"},"pv17:12.2":{"pli":"Puttaṃ āḷāhane sayaṃ dahitvā; ","html":"<span class='verse-line'>{}</span>"},"pv17:12.3":{"pli":"Svāhaṃ kusalaṃ karitvā kammaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv17:12.4":{"pli":"Tidasānaṃ sahabyataṃ gato”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv17:13.1":{"pli":"“Appaṃ vā bahuṃ vā nāddasāma, ","html":"<p><span class='verse-line'>{}</span>"},"pv17:13.2":{"pli":"Dānaṃ dadantassa sake agāre; ","html":"<span class='verse-line'>{}</span>"},"pv17:13.3":{"pli":"Uposathakammaṃ vā tādisaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv17:13.4":{"pli":"Kena kammena gatosi devalokan”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv17:14.1":{"pli":"“Ābādhikohaṃ dukkhito gilāno, ","html":"<p><span class='verse-line'>{}</span>"},"pv17:14.2":{"pli":"Āturarūpomhi sake nivesane; ","html":"<span class='verse-line'>{}</span>"},"pv17:14.3":{"pli":"Buddhaṃ vigatarajaṃ vitiṇṇakaṅkhaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv17:14.4":{"pli":"Addakkhiṃ sugataṃ anomapaññaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"pv17:15.1":{"pli":"Svāhaṃ muditamano pasannacitto, ","html":"<p><span class='verse-line'>{}</span>"},"pv17:15.2":{"pli":"Añjaliṃ akariṃ tathāgatassa; ","html":"<span class='verse-line'>{}</span>"},"pv17:15.3":{"pli":"Tāhaṃ kusalaṃ karitvāna kammaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv17:15.4":{"pli":"Tidasānaṃ sahabyataṃ gato”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv17:16.1":{"pli":"“Acchariyaṃ vata abbhutaṃ vata, ","html":"<p><span class='verse-line'>{}</span>"},"pv17:16.2":{"pli":"Añjalikammassa ayamīdiso vipāko; ","html":"<span class='verse-line'>{}</span>"},"pv17:16.3":{"pli":"Ahampi muditamano pasannacitto, ","html":"<span class='verse-line'>{}</span>"},"pv17:16.4":{"pli":"Ajjeva buddhaṃ saraṇaṃ vajāmī”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv17:17.1":{"pli":"“Ajjeva buddhaṃ saraṇaṃ vajāhi, ","html":"<p><span class='verse-line'>{}</span>"},"pv17:17.2":{"pli":"Dhammañca saṅghañca pasannacitto; ","html":"<span class='verse-line'>{}</span>"},"pv17:17.3":{"pli":"Tatheva sikkhāya padāni pañca, ","html":"<span class='verse-line'>{}</span>"},"pv17:17.4":{"pli":"Akhaṇḍaphullāni samādiyassu. ","html":"<span class='verse-line'>{}</span></p>"},"pv17:18.1":{"pli":"Pāṇātipātā viramassu khippaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"pv17:18.2":{"pli":"Loke adinnaṃ parivajjayassu; ","html":"<span class='verse-line'>{}</span>"},"pv17:18.3":{"pli":"Amajjapo mā ca musā bhaṇāhi, ","html":"<span class='verse-line'>{}</span>"},"pv17:18.4":{"pli":"Sakena dārena ca hohi tuṭṭho”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv17:19.1":{"pli":"“Atthakāmosi me yakkha, ","html":"<p><span class='verse-line'>{}</span>"},"pv17:19.2":{"pli":"hitakāmosi devate; ","html":"<span class='verse-line'>{}</span>"},"pv17:19.3":{"pli":"Karomi tuyhaṃ vacanaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv17:19.4":{"pli":"tvaṃsi ācariyo mamāti. ","html":"<span class='verse-line'>{}</span></p>"},"pv17:20.1":{"pli":"Upemi saraṇaṃ buddhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"pv17:20.2":{"pli":"dhammañcāpi anuttaraṃ; ","html":"<span class='verse-line'>{}</span>"},"pv17:20.3":{"pli":"Saṅghañca naradevassa, ","html":"<span class='verse-line'>{}</span>"},"pv17:20.4":{"pli":"gacchāmi saraṇaṃ ahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"pv17:21.1":{"pli":"Pāṇātipātā viramāmi khippaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"pv17:21.2":{"pli":"Loke adinnaṃ parivajjayāmi; ","html":"<span class='verse-line'>{}</span>"},"pv17:21.3":{"pli":"Amajjapo no ca musā bhaṇāmi, ","html":"<span class='verse-line'>{}</span>"},"pv17:21.4":{"pli":"Sakena dārena ca homi tuṭṭho”ti. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"pv17:22.1":{"pli":"Maṭṭhakuṇḍalīpetavatthu pañcamaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"pv18":{"pv18:0.1":{"pli":"Petavatthu ","html":"<article id='pv18'><header><ul><li class='division'>{}</li>"},"pv18:0.2":{"pli":"Ubbarivagga ","html":"<li>{}</li></ul>"},"pv18:0.3":{"pli":"6. Kaṇhapetavatthu ","html":"<h1 class='sutta-title'>{}</h1></header>"},"pv18:1.1":{"pli":"“Uṭṭhehi kaṇha kiṃ sesi, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"pv18:1.2":{"pli":"Ko attho supanena te; ","html":"<span class='verse-line'>{}</span>"},"pv18:1.3":{"pli":"Yo ca tuyhaṃ sako bhātā, ","html":"<span class='verse-line'>{}</span>"},"pv18:1.4":{"pli":"Hadayaṃ cakkhu ca dakkhiṇaṃ; ","html":"<span class='verse-line'>{}</span>"},"pv18:1.5":{"pli":"Tassa vātā balīyanti, ","html":"<span class='verse-line'>{}</span>"},"pv18:1.6":{"pli":"Sasaṃ jappati kesavā”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv18:2.1":{"pli":"“Tassa taṃ vacanaṃ sutvā, ","html":"<p><span class='verse-line'>{}</span>"},"pv18:2.2":{"pli":"rohiṇeyyassa kesavo; ","html":"<span class='verse-line'>{}</span>"},"pv18:2.3":{"pli":"Taramānarūpo vuṭṭhāsi, ","html":"<span class='verse-line'>{}</span>"},"pv18:2.4":{"pli":"bhātusokena aṭṭito. ","html":"<span class='verse-line'>{}</span></p>"},"pv18:3.1":{"pli":"Kiṃ nu ummattarūpova, ","html":"<p><span class='verse-line'>{}</span>"},"pv18:3.2":{"pli":"kevalaṃ dvārakaṃ imaṃ; ","html":"<span class='verse-line'>{}</span>"},"pv18:3.3":{"pli":"Saso sasoti lapasi, ","html":"<span class='verse-line'>{}</span>"},"pv18:3.4":{"pli":"kīdisaṃ sasamicchasi. ","html":"<span class='verse-line'>{}</span></p>"},"pv18:4.1":{"pli":"Sovaṇṇamayaṃ maṇimayaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"pv18:4.2":{"pli":"Lohamayaṃ atha rūpiyamayaṃ; ","html":"<span class='verse-line'>{}</span>"},"pv18:4.3":{"pli":"Saṅkhasilāpavāḷamayaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv18:4.4":{"pli":"Kārayissāmi te sasaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"pv18:5.1":{"pli":"Santi aññepi sasakā, ","html":"<p><span class='verse-line'>{}</span>"},"pv18:5.2":{"pli":"araññavanagocarā; ","html":"<span class='verse-line'>{}</span>"},"pv18:5.3":{"pli":"Tepi te ānayissāmi, ","html":"<span class='verse-line'>{}</span>"},"pv18:5.4":{"pli":"kīdisaṃ sasamicchasī”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv18:6.1":{"pli":"“Nāhamete sase icche, ","html":"<p><span class='verse-line'>{}</span>"},"pv18:6.2":{"pli":"ye sasā pathavissitā; ","html":"<span class='verse-line'>{}</span>"},"pv18:6.3":{"pli":"Candato sasamicchāmi, ","html":"<span class='verse-line'>{}</span>"},"pv18:6.4":{"pli":"taṃ me ohara kesavā”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv18:7.1":{"pli":"“So nūna madhuraṃ ñāti, ","html":"<p><span class='verse-line'>{}</span>"},"pv18:7.2":{"pli":"jīvitaṃ vijahissasi; ","html":"<span class='verse-line'>{}</span>"},"pv18:7.3":{"pli":"Apatthiyaṃ patthayasi, ","html":"<span class='verse-line'>{}</span>"},"pv18:7.4":{"pli":"candato sasamicchasī”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv18:8.1":{"pli":"“Evañce kaṇha jānāsi, ","html":"<p><span class='verse-line'>{}</span>"},"pv18:8.2":{"pli":"yathaññamanusāsasi; ","html":"<span class='verse-line'>{}</span>"},"pv18:8.3":{"pli":"Kasmā pure mataṃ puttaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv18:8.4":{"pli":"ajjāpi manusocasi. ","html":"<span class='verse-line'>{}</span></p>"},"pv18:9.1":{"pli":"Na yaṃ labbhā manussena, ","html":"<p><span class='verse-line'>{}</span>"},"pv18:9.2":{"pli":"amanussena vā pana; ","html":"<span class='verse-line'>{}</span>"},"pv18:9.3":{"pli":"Jāto me mā mari putto, ","html":"<span class='verse-line'>{}</span>"},"pv18:9.4":{"pli":"kuto labbhā alabbhiyaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"pv18:10.1":{"pli":"Na mantā mūlabhesajjā, ","html":"<p><span class='verse-line'>{}</span>"},"pv18:10.2":{"pli":"osadhehi dhanena vā; ","html":"<span class='verse-line'>{}</span>"},"pv18:10.3":{"pli":"Sakkā ānayituṃ kaṇha, ","html":"<span class='verse-line'>{}</span>"},"pv18:10.4":{"pli":"yaṃ petamanusocasi. ","html":"<span class='verse-line'>{}</span></p>"},"pv18:11.1":{"pli":"Mahaddhanā mahābhogā, ","html":"<p><span class='verse-line'>{}</span>"},"pv18:11.2":{"pli":"raṭṭhavantopi khattiyā; ","html":"<span class='verse-line'>{}</span>"},"pv18:11.3":{"pli":"Pahūtadhanadhaññāse, ","html":"<span class='verse-line'>{}</span>"},"pv18:11.4":{"pli":"tepi no ajarāmarā. ","html":"<span class='verse-line'>{}</span></p>"},"pv18:12.1":{"pli":"Khattiyā brāhmaṇā vessā, ","html":"<p><span class='verse-line'>{}</span>"},"pv18:12.2":{"pli":"suddā caṇḍālapukkusā; ","html":"<span class='verse-line'>{}</span>"},"pv18:12.3":{"pli":"Ete caññe ca jātiyā, ","html":"<span class='verse-line'>{}</span>"},"pv18:12.4":{"pli":"tepi no ajarāmarā. ","html":"<span class='verse-line'>{}</span></p>"},"pv18:13.1":{"pli":"Ye mantaṃ parivattenti, ","html":"<p><span class='verse-line'>{}</span>"},"pv18:13.2":{"pli":"chaḷaṅgaṃ brahmacintitaṃ; ","html":"<span class='verse-line'>{}</span>"},"pv18:13.3":{"pli":"Ete caññe ca vijjāya, ","html":"<span class='verse-line'>{}</span>"},"pv18:13.4":{"pli":"tepi no ajarāmarā. ","html":"<span class='verse-line'>{}</span></p>"},"pv18:14.1":{"pli":"Isayo vāpi ye santā, ","html":"<p><span class='verse-line'>{}</span>"},"pv18:14.2":{"pli":"saññatattā tapassino; ","html":"<span class='verse-line'>{}</span>"},"pv18:14.3":{"pli":"Sarīraṃ tepi kālena, ","html":"<span class='verse-line'>{}</span>"},"pv18:14.4":{"pli":"vijahanti tapassino. ","html":"<span class='verse-line'>{}</span></p>"},"pv18:15.1":{"pli":"Bhāvitattā arahanto, ","html":"<p><span class='verse-line'>{}</span>"},"pv18:15.2":{"pli":"katakiccā anāsavā; ","html":"<span class='verse-line'>{}</span>"},"pv18:15.3":{"pli":"Nikkhipanti imaṃ dehaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv18:15.4":{"pli":"puññapāpaparikkhayā”ti. ","html":"<span class='verse-line'>{}</span></p>"},"pv18:16.1":{"pli":"“Ādittaṃ vata maṃ santaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"pv18:16.2":{"pli":"ghatasittaṃva pāvakaṃ; ","html":"<span class='verse-line'>{}</span>"},"pv18:16.3":{"pli":"Vārinā viya osiñcaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv18:16.4":{"pli":"sabbaṃ nibbāpaye daraṃ. ","html":"<span class='verse-line'>{}</span></p>"},"pv18:17.1":{"pli":"Abbahī vata me sallaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"pv18:17.2":{"pli":"sokaṃ hadayanissitaṃ; ","html":"<span class='verse-line'>{}</span>"},"pv18:17.3":{"pli":"Yo me sokaparetassa, ","html":"<span class='verse-line'>{}</span>"},"pv18:17.4":{"pli":"puttasokaṃ apānudi. ","html":"<span class='verse-line'>{}</span></p>"},"pv18:18.1":{"pli":"Svāhaṃ abbūḷhasallosmi, ","html":"<p><span class='verse-line'>{}</span>"},"pv18:18.2":{"pli":"sītibhūtosmi nibbuto; ","html":"<span class='verse-line'>{}</span>"},"pv18:18.3":{"pli":"Na socāmi na rodāmi, ","html":"<span class='verse-line'>{}</span>"},"pv18:18.4":{"pli":"tava sutvāna bhātika”. ","html":"<span class='verse-line'>{}</span></p>"},"pv18:19.1":{"pli":"Evaṃ karonti sappaññā, ","html":"<p><span class='verse-line'>{}</span>"},"pv18:19.2":{"pli":"ye honti anukampakā; ","html":"<span class='verse-line'>{}</span>"},"pv18:19.3":{"pli":"Nivattayanti sokamhā, ","html":"<span class='verse-line'>{}</span>"},"pv18:19.4":{"pli":"ghaṭo jeṭṭhaṃva bhātaraṃ. ","html":"<span class='verse-line'>{}</span></p>"},"pv18:20.1":{"pli":"Yassa etādisā honti, ","html":"<p><span class='verse-line'>{}</span>"},"pv18:20.2":{"pli":"amaccā paricārakā; ","html":"<span class='verse-line'>{}</span>"},"pv18:20.3":{"pli":"Subhāsitena anventi, ","html":"<span class='verse-line'>{}</span>"},"pv18:20.4":{"pli":"ghaṭo jeṭṭhaṃva bhātaranti. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"pv18:21.1":{"pli":"Kaṇhapetavatthu chaṭṭhaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"pv19":{"pv19:0.1":{"pli":"Petavatthu ","html":"<article id='pv19'><header><ul><li class='division'>{}</li>"},"pv19:0.2":{"pli":"Ubbarivagga ","html":"<li>{}</li></ul>"},"pv19:0.3":{"pli":"7. Dhanapālaseṭṭhipetavatthu ","html":"<h1 class='sutta-title'>{}</h1></header>"},"pv19:1.1":{"pli":"“Naggo dubbaṇṇarūposi, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"pv19:1.2":{"pli":"kiso dhamanisanthato; ","html":"<span class='verse-line'>{}</span>"},"pv19:1.3":{"pli":"Upphāsuliko kisiko, ","html":"<span class='verse-line'>{}</span>"},"pv19:1.4":{"pli":"ko nu tvamasi mārisa”. ","html":"<span class='verse-line'>{}</span></p>"},"pv19:2.1":{"pli":"“Ahaṃ bhadante petomhi, ","html":"<p><span class='verse-line'>{}</span>"},"pv19:2.2":{"pli":"duggato yamalokiko; ","html":"<span class='verse-line'>{}</span>"},"pv19:2.3":{"pli":"Pāpakammaṃ karitvāna, ","html":"<span class='verse-line'>{}</span>"},"pv19:2.4":{"pli":"petalokaṃ ito gato”. ","html":"<span class='verse-line'>{}</span></p>"},"pv19:3.1":{"pli":"“Kiṃ nu kāyena vācāya, ","html":"<p><span class='verse-line'>{}</span>"},"pv19:3.2":{"pli":"manasā dukkaṭaṃ kataṃ; ","html":"<span class='verse-line'>{}</span>"},"pv19:3.3":{"pli":"Kissa kammavipākena, ","html":"<span class='verse-line'>{}</span>"},"pv19:3.4":{"pli":"petalokaṃ ito gato”. ","html":"<span class='verse-line'>{}</span></p>"},"pv19:4.1":{"pli":"“Nagaraṃ atthi paṇṇānaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"pv19:4.2":{"pli":"erakacchanti vissutaṃ; ","html":"<span class='verse-line'>{}</span>"},"pv19:4.3":{"pli":"Tattha seṭṭhi pure āsiṃ, ","html":"<span class='verse-line'>{}</span>"},"pv19:4.4":{"pli":"dhanapāloti maṃ vidū. ","html":"<span class='verse-line'>{}</span></p>"},"pv19:5.1":{"pli":"Asīti sakaṭavāhānaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"pv19:5.2":{"pli":"hiraññassa ahosi me; ","html":"<span class='verse-line'>{}</span>"},"pv19:5.3":{"pli":"Pahūtaṃ me jātarūpaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv19:5.4":{"pli":"muttā veḷuriyā bahū. ","html":"<span class='verse-line'>{}</span></p>"},"pv19:6.1":{"pli":"Tāva mahaddhanassāpi, ","html":"<p><span class='verse-line'>{}</span>"},"pv19:6.2":{"pli":"na me dātuṃ piyaṃ ahu; ","html":"<span class='verse-line'>{}</span>"},"pv19:6.3":{"pli":"Pidahitvā dvāraṃ bhuñjiṃ, ","html":"<span class='verse-line'>{}</span>"},"pv19:6.4":{"pli":"mā maṃ yācanakāddasuṃ. ","html":"<span class='verse-line'>{}</span></p>"},"pv19:7.1":{"pli":"Assaddho maccharī cāsiṃ, ","html":"<p><span class='verse-line'>{}</span>"},"pv19:7.2":{"pli":"kadariyo paribhāsako; ","html":"<span class='verse-line'>{}</span>"},"pv19:7.3":{"pli":"Dadantānaṃ karontānaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv19:7.4":{"pli":"vārayissaṃ bahū jane. ","html":"<span class='verse-line'>{}</span></p>"},"pv19:8.1":{"pli":"Vipāko natthi dānassa, ","html":"<p><span class='verse-line'>{}</span>"},"pv19:8.2":{"pli":"saṃyamassa kuto phalaṃ; ","html":"<span class='verse-line'>{}</span>"},"pv19:8.3":{"pli":"Pokkharaññodapānāni, ","html":"<span class='verse-line'>{}</span>"},"pv19:8.4":{"pli":"ārāmāni ca ropite; ","html":"<span class='verse-line'>{}</span>"},"pv19:8.5":{"pli":"Papāyo ca vināsesiṃ, ","html":"<span class='verse-line'>{}</span>"},"pv19:8.6":{"pli":"dugge saṅkamanāni ca. ","html":"<span class='verse-line'>{}</span></p>"},"pv19:9.1":{"pli":"Svāhaṃ akatakalyāṇo, ","html":"<p><span class='verse-line'>{}</span>"},"pv19:9.2":{"pli":"katapāpo tato cuto; ","html":"<span class='verse-line'>{}</span>"},"pv19:9.3":{"pli":"Upapanno pettivisayaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv19:9.4":{"pli":"khuppipāsasamappito. ","html":"<span class='verse-line'>{}</span></p>"},"pv19:10.1":{"pli":"Pañcapaṇṇāsavassāni, ","html":"<p><span class='verse-line'>{}</span>"},"pv19:10.2":{"pli":"yato kālaṅkato ahaṃ; ","html":"<span class='verse-line'>{}</span>"},"pv19:10.3":{"pli":"Nābhijānāmi bhuttaṃ vā, ","html":"<span class='verse-line'>{}</span>"},"pv19:10.4":{"pli":"pītaṃ vā pana pāniyaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"pv19:11.1":{"pli":"Yo saṃyamo so vināso, ","html":"<p><span class='verse-line'>{}</span>"},"pv19:11.2":{"pli":"yo vināso so saṃyamo; ","html":"<span class='verse-line'>{}</span>"},"pv19:11.3":{"pli":"Petā hi kira jānanti, ","html":"<span class='verse-line'>{}</span>"},"pv19:11.4":{"pli":"yo saṃyamo so vināso. ","html":"<span class='verse-line'>{}</span></p>"},"pv19:12.1":{"pli":"Ahaṃ pure saṃyamissaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"pv19:12.2":{"pli":"nādāsiṃ bahuke dhane; ","html":"<span class='verse-line'>{}</span>"},"pv19:12.3":{"pli":"Santesu deyyadhammesu, ","html":"<span class='verse-line'>{}</span>"},"pv19:12.4":{"pli":"dīpaṃ nākāsimattano; ","html":"<span class='verse-line'>{}</span>"},"pv19:12.5":{"pli":"Svāhaṃ pacchānutappāmi, ","html":"<span class='verse-line'>{}</span>"},"pv19:12.6":{"pli":"attakammaphalūpago. ","html":"<span class='verse-line'>{}</span></p>"},"pv19:13.1":{"pli":"Uddhaṃ catūhi māsehi, ","html":"<p><span class='verse-line'>{}</span>"},"pv19:13.2":{"pli":"kālaṅkiriyā bhavissati; ","html":"<span class='verse-line'>{}</span>"},"pv19:13.3":{"pli":"Ekantakaṭukaṃ ghoraṃ, ","html":"<span class='verse-line'>{}</span>"},"pv19:13.4":{"pli":"nirayaṃ papatissahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"pv19:14.1":{"pli":"Catukkaṇṇaṃ catudvāraṃ, ","html":"<p><span class='verse-line'>{}</span>"},"pv19:14.2":{"pli":"vibhattaṃ bhāgaso mitaṃ; ","html":"<span class='verse-line'>{}</span>"},"pv19:14.3":{"pli":"Ayopākārapariyantaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv19:14.4":{"pli":"ayasā paṭikujjitaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"pv19:15.1":{"pli":"Tassa ayomayā bhūmi, ","html":"<p><span class='verse-line'>{}</span>"},"pv19:15.2":{"pli":"jalitā tejasā yutā; ","html":"<span class='verse-line'>{}</span>"},"pv19:15.3":{"pli":"Samantā yojanasataṃ, ","html":"<span class='verse-line'>{}</span>"},"pv19:15.4":{"pli":"pharitvā tiṭṭhati sabbadā. ","html":"<span class='verse-line'>{}</span></p>"},"pv19:16.1":{"pli":"Tatthāhaṃ dīghamaddhānaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"pv19:16.2":{"pli":"Dukkhaṃ vedissa vedanaṃ; ","html":"<span class='verse-line'>{}</span>"},"pv19:16.3":{"pli":"Phalaṃ pāpassa kammassa, ","html":"<span class='verse-line'>{}</span>"},"pv19:16.4":{"pli":"Tasmā socāmahaṃ bhusaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"pv19:17.1":{"pli":"Taṃ vo vadāmi bhaddaṃ vo, ","html":"<p><span class='verse-line'>{}</span>"},"pv19:17.2":{"pli":"yāvantettha samāgatā; ","html":"<span class='verse-line'>{}</span>"},"pv19:17.3":{"pli":"Mākattha pāpakaṃ kammaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv19:17.4":{"pli":"āvi vā yadi vā raho. ","html":"<span class='verse-line'>{}</span></p>"},"pv19:18.1":{"pli":"Sace taṃ pāpakaṃ kammaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"pv19:18.2":{"pli":"karissatha karotha vā; ","html":"<span class='verse-line'>{}</span>"},"pv19:18.3":{"pli":"Na vo dukkhā pamutyatthi, ","html":"<span class='verse-line'>{}</span>"},"pv19:18.4":{"pli":"uppaccāpi palāyataṃ. ","html":"<span class='verse-line'>{}</span></p>"},"pv19:19.1":{"pli":"Matteyyā hotha petteyyā, ","html":"<p><span class='verse-line'>{}</span>"},"pv19:19.2":{"pli":"kule jeṭṭhāpacāyikā; ","html":"<span class='verse-line'>{}</span>"},"pv19:19.3":{"pli":"Sāmaññā hotha brahmaññā, ","html":"<span class='verse-line'>{}</span>"},"pv19:19.4":{"pli":"evaṃ saggaṃ gamissathā”ti. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"pv19:20.1":{"pli":"Dhanapālaseṭṭhipetavatthu sattamaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"pv2":{"pv2:0.1":{"pli":"Petavatthu ","html":"<article id='pv2'><header><ul><li class='division'>{}</li>"},"pv2:0.2":{"pli":"Uragavagga ","html":"<li>{}</li></ul>"},"pv2:0.3":{"pli":"2. Sūkaramukhapetavatthu ","html":"<h1 class='sutta-title'>{}</h1></header>"},"pv2:1.1":{"pli":"“Kāyo te sabbasovaṇṇo, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"pv2:1.2":{"pli":"sabbā obhāsate disā; ","html":"<span class='verse-line'>{}</span>"},"pv2:1.3":{"pli":"Mukhaṃ te sūkarasseva, ","html":"<span class='verse-line'>{}</span>"},"pv2:1.4":{"pli":"kiṃ kammamakarī pure”. ","html":"<span class='verse-line'>{}</span></p>"},"pv2:2.1":{"pli":"“Kāyena saññato āsiṃ, ","html":"<p><span class='verse-line'>{}</span>"},"pv2:2.2":{"pli":"vācāyāsimasaññato; ","html":"<span class='verse-line'>{}</span>"},"pv2:2.3":{"pli":"Tena metādiso vaṇṇo, ","html":"<span class='verse-line'>{}</span>"},"pv2:2.4":{"pli":"yathā passasi nārada. ","html":"<span class='verse-line'>{}</span></p>"},"pv2:3.1":{"pli":"Taṃ tyāhaṃ nārada brūmi, ","html":"<p><span class='verse-line'>{}</span>"},"pv2:3.2":{"pli":"Sāmaṃ diṭṭhamidaṃ tayā; ","html":"<span class='verse-line'>{}</span>"},"pv2:3.3":{"pli":"Mākāsi mukhasā pāpaṃ, ","html":"<span class='verse-line'>{}</span>"},"pv2:3.4":{"pli":"Mā kho sūkaramukho ahū”ti. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"pv2:4.1":{"pli":"Sūkaramukhapetavatthu dutiyaṃ. ","html":"<p class='endsutta'>{}</p></article>"}}}