{"tha-ap562":{"tha-ap562:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap562'><header><ul><li class='division'>{}</li>"},"tha-ap562:0.2":{"pli":"Yasavagga ","html":"<li>{}</li></ul>"},"tha-ap562:0.3":{"pli":"Upavānattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap562:1.1":{"pli":"“Padumuttaro nāma jino, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap562:1.2":{"pli":"sabbadhammāna pāragū; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:1.3":{"pli":"Jalitvā aggikkhandhova, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:1.4":{"pli":"sambuddho parinibbuto. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:2.1":{"pli":"Mahājanā samāgamma, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:2.2":{"pli":"pūjayitvā tathāgataṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:2.3":{"pli":"Citakaṃ katvā sugataṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:2.4":{"pli":"sarīraṃ abhiropayuṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:3.1":{"pli":"Sarīrakiccaṃ katvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:3.2":{"pli":"dhātuṃ tattha samānayuṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:3.3":{"pli":"Sadevamanussā sabbe, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:3.4":{"pli":"buddhathūpaṃ akaṃsu te. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:4.1":{"pli":"Paṭhamā kañcanamayā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:4.2":{"pli":"dutiyā ca maṇimayā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:4.3":{"pli":"Tatiyā rūpiyamayā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:4.4":{"pli":"catutthī phalikāmayā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:5.1":{"pli":"Tattha pañcamikā ceva, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:5.2":{"pli":"lohitaṅkamayā ahu; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:5.3":{"pli":"Chaṭṭhā masāragallassa, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:5.4":{"pli":"sabbaṃ ratanamayūpari. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:6.1":{"pli":"Jaṅghā maṇimayā āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:6.2":{"pli":"vedikā ratanāmayā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:6.3":{"pli":"Sabbasoṇṇamayo thūpo, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:6.4":{"pli":"uddhaṃ yojanamuggato. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:7.1":{"pli":"Devā tattha samāgantvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:7.2":{"pli":"ekato mantayuṃ tadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:7.3":{"pli":"‘Mayampi thūpaṃ kassāma, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:7.4":{"pli":"lokanāthassa tādino. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:8.1":{"pli":"Dhātu āveṇikā natthi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:8.2":{"pli":"sarīraṃ ekapiṇḍitaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:8.3":{"pli":"Imamhi buddhathūpamhi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:8.4":{"pli":"kassāma kañcukaṃ mayaṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:9.1":{"pli":"Devā sattahi ratnehi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:9.2":{"pli":"aññaṃ vaḍḍhesuṃ yojanaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:9.3":{"pli":"Thūpo dviyojanubbedho, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:9.4":{"pli":"timiraṃ byapahanti so. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:10.1":{"pli":"Nāgā tattha samāgantvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:10.2":{"pli":"ekato mantayuṃ tadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:10.3":{"pli":"‘Manussā ceva devā ca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:10.4":{"pli":"buddhathūpaṃ akaṃsu te. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:11.1":{"pli":"Mā no pamattā assumha, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:11.2":{"pli":"appamattā sadevakā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:11.3":{"pli":"Mayampi thūpaṃ kassāma, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:11.4":{"pli":"lokanāthassa tādino’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:12.1":{"pli":"Indanīlaṃ mahānīlaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:12.2":{"pli":"atho jotirasaṃ maṇiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:12.3":{"pli":"Ekato sannipātetvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:12.4":{"pli":"buddhathūpaṃ achādayuṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:13.1":{"pli":"Sabbaṃ maṇimayaṃ āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:13.2":{"pli":"yāvatā buddhacetiyaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:13.3":{"pli":"Tiyojanasamubbedhaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:13.4":{"pli":"ālokakaraṇaṃ tadā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:14.1":{"pli":"Garuḷā ca samāgantvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:14.2":{"pli":"ekato mantayuṃ tadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:14.3":{"pli":"‘Manussā devanāgā ca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:14.4":{"pli":"buddhapūjaṃ akaṃsu te. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:15.1":{"pli":"Mā no pamattā assumha, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:15.2":{"pli":"appamattā sadevakā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:15.3":{"pli":"Mayampi thūpaṃ kassāma, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:15.4":{"pli":"lokanāthassa tādino’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:16.1":{"pli":"Sabbaṃ maṇimayaṃ thūpaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:16.2":{"pli":"akaruṃ te ca kañcukaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:16.3":{"pli":"Yojanaṃ tepi vaḍḍhesuṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:16.4":{"pli":"āyataṃ buddhacetiyaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:17.1":{"pli":"Catuyojanamubbedho, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:17.2":{"pli":"buddhathūpo virocati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:17.3":{"pli":"Obhāseti disā sabbā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:17.4":{"pli":"sataraṃsīva uggato. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:18.1":{"pli":"Kumbhaṇḍā ca samāgantvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:18.2":{"pli":"ekato mantayuṃ tadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:18.3":{"pli":"‘Manussā ceva devā ca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:18.4":{"pli":"nāgā ca garuḷā tathā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:19.1":{"pli":"Paccekaṃ buddhaseṭṭhassa, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:19.2":{"pli":"akaṃsu thūpamuttamaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:19.3":{"pli":"Mā no pamattā assumha, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:19.4":{"pli":"appamattā sadevakā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:20.1":{"pli":"Mayampi thūpaṃ kassāma, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:20.2":{"pli":"lokanāthassa tādino; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:20.3":{"pli":"Ratanehi chādessāma, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:20.4":{"pli":"āyataṃ buddhacetiyaṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:21.1":{"pli":"Yojanaṃ tepi vaḍḍhesuṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:21.2":{"pli":"āyataṃ buddhacetiyaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:21.3":{"pli":"Pañcayojanamubbedho, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:21.4":{"pli":"thūpo obhāsate tadā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:22.1":{"pli":"Yakkhā tattha samāgantvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:22.2":{"pli":"ekato mantayuṃ tadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:22.3":{"pli":"‘Manussā devanāgā ca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:22.4":{"pli":"garuḷā ca kumbhaṇḍakā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:23.1":{"pli":"Paccekaṃ buddhaseṭṭhassa, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:23.2":{"pli":"akaṃsu thūpamuttamaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:23.3":{"pli":"Mā no pamattā assumha, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:23.4":{"pli":"appamattā sadevakā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:24.1":{"pli":"Mayampi thūpaṃ kassāma, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:24.2":{"pli":"lokanāthassa tādino; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:24.3":{"pli":"Phalikā chādayissāma, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:24.4":{"pli":"āyataṃ buddhacetiyaṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:25.1":{"pli":"Yojanaṃ tepi vaḍḍhesuṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:25.2":{"pli":"āyataṃ buddhacetiyaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:25.3":{"pli":"Chayojanikamubbedho, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:25.4":{"pli":"thūpo obhāsate tadā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:26.1":{"pli":"Gandhabbā ca samāgantvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:26.2":{"pli":"ekato mantayuṃ tadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:26.3":{"pli":"‘Manujā devatā nāgā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:26.4":{"pli":"kumbhaṇḍā guyhakā tathā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:27.1":{"pli":"Sabbe akaṃsu buddhathūpaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:27.2":{"pli":"mayamettha akārakā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:27.3":{"pli":"Mayampi thūpaṃ kassāma, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:27.4":{"pli":"lokanāthassa tādino’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:28.1":{"pli":"Vediyo satta katvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:28.2":{"pli":"dhajaṃ chattaṃ akaṃsu te; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:28.3":{"pli":"Sabbasoṇṇamayaṃ thūpaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:28.4":{"pli":"gandhabbā kārayuṃ tadā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:29.1":{"pli":"Sattayojanamubbedho, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:29.2":{"pli":"thūpo obhāsate tadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:29.3":{"pli":"Rattindivā na ñāyanti, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:29.4":{"pli":"āloko hoti sabbadā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:30.1":{"pli":"Abhibhonti na tassābhā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:30.2":{"pli":"candasūrā satārakā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:30.3":{"pli":"Samantā yojanasate, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:30.4":{"pli":"padīpopi na pajjali. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:31.1":{"pli":"Tena kālena ye keci, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:31.2":{"pli":"thūpaṃ pūjenti mānusā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:31.3":{"pli":"Na te thūpaṃ āruhanti, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:31.4":{"pli":"ambare ukkhipanti te. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:32.1":{"pli":"Devehi ṭhapito yakkho, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:32.2":{"pli":"abhisammatanāmako; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:32.3":{"pli":"Dhajaṃ vā pupphadāmaṃ vā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:32.4":{"pli":"abhiropeti uttariṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:33.1":{"pli":"Na te passanti taṃ yakkhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:33.2":{"pli":"dāmaṃ passanti gacchato; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:33.3":{"pli":"Evaṃ passitvā gacchantā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:33.4":{"pli":"sabbe gacchanti suggatiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:34.1":{"pli":"Viruddhā ye pāvacane, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:34.2":{"pli":"pasannā ye ca sāsane; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:34.3":{"pli":"Pāṭihīraṃ daṭṭhukāmā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:34.4":{"pli":"thūpaṃ pūjenti mānusā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:35.1":{"pli":"Nagare haṃsavatiyā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:35.2":{"pli":"ahosiṃ bhatako tadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:35.3":{"pli":"Āmoditaṃ janaṃ disvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:35.4":{"pli":"evaṃ cintesahaṃ tadā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:36.1":{"pli":"‘Uḷāro bhagavā neso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:36.2":{"pli":"yassa dhātughare disaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:36.3":{"pli":"Imā ca janatā tuṭṭhā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:36.4":{"pli":"kāraṃ kubbaṃ na tappare. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:37.1":{"pli":"Ahampi kāraṃ kassāmi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:37.2":{"pli":"lokanāthassa tādino; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:37.3":{"pli":"Tassa dhammesu dāyādo, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:37.4":{"pli":"bhavissāmi anāgate’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:38.1":{"pli":"Sudhotaṃ rajakenāhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:38.2":{"pli":"uttareyyaṃ paṭaṃ mama; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:38.3":{"pli":"Veḷagge ālaggetvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:38.4":{"pli":"dhajaṃ ukkhipimambare. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:39.1":{"pli":"Abhisammatako gayha, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:39.2":{"pli":"ambare hāsi me dhajaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:39.3":{"pli":"Vāteritaṃ dhajaṃ disvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:39.4":{"pli":"bhiyyo hāsaṃ janesahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:40.1":{"pli":"Tattha cittaṃ pasādetvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:40.2":{"pli":"samaṇaṃ upasaṅkamiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:40.3":{"pli":"Taṃ bhikkhuṃ abhivādetvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:40.4":{"pli":"vipākaṃ pucchahaṃ dhaje. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:41.1":{"pli":"So me kathesi ānandī, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:41.2":{"pli":"pītisañjananaṃ mama; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:41.3":{"pli":"‘Tassa dhajassa vipākaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:41.4":{"pli":"anubhossasi sabbadā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:42.1":{"pli":"Hatthiassarathāpattī, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:42.2":{"pli":"senā ca caturaṅginī; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:42.3":{"pli":"Parivāressanti taṃ niccaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:42.4":{"pli":"dhajadānassidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:43.1":{"pli":"Saṭṭhituriyasahassāni, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:43.2":{"pli":"bheriyo samalaṅkatā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:43.3":{"pli":"Parivāressanti taṃ niccaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:43.4":{"pli":"dhajadānassidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:44.1":{"pli":"Chaḷasītisahassāni, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:44.2":{"pli":"nāriyo samalaṅkatā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:44.3":{"pli":"Vicittavatthābharaṇā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:44.4":{"pli":"āmukkamaṇikuṇḍalā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:45.1":{"pli":"Aḷārapamhā hasulā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:45.2":{"pli":"susaññā tanumajjhimā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:45.3":{"pli":"Parivāressanti taṃ niccaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:45.4":{"pli":"dhajadānassidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:46.1":{"pli":"Tiṃsakappasahassāni, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap562:46.2":{"pli":"devaloke ramissasi; ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:46.3":{"pli":"Asītikkhattuṃ devindo, ","html":"<span class='verse-line'>{}</span>"},"tha-ap562:46.4":{"pli":"devarajjaṃ karissasi. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap562:47.1":{"pli":"