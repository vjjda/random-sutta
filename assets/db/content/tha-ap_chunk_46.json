{"tha-ap500":{"tha-ap500:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap500'><header><ul><li class='division'>{}</li>"},"tha-ap500:0.2":{"pli":"Kiṅkaṇipupphavagga ","html":"<li>{}</li></ul>"},"tha-ap500:0.3":{"pli":"8 Pulinathūpiyattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap500:1.1":{"pli":"“Himavantassāvidūre, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap500:1.2":{"pli":"yamako nāma pabbato; ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:1.3":{"pli":"Assamo sukato mayhaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:1.4":{"pli":"paṇṇasālā sumāpitā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap500:2.1":{"pli":"Nārado nāma nāmena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap500:2.2":{"pli":"jaṭilo uggatāpano; ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:2.3":{"pli":"Catuddasasahassāni, ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:2.4":{"pli":"sissā paricaranti maṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap500:3.1":{"pli":"Paṭisallīnako santo, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap500:3.2":{"pli":"evaṃ cintesahaṃ tadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:3.3":{"pli":"‘Sabbo jano maṃ pūjeti, ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:3.4":{"pli":"nāhaṃ pūjemi kiñcanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap500:4.1":{"pli":"Na me ovādako atthi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap500:4.2":{"pli":"vattā koci na vijjati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:4.3":{"pli":"Anācariyupajjhāyo, ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:4.4":{"pli":"vane vāsaṃ upemahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap500:5.1":{"pli":"Upāsamāno yamahaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap500:5.2":{"pli":"garucittaṃ upaṭṭhahe; ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:5.3":{"pli":"So me ācariyo natthi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:5.4":{"pli":"vanavāso niratthako. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap500:6.1":{"pli":"Āyāgaṃ me gavesissaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap500:6.2":{"pli":"garuṃ bhāvaniyaṃ tathā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:6.3":{"pli":"Sāvassayo vasissāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:6.4":{"pli":"na koci garahissati’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap500:7.1":{"pli":"Uttānakūlā nadikā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap500:7.2":{"pli":"supatitthā manoramā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:7.3":{"pli":"Saṃsuddhapulinākiṇṇā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:7.4":{"pli":"avidūre mamassamaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap500:8.1":{"pli":"Nadiṃ amarikaṃ nāma, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap500:8.2":{"pli":"upagantvānahaṃ tadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:8.3":{"pli":"Saṃvaḍḍhayitvā pulinaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:8.4":{"pli":"akaṃ pulinacetiyaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap500:9.1":{"pli":"Ye te ahesuṃ sambuddhā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap500:9.2":{"pli":"bhavantakaraṇā munī; ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:9.3":{"pli":"Tesaṃ etādiso thūpo, ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:9.4":{"pli":"taṃ nimittaṃ karomahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap500:10.1":{"pli":"Karitvā pulinaṃ thūpaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap500:10.2":{"pli":"sovaṇṇaṃ māpayiṃ ahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:10.3":{"pli":"Soṇṇakiṅkaṇipupphāni, ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:10.4":{"pli":"sahasse tīṇi pūjayiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap500:11.1":{"pli":"Sāyaṃ pātaṃ namassāmi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap500:11.2":{"pli":"vedajāto katañjalī; ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:11.3":{"pli":"Sammukhā viya sambuddhaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:11.4":{"pli":"vandiṃ pulinacetiyaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap500:12.1":{"pli":"Yadā kilesā jāyanti, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap500:12.2":{"pli":"vitakkā gehanissitā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:12.3":{"pli":"Sarāmi sukataṃ thūpaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:12.4":{"pli":"paccavekkhāmi tāvade. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap500:13.1":{"pli":"Upanissāya viharaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap500:13.2":{"pli":"satthavāhaṃ vināyakaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:13.3":{"pli":"Kilese saṃvaseyyāsi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:13.4":{"pli":"na yuttaṃ tava mārisa. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap500:14.1":{"pli":"Saha āvajjite thūpe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap500:14.2":{"pli":"gāravaṃ hoti me tadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:14.3":{"pli":"Kuvitakke vinodesiṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:14.4":{"pli":"nāgo tuttaṭṭito yathā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap500:15.1":{"pli":"Evaṃ viharamānaṃ maṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap500:15.2":{"pli":"maccurājābhimaddatha; ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:15.3":{"pli":"Tattha kālaṅkato santo, ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:15.4":{"pli":"brahmalokamagacchahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap500:16.1":{"pli":"Yāvatāyuṃ vasitvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap500:16.2":{"pli":"tidive upapajjahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:16.3":{"pli":"Asītikkhattuṃ devindo, ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:16.4":{"pli":"devarajjamakārayiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap500:17.1":{"pli":"Satānaṃ tīṇikkhattuñca, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap500:17.2":{"pli":"cakkavattī ahosahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:17.3":{"pli":"Padesarajjaṃ vipulaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:17.4":{"pli":"gaṇanāto asaṅkhiyaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap500:18.1":{"pli":"Soṇṇakiṅkaṇipupphānaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap500:18.2":{"pli":"vipākaṃ anubhomahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:18.3":{"pli":"Dhātīsatasahassāni, ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:18.4":{"pli":"parivārenti maṃ bhave. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap500:19.1":{"pli":"Thūpassa pariciṇṇattā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap500:19.2":{"pli":"rajojallaṃ na limpati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:19.3":{"pli":"Gatte sedā na muccanti, ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:19.4":{"pli":"suppabhāso bhavāmahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap500:20.1":{"pli":"Aho me sukato thūpo, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap500:20.2":{"pli":"sudiṭṭhā marikā nadī; ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:20.3":{"pli":"Thūpaṃ katvāna pulinaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:20.4":{"pli":"pattomhi acalaṃ padaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap500:21.1":{"pli":"Kusalaṃ kattukāmena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap500:21.2":{"pli":"jantunā sāragāhinā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:21.3":{"pli":"Natthi khettaṃ akhettaṃ vā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:21.4":{"pli":"paṭipattīva sādhakā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap500:22.1":{"pli":"Yathāpi balavā poso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap500:22.2":{"pli":"aṇṇavaṃ taritussahe; ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:22.3":{"pli":"Parittaṃ kaṭṭhamādāya, ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:22.4":{"pli":"pakkhandeyya mahāsaraṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap500:23.1":{"pli":"Imāhaṃ kaṭṭhaṃ nissāya, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap500:23.2":{"pli":"tarissāmi mahodadhiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:23.3":{"pli":"Ussāhena vīriyena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:23.4":{"pli":"tareyya udadhiṃ naro. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap500:24.1":{"pli":"Tatheva me kataṃ kammaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap500:24.2":{"pli":"parittaṃ thokakañca yaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:24.3":{"pli":"Taṃ kammaṃ upanissāya, ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:24.4":{"pli":"saṃsāraṃ samatikkamiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap500:25.1":{"pli":"Pacchime bhave sampatte, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap500:25.2":{"pli":"sukkamūlena codito; ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:25.3":{"pli":"Sāvatthiyaṃ pure jāto, ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:25.4":{"pli":"mahāsāle suaḍḍhake. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap500:26.1":{"pli":"Saddhā mātā pitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap500:26.2":{"pli":"buddhassa saraṇaṃ gatā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:26.3":{"pli":"Ubho diṭṭhapadā ete, ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:26.4":{"pli":"anuvattanti sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap500:27.1":{"pli":"Bodhipapaṭikaṃ gayha, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap500:27.2":{"pli":"soṇṇathūpamakārayuṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:27.3":{"pli":"Sāyaṃ pātaṃ namassanti, ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:27.4":{"pli":"sakyaputtassa sammukhā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap500:28.1":{"pli":"Uposathamhi divase, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap500:28.2":{"pli":"soṇṇathūpaṃ vinīharuṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:28.3":{"pli":"Buddhassa vaṇṇaṃ kittentā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:28.4":{"pli":"tiyāmaṃ vītināmayuṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap500:29.1":{"pli":"Saha disvānahaṃ thūpaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap500:29.2":{"pli":"sariṃ pulinacetiyaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:29.3":{"pli":"Ekāsane nisīditvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:29.4":{"pli":"arahattamapāpuṇiṃ. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap500:30.1":{"pli":"Dvāvīsatimaṃ bhāṇavāraṃ. ","html":"<p class='endsutta'>{}</p>"},"tha-ap500:31.1":{"pli":"Gavesamāno taṃ vīraṃ, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap500:31.2":{"pli":"dhammasenāpatiddasaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:31.3":{"pli":"Agārā nikkhamitvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:31.4":{"pli":"pabbajiṃ tassa santike. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap500:32.1":{"pli":"Jātiyā sattavassena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap500:32.2":{"pli":"arahattamapāpuṇiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:32.3":{"pli":"Upasampādayī buddho, ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:32.4":{"pli":"guṇamaññāya cakkhumā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap500:33.1":{"pli":"Dārakeneva santena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap500:33.2":{"pli":"kiriyaṃ niṭṭhitaṃ mayā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:33.3":{"pli":"Kataṃ me karaṇīyajja, ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:33.4":{"pli":"sakyaputtassa sāsane. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap500:34.1":{"pli":"Sabbaverabhayātīto, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap500:34.2":{"pli":"sabbasaṅgātigo isi; ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:34.3":{"pli":"Sāvako te mahāvīra, ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:34.4":{"pli":"soṇṇathūpassidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap500:35.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap500:35.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:35.3":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap500:36.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap500:36.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:36.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap500:37.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap500:37.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap500:37.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap500:38.1":{"pli":"Itthaṃ sudaṃ āyasmā pulinathūpiyo thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap500:39.1":{"pli":"Pulinathūpiyattherassāpadānaṃ aṭṭhamaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"tha-ap501":{"tha-ap501:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap501'><header><ul><li class='division'>{}</li>"},"tha-ap501:0.2":{"pli":"Kiṅkaṇipupphavagga ","html":"<li>{}</li></ul>"},"tha-ap501:0.3":{"pli":"9 Naḷakuṭidāyakattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap501:1.1":{"pli":"“Himavantassāvidūre, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap501:1.2":{"pli":"hārito nāma pabbato; ","html":"<span class='verse-line'>{}</span>"},"tha-ap501:1.3":{"pli":"Sayambhū nārado nāma, ","html":"<span class='verse-line'>{}</span>"},"tha-ap501:1.4":{"pli":"rukkhamūle vasī tadā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap501:2.1":{"pli":"Naḷāgāraṃ karitvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap501:2.2":{"pli":"tiṇena chādayiṃ ahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap501:2.3":{"pli":"Caṅkamaṃ sodhayitvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap501:2.4":{"pli":"sayambhussa adāsahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap501:3.1":{"pli":"Tena kammena sukatena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap501:3.2":{"pli":"cetanāpaṇidhīhi ca; ","html":"<span class='verse-line'>{}</span>"},"tha-ap501:3.3":{"pli":"Jahitvā mānusaṃ dehaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap501:3.4":{"pli":"tāvatiṃsamagacchahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap501:4.1":{"pli":"Tattha me sukataṃ byamhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap501:4.2":{"pli":"naḷakuṭikanimmitaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap501:4.3":{"pli":"Saṭṭhiyojanamubbedhaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap501:4.4":{"pli":"tiṃsayojanavitthataṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap501:5.1":{"pli":"Catuddasesu kappesu, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap501:5.2":{"pli":"devaloke ramiṃ ahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap501:5.3":{"pli":"Ekasattatikkhattuñca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap501:5.4":{"pli":"devarajjamakārayiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap501:6.1":{"pli":"Catutiṃsatikkhattuñca, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap501:6.2":{"pli":"cakkavattī ahosahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap501:6.3":{"pli":"Padesarajjaṃ vipulaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap501:6.4":{"pli":"gaṇanāto asaṅkhiyaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap501:7.1":{"pli":"Dhammapāsādamāruyha, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap501:7.2":{"pli":"sabbākāravarūpamaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap501:7.3":{"pli":"Yadicchakāhaṃ vihare, ","html":"<span class='verse-line'>{}</span>"},"tha-ap501:7.4":{"pli":"sakyaputtassa sāsane. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap501:8.1":{"pli":"Ekatiṃse ito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap501:8.2":{"pli":"yaṃ kammamakariṃ tadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap501:8.3":{"pli":"Duggatiṃ nābhijānāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap501:8.4":{"pli":"naḷakuṭiyidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap501:9.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap501:9.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap501:9.3":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap501:10.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap501:10.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap501:10.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}