8.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap503:38.2":{"pli":"vimokkhāpi ca aṭṭhime; ","html":"<span class='verse-line'>{}</span>"},"tha-ap503:38.3":{"pli":"Chaḷabhiññā sacchikatā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap503:38.4":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap503:39.1":{"pli":"Itthaṃ sudaṃ āyasmā tikaṇikārapupphiyo thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap503:40.1":{"pli":"Tikaṇikārapupphiyattherassāpadānaṃ paṭhamaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"tha-ap504":{"tha-ap504:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap504'><header><ul><li class='division'>{}</li>"},"tha-ap504:0.2":{"pli":"Kaṇikāravagga ","html":"<li>{}</li></ul>"},"tha-ap504:0.3":{"pli":"Ekapattadāyakattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap504:1.1":{"pli":"“Nagare haṃsavatiyā, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap504:1.2":{"pli":"kumbhakāro ahosahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap504:1.3":{"pli":"Addasaṃ virajaṃ buddhaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap504:1.4":{"pli":"oghatiṇṇamanāsavaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap504:2.1":{"pli":"Sukataṃ mattikāpattaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap504:2.2":{"pli":"buddhaseṭṭhassadāsahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap504:2.3":{"pli":"Pattaṃ datvā bhagavato, ","html":"<span class='verse-line'>{}</span>"},"tha-ap504:2.4":{"pli":"ujubhūtassa tādino. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap504:3.1":{"pli":"Bhave nibbattamānohaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap504:3.2":{"pli":"soṇṇathāle labhāmahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap504:3.3":{"pli":"Rūpimaye ca sovaṇṇe, ","html":"<span class='verse-line'>{}</span>"},"tha