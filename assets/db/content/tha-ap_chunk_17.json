{"tha-ap299":{"tha-ap299:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap299'><header><ul><li class='division'>{}</li>"},"tha-ap299:0.2":{"pli":"Citakapūjakavagga ","html":"<li>{}</li></ul>"},"tha-ap299:0.3":{"pli":"7 Desakittakattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap299:1.1":{"pli":"“Upasālakanāmohaṃ, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap299:1.2":{"pli":"ahosiṃ brāhmaṇo tadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap299:1.3":{"pli":"Kānanaṃ vanamogāḷhaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap299:1.4":{"pli":"lokajeṭṭhaṃ narāsabhaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap299:2.1":{"pli":"Disvāna vandiṃ pādesu, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap299:2.2":{"pli":"lokāhutipaṭiggahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap299:2.3":{"pli":"Pasannacittaṃ maṃ ñatvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap299:2.4":{"pli":"buddho antaradhāyatha. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap299:3.1":{"pli":"Kānanā abhinikkhamma, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap299:3.2":{"pli":"buddhaseṭṭhamanussariṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap299:3.3":{"pli":"Taṃ desaṃ kittayitvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap299:3.4":{"pli":"kappaṃ saggamhi modahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap299:4.1":{"pli":"Dvenavute ito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap299:4.2":{"pli":"yaṃ desamabhikittayiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap299:4.3":{"pli":"Duggatiṃ nābhijānāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap299:4.4":{"pli":"kittanāya idaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap299:5.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap299:5.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap299:5.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap299:6.1":{"pli":"Itthaṃ sudaṃ āyasmā desakittako thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap299:7.1":{"pli":"Desakittakattherassāpadānaṃ sattamaṃ. ","html":"<p class='endsutta'>{}</p></article>"}}}