{"tha-ap336":{"tha-ap336:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap336'><header><ul><li class='division'>{}</li>"},"tha-ap336:0.2":{"pli":"Gandhodakavagga ","html":"<li>{}</li></ul>"},"tha-ap336:0.3":{"pli":"Ekadussadāyakattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap336:1.1":{"pli":"“Nagare haṃsavatiyā, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap336:1.2":{"pli":"ahosiṃ tiṇahārako; ","html":"<span class='verse-line'>{}</span>"},"tha-ap336:1.3":{"pli":"Tiṇahārena jīvāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap336:1.4":{"pli":"tena posemi dārake. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap336:2.1":{"pli":"Padumuttaro nāma jino, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap336:2.2":{"pli":"sabbadhammāna pāragū; ","html":"<span class='verse-line'>{}</span>"},"tha-ap336:2.3":{"pli":"Tamandhakāraṃ nāsetvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap336:2.4":{"pli":"uppajji lokanāyako. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap336:3.1":{"pli":"Sake ghare nisīditvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap336:3.2":{"pli":"evaṃ cintesahaṃ tadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap336:3.3":{"pli":"‘Buddho loke samuppanno, ","html":"<span class='verse-line'>{}</span>"},"tha-ap336:3.4":{"pli":"deyyadhammo ca natthi me. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap336:4.1":{"pli":"Idaṃ me sāṭakaṃ ekaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap336:4.2":{"pli":"natthi me koci dāyako; ","html":"<span class='verse-line'>{}</span>"},"tha-ap336:4.3":{"pli":"Dukkho nirayasamphasso, ","html":"<span class='verse-line'>{}</span>"},"tha-ap336:4.4":{"pli":"ropayissāmi dakkhiṇaṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap336:5.1":{"pli":"Evāhaṃ cintayitvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap336:5.2":{"pli":"sakaṃ cittaṃ pasādayiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap336:5.3":{"pli":"Ekaṃ dussaṃ gahetvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap336:5.4":{"pli":"buddhaseṭṭhassadāsahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap336:6.1":{"pli":"Ekaṃ dussaṃ daditvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap336:6.2":{"pli":"ukkuṭṭhiṃ sampavattayiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap336:6.3":{"pli":"Yadi buddho tuvaṃ vīra, ","html":"<span class='verse-line'>{}</span>"},"tha-ap336:6.4":{"pli":"tārehi maṃ mahāmuni. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap336:7.1":{"pli":"Padumuttaro lokavidū, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap336:7.2":{"pli":"āhutīnaṃ paṭiggaho; ","html":"<span class='verse-line'>{}</span>"},"tha-ap336:7.3":{"pli":"Mama dānaṃ pakittento, ","html":"<span class='verse-line'>{}</span>"},"tha-ap336:7.4":{"pli":"akā me anumodanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap336:8.1":{"pli":"‘Iminā ekadussena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap336:8.2":{"pli":"cetanāpaṇidhīhi ca; ","html":"<span class='verse-line'>{}</span>"},"tha-ap336:8.3":{"pli":"Kappasatasahassāni, ","html":"<span class='verse-line'>{}</span>"},"tha-ap336:8.4":{"pli":"vinipātaṃ na gacchati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap336:9.1":{"pli":"Chattiṃsakkhattuṃ devindo, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap336:9.2":{"pli":"devarajjaṃ karissati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap336:9.3":{"pli":"Tettiṃsakkhattuṃ rājā ca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap336:9.4":{"pli":"cakkavattī bhavissati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap336:9.5":{"pli":"Padesarajjaṃ vipulaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap336:9.6":{"pli":"gaṇanāto asaṅkhiyaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap336:10.1":{"pli":"Devaloke manusse vā, ","html":"<p><span 