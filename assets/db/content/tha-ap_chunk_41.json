:12.3":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap472:13.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap472:13.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap472:13.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap472:14.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap472:14.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap472:14.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap472:15.1":{"pli":"Itthaṃ sudaṃ āyasmā nimittabyākaraṇiyo thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap472:16.1":{"pli":"Nimittabyākaraṇiyattherassāpadānaṃ dasamaṃ. ","html":"<p class='endsutta'>{}</p>"},"tha-ap472:17.1":{"pli":"Sālakusumiyavaggo sattacattālīsamo. ","html":"<p class='endsection'>{}</p>"},"tha-ap472:18.1":{"pli":"Tassuddānaṃ ","html":"<p class='uddana-intro'>{}</p>"},"tha-ap472:19.1":{"pli":"Sālakusumiyo thero, ","html":"<blockquote class='uddanagatha'><p><span class='verse-line'>{}</span>"},"tha-ap472:19.2":{"pli":"pūjā nibbāpakopi ca; ","html":"<span class='verse-line'>{}</span>"},"tha-ap472:19.3":{"pli":"Setudo tālavaṇṭī ca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap472:19.4":{"pli":"avaṭalabujappado. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap472:20.1":{"pli":"Pilakkhapaṭibhānī ca, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap472:20.2":{"pli":"veyyākaraṇiyo dijo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap472:20.3":{"pli":"Dvesattati ca gāthāyo, ","html":"<span class='verse-line'>{}</span>"},"tha-ap472:20.4":{"pli":"gaṇitāyo vibhāvibhi. ","html":"<span class='verse-line'>{}</span></p></blockquote></article>"}}}