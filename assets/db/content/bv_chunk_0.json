{"bv1":{"bv1:0.1":{"pli":"Buddhavaṃsa ","html":"<article id='bv1'><header><ul><li class='division'>{}</li></ul>"},"bv1:0.2":{"pli":"1. Ratanacaṅkamanakaṇḍa ","html":"<h1 class='sutta-title'>{}</h1></header>"},"bv1:1.1":{"pli":"Namo tassa Bhagavato Arahato Sammāsambuddhassa. ","html":"<p class='namo'>{}</p>"},"bv1:2.1":{"pli":"Brahmā ca lokādhipatī sahampatī, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"bv1:2.2":{"pli":"Katañjalī anadhivaraṃ ayācatha; ","html":"<span class='verse-line'>{}</span>"},"bv1:2.3":{"pli":"“Santīdha sattāpparajakkhajātikā, ","html":"<span class='verse-line'>{}</span>"},"bv1:2.4":{"pli":"Desehi dhammaṃ anukampimaṃ pajaṃ”. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:3.1":{"pli":"Sampannavijjācaraṇassa tādino, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:3.2":{"pli":"Jutindharassantimadehadhārino; ","html":"<span class='verse-line'>{}</span>"},"bv1:3.3":{"pli":"Tathāgatassappaṭipuggalassa, ","html":"<span class='verse-line'>{}</span>"},"bv1:3.4":{"pli":"Uppajji kāruññatā sabbasatte. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:4.1":{"pli":"“Na hete jānanti sadevamānusā, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:4.2":{"pli":"Buddho ayaṃ kīdisako naruttamo; ","html":"<span class='verse-line'>{}</span>"},"bv1:4.3":{"pli":"Iddhibalaṃ paññābalañca kīdisaṃ, ","html":"<span class='verse-line'>{}</span>"},"bv1:4.4":{"pli":"Buddhabalaṃ lokahitassa kīdisaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:5.1":{"pli":"Na hete jānanti sadevamānusā, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:5.2":{"pli":"Buddho ayaṃ edisako naruttamo; ","html":"<span class='verse-line'>{}</span>"},"bv1:5.3":{"pli":"Iddhibalaṃ paññābalañca edisaṃ, ","html":"<span class='verse-line'>{}</span>"},"bv1:5.4":{"pli":"Buddhabalaṃ lokahitassa edisaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:6.1":{"pli":"Handāhaṃ dassayissāmi, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:6.2":{"pli":"buddhabalamanuttaraṃ; ","html":"<span class='verse-line'>{}</span>"},"bv1:6.3":{"pli":"Caṅkamaṃ māpayissāmi, ","html":"<span class='verse-line'>{}</span>"},"bv1:6.4":{"pli":"nabhe ratanamaṇḍitaṃ”. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:7.1":{"pli":"Bhummā mahārājikā tāvatiṃsā, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:7.2":{"pli":"Yāmā ca devā tusitā ca nimmitā; ","html":"<span class='verse-line'>{}</span>"},"bv1:7.3":{"pli":"Paranimmitā yepi ca brahmakāyikā, ","html":"<span class='verse-line'>{}</span>"},"bv1:7.4":{"pli":"Ānanditā vipulamakaṃsu ghosaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:8.1":{"pli":"Obhāsitā ca pathavī sadevakā, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:8.2":{"pli":"Puthū ca lokantarikā asaṃvutā; ","html":"<span class='verse-line'>{}</span>"},"bv1:8.3":{"pli":"Tamo ca tibbo vihato tadā ahu, ","html":"<span class='verse-line'>{}</span>"},"bv1:8.4":{"pli":"Disvāna accherakaṃ pāṭihīraṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:9.1":{"pli":"Sadevagandhabbamanussarakkhase, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:9.2":{"pli":"Ābhā uḷārā vipulā ajāyatha; ","html":"<span class='verse-line'>{}</span>"},"bv1:9.3":{"pli":"Imasmiṃ loke parasmiñcobhayasmiṃ, ","html":"<span class='verse-line'>{}</span>"},"bv1:9.4":{"pli":"Adho ca uddhaṃ tiriyañca vitthataṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:10.1":{"pli":"Sattuttamo anadhivaro vināyako, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:10.2":{"pli":"Satthā ahū devamanussapūjito; ","html":"<span class='verse-line'>{}</span>"},"bv1:10.3":{"pli":"Mahānubhāvo satapuññalakkhaṇo, ","html":"<span class='verse-line'>{}</span>"},"bv1:10.4":{"pli":"Dassesi accherakaṃ pāṭihīraṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:11.1":{"pli":"So yācito devavarena cakkhumā, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:11.2":{"pli":"Atthaṃ samekkhitvā tadā naruttamo; ","html":"<span class='verse-line'>{}</span>"},"bv1:11.3":{"pli":"Caṅkamaṃ māpayi lokanāyako, ","html":"<span class='verse-line'>{}</span>"},"bv1:11.4":{"pli":"Suniṭṭhitaṃ sabbaratananimmitaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:12.1":{"pli":"Iddhī ca ādesanānusāsanī, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:12.2":{"pli":"Tipāṭihīre bhagavā vasī ahu; ","html":"<span class='verse-line'>{}</span>"},"bv1:12.3":{"pli":"Caṅkamaṃ māpayi lokanāyako, ","html":"<span class='verse-line'>{}</span>"},"bv1:12.4":{"pli":"Suniṭṭhitaṃ sabbaratananimmitaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:13.1":{"pli":"Dasasahassīlokadhātuyā, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:13.2":{"pli":"Sinerupabbatuttame; ","html":"<span class='verse-line'>{}</span>"},"bv1:13.3":{"pli":"Thambheva dassesi paṭipāṭiyā, ","html":"<span class='verse-line'>{}</span>"},"bv1:13.4":{"pli":"Caṅkame ratanāmaye. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:14.1":{"pli":"Dasasahassī atikkamma, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:14.2":{"pli":"caṅkamaṃ māpayī jino; ","html":"<span class='verse-line'>{}</span>"},"bv1:14.3":{"pli":"Sabbasoṇṇamayā passe, ","html":"<span class='verse-line'>{}</span>"},"bv1:14.4":{"pli":"caṅkame ratanāmaye. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:15.1":{"pli":"Tulāsaṅghāṭānuvaggā, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:15.2":{"pli":"sovaṇṇaphalakatthatā; ","html":"<span class='verse-line'>{}</span>"},"bv1:15.3":{"pli":"Vedikā sabbasovaṇṇā, ","html":"<span class='verse-line'>{}</span>"},"bv1:15.4":{"pli":"dubhato passesu nimmitā. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:16.1":{"pli":"Maṇimuttāvālikākiṇṇā, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:16.2":{"pli":"nimmito ratanāmayo; ","html":"<span class='verse-line'>{}</span>"},"bv1:16.3":{"pli":"Obhāseti disā sabbā, ","html":"<span class='verse-line'>{}</span>"},"bv1:16.4":{"pli":"sataraṃsīva uggato. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:17.1":{"pli":"Tasmiṃ caṅkamane dhīro, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:17.2":{"pli":"dvattiṃsavaralakkhaṇo; ","html":"<span class='verse-line'>{}</span>"},"bv1:17.3":{"pli":"Virocamāno sambuddho, ","html":"<span class='verse-line'>{}</span>"},"bv1:17.4":{"pli":"caṅkame caṅkamī jino. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:18.1":{"pli":"Dibbaṃ mandāravaṃ pupphaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:18.2":{"pli":"padumaṃ pārichattakaṃ; ","html":"<span class='verse-line'>{}</span>"},"bv1:18.3":{"pli":"Caṅkamane okiranti, ","html":"<span class='verse-line'>{}</span>"},"bv1:18.4":{"pli":"sabbe devā samāgatā. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:19.1":{"pli":"Passanti taṃ devasaṅghā, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:19.2":{"pli":"dasasahassī pamoditā; ","html":"<span class='verse-line'>{}</span>"},"bv1:19.3":{"pli":"Namassamānā nipatanti, ","html":"<span class='verse-line'>{}</span>"},"bv1:19.4":{"pli":"tuṭṭhahaṭṭhā pamoditā. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:20.1":{"pli":"Tāvatiṃsā ca yāmā ca, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:20.2":{"pli":"tusitā cāpi devatā; ","html":"<span class='verse-line'>{}</span>"},"bv1:20.3":{"pli":"Nimmānaratino devā, ","html":"<span class='verse-line'>{}</span>"},"bv1:20.4":{"pli":"ye devā vasavattino; ","html":"<span class='verse-line'>{}</span>"},"bv1:20.5":{"pli":"Udaggacittā sumanā, ","html":"<span class='verse-line'>{}</span>"},"bv1:20.6":{"pli":"passanti lokanāyakaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:21.1":{"pli":"Sadevagandhabbamanussarakkhasā, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:21.2":{"pli":"Nāgā supaṇṇā atha vāpi kinnarā; ","html":"<span class='verse-line'>{}</span>"},"bv1:21.3":{"pli":"Passanti taṃ lokahitānukampakaṃ, ","html":"<span class='verse-line'>{}</span>"},"bv1:21.4":{"pli":"Nabheva accuggatacandamaṇḍalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:22.1":{"pli":"Ābhassarā subhakiṇhā, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:22.2":{"pli":"Vehapphalā akaniṭṭhā ca devatā; ","html":"<span class='verse-line'>{}</span>"},"bv1:22.3":{"pli":"Susuddhasukkavatthavasanā, ","html":"<span class='verse-line'>{}</span>"},"bv1:22.4":{"pli":"Tiṭṭhanti pañjalīkatā. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:23.1":{"pli":"Muñcanti pupphaṃ pana pañcavaṇṇikaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:23.2":{"pli":"Mandāravaṃ candanacuṇṇamissitaṃ; ","html":"<span class='verse-line'>{}</span>"},"bv1:23.3":{"pli":"Bhamenti celāni ca ambare tadā, ","html":"<span class='verse-line'>{}</span>"},"bv1:23.4":{"pli":"“Aho jino lokahitānukampako. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:24.1":{"pli":"Tuvaṃ satthā ca ketū ca, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:24.2":{"pli":"dhajo yūpo ca pāṇinaṃ; ","html":"<span class='verse-line'>{}</span>"},"bv1:24.3":{"pli":"Parāyaṇo patiṭṭhā ca, ","html":"<span class='verse-line'>{}</span>"},"bv1:24.4":{"pli":"dīpo ca dvipaduttamo”. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:25.1":{"pli":"Dasasahassīlokadhātuyā, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:25.2":{"pli":"Devatāyo mahiddhikā; ","html":"<span class='verse-line'>{}</span>"},"bv1:25.3":{"pli":"Parivāretvā namassanti, ","html":"<span class='verse-line'>{}</span>"},"bv1:25.4":{"pli":"Tuṭṭhahaṭṭhā pamoditā. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:26.1":{"pli":"Devatā devakaññā ca, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:26.2":{"pli":"pasannā tuṭṭhamānasā; ","html":"<span class='verse-line'>{}</span>"},"bv1:26.3":{"pli":"Pañcavaṇṇikapupphehi, ","html":"<span class='verse-line'>{}</span>"},"bv1:26.4":{"pli":"pūjayanti narāsabhaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:27.1":{"pli":"Passanti taṃ devasaṅghā, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:27.2":{"pli":"pasannā tuṭṭhamānasā; ","html":"<span class='verse-line'>{}</span>"},"bv1:27.3":{"pli":"Pañcavaṇṇikapupphehi, ","html":"<span class='verse-line'>{}</span>"},"bv1:27.4":{"pli":"pūjayanti narāsabhaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:28.1":{"pli":"“Aho acchariyaṃ loke, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:28.2":{"pli":"abbhutaṃ lomahaṃsanaṃ; ","html":"<span class='verse-line'>{}</span>"},"bv1:28.3":{"pli":"Na medisaṃ bhūtapubbaṃ, ","html":"<span class='verse-line'>{}</span>"},"bv1:28.4":{"pli":"accheraṃ lomahaṃsanaṃ”. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:29.1":{"pli":"Sakasakamhi bhavane, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:29.2":{"pli":"nisīditvāna devatā; ","html":"<span class='verse-line'>{}</span>"},"bv1:29.3":{"pli":"Hasanti tā mahāhasitaṃ, ","html":"<span class='verse-line'>{}</span>"},"bv1:29.4":{"pli":"disvānaccherakaṃ nabhe. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:30.1":{"pli":"Ākāsaṭṭhā ca bhūmaṭṭhā, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:30.2":{"pli":"tiṇapanthanivāsino; ","html":"<span class='verse-line'>{}</span>"},"bv1:30.3":{"pli":"Katañjalī namassanti, ","html":"<span class='verse-line'>{}</span>"},"bv1:30.4":{"pli":"tuṭṭhahaṭṭhā pamoditā. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:31.1":{"pli":"Yepi dīghāyukā nāgā, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:31.2":{"pli":"puññavanto mahiddhikā; ","html":"<span class='verse-line'>{}</span>"},"bv1:31.3":{"pli":"Pamoditā namassanti, ","html":"<span class='verse-line'>{}</span>"},"bv1:31.4":{"pli":"pūjayanti naruttamaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:32.1":{"pli":"Saṅgītiyo pavattenti, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:32.2":{"pli":"ambare anilañjase; ","html":"<span class='verse-line'>{}</span>"},"bv1:32.3":{"pli":"Cammanaddhāni vādenti, ","html":"<span class='verse-line'>{}</span>"},"bv1:32.4":{"pli":"disvānaccherakaṃ nabhe. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:33.1":{"pli":"Saṅkhā ca paṇavā ceva, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:33.2":{"pli":"athopi ḍiṇḍimā bahū; ","html":"<span class='verse-line'>{}</span>"},"bv1:33.3":{"pli":"Antalikkhasmiṃ vajjanti, ","html":"<span class='verse-line'>{}</span>"},"bv1:33.4":{"pli":"disvānaccherakaṃ nabhe. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:34.1":{"pli":"“Abbhuto vata no ajja, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:34.2":{"pli":"uppajji lomahaṃsano; ","html":"<span class='verse-line'>{}</span>"},"bv1:34.3":{"pli":"Dhuvamatthasiddhiṃ labhāma, ","html":"<span class='verse-line'>{}</span>"},"bv1:34.4":{"pli":"khaṇo no paṭipādito”. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:35.1":{"pli":"Buddhoti tesaṃ sutvāna, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:35.2":{"pli":"pīti uppajji tāvade; ","html":"<span class='verse-line'>{}</span>"},"bv1:35.3":{"pli":"Buddho buddhoti kathayantā, ","html":"<span class='verse-line'>{}</span>"},"bv1:35.4":{"pli":"tiṭṭhanti pañjalīkatā. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:36.1":{"pli":"Hiṅkārā sādhukārā ca, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:36.2":{"pli":"ukkuṭṭhi sampahaṃsanaṃ; ","html":"<span class='verse-line'>{}</span>"},"bv1:36.3":{"pli":"Pajā ca vividhā gagane, ","html":"<span class='verse-line'>{}</span>"},"bv1:36.4":{"pli":"vattenti pañjalīkatā. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:37.1":{"pli":"Gāyanti seḷenti ca vādayanti ca, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:37.2":{"pli":"Bhujāni pothenti ca naccayanti ca; ","html":"<span class='verse-line'>{}</span>"},"bv1:37.3":{"pli":"Muñcanti pupphaṃ pana pañcavaṇṇikaṃ, ","html":"<span class='verse-line'>{}</span>"},"bv1:37.4":{"pli":"Mandāravaṃ candanacuṇṇamissitaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:38.1":{"pli":"“Yathā tuyhaṃ mahāvīra, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:38.2":{"pli":"pādesu cakkalakkhaṇaṃ; ","html":"<span class='verse-line'>{}</span>"},"bv1:38.3":{"pli":"Dhajavajirapaṭākā, ","html":"<span class='verse-line'>{}</span>"},"bv1:38.4":{"pli":"vaḍḍhamānaṅkusācitaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:39.1":{"pli":"Rūpe sīle samādhimhi, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:39.2":{"pli":"paññāya ca asādiso; ","html":"<span class='verse-line'>{}</span>"},"bv1:39.3":{"pli":"Vimuttiyā asamasamo, ","html":"<span class='verse-line'>{}</span>"},"bv1:39.4":{"pli":"dhammacakkappavattane. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:40.1":{"pli":"Dasanāgabalaṃ kāye, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:40.2":{"pli":"tuyhaṃ pākatikaṃ balaṃ; ","html":"<span class='verse-line'>{}</span>"},"bv1:40.3":{"pli":"Iddhibalena asamo, ","html":"<span class='verse-line'>{}</span>"},"bv1:40.4":{"pli":"dhammacakkappavattane. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:41.1":{"pli":"Evaṃ sabbaguṇūpetaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:41.2":{"pli":"sabbaṅgasamupāgataṃ; ","html":"<span class='verse-line'>{}</span>"},"bv1:41.3":{"pli":"Mahāmuniṃ kāruṇikaṃ, ","html":"<span class='verse-line'>{}</span>"},"bv1:41.4":{"pli":"lokanāthaṃ namassatha. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:42.1":{"pli":"Abhivādanaṃ thomanañca, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:42.2":{"pli":"vandanañca pasaṃsanaṃ; ","html":"<span class='verse-line'>{}</span>"},"bv1:42.3":{"pli":"Namassanañca pūjañca, ","html":"<span class='verse-line'>{}</span>"},"bv1:42.4":{"pli":"sabbaṃ arahasī tuvaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:43.1":{"pli":"Ye keci loke vandaneyyā, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:43.2":{"pli":"vandanaṃ arahanti ye; ","html":"<span class='verse-line'>{}</span>"},"bv1:43.3":{"pli":"Sabbaseṭṭho mahāvīra, ","html":"<span class='verse-line'>{}</span>"},"bv1:43.4":{"pli":"sadiso te na vijjati. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:44.1":{"pli":"Sāriputto mahāpañño, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:44.2":{"pli":"samādhijjhānakovido; ","html":"<span class='verse-line'>{}</span>"},"bv1:44.3":{"pli":"Gijjhakūṭe ṭhitoyeva, ","html":"<span class='verse-line'>{}</span>"},"bv1:44.4":{"pli":"passati lokanāyakaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:45.1":{"pli":"Suphullaṃ sālarājaṃva, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:45.2":{"pli":"candaṃva gagane yathā; ","html":"<span class='verse-line'>{}</span>"},"bv1:45.3":{"pli":"Majjhanhikeva sūriyaṃ, ","html":"<span class='verse-line'>{}</span>"},"bv1:45.4":{"pli":"olokesi narāsabhaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:46.1":{"pli":"Jalantaṃ dīparukkhaṃva, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:46.2":{"pli":"Taruṇasūriyaṃva uggataṃ; ","html":"<span class='verse-line'>{}</span>"},"bv1:46.3":{"pli":"Byāmappabhānurañjitaṃ, ","html":"<span class='verse-line'>{}</span>"},"bv1:46.4":{"pli":"Dhīraṃ passati lokanāyakaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:47.1":{"pli":"Pañcannaṃ bhikkhusatānaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:47.2":{"pli":"katakiccāna tādinaṃ; ","html":"<span class='verse-line'>{}</span>"},"bv1:47.3":{"pli":"Khīṇāsavānaṃ vimalānaṃ, ","html":"<span class='verse-line'>{}</span>"},"bv1:47.4":{"pli":"khaṇena sannipātayi. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:48.1":{"pli":"Lokappasādanaṃ nāma, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:48.2":{"pli":"pāṭihīraṃ nidassayi; ","html":"<span class='verse-line'>{}</span>"},"bv1:48.3":{"pli":"Amhepi tattha gantvāna, ","html":"<span class='verse-line'>{}</span>"},"bv1:48.4":{"pli":"vandissāma mayaṃ jinaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:49.1":{"pli":"Etha sabbe gamissāma, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:49.2":{"pli":"pucchissāma mayaṃ jinaṃ; ","html":"<span class='verse-line'>{}</span>"},"bv1:49.3":{"pli":"Kaṅkhaṃ vinodayissāma, ","html":"<span class='verse-line'>{}</span>"},"bv1:49.4":{"pli":"passitvā lokanāyakaṃ”. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:50.1":{"pli":"Sādhūti te paṭissutvā, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:50.2":{"pli":"nipakā saṃvutindriyā; ","html":"<span class='verse-line'>{}</span>"},"bv1:50.3":{"pli":"Pattacīvaramādāya, ","html":"<span class='verse-line'>{}</span>"},"bv1:50.4":{"pli":"taramānā upāgamuṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:51.1":{"pli":"Khīṇāsavehi vimalehi, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:51.2":{"pli":"dantehi uttame dame; ","html":"<span class='verse-line'>{}</span>"},"bv1:51.3":{"pli":"Sāriputto mahāpañño, ","html":"<span class='verse-line'>{}</span>"},"bv1:51.4":{"pli":"iddhiyā upasaṅkami. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:52.1":{"pli":"Tehi bhikkhūhi parivuto, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:52.2":{"pli":"sāriputto mahāgaṇī; ","html":"<span class='verse-line'>{}</span>"},"bv1:52.3":{"pli":"Laḷanto devova gagane, ","html":"<span class='verse-line'>{}</span>"},"bv1:52.4":{"pli":"iddhiyā upasaṅkami. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:53.1":{"pli":"Ukkāsitañca khipitaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:53.2":{"pli":"ajjhupekkhiya subbatā; ","html":"<span class='verse-line'>{}</span>"},"bv1:53.3":{"pli":"Sagāravā sappatissā, ","html":"<span class='verse-line'>{}</span>"},"bv1:53.4":{"pli":"sambuddhaṃ upasaṅkamuṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:54.1":{"pli":"Upasaṅkamitvā passanti, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:54.2":{"pli":"sayambhuṃ lokanāyakaṃ; ","html":"<span class='verse-line'>{}</span>"},"bv1:54.3":{"pli":"Nabhe accuggataṃ dhīraṃ, ","html":"<span class='verse-line'>{}</span>"},"bv1:54.4":{"pli":"candaṃva gagane yathā. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:55.1":{"pli":"Jalantaṃ dīparukkhaṃva, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:55.2":{"pli":"vijjuṃva gagane yathā; ","html":"<span class='verse-line'>{}</span>"},"bv1:55.3":{"pli":"Majjhanhikeva sūriyaṃ, ","html":"<span class='verse-line'>{}</span>"},"bv1:55.4":{"pli":"passanti lokanāyakaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:56.1":{"pli":"Pañcabhikkhusatā sabbe, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:56.2":{"pli":"passanti lokanāyakaṃ; ","html":"<span class='verse-line'>{}</span>"},"bv1:56.3":{"pli":"Rahadamiva vippasannaṃ, ","html":"<span class='verse-line'>{}</span>"},"bv1:56.4":{"pli":"suphullaṃ padumaṃ yathā. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:57.1":{"pli":"Añjaliṃ paggahetvāna, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:57.2":{"pli":"tuṭṭhahaṭṭhā pamoditā; ","html":"<span class='verse-line'>{}</span>"},"bv1:57.3":{"pli":"Namassamānā nipatanti, ","html":"<span class='verse-line'>{}</span>"},"bv1:57.4":{"pli":"satthuno cakkalakkhaṇe. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:58.1":{"pli":"Sāriputto mahāpañño, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:58.2":{"pli":"koraṇḍasamasādiso; ","html":"<span class='verse-line'>{}</span>"},"bv1:58.3":{"pli":"Samādhijjhānakusalo, ","html":"<span class='verse-line'>{}</span>"},"bv1:58.4":{"pli":"vandate lokanāyakaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:59.1":{"pli":"Gajjitā kālameghova, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:59.2":{"pli":"nīluppalasamasādiso; ","html":"<span class='verse-line'>{}</span>"},"bv1:59.3":{"pli":"Iddhibalena asamo, ","html":"<span class='verse-line'>{}</span>"},"bv1:59.4":{"pli":"moggallāno mahiddhiko. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:60.1":{"pli":"Mahākassapopi ca thero, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:60.2":{"pli":"uttattakanakasannibho; ","html":"<span class='verse-line'>{}</span>"},"bv1:60.3":{"pli":"Dhutaguṇe agganikkhitto, ","html":"<span class='verse-line'>{}</span>"},"bv1:60.4":{"pli":"thomito satthuvaṇṇito. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:61.1":{"pli":"Dibbacakkhūnaṃ yo aggo, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:61.2":{"pli":"anuruddho mahāgaṇī; ","html":"<span class='verse-line'>{}</span>"},"bv1:61.3":{"pli":"Ñātiseṭṭho bhagavato, ","html":"<span class='verse-line'>{}</span>"},"bv1:61.4":{"pli":"avidūreva tiṭṭhati. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:62.1":{"pli":"Āpattianāpattiyā, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:62.2":{"pli":"satekicchāya kovido; ","html":"<span class='verse-line'>{}</span>"},"bv1:62.3":{"pli":"Vinaye agganikkhitto, ","html":"<span class='verse-line'>{}</span>"},"bv1:62.4":{"pli":"upāli satthuvaṇṇito. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:63.1":{"pli":"Sukhumanipuṇatthapaṭividdho, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:63.2":{"pli":"Kathikānaṃ pavaro gaṇī; ","html":"<span class='verse-line'>{}</span>"},"bv1:63.3":{"pli":"Isi mantāniyā putto, ","html":"<span class='verse-line'>{}</span>"},"bv1:63.4":{"pli":"Puṇṇo nāmāti vissuto. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:64.1":{"pli":"Etesaṃ cittamaññāya, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:64.2":{"pli":"opammakusalo muni; ","html":"<span class='verse-line'>{}</span>"},"bv1:64.3":{"pli":"Kaṅkhacchedo mahāvīro, ","html":"<span class='verse-line'>{}</span>"},"bv1:64.4":{"pli":"kathesi attano guṇaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:65.1":{"pli":"“Cattāro te asaṅkheyyā, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:65.2":{"pli":"koṭi yesaṃ na nāyati; ","html":"<span class='verse-line'>{}</span>"},"bv1:65.3":{"pli":"Sattakāyo ca ākāso, ","html":"<span class='verse-line'>{}</span>"},"bv1:65.4":{"pli":"cakkavāḷā canantakā; ","html":"<span class='verse-line'>{}</span>"},"bv1:65.5":{"pli":"Buddhañāṇaṃ appameyyaṃ, ","html":"<span class='verse-line'>{}</span>"},"bv1:65.6":{"pli":"na sakkā ete vijānituṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:66.1":{"pli":"Kimetaṃ acchariyaṃ loke, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:66.2":{"pli":"yaṃ me iddhivikubbanaṃ; ","html":"<span class='verse-line'>{}</span>"},"bv1:66.3":{"pli":"Aññe bahū acchariyā, ","html":"<span class='verse-line'>{}</span>"},"bv1:66.4":{"pli":"abbhutā lomahaṃsanā. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:67.1":{"pli":"Yadāhaṃ tusite kāye, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:67.2":{"pli":"santusito nāmahaṃ tadā; ","html":"<span class='verse-line'>{}</span>"},"bv1:67.3":{"pli":"Dasasahassī samāgamma, ","html":"<span class='verse-line'>{}</span>"},"bv1:67.4":{"pli":"yācanti pañjalī mamaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:68.1":{"pli":"‘Kālo kho te mahāvīra, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:68.2":{"pli":"uppajja mātukucchiyaṃ; ","html":"<span class='verse-line'>{}</span>"},"bv1:68.3":{"pli":"Sadevakaṃ tārayanto, ","html":"<span class='verse-line'>{}</span>"},"bv1:68.4":{"pli":"bujjhassu amataṃ padaṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:69.1":{"pli":"Tusitā kāyā cavitvāna, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:69.2":{"pli":"yadā okkami kucchiyaṃ; ","html":"<span class='verse-line'>{}</span>"},"bv1:69.3":{"pli":"Dasasahassīlokadhātu, ","html":"<span class='verse-line'>{}</span>"},"bv1:69.4":{"pli":"kampittha dharaṇī tadā. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:70.1":{"pli":"Yadāhaṃ mātukucchito, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:70.2":{"pli":"sampajānova nikkhamiṃ; ","html":"<span class='verse-line'>{}</span>"},"bv1:70.3":{"pli":"Sādhukāraṃ pavattenti, ","html":"<span class='verse-line'>{}</span>"},"bv1:70.4":{"pli":"dasasahassī pakampatha. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:71.1":{"pli":"Okkantiṃ me samo natthi, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:71.2":{"pli":"jātito abhinikkhame; ","html":"<span class='verse-line'>{}</span>"},"bv1:71.3":{"pli":"Sambodhiyaṃ ahaṃ seṭṭho, ","html":"<span class='verse-line'>{}</span>"},"bv1:71.4":{"pli":"dhammacakkappavattane. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:72.1":{"pli":"Aho acchariyaṃ loke, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:72.2":{"pli":"buddhānaṃ guṇamahantatā; ","html":"<span class='verse-line'>{}</span>"},"bv1:72.3":{"pli":"Dasasahassīlokadhātu, ","html":"<span class='verse-line'>{}</span>"},"bv1:72.4":{"pli":"chappakāraṃ pakampatha; ","html":"<span class='verse-line'>{}</span>"},"bv1:72.5":{"pli":"Obhāso ca mahā āsi, ","html":"<span class='verse-line'>{}</span>"},"bv1:72.6":{"pli":"accheraṃ lomahaṃsanaṃ”. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:73.1":{"pli":"Bhagavā tamhi samaye, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:73.2":{"pli":"lokajeṭṭho narāsabho; ","html":"<span class='verse-line'>{}</span>"},"bv1:73.3":{"pli":"Sadevakaṃ dassayanto, ","html":"<span class='verse-line'>{}</span>"},"bv1:73.4":{"pli":"iddhiyā caṅkamī jino. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:74.1":{"pli":"Caṅkame caṅkamantova, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:74.2":{"pli":"kathesi lokanāyako; ","html":"<span class='verse-line'>{}</span>"},"bv1:74.3":{"pli":"Antarā na nivatteti, ","html":"<span class='verse-line'>{}</span>"},"bv1:74.4":{"pli":"catuhatthe caṅkame yathā. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:75.1":{"pli":"Sāriputto mahāpañño, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:75.2":{"pli":"samādhijjhānakovido; ","html":"<span class='verse-line'>{}</span>"},"bv1:75.3":{"pli":"Paññāya pāramippatto, ","html":"<span class='verse-line'>{}</span>"},"bv1:75.4":{"pli":"pucchati lokanāyakaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:76.1":{"pli":"“Kīdiso te mahāvīra, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:76.2":{"pli":"abhinīhāro naruttama; ","html":"<span class='verse-line'>{}</span>"},"bv1:76.3":{"pli":"Kamhi kāle tayā dhīra, ","html":"<span class='verse-line'>{}</span>"},"bv1:76.4":{"pli":"patthitā bodhimuttamā. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:77.1":{"pli":"Dānaṃ sīlañca nekkhammaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:77.2":{"pli":"paññāvīriyañca kīdisaṃ; ","html":"<span class='verse-line'>{}</span>"},"bv1:77.3":{"pli":"Khantisaccamadhiṭṭhānaṃ, ","html":"<span class='verse-line'>{}</span>"},"bv1:77.4":{"pli":"mettupekkhā ca kīdisā. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:78.1":{"pli":"Dasa pāramī tayā dhīra, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:78.2":{"pli":"kīdisī lokanāyaka; ","html":"<span class='verse-line'>{}</span>"},"bv1:78.3":{"pli":"Kathaṃ upapāramī puṇṇā, ","html":"<span class='verse-line'>{}</span>"},"bv1:78.4":{"pli":"paramatthapāramī kathaṃ”. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:79.1":{"pli":"Tassa puṭṭho viyākāsi, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:79.2":{"pli":"karavīkamadhuragiro; ","html":"<span class='verse-line'>{}</span>"},"bv1:79.3":{"pli":"Nibbāpayanto hadayaṃ, ","html":"<span class='verse-line'>{}</span>"},"bv1:79.4":{"pli":"hāsayanto sadevakaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:80.1":{"pli":"Atītabuddhānaṃ jinānaṃ desitaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:80.2":{"pli":"Nikīlitaṃ buddhaparamparāgataṃ; ","html":"<span class='verse-line'>{}</span>"},"bv1:80.3":{"pli":"Pubbenivāsānugatāya buddhiyā, ","html":"<span class='verse-line'>{}</span>"},"bv1:80.4":{"pli":"Pakāsayī lokahitaṃ sadevake. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:81.1":{"pli":"“Pītipāmojjajananaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:81.2":{"pli":"sokasallavinodanaṃ; ","html":"<span class='verse-line'>{}</span>"},"bv1:81.3":{"pli":"Sabbasampattipaṭilābhaṃ, ","html":"<span class='verse-line'>{}</span>"},"bv1:81.4":{"pli":"cittīkatvā suṇātha me. ","html":"<span class='verse-line'>{}</span></p>"},"bv1:82.1":{"pli":"Madanimmadanaṃ sokanudaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"bv1:82.2":{"pli":"Saṃsāraparimocanaṃ; ","html":"<span class='verse-line'>{}</span>"},"bv1:82.3":{"pli":"Sabbadukkhakkhayaṃ maggaṃ, ","html":"<span class='verse-line'>{}</span>"},"bv1:82.4":{"pli":"Sakkaccaṃ paṭipajjathā”ti. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"bv1:83.1":{"pli":"Ratanacaṅkamanakaṇḍo niṭṭhito. ","html":"<p class='endsutta'>{}</p></article>"}},"bv10":{"bv10:0.1":{"pli":"Buddhavaṃsa ","html":"<article id='bv10'><header><ul><li class='division'>{}</li></ul>"},"bv10:0.2":{"pli":"10. Padumabuddhavaṃsa ","html":"<h1 class='sutta-title'>{}</h1></header>"},"bv10:1.1":{"pli":"“Anomadassissa aparena, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"bv10:1.2":{"pli":"Sambuddho dvipaduttamo; ","html":"<span class='verse-line'>{}</span>"},"bv10:1.3":{"pli":"Padumo nāma nāmena, ","html":"<span class='verse-line'>{}</span>"},"bv10:1.4":{"pli":"Asamo appaṭipuggalo. ","html":"<span class='verse-line'>{}</span></p>"},"bv10:2.1":{"pli":"Tassāpi asamaṃ sīlaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"bv10:2.2":{"pli":"samādhipi anantako; ","html":"<span class='verse-line'>{}</span>"},"bv10:2.3":{"pli":"Asaṅkheyyaṃ ñāṇavaraṃ, ","html":"<span class='verse-line'>{}</span>"},"bv10:2.4":{"pli":"vimuttipi anūpamā. ","html":"<span class='verse-line'>{}</span></p>"},"bv10:3.1":{"pli":"Tassāpi atulatejassa, ","html":"<p><span class='verse-line'>{}</span>"},"bv10:3.2":{"pli":"dhammacakkappavattane; ","html":"<span class='verse-line'>{}</span>"},"bv10:3.3":{"pli":"Abhisamayā tayo āsuṃ, ","html":"<span class='verse-line'>{}</span>"},"bv10:3.4":{"pli":"mahātamapavāhanā. ","html":"<span class='verse-line'>{}</span></p>"},"bv10:4.1":{"pli":"Paṭhamābhisamaye buddho, ","html":"<p><span class='verse-line'>{}</span>"},"bv10:4.2":{"pli":"koṭisatamabodhayi; ","html":"<span class='verse-line'>{}</span>"},"bv10:4.3":{"pli":"Dutiyābhisamaye dhīro, ","html":"<span class='verse-line'>{}</span>"},"bv10:4.4":{"pli":"navutikoṭimabodhayi. ","html":"<span class='verse-line'>{}</span></p>"},"bv10:5.1":{"pli":"Yadā ca padumo buddho, ","html":"<p><span class='verse-line'>{}</span>"},"bv10:5.2":{"pli":"ovadī sakamatrajaṃ; ","html":"<span class='verse-line'>{}</span>"},"bv10:5.3":{"pli":"Tadā asītikoṭīnaṃ, ","html":"<span class='verse-line'>{}</span>"},"bv10:5.4":{"pli":"tatiyābhisamayo ahu. ","html":"<span class='verse-line'>{}</span></p>"},"bv10:6.1":{"pli":"Sannipātā tayo āsuṃ, ","html":"<p><span class='verse-line'>{}</span>"},"bv10:6.2":{"pli":"padumassa mahesino; ","html":"<span class='verse-line'>{}</span>"},"bv10:6.3":{"pli":"Koṭisatasahassānaṃ, ","html":"<span class='verse-line'>{}</span>"},"bv10:6.4":{"pli":"paṭhamo āsi samāgamo. ","html":"<span class='verse-line'>{}</span></p>"},"bv10:7.1":{"pli":"Kathinatthārasamaye, ","html":"<p><span class='verse-line'>{}</span>"},"bv10:7.2":{"pli":"uppanne kathinacīvare; ","html":"<span class='verse-line'>{}</span>"},"bv10:7.3":{"pli":"Dhammasenāpatitthāya, ","html":"<span class='verse-line'>{}</span>"},"bv10:7.4":{"pli":"bhikkhū sibbiṃsu cīvaraṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv10:8.1":{"pli":"Tadā te vimalā bhikkhū, ","html":"<p><span class='verse-line'>{}</span>"},"bv10:8.2":{"pli":"chaḷabhiññā mahiddhikā; ","html":"<span class='verse-line'>{}</span>"},"bv10:8.3":{"pli":"Tīṇi satasahassāni, ","html":"<span class='verse-line'>{}</span>"},"bv10:8.4":{"pli":"samiṃsu aparājitā. ","html":"<span class='verse-line'>{}</span></p>"},"bv10:9.1":{"pli":"Punāparaṃ so narāsabho, ","html":"<p><span class='verse-line'>{}</span>"},"bv10:9.2":{"pli":"pavane vāsaṃ upāgami; ","html":"<span class='verse-line'>{}</span>"},"bv10:9.3":{"pli":"Tadā samāgamo āsi, ","html":"<span class='verse-line'>{}</span>"},"bv10:9.4":{"pli":"dvinnaṃ satasahassinaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv10:10.1":{"pli":"Ahaṃ tena samayena, ","html":"<p><span class='verse-line'>{}</span>"},"bv10:10.2":{"pli":"sīho āsiṃ migādhibhū; ","html":"<span class='verse-line'>{}</span>"},"bv10:10.3":{"pli":"Vivekamanubrūhantaṃ, ","html":"<span class='verse-line'>{}</span>"},"bv10:10.4":{"pli":"pavane addasaṃ jinaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv10:11.1":{"pli":"Vanditvā sirasā pāde, ","html":"<p><span class='verse-line'>{}</span>"},"bv10:11.2":{"pli":"katvāna taṃ padakkhiṇaṃ; ","html":"<span class='verse-line'>{}</span>"},"bv10:11.3":{"pli":"Tikkhattuṃ abhināditvā, ","html":"<span class='verse-line'>{}</span>"},"bv10:11.4":{"pli":"sattāhaṃ jinamupaṭṭhahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv10:12.1":{"pli":"Sattāhaṃ varasamāpattiyā, ","html":"<p><span class='verse-line'>{}</span>"},"bv10:12.2":{"pli":"Vuṭṭhahitvā tathāgato; ","html":"<span class='verse-line'>{}</span>"},"bv10:12.3":{"pli":"Manasā cintayitvāna, ","html":"<span class='verse-line'>{}</span>"},"bv10:12.4":{"pli":"Koṭibhikkhū samānayi. ","html":"<span class='verse-line'>{}</span></p>"},"bv10:13.1":{"pli":"Tadāpi so mahāvīro, ","html":"<p><span class='verse-line'>{}</span>"},"bv10:13.2":{"pli":"tesaṃ majjhe viyākari; ","html":"<span class='verse-line'>{}</span>"},"bv10:13.3":{"pli":"‘Aparimeyyito kappe, ","html":"<span class='verse-line'>{}</span>"},"bv10:13.4":{"pli":"ayaṃ buddho bhavissati. ","html":"<span class='verse-line'>{}</span></p>"},"bv10:14.1":{"pli":"Padhānaṃ padahitvāna, ","html":"<p><span class='verse-line'>{}</span>"},"bv10:14.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"bv10:14.3":{"pli":"hessāma sammukhā imaṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"bv10:15.1":{"pli":"Tassāpi vacanaṃ sutvā, ","html":"<p><span class='verse-line'>{}</span>"},"bv10:15.2":{"pli":"bhiyyo cittaṃ pasādayiṃ; ","html":"<span class='verse-line'>{}</span>"},"bv10:15.3":{"pli":"Uttariṃ vatamadhiṭṭhāsiṃ, ","html":"<span class='verse-line'>{}</span>"},"bv10:15.4":{"pli":"dasapāramipūriyā. ","html":"<span class='verse-line'>{}</span></p>"},"bv10:16.1":{"pli":"Campakaṃ nāma nagaraṃ, ","html":"<p><span class='verse-line'>{}</span>"},"bv10:16.2":{"pli":"asamo nāma khattiyo; ","html":"<span class='verse-line'>{}</span>"},"bv10:16.3":{"pli":"Asamā nāma janikā, ","html":"<span class='verse-line'>{}</span>"},"bv10:16.4":{"pli":"padumassa mahesino. ","html":"<span class='verse-line'>{}</span></p>"},"bv10:17.1":{"pli":"Dasavassasahassāni, ","html":"<p><span class='verse-line'>{}</span>"},"bv10:17.2":{"pli":"agāraṃ ajjha so vasi; ","html":"<span class='verse-line'>{}</span>"},"bv10:17.3":{"pli":"Nandā-vasu-yasuttarā, ","html":"<span class='verse-line'>{}</span>"},"bv10:17.4":{"pli":"tayo pāsādamuttamā. ","html":"<span class='verse-line'>{}</span></p>"},"bv10:18.1":{"pli":"Tettiṃsa ca sahassāni, ","html":"<p><span class='verse-line'>{}</span>"},"bv10:18.2":{"pli":"nāriyo samalaṅkatā; ","html":"<span class='verse-line'>{}</span>"},"bv10:18.3":{"pli":"Uttarā nāma sā nārī, ","html":"<span class='verse-line'>{}</span>"},"bv10:18.4":{"pli":"rammo nāmāsi atrajo. ","html":"<span class='verse-line'>{}</span></p>"},"bv10:19.1":{"pli":"Nimitte caturo disvā, ","html":"<p><span class='verse-line'>{}</span>"},"bv10:19.2":{"pli":"rathayānena nikkhami; ","html":"<span class='verse-line'>{}</span>"},"bv10:19.3":{"pli":"Anūnaaṭṭhamāsāni, ","html":"<span class='verse-line'>{}</span>"},"bv10:19.4":{"pli":"padhānaṃ padahī jino. ","html":"<span class='verse-line'>{}</span></p>"},"bv10:20.1":{"pli":"Brahmunā yācito santo, ","html":"<p><span class='verse-line'>{}</span>"},"bv10:20.2":{"pli":"padumo lokanāyako; ","html":"<span class='verse-line'>{}</span>"},"bv10:20.3":{"pli":"Vatti cakkaṃ mahāvīro, ","html":"<span class='verse-line'>{}</span>"},"bv10:20.4":{"pli":"dhanañcuyyānamuttame. ","html":"<span class='verse-line'>{}</span></p>"},"bv10:21.1":{"pli":"Sālo ca upasālo ca, ","html":"<p><span class='verse-line'>{}</span>"},"bv10:21.2":{"pli":"ahesuṃ aggasāvakā; ","html":"<span class='verse-line'>{}</span>"},"bv10:21.3":{"pli":"Varuṇo nāmupaṭṭhāko, ","html":"<span class='verse-line'>{}</span>"},"bv10:21.4":{"pli":"padumassa mahesino. ","html":"<span class='verse-line'>{}</span></p>"},"bv10:22.1":{"pli":"Rādhā ceva surādhā ca, ","html":"<p><span class='verse-line'>{}</span>"},"bv10:22.2":{"pli":"ahesuṃ aggasāvikā; ","html":"<span class='verse-line'>{}</span>"},"bv10:22.3":{"pli":"Bodhi tassa bhagavato, ","html":"<span class='verse-line'>{}</span>"},"bv10:22.4":{"pli":"mahāsoṇoti vuccati. ","html":"<span class='verse-line'>{}</span></p>"},"bv10:23.1":{"pli":"Bhiyyo ceva asamo ca, ","html":"<p><span class='verse-line'>{}</span>"},"bv10:23.2":{"pli":"ahesuṃ aggupaṭṭhakā; ","html":"<span class='verse-line'>{}</span>"},"bv10:23.3":{"pli":"Rucī ca nandarāmā ca, ","html":"<span class='verse-line'>{}</span>"},"bv10:23.4":{"pli":"ahesuṃ aggupaṭṭhikā. ","html":"<span class='verse-line'>{}</span></p>"},"bv10:24.1":{"pli":"Aṭṭhapaṇṇāsaratanaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"bv10:24.2":{"pli":"accuggato mahāmuni; ","html":"<span class='verse-line'>{}</span>"},"bv10:24.3":{"pli":"Pabhā niddhāvatī tassa, ","html":"<span class='verse-line'>{}</span>"},"bv10:24.4":{"pli":"asamā sabbaso disā. ","html":"<span class='verse-line'>{}</span></p>"},"bv10:25.1":{"pli":"Candappabhā sūriyappabhā, ","html":"<p><span class='verse-line'>{}</span>"},"bv10:25.2":{"pli":"ratanaggimaṇippabhā; ","html":"<span class='verse-line'>{}</span>"},"bv10:25.3":{"pli":"Sabbāpi tā hatā honti, ","html":"<span class='verse-line'>{}</span>"},"bv10:25.4":{"pli":"patvā jinapabhuttamaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv10:26.1":{"pli":"Vassasatasahassāni, ","html":"<p><span class='verse-line'>{}</span>"},"bv10:26.2":{"pli":"āyu vijjati tāvade; ","html":"<span class='verse-line'>{}</span>"},"bv10:26.3":{"pli":"Tāvatā tiṭṭhamāno so, ","html":"<span class='verse-line'>{}</span>"},"bv10:26.4":{"pli":"tāresi janataṃ bahuṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv10:27.1":{"pli":"Paripakkamānase satte, ","html":"<p><span class='verse-line'>{}</span>"},"bv10:27.2":{"pli":"bodhayitvā asesato; ","html":"<span class='verse-line'>{}</span>"},"bv10:27.3":{"pli":"Sesake anusāsitvā, ","html":"<span class='verse-line'>{}</span>"},"bv10:27.4":{"pli":"nibbuto so sasāvako. ","html":"<span class='verse-line'>{}</span></p>"},"bv10:28.1":{"pli":"Uragova tacaṃ jiṇṇaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"bv10:28.2":{"pli":"vaddhapattaṃva pādapo; ","html":"<span class='verse-line'>{}</span>"},"bv10:28.3":{"pli":"Jahitvā sabbasaṅkhāre, ","html":"<span class='verse-line'>{}</span>"},"bv10:28.4":{"pli":"nibbuto so yathā sikhī. ","html":"<span class='verse-line'>{}</span></p>"},"bv10:29.1":{"pli":"Padumo jinavaro satthā, ","html":"<p data-counter='5201'><span class='verse-line'>{}</span>"},"bv10:29.2":{"pli":"Dhammārāmamhi nibbuto; ","html":"<span class='verse-line'>{}</span>"},"bv10:29.3":{"pli":"Dhātuvitthārikaṃ āsi, ","html":"<span class='verse-line'>{}</span>"},"bv10:29.4":{"pli":"Tesu tesu padesato”ti. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"bv10:30.1":{"pli":"Padumassa bhagavato vaṃso aṭṭhamo. ","html":"<p class='endsutta'>{}</p></article>"}}}