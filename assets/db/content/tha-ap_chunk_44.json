{"tha-ap489":{"tha-ap489:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap489'><header><ul><li class='division'>{}</li>"},"tha-ap489:0.2":{"pli":"Paṃsukūlavagga ","html":"<li>{}</li></ul>"},"tha-ap489:0.3":{"pli":"7 Pulinuppādakattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap489:1.1":{"pli":"“Pabbate himavantamhi, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap489:1.2":{"pli":"devalo nāma tāpaso; ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:1.3":{"pli":"Tattha me caṅkamo āsi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:1.4":{"pli":"amanussehi māpito. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap489:2.1":{"pli":"Jaṭābhārena bharito, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap489:2.2":{"pli":"kamaṇḍaludharo sadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:2.3":{"pli":"Uttamatthaṃ gavesanto, ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:2.4":{"pli":"vipinā nikkhamiṃ tadā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap489:3.1":{"pli":"Cullāsītisahassāni, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap489:3.2":{"pli":"sissā mayhaṃ upaṭṭhahuṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:3.3":{"pli":"Sakakammābhipasutā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:3.4":{"pli":"vasanti vipine tadā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap489:4.1":{"pli":"Assamā abhinikkhamma, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap489:4.2":{"pli":"akaṃ pulinacetiyaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:4.3":{"pli":"Nānāpupphaṃ samānetvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:4.4":{"pli":"taṃ cetiyamapūjayiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap489:5.1":{"pli":"Tattha cittaṃ pasādetvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap489:5.2":{"pli":"assamaṃ pavisāmahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:5.3":{"pli":"Sabbe sissā samāgantvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:5.4":{"pli":"etamatthaṃ pucchiṃsu maṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap489:6.1":{"pli":"‘Pulinena kato thūpo, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap489:6.2":{"pli":"yaṃ tvaṃ deva namassasi; ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:6.3":{"pli":"Mayampi ñātumicchāma, ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:6.4":{"pli":"puṭṭho ācikkha no tuvaṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap489:7.1":{"pli":"‘Niddiṭṭhā nu mantapade, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap489:7.2":{"pli":"cakkhumanto mahāyasā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:7.3":{"pli":"Te kho ahaṃ namassāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:7.4":{"pli":"buddhaseṭṭhe mahāyase. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap489:8.1":{"pli":"Kīdisā te mahāvīrā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap489:8.2":{"pli":"sabbaññū lokanāyakā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:8.3":{"pli":"Kathaṃvaṇṇā kathaṃsīlā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:8.4":{"pli":"kīdisā te mahāyasā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap489:9.1":{"pli":"Bāttiṃsalakkhaṇā buddhā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap489:9.2":{"pli":"cattālīsadijāpi ca; ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:9.3":{"pli":"Nettā gopakhumā tesaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:9.4":{"pli":"jiñjukā phalasannibhā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap489:10.1":{"pli":"Gacchamānā ca te buddhā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap489:10.2":{"pli":"yugamattañca pekkhare; ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:10.3":{"pli":"Na tesaṃ jāṇu nadati, ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:10.4":{"pli":"sandhisaddo na suyyati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap489:11.1":{"pli":"Gacchamānā ca sugatā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap489:11.2":{"pli":"uddharantāva gacchare; ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:11.3":{"pli":"Paṭhamaṃ dakkhiṇaṃ pādaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:11.4":{"pli":"buddhānaṃ esa dhammatā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap489:12.1":{"pli":"Asambhītā ca te buddhā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap489:12.2":{"pli":"migarājāva kesarī; ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:12.3":{"pli":"Nevukkaṃsenti attānaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:12.4":{"pli":"no ca vambhenti pāṇinaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap489:13.1":{"pli":"Mānāvamānato muttā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap489:13.2":{"pli":"samā sabbesu pāṇisu; ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:13.3":{"pli":"Anattukkaṃsakā buddhā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:13.4":{"pli":"buddhānaṃ esa dhammatā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap489:14.1":{"pli":"Uppajjantā ca sambuddhā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap489:14.2":{"pli":"ālokaṃ dassayanti te; ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:14.3":{"pli":"Chappakāraṃ pakampenti, ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:14.4":{"pli":"kevalaṃ vasudhaṃ imaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap489:15.1":{"pli":"Passanti nirayañcete, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap489:15.2":{"pli":"nibbāti nirayo tadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:15.3":{"pli":"Pavassati mahāmegho, ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:15.4":{"pli":"buddhānaṃ esa dhammatā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap489:16.1":{"pli":"Īdisā te mahānāgā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap489:16.2":{"pli":"atulā ca mahāyasā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:16.3":{"pli":"Vaṇṇato anatikkantā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:16.4":{"pli":"appameyyā tathāgatā’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap489:17.1":{"pli":"Anumodiṃsu me vākyaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap489:17.2":{"pli":"sabbe sissā sagāravā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:17.3":{"pli":"Tathā ca paṭipajjiṃsu, ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:17.4":{"pli":"yathāsatti yathābalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap489:18.1":{"pli":"Paṭipūjenti pulinaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap489:18.2":{"pli":"sakakammābhilāsino; ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:18.3":{"pli":"Saddahantā mama vākyaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:18.4":{"pli":"buddhasakkatamānasā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap489:19.1":{"pli":"Tadā cavitvā tusitā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap489:19.2":{"pli":"devaputto mahāyaso; ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:19.3":{"pli":"Uppajji mātukucchimhi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:19.4":{"pli":"dasasahassi kampatha. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap489:20.1":{"pli":"Assamassāvidūramhi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap489:20.2":{"pli":"caṅkamamhi ṭhito ahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:20.3":{"pli":"Sabbe sissā samāgantvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:20.4":{"pli":"āgacchuṃ mama santike. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap489:21.1":{"pli":"‘Usabhova mahī nadati, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap489:21.2":{"pli":"migarājāva kūjati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:21.3":{"pli":"Susumārova saḷati, ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:21.4":{"pli":"kiṃ vipāko bhavissati’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap489:22.1":{"pli":"‘Yaṃ pakittemi sambuddhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap489:22.2":{"pli":"sikatāthūpasantike; ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:22.3":{"pli":"So dāni bhagavā satthā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:22.4":{"pli":"mātukucchimupāgami’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap489:23.1":{"pli":"Tesaṃ dhammakathaṃ vatvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap489:23.2":{"pli":"kittayitvā mahāmuniṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:23.3":{"pli":"Uyyojetvā sake sisse, ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:23.4":{"pli":"pallaṅkamābhujiṃ ahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap489:24.1":{"pli":"Balañca vata me khīṇaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap489:24.2":{"pli":"byādhinā paramena taṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:24.3":{"pli":"Buddhaseṭṭhaṃ saritvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:24.4":{"pli":"tattha kālaṅkato ahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap489:25.1":{"pli":"Sabbe sissā samāgantvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap489:25.2":{"pli":"akaṃsu citakaṃ tadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:25.3":{"pli":"Kaḷevarañca me gayha, ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:25.4":{"pli":"citakaṃ abhiropayuṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap489:26.1":{"pli":"Citakaṃ parivāretvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap489:26.2":{"pli":"sīse katvāna añjaliṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:26.3":{"pli":"Sokasallaparetā te, ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:26.4":{"pli":"vikkandiṃsu samāgatā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap489:27.1":{"pli":"Tesaṃ lālappamānānaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap489:27.2":{"pli":"agamaṃ citakaṃ tadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:27.3":{"pli":"‘Ahaṃ ācariyo tumhaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:27.4":{"pli":"mā socittha sumedhasā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap489:28.1":{"pli":"Sadatthe vāyameyyātha, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap489:28.2":{"pli":"rattindivamatanditā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:28.3":{"pli":"Mā vo pamattā ahuttha, ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:28.4":{"pli":"khaṇo vo paṭipādito’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap489:29.1":{"pli":"Sake sissenusāsitvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap489:29.2":{"pli":"devalokaṃ punāgamiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:29.3":{"pli":"Aṭṭhārasa ca kappāni, ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:29.4":{"pli":"devaloke ramāmahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap489:30.1":{"pli":"Satānaṃ pañcakkhattuñca, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap489:30.2":{"pli":"cakkavattī ahosahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:30.3":{"pli":"Anekasatakkhattuñca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:30.4":{"pli":"devarajjamakārayiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap489:31.1":{"pli":"Avasesesu kappesu, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap489:31.2":{"pli":"vokiṇṇo saṃsariṃ ahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:31.3":{"pli":"Duggatiṃ nābhijānāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:31.4":{"pli":"uppādassa idaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap489:32.1":{"pli":"Yathā komudike māse, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap489:32.2":{"pli":"bahū pupphanti pādapā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:32.3":{"pli":"Tathevāhampi samaye, ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:32.4":{"pli":"pupphitomhi mahesinā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap489:33.1":{"pli":"Vīriyaṃ me dhuradhorayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap489:33.2":{"pli":"yogakkhemādhivāhanaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:33.3":{"pli":"Nāgova bandhanaṃ chetvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:33.4":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap489:34.1":{"pli":"Satasahassito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap489:34.2":{"pli":"yaṃ buddhamabhikittayiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:34.3":{"pli":"Duggatiṃ nābhijānāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:34.4":{"pli":"kittanāya idaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap489:35.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap489:35.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:35.3":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap489:36.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap489:36.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:36.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap489:37.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap489:37.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap489:37.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap489:38.1":{"pli":"Itthaṃ sudaṃ āyasmā pulinuppādako thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap489:39.1":{"pli":"Pulinuppādakattherassāpadānaṃ sattamaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"tha-ap49":{"tha-ap49:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap49'><header><ul><li class='division'>{}</li>"},"tha-ap49:0.2":{"pli":"Upālivagga ","html":"<li>{}</li></ul>"},"tha-ap49:0.3":{"pli":"Sayanadāyakattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap49:1.1":{"pli":"“Siddhatthassa bhagavato, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap49:1.2":{"pli":"mettacittassa tādino; ","html":"<span class='verse-line'>{}</span>"},"tha-ap49:1.3":{"pli":"Sayanaggaṃ mayā dinnaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap49:1.4":{"pli":"dussabhaṇḍehi atthataṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap49:2.1":{"pli":"Paṭiggahesi bhagavā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap49:2.2":{"pli":"kappiyaṃ sayanāsanaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap49:2.3":{"pli":"Uṭṭhāya sayanā tamhā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap49:2.4":{"pli":"vehāsaṃ uggamī jino. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap49:3.1":{"pli":"Catunnavutito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap49:3.2":{"pli":"yaṃ sayanamadāsahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap49:3.3":{"pli":"Duggatiṃ nābhijānāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap49:3.4":{"pli":"sayanassa idaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap49:4.1":{"pli":"Ekapaññāsito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap49:4.2":{"pli":"varako devasavhayo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap49:4.3":{"pli":"Sattaratanasampanno, ","html":"<span class='verse-line'>{}</span>"},"tha-ap49:4.4":{"pli":"cakkavattī mahabbalo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap49:5.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap49:5.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap49:5.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap49:6.1":{"pli":"Itthaṃ sudaṃ āyasmā sayanadāyako thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap49:7.1":{"pli":"Sayanadāyakattherassāpadānaṃ sattamaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"tha-ap490":{"tha-ap490:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap490'><header><ul><li class='division'>{}</li>"},"tha-ap490:0.2":{"pli":"Paṃsukūlavagga ","html":"<li>{}</li></ul>"},"tha-ap490:0.3":{"pli":"Taraṇiyattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap490:1.1":{"pli":"“Atthadassī tu bhagavā, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap490:1.2":{"pli":"sayambhū lokanāyako; ","html":"<span class='verse-line'>{}</span>"},"tha-ap490:1.3":{"pli":"Vinatā nadiyā tīraṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap490:1.4":{"pli":"upāgacchi tathāgato. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap490:2.1":{"pli":"Udakā abhinikkhamma, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap490:2.2":{"pli":"kacchapo vārigocaro; ","html":"<span class='verse-line'>{}</span>"},"tha-ap490:2.3":{"pli":"Buddhaṃ tāretukāmohaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap490:2.4":{"pli":"upesiṃ lokanāyakaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap490:3.1":{"pli":"‘Abhirūhatu maṃ buddho, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap490:3.2":{"pli":"atthadassī mahāmuni; ","html":"<span class='verse-line'>{}</span>"},"tha-ap490:3.3":{"pli":"Ahaṃ taṃ tārayissāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap490:3.4":{"pli":"dukkhassantakaro tuvaṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap490:4.1":{"pli":"Mama saṅkappamaññāya, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap490:4.2":{"pli":"atthadassī mahāyaso; ","html":"<span class='verse-line'>{}</span>"},"tha-ap490:4.3":{"pli":"Abhirūhitvā me piṭṭhiṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap490:4.4":{"pli":"aṭṭhāsi lokanāyako. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap490:5.1":{"pli":"Yato sarāmi attānaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap490:5.2":{"pli":"yato pattosmi viññutaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap490:5.3":{"pli":"Sukhaṃ me tādisaṃ natthi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap490:5.4":{"pli":"phuṭṭhe pādatale yathā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap490:6.1":{"pli":"Uttaritvāna sambuddho, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap490:6.2":{"pli":"atthadassī mahāyaso; ","html":"<span class='verse-line'>{}</span>"},"tha-ap490:6.3":{"pli":"Naditīramhi ṭhatvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap490:6.4":{"pli":"imā gāthā abhāsatha. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap490:7.1":{"pli":"‘Yāvatā vattate cittaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap490:7.2":{"pli":"gaṅgāsotaṃ tarāmahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap490:7.3":{"pli":"Ayañca kacchapo rājā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap490:7.4":{"pli":"tāresi mama paññavā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap490:8.1":{"pli":"Iminā buddhataraṇena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap490:8.2":{"pli":"mettacittavatāya ca; ","html":"<span class='verse-line'>{}</span>"},"tha-ap490:8.3":{"pli":"Aṭṭhārase kappasate, ","html":"<span class='verse-line'>{}</span>"},"tha-ap490:8.4":{"pli":"devaloke ramissati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap490:9.1":{"pli":"Devalokā idhāgantvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap490:9.2":{"pli":"sukkamūlena codito; ","html":"<span class='verse-line'>{}</span>"},"tha-ap490:9.3":{"pli":"Ekāsane nisīditvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap490:9.4":{"pli":"kaṅkhāsotaṃ tarissati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap490:10.1":{"pli":"Yathāpi bhaddake khette, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap490:10.2":{"pli":"bījaṃ appampi ropitaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap490:10.3":{"pli":"Sammādhāre pavecchante, ","html":"<span class='verse-line'>{}</span>"},"tha-ap490:10.4":{"pli":"phalaṃ toseti kassakaṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap490:11.1":{"pli":"Tathevidaṃ buddhakhettaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap490:11.2":{"pli":"sammāsambuddhadesitaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap490:11.3":{"pli":"Sammādhāre pavecchante, ","html":"<span class='verse-line'>{}</span>"},"tha-ap490:11.4":{"pli":"phalaṃ maṃ tosayissati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap490:12.1":{"pli":"Padhānapahitattomhi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap490:12.2":{"pli":"upasanto nirūpadhi; ","html":"<span class='verse-line'>{}</span>"},"tha-ap490:12.3":{"pli":"Sabbāsave pariññāya, ","html":"<span class='verse-line'>{}</span>"},"tha-ap490:12.4":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap490:13.1":{"pli":"Aṭṭhārase kappasate, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap490:13.2":{"pli":"yaṃ kammamakariṃ tadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap490:13.3":{"pli":"Duggatiṃ nābhijānāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap490:13.4":{"pli":"taraṇāya idaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap490:14.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap490:14.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap490:14.3":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap490:15.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap490:15.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap490:15.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap490:16.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap490:16.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap490:16.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap490:17.1":{"pli":"Itthaṃ sudaṃ āyasmā taraṇiyo thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap490:18.1":{"pli":"Taraṇiyattherassāpadānaṃ aṭṭhamaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"tha-ap491":{"tha-ap491:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap491'><header><ul><li class='division'>{}</li>"},"tha-ap491:0.2":{"pli":"Paṃsukūlavagga ","html":"<li>{}</li></ul>"},"tha-ap491:0.3":{"pli":"9 Dhammaruciyattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap491:1.1":{"pli":"“Yadā dīpaṅkaro buddho, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap491:1.2":{"pli":"sumedhaṃ byākarī jino; ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:1.3":{"pli":"‘Aparimeyye ito kappe, ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:1.4":{"pli":"ayaṃ buddho bhavissati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap491:2.1":{"pli":"Imassa janikā mātā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap491:2.2":{"pli":"māyā nāma bhavissati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:2.3":{"pli":"Pitā suddhodano nāma, ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:2.4":{"pli":"ayaṃ hessati gotamo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap491:3.1":{"pli":"Padhānaṃ padahitvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap491:3.2":{"pli":"katvā dukkarakārikaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:3.3":{"pli":"Assatthamūle sambuddho, ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:3.4":{"pli":"bujjhissati mahāyaso. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap491:4.1":{"pli":"Upatisso kolito ca, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap491:4.2":{"pli":"aggā hessanti sāvakā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:4.3":{"pli":"Ānando nāma nāmena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:4.4":{"pli":"upaṭṭhissatimaṃ jinaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap491:5.1":{"pli":"Khemā uppalavaṇṇā ca, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap491:5.2":{"pli":"aggā hessanti sāvikā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:5.3":{"pli":"Citto āḷavako ceva, ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:5.4":{"pli":"aggā hessantupāsakā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap491:6.1":{"pli":"Khujjuttarā nandamātā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap491:6.2":{"pli":"aggā hessantupāsikā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:6.3":{"pli":"Bodhi imassa vīrassa, ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:6.4":{"pli":"assatthoti pavuccati’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap491:7.1":{"pli":"Idaṃ sutvāna vacanaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap491:7.2":{"pli":"asamassa mahesino; ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:7.3":{"pli":"Āmoditā naramarū, ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:7.4":{"pli":"namassanti katañjalī. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap491:8.1":{"pli":"Tadāhaṃ māṇavo āsiṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap491:8.2":{"pli":"megho nāma susikkhito; ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:8.3":{"pli":"Sutvā byākaraṇaṃ seṭṭhaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:8.4":{"pli":"sumedhassa mahāmune. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap491:9.1":{"pli":"Saṃvisaṭṭho bhavitvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap491:9.2":{"pli":"sumedhe karuṇāsaye; ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:9.3":{"pli":"Pabbajantañca taṃ vīraṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:9.4":{"pli":"sahāva anupabbajiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap491:10.1":{"pli":"Saṃvuto pātimokkhasmiṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap491:10.2":{"pli":"indriyesu ca pañcasu; ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:10.3":{"pli":"Suddhājīvo sato vīro, ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:10.4":{"pli":"jinasāsanakārako. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap491:11.1":{"pli":"Evaṃ viharamānohaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap491:11.2":{"pli":"pāpamittena kenaci; ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:11.3":{"pli":"Niyojito anācāre, ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:11.4":{"pli":"sumaggā paridhaṃsito. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap491:12.1":{"pli":"Vitakkavasiko hutvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap491:12.2":{"pli":"sāsanato apakkamiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:12.3":{"pli":"Pacchā tena kumittena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:12.4":{"pli":"payutto mātughātanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap491:13.1":{"pli":"Akariṃ ānantariyaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap491:13.2":{"pli":"ghātayiṃ duṭṭhamānaso; ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:13.3":{"pli":"Tato cuto mahāvīciṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:13.4":{"pli":"upapanno sudāruṇaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap491:14.1":{"pli":"Vinipātagato santo, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap491:14.2":{"pli":"saṃsariṃ dukkhito ciraṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:14.3":{"pli":"Na puno addasaṃ vīraṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:14.4":{"pli":"sumedhaṃ narapuṅgavaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap491:15.1":{"pli":"Asmiṃ kappe samuddamhi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap491:15.2":{"pli":"maccho āsiṃ timiṅgalo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:15.3":{"pli":"Disvāhaṃ sāgare nāvaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:15.4":{"pli":"gocaratthamupāgamiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap491:16.1":{"pli":"Disvā maṃ vāṇijā bhītā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap491:16.2":{"pli":"buddhaseṭṭhamanussaruṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:16.3":{"pli":"Gotamoti mahāghosaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:16.4":{"pli":"sutvā tehi udīritaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap491:17.1":{"pli":"Pubbasaññaṃ saritvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap491:17.2":{"pli":"tato kālaṅkato ahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:17.3":{"pli":"Sāvatthiyaṃ kule iddhe, ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:17.4":{"pli":"jāto brāhmaṇajātiyaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap491:18.1":{"pli":"Āsiṃ dhammaruci nāma, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap491:18.2":{"pli":"sabbapāpajigucchako; ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:18.3":{"pli":"Disvāhaṃ lokapajjotaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:18.4":{"pli":"jātiyā sattavassiko. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap491:19.1":{"pli":"Mahājetavanaṃ gantvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap491:19.2":{"pli":"pabbajiṃ anagāriyaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:19.3":{"pli":"Upemi buddhaṃ tikkhattuṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:19.4":{"pli":"rattiyā divasassa ca. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap491:20.1":{"pli":"Tadā disvā muni āha, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap491:20.2":{"pli":"ciraṃ dhammarucīti maṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:20.3":{"pli":"Tatohaṃ avacaṃ buddhaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:20.4":{"pli":"pubbakammapabhāvitaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap491:21.1":{"pli":"Suciraṃ satapuññalakkhaṇaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap491:21.2":{"pli":"Patipubbena visuddhapaccayaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:21.3":{"pli":"Ahamajjasupekkhanaṃ vata, ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:21.4":{"pli":"Tava passāmi nirupamaṃ viggahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap491:22.1":{"pli":"Suciraṃ vihatattamo mayā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap491:22.2":{"pli":"Sucirakkhena nadī visositā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:22.3":{"pli":"Suciraṃ amalaṃ visodhitaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:22.4":{"pli":"Nayanaṃ ñāṇamayaṃ mahāmune. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap491:23.1":{"pli":"Cirakālasamaṅgito tayā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap491:23.2":{"pli":"Avinaṭṭho punarantaraṃ ciraṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:23.3":{"pli":"Punarajjasamāgato tayā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:23.4":{"pli":"Na hi nassanti katāni gotama. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap491:24.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap491:24.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:24.3":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap491:25.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap491:25.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:25.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap491:26.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap491:26.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap491:26.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap491:27.1":{"pli":"Itthaṃ sudaṃ āyasmā dhammaruciyo thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap491:28.1":{"pli":"Dhammaruciyattherassāpadānaṃ navamaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"tha-ap492":{"tha-ap492:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap492'><header><ul><li class='division'>{}</li>"},"tha-ap492:0.2":{"pli":"Paṃsukūlavagga ","html":"<li>{}</li></ul>"},"tha-ap492:0.3":{"pli":"Sālamaṇḍapiyattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap492:1.1":{"pli":"“Ajjhogāhetvā sālavanaṃ, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap492:1.2":{"pli":"sukato assamo mama; ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:1.3":{"pli":"Sālapupphehi sañchanno, ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:1.4":{"pli":"vasāmi vipine tadā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap492:2.1":{"pli":"Piyadassī ca bhagavā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap492:2.2":{"pli":"sayambhū aggapuggalo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:2.3":{"pli":"Vivekakāmo sambuddho, ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:2.4":{"pli":"sālavanamupāgami. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap492:3.1":{"pli":"Assamā abhinikkhamma, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap492:3.2":{"pli":"pavanaṃ agamāsahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:3.3":{"pli":"Mūlaphalaṃ gavesanto, ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:3.4":{"pli":"āhiṇḍāmi vane tadā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap492:4.1":{"pli":"Tatthaddasāsiṃ sambuddhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap492:4.2":{"pli":"piyadassiṃ mahāyasaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:4.3":{"pli":"Sunisinnaṃ samāpannaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:4.4":{"pli":"virocantaṃ mahāvane. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap492:5.1":{"pli":"Catudaṇḍe ṭhapetvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap492:5.2":{"pli":"buddhassa uparī ahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:5.3":{"pli":"Maṇḍapaṃ sukataṃ katvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:5.4":{"pli":"sālapupphehi chādayiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap492:6.1":{"pli":"Sattāhaṃ dhārayitvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap492:6.2":{"pli":"maṇḍapaṃ sālachāditaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:6.3":{"pli":"Tattha cittaṃ pasādetvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:6.4":{"pli":"buddhaseṭṭhamavandahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap492:7.1":{"pli":"Bhagavā tamhi samaye, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap492:7.2":{"pli":"vuṭṭhahitvā samādhito; ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:7.3":{"pli":"Yugamattaṃ pekkhamāno, ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:7.4":{"pli":"nisīdi purisuttamo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap492:8.1":{"pli":"Sāvako varuṇo nāma, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap492:8.2":{"pli":"piyadassissa satthuno; ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:8.3":{"pli":"Vasīsatasahassehi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:8.4":{"pli":"upagacchi vināyakaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap492:9.1":{"pli":"Piyadassī ca bhagavā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap492:9.2":{"pli":"lokajeṭṭho narāsabho; ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:9.3":{"pli":"Bhikkhusaṅghe nisīditvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:9.4":{"pli":"sitaṃ pātukarī jino. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap492:10.1":{"pli":"Anuruddho upaṭṭhāko, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap492:10.2":{"pli":"piyadassissa satthuno; ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:10.3":{"pli":"Ekaṃsaṃ cīvaraṃ katvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:10.4":{"pli":"apucchittha mahāmuniṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap492:11.1":{"pli":"‘Ko nu kho bhagavā hetu, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap492:11.2":{"pli":"sitakammassa satthuno; ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:11.3":{"pli":"Kāraṇe vijjamānamhi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:11.4":{"pli":"satthā pātukare sitaṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap492:12.1":{"pli":"‘Sattāhaṃ sālacchadanaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap492:12.2":{"pli":"yo me dhāresi māṇavo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:12.3":{"pli":"Tassa kammaṃ saritvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:12.4":{"pli":"sitaṃ pātukariṃ ahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap492:13.1":{"pli":"Anokāsaṃ na passāmi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap492:13.2":{"pli":"yattha puññaṃ vipaccati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:13.3":{"pli":"Devaloke manusse vā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:13.4":{"pli":"okāsova na sammati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap492:14.1":{"pli":"Devaloke vasantassa, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap492:14.2":{"pli":"puññakammasamaṅgino; ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:14.3":{"pli":"Yāvatā parisā tassa, ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:14.4":{"pli":"sālacchannā bhavissati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap492:15.1":{"pli":"Tattha dibbehi naccehi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap492:15.2":{"pli":"gītehi vāditehi ca; ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:15.3":{"pli":"Ramissati sadā santo, ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:15.4":{"pli":"puññakammasamāhito. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap492:16.1":{"pli":"Yāvatā parisā tassa, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap492:16.2":{"pli":"gandhagandhī bhavissati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:16.3":{"pli":"Sālassa pupphavasso ca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:16.4":{"pli":"pavassissati tāvade. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap492:17.1":{"pli":"Tato cutoyaṃ manujo, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap492:17.2":{"pli":"mānusaṃ āgamissati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:17.3":{"pli":"Idhāpi sālacchadanaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:17.4":{"pli":"sabbakālaṃ dharissati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap492:18.1":{"pli":"Idha naccañca gītañca, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap492:18.2":{"pli":"sammatāḷasamāhitaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:18.3":{"pli":"Parivāressanti maṃ niccaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:18.4":{"pli":"buddhapūjāyidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap492:19.1":{"pli":"Uggacchante ca sūriye, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap492:19.2":{"pli":"sālavassaṃ pavassati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:19.3":{"pli":"Puññakammena saṃyuttaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:19.4":{"pli":"vassate sabbakālikaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap492:20.1":{"pli":"Aṭṭhārase kappasate, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap492:20.2":{"pli":"okkākakulasambhavo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:20.3":{"pli":"Gotamo nāma gottena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:20.4":{"pli":"satthā loke bhavissati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap492:21.1":{"pli":"Tassa dhammesu dāyādo, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap492:21.2":{"pli":"oraso dhammanimmito; ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:21.3":{"pli":"Sabbāsave pariññāya, ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:21.4":{"pli":"nibbāyissatināsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap492:22.1":{"pli":"Dhammaṃ abhisamentassa, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap492:22.2":{"pli":"sālacchannaṃ bhavissati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:22.3":{"pli":"Citake jhāyamānassa, ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:22.4":{"pli":"chadanaṃ tattha hessati’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap492:23.1":{"pli":"Vipākaṃ kittayitvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap492:23.2":{"pli":"piyadassī mahāmuni; ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:23.3":{"pli":"Parisāya dhammaṃ desesi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:23.4":{"pli":"tappento dhammavuṭṭhiyā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap492:24.1":{"pli":"Tiṃsakappāni devesu, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap492:24.2":{"pli":"devarajjamakārayiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:24.3":{"pli":"Saṭṭhi ca sattakkhattuñca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:24.4":{"pli":"cakkavattī ahosahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap492:25.1":{"pli":"Devalokā idhāgantvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap492:25.2":{"pli":"labhāmi vipulaṃ sukhaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:25.3":{"pli":"Idhāpi sālacchadanaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:25.4":{"pli":"maṇḍapassa idaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap492:26.1":{"pli":"Ayaṃ pacchimako mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap492:26.2":{"pli":"carimo vattate bhavo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:26.3":{"pli":"Idhāpi sālacchadanaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:26.4":{"pli":"hessati sabbakālikaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap492:27.1":{"pli":"Mahāmuniṃ tosayitvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap492:27.2":{"pli":"gotamaṃ sakyapuṅgavaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:27.3":{"pli":"Pattomhi acalaṃ ṭhānaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:27.4":{"pli":"hitvā jayaparājayaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap492:28.1":{"pli":"Aṭṭhārase kappasate, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap492:28.2":{"pli":"yaṃ buddhamabhipūjayiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:28.3":{"pli":"Duggatiṃ nābhijānāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:28.4":{"pli":"buddhapūjāyidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap492:29.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap492:29.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:29.3":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap492:30.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap492:30.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:30.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap492:31.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap492:31.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:31.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap492:32.1":{"pli":"Itthaṃ sudaṃ āyasmā sālamaṇḍapiyo thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap492:33.1":{"pli":"Sālamaṇḍapiyattherassāpadānaṃ dasamaṃ. ","html":"<p class='endsutta'>{}</p>"},"tha-ap492:34.1":{"pli":"Paṃsukūlavaggo ekūnapaññāsamo. ","html":"<p class='endsection'>{}</p>"},"tha-ap492:35.1":{"pli":"Tassuddānaṃ ","html":"<p class='uddana-intro'>{}</p>"},"tha-ap492:36.1":{"pli":"Paṃsukūlaṃ buddhasaññī, ","html":"<blockquote class='uddanagatha'><p><span class='verse-line'>{}</span>"},"tha-ap492:36.2":{"pli":"bhisado ñāṇakittako; ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:36.3":{"pli":"Candanī dhātupūjī ca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:36.4":{"pli":"pulinuppādakopi ca. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap492:37.1":{"pli":"Taraṇo dhammaruciko, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap492:37.2":{"pli":"sālamaṇḍapiyo tathā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:37.3":{"pli":"Satāni dve honti gāthā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap492:37.4":{"pli":"ūnavīsatimeva ca. ","html":"<span class='verse-line'>{}</span></p></blockquote></article>"}}}