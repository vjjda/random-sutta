{"tha-ap1":{"tha-ap1:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap1'><header><ul><li class='division'>{}</li>"},"tha-ap1:0.2":{"pli":"Buddhavagga ","html":"<li>{}</li></ul>"},"tha-ap1:0.3":{"pli":"Buddhaapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap1:1.1":{"pli":"Namo tassa Bhagavato Arahato Sammāsambuddhassa. ","html":"<p class='namo'>{}</p>"},"tha-ap1:2.1":{"pli":"Tathāgataṃ jetavane vasantaṃ, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap1:2.2":{"pli":"Apucchi vedehamunī nataṅgo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:2.3":{"pli":"“Sabbaññubuddhā kira nāma honti, ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:2.4":{"pli":"Bhavanti te hetubhi kehi vīra”. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap1:3.1":{"pli":"Tadāha sabbaññuvaro mahesī, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap1:3.2":{"pli":"Ānandabhaddaṃ madhurassarena; ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:3.3":{"pli":"“Ye pubbabuddhesu katādhikārā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:3.4":{"pli":"Aladdhamokkhā jinasāsanesu. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap1:4.1":{"pli":"Teneva sambodhimukhena dhīrā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap1:4.2":{"pli":"Ajjhāsayenāpi mahābalena; ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:4.3":{"pli":"Paññāya tejena sutikkhapaññā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:4.4":{"pli":"Sabbaññubhāvaṃ anupāpuṇanti. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap1:5.1":{"pli":"Ahampi pubbabuddhesu, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap1:5.2":{"pli":"buddhattamabhipatthayiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:5.3":{"pli":"Manasāyeva hutvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:5.4":{"pli":"dhammarājā asaṅkhiyā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap1:6.1":{"pli":"Atha buddhāpadānāni, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap1:6.2":{"pli":"suṇātha suddhamānasā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:6.3":{"pli":"Tiṃsapāramisampuṇṇā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:6.4":{"pli":"dhammarājā asaṅkhiyā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap1:7.1":{"pli":"Sambodhiṃ buddhaseṭṭhānaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap1:7.2":{"pli":"sasaṅghe lokanāyake; ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:7.3":{"pli":"Dasaṅgulī namassitvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:7.4":{"pli":"sirasā abhivādayiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap1:8.1":{"pli":"Yāvatā buddhakhettesu, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap1:8.2":{"pli":"ratanā vijjantisaṅkhiyā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:8.3":{"pli":"Ākāsaṭṭhā ca bhūmaṭṭhā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:8.4":{"pli":"manasā sabbamāhariṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap1:9.1":{"pli":"Tattha rūpiyabhūmiyaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap1:9.2":{"pli":"pāsādaṃ māpayiṃ ahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:9.3":{"pli":"Nekabhummaṃ ratanāmayaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:9.4":{"pli":"ubbiddhaṃ nabhamuggataṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap1:10.1":{"pli":"Vicittathambhaṃ sukataṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap1:10.2":{"pli":"suvibhattaṃ mahārahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:10.3":{"pli":"Kanakamayasaṅghāṭaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:10.4":{"pli":"kontacchattehi maṇḍitaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap1:11.1":{"pli":"Paṭhamā veḷuriyā bhūmi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap1:11.2":{"pli":"vimalabbhasamā subhā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:11.3":{"pli":"Naḷinajalajākiṇṇā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:11.4":{"pli":"varakañcanabhūmiyā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap1:12.1":{"pli":"Pavāḷaṃsā pavāḷavaṇṇā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap1:12.2":{"pli":"kāci lohitakā subhā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:12.3":{"pli":"Indagopakavaṇṇābhā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:12.4":{"pli":"bhūmi obhāsatī disā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap1:13.1":{"pli":"Suvibhattā gharamukhā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap1:13.2":{"pli":"niyyūhā sīhapañjarā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:13.3":{"pli":"Caturo vedikā jālā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:13.4":{"pli":"gandhāveḷā manoramā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap1:14.1":{"pli":"Nīlā pītā lohitakā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap1:14.2":{"pli":"odātā suddhakāḷakā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:14.3":{"pli":"Kūṭāgāravarūpetā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:14.4":{"pli":"sattaratanabhūsitā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap1:15.1":{"pli":"Olokamayā padumā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap1:15.2":{"pli":"vāḷavihaṅgasobhitā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:15.3":{"pli":"Nakkhattatārakākiṇṇā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:15.4":{"pli":"candasūrehi maṇḍitā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap1:16.1":{"pli":"Hemajālena sañchannā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap1:16.2":{"pli":"soṇṇakiṅkiṇikāyutā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:16.3":{"pli":"Vātavegena kūjanti, ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:16.4":{"pli":"soṇṇamālā manoramā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap1:17.1":{"pli":"Mañjeṭṭhakaṃ lohitakaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap1:17.2":{"pli":"pītakaṃ haripiñjaraṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:17.3":{"pli":"Nānāraṅgehi sampītaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:17.4":{"pli":"ussitaddhajamālinī. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap1:18.1":{"pli":"Na naṃ bahūnekasatā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap1:18.2":{"pli":"phalikā rajatāmayā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:18.3":{"pli":"Maṇimayā lohitaṅgā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:18.4":{"pli":"masāragallamayā tathā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:18.5":{"pli":"Nānāsayanavicittā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:18.6":{"pli":"saṇhakāsikasanthatā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap1:19.1":{"pli":"Kampalā dukūlā cīnā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap1:19.2":{"pli":"pattuṇṇā paṇḍupāvurā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:19.3":{"pli":"Vividhattharaṇaṃ sabbaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:19.4":{"pli":"manasā paññapesahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap1:20.1":{"pli":"Tāsu tāsveva bhūmīsu, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap1:20.2":{"pli":"ratanakūṭalaṅkataṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:20.3":{"pli":"Maṇiverocanā ukkā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:20.4":{"pli":"dhārayantā sutiṭṭhare. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap1:21.1":{"pli":"Sobhanti esikā thambhā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap1:21.2":{"pli":"subhā kañcanatoraṇā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:21.3":{"pli":"Jambonadā sāramayā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:21.4":{"pli":"atho rajatamayāpi ca. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap1:22.1":{"pli":"Nekā sandhī suvibhattā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap1:22.2":{"pli":"kavāṭaggaḷacittitā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:22.3":{"pli":"Ubhato puṇṇaghaṭānekā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:22.4":{"pli":"padumuppalasaṃyutā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap1:23.1":{"pli":"Atīte sabbabuddhe ca, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap1:23.2":{"pli":"sasaṅghe lokanāyake; ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:23.3":{"pli":"Pakativaṇṇarūpena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:23.4":{"pli":"nimminitvā sasāvake. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap1:24.1":{"pli":"Tena dvārena pavisitvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap1:24.2":{"pli":"sabbe buddhā sasāvakā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:24.3":{"pli":"Sabbasoṇṇamaye pīṭhe, ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:24.4":{"pli":"nisinnā ariyamaṇḍalā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap1:25.1":{"pli":"Ye ca etarahi atthi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap1:25.2":{"pli":"Buddhā loke anuttarā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:25.3":{"pli":"Atīte vattamānā ca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:25.4":{"pli":"Bhavanaṃ sabbe samāruhuṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap1:26.1":{"pli":"Paccekabuddhenekasate, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap1:26.2":{"pli":"Sayambhū aparājite; ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:26.3":{"pli":"Atīte vattamāne ca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:26.4":{"pli":"Bhavanaṃ sabbe samāruhuṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap1:27.1":{"pli":"Kapparukkhā bahū atthi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap1:27.2":{"pli":"Ye dibbā ye ca mānusā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:27.3":{"pli":"Sabbaṃ dussaṃ samāhantvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:27.4":{"pli":"Acchādemi ticīvaraṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap1:28.1":{"pli":"Khajjaṃ bhojjaṃ sāyanīyaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap1:28.2":{"pli":"sampannaṃ pānabhojanaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:28.3":{"pli":"Maṇimaye subhe patte, ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:28.4":{"pli":"sampūretvā adāsahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap1:29.1":{"pli":"Dibbavatthasamā hutvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap1:29.2":{"pli":"maṭṭhā cīvarasaṃyutā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:29.3":{"pli":"Madhurā sakkharā ceva, ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:29.4":{"pli":"telā ca madhuphāṇitā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap1:30.1":{"pli":"Tappitā paramannena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap1:30.2":{"pli":"sabbe te ariyamaṇḍalā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:30.3":{"pli":"Ratanagabbhaṃ pavisitvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:30.4":{"pli":"kesarīva guhāsayā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap1:31.1":{"pli":"Mahārahamhi sayane, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap1:31.2":{"pli":"sīhaseyyamakappayuṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:31.3":{"pli":"Sampajānā samuṭṭhāya, ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:31.4":{"pli":"sayane pallaṅkamābhujuṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap1:32.1":{"pli":"Gocaraṃ sabbabuddhānaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap1:32.2":{"p