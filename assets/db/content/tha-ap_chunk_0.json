,"tha-ap1:80.1":{"pli":"Vivādaṃ bhayato disvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap1:80.2":{"pli":"avivādañca khemato; ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:80.3":{"pli":"Samaggā sakhilā hotha, ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:80.4":{"pli":"esā buddhānusāsanī. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap1:81.1":{"pli":"Pamādaṃ bhayato disvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap1:81.2":{"pli":"appamādañca khemato; ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:81.3":{"pli":"Bhāvethaṭṭhaṅgikaṃ maggaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:81.4":{"pli":"esā buddhānusāsanī. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap1:82.1":{"pli":"Samāgatā bahū buddhā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap1:82.2":{"pli":"arahantā ca sabbaso; ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:82.3":{"pli":"Sambuddhe arahante ca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:82.4":{"pli":"vandamānā namassatha. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap1:83.1":{"pli":"Evaṃ acintiyā buddhā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap1:83.2":{"pli":"buddhadhammā acintiyā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:83.3":{"pli":"Acintiye pasannānaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap1:83.4":{"pli":"vipāko hoti acintiyo”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap1:84.1":{"pli":"Itthaṃ sudaṃ bhagavā attano buddhacariyaṃ sambhāvayamāno buddhāpadāniyaṃ nāma dhammapariyāyaṃ abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap1:85.1":{"pli":"Buddhāpadānaṃ samattaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"tha-ap10":{"tha-ap10:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap10'><header><ul><li class='division'>{}</li>"},"tha-ap10:0.2":{"pli":"Buddhavagga ","html":"<li>{}</li></ul>"},"tha-ap10:0.3":{"pli":"Piṇḍolabhāradvājattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap10:1.1":{"pli":"“Padumuttaro nāma jino, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap10:1.2":{"pli":"sayambhū aggapuggalo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap10:1.3":{"pli":"Purato himavantassa, ","html":"<span class='verse-line'>{}</span>"},"tha-ap10:1.4":{"pli":"cittakūṭe vasī tadā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap10:2.1":{"pli":"Abhītarūpo tatthāsiṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap10:2.2":{"pli":"migarājā catukkamo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap10:2.3":{"pli":"Tassa saddaṃ suṇitvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap10:2.4":{"pli":"vikkhambhanti bahujjanā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap10:3.1":{"pli":"Suphullaṃ padumaṃ gayha, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap10:3.2":{"pli":"upagacchiṃ narāsabhaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap10:3.3":{"pli":"Vuṭṭhitassa samādhimhā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap10:3.4":{"pli":"buddhassa abhiropayiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap10:4.1":{"pli":"Catuddisaṃ namassitvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap10:4.2":{"pli":"buddhaseṭṭhaṃ naruttamaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap10:4.3":{"pli":"Sakaṃ cittaṃ pasādetvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap10:4.4":{"pli":"sīhanādaṃ nadiṃ ahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap10:5.1":{"pli":"Padumuttaro lokavidū, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap10:5.2":{"pli":"āhutīnaṃ paṭiggaho; ","html":"<span class='verse-line'>{}</span>"},"tha-ap10:5.3":{"pli":"Sakāsane nisīditvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap10:5.4":{"pli":"imā gāthā abhāsatha. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap10:6.1":{"pli":"Buddhassa giramaññāya, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap10:6.2":{"pli":"Sabbe devā samāgatā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap10:6.3":{"pli":"‘Āgato vadataṃ seṭṭho, ","html":"<span class='verse-line'>{}</span>"},"tha-ap10:6.4":{"pli":"Dhammaṃ sossāma taṃ mayaṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap10:7.1":{"pli":"Tesaṃ hāsaparetānaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap10:7.2":{"pli":"purato lokanāyako; ","html":"<span class='verse-line'>{}</span>"},"tha-ap10:7.3":{"pli":"Mama saddaṃ pakittesi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap10:7.4":{"pli":"dīghadassī mahāmuni. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap10:8.1":{"pli":"Yenidaṃ padumaṃ dinnaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap10:8.2":{"pli":"sīhanādo ca nādito; ","html":"<span class='verse-line'>{}</span>"},"tha-ap10:8.3":{"pli":"Tamahaṃ kittayissāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap10:8.4":{"pli":"suṇātha mama bhāsato. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap10:9.1":{"pli":"Ito aṭṭhamake kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap10:9.2":{"pli":"cakkavattī bhavissati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap10:9.3":{"pli":"Sattaratanasampanno, ","html":"<span class='verse-line'>{}</span>"},"tha-ap10:9.4":{"pli":"catudīpamhi issaro. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap10:10.1":{"pli":"Kārayissati issariyaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap10:10.2":{"pli":"mahiyā catusaṭṭhiyā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap10:10.3":{"pli":"Padumo nāma nāmena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap10:10.4":{"pli":"cakkavattī mahabbalo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap10:11.1":{"pli":"Kappasatasahassamhi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap10:11.2":{"pli":"okkākakulasambhavo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap10:11.3":{"pli":"Gotamo nāma gottena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap10:11.4":{"pli":"satthā loke bhavissati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap10:12.1":{"pli":"Pakāsite pāvacane, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap10:12.2":{"pli":"brahmabandhu bhavissati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap10:12.3":{"pli":"Brahmaññā abhinikkhamma, ","html":"<span class='verse-line'>{}</span>"},"tha-ap10:12.4":{"pli":"pabbajissati tāvade. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap10:13.1":{"pli":"Padhānapahitatto so, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap10:13.2":{"pli":"upasanto nirūpadhi; ","html":"<span class='verse-line'>{}</span>"},"tha-ap10:13.3":{"pli":"Sabbāsave pariññāya, ","html":"<span class='verse-line'>{}</span>"},"tha-ap10:13.4":{"pli":"nibbāyissatināsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap10:14.1":{"pli":"Vijane pantaseyyamhi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap10:14.2":{"pli":"vāḷamigasamākule; ","html":"<span class='verse-line'>{}</span>"},"tha-ap10:14.3":{"pli":"Sabbāsave pariññāya, ","html":"<span class='verse-line'>{}</span>"},"tha-ap10:14.4":{"pli":"nibbāyissatināsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap10:15.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap10:15.2":{"pli":"vimokkhāpi ca aṭṭhime; ","html":"<span class='verse-line'>{}</span>"},"tha-ap10:15.3":{"pli":"Chaḷabhiññā sacchikatā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap10:15.4":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap10:16.1":{"pli":"Itthaṃ sudaṃ āyasmā piṇḍolabhāradvājo thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap10:17.1":{"pli":"Piṇḍolabhāradvājattherassāpadānaṃ aṭṭhamaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"tha-ap100":{"tha-ap100:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap100'><header><ul><li class='division'>{}</li>"},"tha-ap100:0.2":{"pli":"Sudhāvagga ","html":"<li>{}</li></ul>"},"tha-ap100:0.3":{"pli":"Senāsanadāyakattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap100:1.1":{"pli":"“Siddhatthassa bhagavato, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap100:1.2":{"pli":"adāsiṃ paṇṇasantharaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap100:1.3":{"pli":"Samantā upahārañca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap100:1.4":{"pli":"kusumaṃ okiriṃ ahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap100:2.1":{"pli":"Pāsādevaṃ guṇaṃ rammaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap100:2.2":{"pli":"Anubhomi mahārahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap100:2.3":{"pli":"Mahagghāni ca pupphāni, ","html":"<span class='verse-line'>{}</span>"},"tha-ap100:2.4":{"pli":"Sayanebhisavanti me. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap100:3.1":{"pli":"Sayanehaṃ tuvaṭṭāmi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap100:3.2":{"pli":"vicitte pupphasanthate; ","html":"<span class='verse-line'>{}</span>"},"tha-ap100:3.3":{"pli":"Pupphavuṭṭhi ca sayane, ","html":"<span class='verse-line'>{}</span>"},"tha-ap100:3.4":{"pli":"abhivassati tāvade. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap100:4.1":{"pli":"Catunnavutito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap100:4.2":{"pli":"adāsiṃ paṇṇasantharaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap100:4.3":{"pli":"Duggatiṃ nābhijānāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap100:4.4":{"pli":"santharassa idaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap100:5.1":{"pli":"Tiṇasantharakā nāma, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap100:5.2":{"pli":"sattete cakkavattino; ","html":"<span class='verse-line'>{}</span>"},"tha-ap100:5.3":{"pli":"Ito te pañcame kappe, ","html":"<span class='verse-line'>{}</span>"},"tha-ap100:5.4":{"pli":"uppajjiṃsu janādhipā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap100:6.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap100:6.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap100:6.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap100:7.1":{"pli":"Itthaṃ sudaṃ āyasmā senāsanadāyako thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap100:8.1":{"pli":"Senāsanadāyakattherassāpadānaṃ aṭṭhamaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"tha-ap101":{"tha-ap101:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap101'><header><ul><li class='division'>{}</li>"},"tha-ap101:0.2":{"pli":"Sudhāvagga ","html":"<li>{}</li></ul>"},"tha-ap101:0.3":{"pli":"Veyyāvaccakattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap101:1.1":{"pli":"“Vipassissa bhagavato, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap101:1.2":{"pli":"mahāpūgagaṇo ahu; ","html":"<span class='verse-line'>{}</span>"},"tha-ap101:1.3":{"pli":"Veyyāvaccakaro āsiṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap101:1.4":{"pli":"sabbakiccesu vāvaṭo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap101:2.1":{"pli":"Deyyadhammo ca me natthi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap101:2.2":{"pli":"sugatassa mahesino; ","html":"<span class='verse-line'>{}</span>"},"tha-ap101:2.3":{"pli":"Avandiṃ satthuno pāde, ","html":"<span class='verse-line'>{}</span>"},"tha-ap101:2.4":{"pli":"vippasannena cetasā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap101:3.1":{"pli":"Ekanavutito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap101:3.2":{"pli":"veyyāvaccaṃ akāsahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap101:3.3":{"pli":"Duggatiṃ nābhijānāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap101:3.4":{"pli":"veyyāvaccassidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap101:4.1":{"pli":"Ito ca aṭṭhame kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap101:4.2":{"pli":"rājā āsiṃ sucintito; ","html":"<span class='verse-line'>{}</span>"},"tha-ap101:4.3":{"pli":"Sattaratanasampanno, ","html":"<span class='verse-line'>{}</span>"},"tha-ap101:4.4":{"pli":"cakkavattī mahabbalo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap101:5.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap101:5.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap101:5.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap101:6.1":{"pli":"Itthaṃ sudaṃ āyasmā veyyāvaccako thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap101:7.1":{"pli":"Veyyāvaccakattherassāpadānaṃ navamaṃ. ","html":"<p class='endsutta'>{}</p></article>"}}}