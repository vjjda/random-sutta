{"tha-ap395":{"tha-ap395:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap395'><header><ul><li class='division'>{}</li>"},"tha-ap395:0.2":{"pli":"Pilindavacchavagga ","html":"<li>{}</li></ul>"},"tha-ap395:0.3":{"pli":"Sabbakittikattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap395:1.1":{"pli":"“Kaṇikāraṃva jalitaṃ, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap395:1.2":{"pli":"dīparukkhaṃva ujjalaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:1.3":{"pli":"Osadhiṃva virocantaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:1.4":{"pli":"vijjutaṃ gagane yathā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap395:2.1":{"pli":"Asambhītaṃ anuttāsiṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap395:2.2":{"pli":"migarājaṃva kesariṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:2.3":{"pli":"Ñāṇālokaṃ pakāsentaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:2.4":{"pli":"maddantaṃ titthiye gaṇe. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap395:3.1":{"pli":"Uddharantaṃ imaṃ lokaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap395:3.2":{"pli":"chindantaṃ sabbasaṃsayaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:3.3":{"pli":"Gajjantaṃ migarājaṃva, ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:3.4":{"pli":"addasaṃ lokanāyakaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap395:4.1":{"pli":"Jaṭājinadharo āsiṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap395:4.2":{"pli":"brahā uju patāpavā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:4.3":{"pli":"Vākacīraṃ gahetvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:4.4":{"pli":"pādamūle apatthariṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap395:5.1":{"pli":"Kāḷānusāriyaṃ gayha, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap395:5.2":{"pli":"anulimpiṃ tathāgataṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:5.3":{"pli":"Sambuddhamanulimpetvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:5.4":{"pli":"santhaviṃ lokanāyakaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap395:6.1":{"pli":"‘Samuddharasimaṃ lokaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap395:6.2":{"pli":"oghatiṇṇamahāmuni; ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:6.3":{"pli":"Ñāṇālokena jotesi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:6.4":{"pli":"nāvaṭaṃ ñāṇamuttamaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap395:7.1":{"pli":"Dhammacakkaṃ pavattesi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap395:7.2":{"pli":"maddase paratitthiye; ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:7.3":{"pli":"Usabho jitasaṅgāmo, ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:7.4":{"pli":"sampakampesi medaniṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap395:8.1":{"pli":"Mahāsamudde ūmiyo, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap395:8.2":{"pli":"velantamhi pabhijjare; ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:8.3":{"pli":"Tatheva tava ñāṇamhi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:8.4":{"pli":"sabbadiṭṭhī pabhijjare. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap395:9.1":{"pli":"Sukhumacchikajālena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap395:9.2":{"pli":"saramhi sampatānite; ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:9.3":{"pli":"Antojālikatā pāṇā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:9.4":{"pli":"pīḷitā honti tāvade. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap395:10.1":{"pli":"Tatheva titthiyā loke, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap395:10.2":{"pli":"puthupāsaṇḍanissitā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:10.3":{"pli":"Antoñāṇavare tuyhaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:10.4":{"pli":"parivattanti mārisa. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap395:11.1":{"pli":"Patiṭṭhā vuyhataṃ oghe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap395:11.2":{"pli":"tvañhi nātho abandhunaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:11.3":{"pli":"Bhayaṭṭitānaṃ saraṇaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:11.4":{"pli":"muttitthīnaṃ parāyaṇaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap395:12.1":{"pli":"Ekavīro asadiso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap395:12.2":{"pli":"mettākaruṇasañcayo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:12.3":{"pli":"Asamo susamo santo, ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:12.4":{"pli":"vasī tādī jitañjayo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap395:13.1":{"pli":"Dhīro vigatasammoho, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap395:13.2":{"pli":"anejo akathaṅkathī; ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:13.3":{"pli":"Tusito vantadososi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:13.4":{"pli":"nimmalo saṃyato suci. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap395:14.1":{"pli":"Saṅgātigo hatamado, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap395:14.2":{"pli":"tevijjo tibhavantago; ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:14.3":{"pli":"Sīmātigo dhammagaru, ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:14.4":{"pli":"gatattho hitavabbhuto. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap395:15.1":{"pli":"Tārako tvaṃ yathā nāvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap395:15.2":{"pli":"nidhīvassāsakārako; ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:15.3":{"pli":"Asambhīto yathā sīho, ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:15.4":{"pli":"gajarājāva dappito’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap395:16.1":{"pli":"Thometvā dasagāthāhi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap395:16.2":{"pli":"padumuttaraṃ mahāyasaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:16.3":{"pli":"Vanditvā satthuno pāde, ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:16.4":{"pli":"tuṇhī aṭṭhāsahaṃ tadā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap395:17.1":{"pli":"Padumuttaro lokavidū, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap395:17.2":{"pli":"āhutīnaṃ paṭiggaho; ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:17.3":{"pli":"Bhikkhusaṅghe ṭhito satthā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:17.4":{"pli":"imā gāthā abhāsatha. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap395:18.1":{"pli":"‘Yo me sīlañca ñāṇañca, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap395:18.2":{"pli":"saddhammañcāpi vaṇṇayi; ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:18.3":{"pli":"Tamahaṃ kittayissāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:18.4":{"pli":"suṇātha mama bhāsato. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap395:19.1":{"pli":"Saṭṭhi kappasahassāni, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap395:19.2":{"pli":"devaloke ramissati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:19.3":{"pli":"Aññe devebhibhavitvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:19.4":{"pli":"issaraṃ kārayissati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap395:20.1":{"pli":"So pacchā pabbajitvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap395:20.2":{"pli":"sukkamūlena codito; ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:20.3":{"pli":"Gotamassa bhagavato, ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:20.4":{"pli":"sāsane pabbajissati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap395:21.1":{"pli":"Pabbajitvāna kāyena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap395:21.2":{"pli":"pāpakammaṃ vivajjiya; ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:21.3":{"pli":"Sabbāsave pariññāya, ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:21.4":{"pli":"nibbāyissatināsavo’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap395:22.1":{"pli":"Yathāpi megho thanayaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap395:22.2":{"pli":"tappeti mediniṃ imaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:22.3":{"pli":"Tatheva tvaṃ mahāvīra, ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:22.4":{"pli":"dhammena tappayī mamaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap395:23.1":{"pli":"Sīlaṃ paññañca dhammañca, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap395:23.2":{"pli":"thavitvā lokanāyakaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:23.3":{"pli":"Pattomhi paramaṃ santiṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:23.4":{"pli":"nibbānaṃ padamaccutaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap395:24.1":{"pli":"Aho nūna sa bhagavā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap395:24.2":{"pli":"Ciraṃ tiṭṭheyya cakkhumā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:24.3":{"pli":"Aññātañca vijāneyyuṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:24.4":{"pli":"Phuseyyuṃ amataṃ padaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap395:25.1":{"pli":"Ayaṃ me pacchimā jāti, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap395:25.2":{"pli":"bhavā sabbe samūhatā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:25.3":{"pli":"Sabbāsave pariññāya, ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:25.4":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap395:26.1":{"pli":"Satasahassito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap395:26.2":{"pli":"yaṃ buddhamabhithomayiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:26.3":{"pli":"Duggatiṃ nābhijānāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:26.4":{"pli":"kittanāya idaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap395:27.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap395:27.2":{"pli":"bhavā sabbe samūhatā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:27.3":{"pli":"Sabbāsavā parikkhīṇā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:27.4":{"pli":"natthi dāni punabbhavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap395:28.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap395:28.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:28.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap395:29.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap395:29.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap395:29.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap395:30.1":{"pli":"Itthaṃ sudaṃ āyasmā sabbakittiko thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap395:31.1":{"pli":"Sabbakittikattherassāpadānaṃ tatiyaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"tha-ap396":{"tha-ap396:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap396'><header><ul><li class='division'>{}</li>"},"tha-ap396:0.2":{"pli":"Pilindavacchavagga ","html":"<li>{}</li></ul>"},"tha-ap396:0.3":{"pli":"Madhudāyakattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap396:1.1":{"pli":"“Sindhuyā nadiyā tīre, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap396:1.2":{"pli":"sukato assamo mama; ","html":"<span class='verse-line'>{}</span>"},"tha-ap396:1.3":{"pli":"Tattha vācemahaṃ sisse, ","html":"<span class='verse-line'>{}</span>"},"tha-ap396:1.4":{"pli":"itihāsaṃ salakkhaṇaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap396:2.1":{"pli":"Dhammakāmā vinītā te, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap396:2.2":{"pli":"sotukāmā susāsanaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap396:2.3":{"pli":"Chaḷaṅge pāramippattā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap396:2.4":{"pli":"sindhukūle vasanti te. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap396:3.1":{"pli":"Uppātagamane ceva, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap396:3.2":{"pli":"lakkhaṇesu ca kovidā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap396:3.3":{"pli":"Uttamatthaṃ gavesantā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap396:3.4":{"pli":"vasanti vipine tadā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap396:4.1":{"pli":"Sumedho nāma sambuddho, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap396:4.2":{"pli":"loke uppajji tāvade; ","html":"<span class='verse-line'>{}</span>"},"tha-ap396:4.3":{"pli":"Amhākaṃ anukampanto, ","html":"<span class='verse-line'>{}</span>"},"tha-ap396:4.4":{"pli":"upāgacchi vināyako. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap396:5.1":{"pli":"Upāgataṃ mahāvīraṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap396:5.2":{"pli":"sumedhaṃ lokanāyakaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap396:5.3":{"pli":"Tiṇasanthārakaṃ katvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap396:5.4":{"pli":"lokajeṭṭhassadāsahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap396:6.1":{"pli":"Vipināto madhuṃ gayha, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap396:6.2":{"pli":"buddhaseṭṭhassadāsahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap396:6.3":{"pli":"Sambuddho paribhuñjitvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap396:6.4":{"pli":"idaṃ vacanamabravi. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap396:7.1":{"pli":"‘Yo taṃ adāsi madhuṃ me, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap396:7.2":{"pli":"pasanno sehi pāṇibhi; ","html":"<span class='verse-line'>{}</span>"},"tha-ap396:7.3":{"pli":"Tamahaṃ kittayissāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap396:7.4":{"pli":"suṇātha mama bhāsato. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap396:8.1":{"pli":"Iminā madhudānena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap396:8.2":{"pli":"tiṇasanthārakena ca; ","html":"<span class='verse-line'>{}</span>"},"tha-ap396:8.3":{"pli":"Tiṃsa kappasahassāni, ","html":"<span class='verse-line'>{}</span>"},"tha-ap396:8.4":{"pli":"devaloke ramissati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap396:9.1":{"pli":"Tiṃsa kappasahassamhi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap396:9.2":{"pli":"okkākakulasambhavo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap396:9.3":{"pli":"Gotamo nāma gottena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap396:9.4":{"pli":"satthā loke bhavissati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap396:10.1":{"pli":"Tassa dhammesu dāyādo, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap396:10.2":{"pli":"oraso dhammanimmito; ","html":"<span class='verse-line'>{}</span>"},"tha-ap396:10.3":{"pli":"Sabbāsave pariññāya, ","html":"<span class='verse-line'>{}</span>"},"tha-ap396:10.4":{"pli":"nibbāyissatināsavo’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap396:11.1":{"pli":"Devalokā idhāgantvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap396:11.2":{"pli":"mātukucchiṃ upāgate; ","html":"<span class='verse-line'>{}</span>"},"tha-ap396:11.3":{"pli":"Madhuvassaṃ pavassittha, ","html":"<span class='verse-line'>{}</span>"},"tha-ap396:11.4":{"pli":"chādayaṃ madhunā mahiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap396:12.1":{"pli":"Mayi nikkhantamattamhi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap396:12.2":{"pli":"kucchiyā ca suduttarā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap396:12.3":{"pli":"Tatrāpi madhuvassaṃ me, ","html":"<span class='verse-line'>{}</span>"},"tha-ap396:12.4":{"pli":"vassate niccakālikaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap396:13.1":{"pli":"Agārā abhinikkhamma, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap396:13.2":{"pli":"pabbajiṃ anagāriyaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap396:13.3":{"pli":"Lābhī annassa pānassa, ","html":"<span class='verse-line'>{}</span>"},"tha-ap396:13.4":{"pli":"madhudānassidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap396:14.1":{"pli":"Sabbakāmasamiddhohaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap396:14.2":{"pli":"bhavitvā devamānuse; ","html":"<span class='verse-line'>{}</span>"},"tha-ap396:14.3":{"pli":"Teneva madhudānena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap396:14.4":{"pli":"pattomhi āsavakkhayaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap396:15.1":{"pli":"Vuṭṭhamhi deve caturaṅgule tiṇe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap396:15.2":{"pli":"Sampupphite dharaṇīruhe sañchanne; ","html":"<span class='verse-line'>{}</span>"},"tha-ap396:15.3":{"pli":"Suññe ghare maṇḍaparukkhamūlake, ","html":"<span class='verse-line'>{}</span>"},"tha-ap396:15.4":{"pli":"Vasāmi niccaṃ sukhito anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap396:16.1":{"pli":"Majjhe mahante hīne ca, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap396:16.2":{"pli":"bhave sabbe atikkamiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap396:16.3":{"pli":"Ajja me āsavā khīṇā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap396:16.4":{"pli":"natthi dāni punabbhavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap396:17.1":{"pli":"Tiṃsakappasahassamhi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap396:17.2":{"pli":"yaṃ dānamadadiṃ tadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap396:17.3":{"pli":"Duggatiṃ nābhijānāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap396:17.4":{"pli":"madhudānassidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap396:18.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap396:18.2":{"pli":"bhavā sabbe samūhatā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap396:18.3":{"pli":"Sabbāsavā parikkhīṇā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap396:18.4":{"pli":"natthi dāni punabbhavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap396:19.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap396:19.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap396:19.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap396:20.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap396:20.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap396:20.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap396:21.1":{"pli":"Itthaṃ sudaṃ āyasmā madhudāyako thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap396:22.1":{"pli":"Madhudāyakattherassāpadānaṃ catutthaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"tha-ap397":{"tha-ap397:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap397'><header><ul><li class='division'>{}</li>"},"tha-ap397:0.2":{"pli":"Pilindavacchavagga ","html":"<li>{}</li></ul>"},"tha-ap397:0.3":{"pli":"5 Padumakūṭāgāriyattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap397:1.1":{"pli":"“Piyadassī nāma bhagavā, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap397:1.2":{"pli":"sayambhū lokanāyako; ","html":"<span class='verse-line'>{}</span>"},"tha-ap397:1.3":{"pli":"Vivekakāmo sambuddho, ","html":"<span class='verse-line'>{}</span>"},"tha-ap397:1.4":{"pli":"samādhikusalo muni. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap397:2.1":{"pli":"Vanasaṇḍaṃ samogayha, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap397:2.2":{"pli":"piyadassī mahāmuni; ","html":"<span class='verse-line'>{}</span>"},"tha-ap397:2.3":{"pli":"Paṃsukūlaṃ pattharitvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap397:2.4":{"pli":"nisīdi purisuttamo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap397:3.1":{"pli":"Migaluddo pure āsiṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap397:3.2":{"pli":"araññe kānane ahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap397:3.3":{"pli":"Pasadaṃ migamesanto, ","html":"<span class='verse-line'>{}</span>"},"tha-ap397:3.4":{"pli":"āhiṇḍāmi ahaṃ tadā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap397:4.1":{"pli":"Tatthaddasāsiṃ sambuddhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap397:4.2":{"pli":"oghatiṇṇamanāsavaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap397:4.3":{"pli":"Pupphitaṃ sālarājaṃva, ","html":"<span class='verse-line'>{}</span>"},"tha-ap397:4.4":{"pli":"sataraṃsiṃva uggataṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap397:5.1":{"pli":"Disvānahaṃ devadevaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap397:5.2":{"pli":"piyadassiṃ mahāyasaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap397:5.3":{"pli":"Jātassaraṃ samogayha, ","html":"<span class='verse-line'>{}</span>"},"tha-ap397:5.4":{"pli":"padumaṃ āhariṃ tadā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap397:6.1":{"pli":"Āharitvāna padumaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap397:6.2":{"pli":"satapattaṃ manoramaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap397:6.3":{"pli":"Kūṭāgāraṃ karitvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap397:6.4":{"pli":"chādayiṃ padumena