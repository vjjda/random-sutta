:{"pli":"Rati ca samacariyāya, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap326:6.2":{"pli":"bāhusaccaṃ kataññutā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap326:6.3":{"pli":"Diṭṭhe dhamme parattha ca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap326:6.4":{"pli":"dhammā ete pasaṃsiyā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap326:7.1":{"pli":"Ete dhamme bhāvayitvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap326:7.2":{"pli":"sabbasattahite rato; ","html":"<span class='verse-line'>{}</span>"},"tha-ap326:7.3":{"pli":"Buddhe cittaṃ pasādetvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap326:7.4":{"pli":"bhāvehi maggamuttamaṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap326:8.1":{"pli":"Idaṃ vatvāna sabbaññū, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap326:8.2":{"pli":"lokajeṭṭho narāsabho; ","html":"<span class='verse-line'>{}</span>"},"tha-ap326:8.3":{"pli":"Mamevaṃ anusāsitvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap326:8.4":{"pli":"vehāsaṃ uggato gato. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap326:9.1":{"pli":"Pubbe cittaṃ visodhetvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap326:9.2":{"pli":"pacchā cittaṃ pasādayiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap326:9.3":{"pli":"Tena cittappasādena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap326:9.4":{"pli":"tusitaṃ upapajjahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap326:10.1":{"pli":"Catunnavutito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap326:10.2":{"pli":"yadā cittaṃ pasādayiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap326:10.3":{"pli":"Duggatiṃ nābhijānāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap326:10.4":{"pli":"buddhasaññāyidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap326:11.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap326:11.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap326:11.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap326:12.1":{"pli":"Itthaṃ sudaṃ āyasmā yaññasāmiko thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap326:13.1":{"pli":"Yaññasāmikattherassāpadānaṃ catutthaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"tha-ap327":{"tha-ap327:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap327'><header><ul><li class='division'>{}</li>"},"tha-ap327:0.2":{"pli":"Umāpupphiyavagga ","html":"<li>{}</li></ul>"},"tha-ap327:0.3":{"pli":"Nimittasaññakattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap327:1.1":{"pli":"“Candabhāgānadītīre, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap327:1.2":{"pli":"vasāmi assame ahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap327:1.3":{"pli":"Suvaṇṇamigamaddakkhiṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap327:1.4":{"pli":"carantaṃ vipine ahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap327:2.1":{"pli":"Mige cittaṃ pasādetvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap327:2.2":{"pli":"lokajeṭṭhaṃ anussariṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap327:2.3":{"pli":"Tena cittappasādena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap327:2.4":{"pli":"aññe buddhe anussariṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap327:3.1":{"pli":"Abbhatītā ca ye buddhā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap327:3.2":{"pli":"vattamānā anāgatā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap327:3.3":{"pli":"Evamevaṃ virocanti, ","html":"<span class='verse-line'>{}</span>"},"tha-ap327:3.4":{"pli":"migarājāva te tayo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap327:4.1":{"pli":"Catunnavutito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap327:4.2":{"pli":"yaṃ sañña