8:4.4":{"pli":"lokajeṭṭha narāsabha. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap118:5.1":{"pli":"Anubhotvāna sampattiṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap118:5.2":{"pli":"devesu mānusesu ca; ","html":"<span class='verse-line'>{}</span>"},"tha-ap118:5.3":{"pli":"Pattomhi acalaṃ ṭhānaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap118:5.4":{"pli":"hitvā jayaparājayaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap118:6.1":{"pli":"Ekattiṃse ito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap118:6.2":{"pli":"yaṃ pupphamabhiropayiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap118:6.3":{"pli":"Duggatiṃ nābhijānāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap118:6.4":{"pli":"citapūjāyidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap118:7.1":{"pli":"Ekūnatiṃsakappamhi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap118:7.2":{"pli":"ito soḷasa rājāno; ","html":"<span class='verse-line'>{}</span>"},"tha-ap118:7.3":{"pli":"Uggatā nāma nāmena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap118:7.4":{"pli":"cakkavattī mahabbalā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap118:8.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap118:8.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap118:8.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap118:9.1":{"pli":"Itthaṃ sudaṃ āyasmā citakapūjako thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap118:10.1":{"pli":"Citakapūjakattherassāpadānaṃ chaṭṭhaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"tha-ap119":{"tha-ap119:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap119'><header><ul><li class='division'>{}</li>"},"tha-ap119:0.2":{"pli":"Mahāparivāravagga ","html":"<li>{}</li></ul>"},"tha-ap119:0.3":{"pli":"Buddhasaññakattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap119:1.1":{"pli":"“Yadā vipassī lokaggo, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap119:1.2":{"pli":"āyusaṅkhāramossaji; ","html":"<span class='verse-line'>{}</span>"},"tha-ap119:1.3":{"pli":"Pathavī sampakampittha, ","html":"<span class='verse-line'>{}</span>"},"tha-ap119:1.4":{"pli":"medanī jalamekhalā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap119:2.1":{"pli":"Otataṃ vitthataṃ mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap119:2.2":{"pli":"suvicittavaṭaṃsakaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap119:2.3":{"pli":"Bhavanampi pakampittha, ","html":"<span class='verse-line'>{}</span>"},"tha-ap119:2.4":{"pli":"buddhassa āyusaṅkhaye. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap119:3.1":{"pli":"Tāso mayhaṃ samuppanno, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap119:3.2":{"pli":"bhavane sampakampite; ","html":"<span class='verse-line'>{}</span>"},"tha-ap119:3.3":{"pli":"Uppādo nu kimatthāya, ","html":"<span class='verse-line'>{}</span>"},"tha-ap119:3.4":{"pli":"āloko vipulo ahu. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap119:4.1":{"pli":"Vessavaṇo idhāgamma, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap119:4.2":{"pli":"nibbāpesi mahājanaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap119:4.3":{"pli":"Pāṇabhūte bhayaṃ natthi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap119:4.4":{"pli":"ekaggā hotha saṃvutā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap119:5.1":{"pli":"Aho buddhā aho dhammā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap119:5.2":{"pli":"aho no satthu sampadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap119:5.3":{"pli":"Yasmiṃ uppajjamānamhi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap119:5.4":{"pli":"pathavī sampakampati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap119:6.1":{"pli":"Buddhānubhāvaṃ kittetvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap119:6.2":{"pli":"kappaṃ saggamhi modahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap119:6.3":{"pli":"Avasesesu kappesu, ","html":"<span class='verse-line'>{}</span>"},"tha-ap119:6.4":{"pli":"kusalaṃ caritaṃ mayā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap119:7.1":{"pli":"Ekanavutito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap119:7.2":{"pli":"yaṃ saññamalabhiṃ tadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap119:7.3":{"pli":"Duggatiṃ nābhijānāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap119:7.4":{"pli":"buddhasaññāyidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap119:8.1":{"pli":"Ito cuddasakappamhi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap119:8.2":{"pli":"rājā āsiṃ patāpavā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap119:8.3":{"pli":"Samito nāma nāmena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap119:8.4":{"pli":"cakkavattī mahabbalo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap119:9.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap119:9.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap119:9.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap119:10.1":{"pli":"Itthaṃ sudaṃ āyasmā buddhasaññako thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap119:11.1":{"pli":"Buddhasaññakattherassāpadānaṃ sattamaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"tha-ap12":{"tha-ap12:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap12'><header><ul><li class='division'>{}</li>"},"tha-ap12:0.2":{"pli":"Buddhavagga ","html":"<li>{}</li></ul>"},"tha-ap12:0.3":{"pli":"Ānandattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap12:1.1":{"pli":"“Ārāmadvārā nikkhamma, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap12:1.2":{"pli":"padumuttaro mahāmuni; ","html":"<span class='verse-line'>{}</span>"},"tha-ap12:1.3":{"pli":"Vassento amataṃ vuṭṭhiṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap12:1.4":{"pli":"nibbāpesi mahājanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap12:2.1":{"pli":"Satasahassaṃ te dhīrā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap12:2.2":{"pli":"chaḷabhiññā mahiddhikā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap12:2.3":{"pli":"Parivārenti sambuddhaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap12:2.4":{"pli":"chāyāva anapāyinī. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap12:3.1":{"pli":"Hatthikkhandhagato āsiṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap12:3.2":{"pli":"setacchattaṃ varuttamaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap12:3.3":{"pli":"Sucārurūpaṃ disvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap12:3.4":{"pli":"vitti me udapajjatha. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap12:4.1":{"pli":"Oruyha hatthikhandhamhā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap12:4.2":{"pli":"upagacchiṃ narāsabhaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap12:4.3":{"pli":"Ratanāmayachattaṃ me, ","html":"<span class='verse-line'>{}</span>"},"tha-ap12:4.4":{"pli":"buddhaseṭṭhassa dhārayiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap12:5.1":{"pli":"Mama saṅkappamaññāya, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap12:5.2":{"pli":"padumuttaro mahāisi; ","html":"<span class='verse-line'>{}</span>"},"tha-ap12:5.3":{"pli":"Taṃ kathaṃ ṭhapayitvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap12:5.4":{"pli":"imā gāthā abhāsatha. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap12:6.1":{"pli":"‘Yo so chattamadhāresi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap12:6.2":{"pli":"soṇṇālaṅkārabhūsitaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap12:6.3":{"pli":"Tamahaṃ kittayissāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap12:6.4":{"pli":"suṇotha mama bhāsato. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap12:7.1":{"pli":"Ito gantvā ayaṃ poso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap12:7.2":{"pli":"tusitaṃ āvasissati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap12:7.3":{"pli":"Anubhossati sampattiṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap12:7.4":{"pli":"accharāhi purakkhato. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap12:8.1":{"pli":"Catuttiṃsatikkhattuñca, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap12:8.2":{"pli":"devarajjaṃ karissati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap12:8.3":{"pli":"Balādhipo aṭṭhasataṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap12:8.4":{"pli":"vasudhaṃ āvasissati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap12:9.1":{"pli":"Aṭṭhapaññāsakkhattuñca, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap12:9.2":{"pli":"cakkavattī bhavissati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap12:9.3":{"pli":"Padesarajjaṃ vipulaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap12:9.4":{"pli":"mahiyā kārayissati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap12:10.1":{"pli":"Kappasatasahassamhi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap12:10.2":{"pli":"okkākakulasambhavo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap12:10.3":{"pli":"Gotamo nāma gottena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap12:10.4":{"pli":"satthā loke bhavissati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap12:11.1":{"pli":"Sakyānaṃ kulaketussa, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap12:11.2":{"pli":"ñātibandhu bhavissati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap12:11.3":{"pli":"Ānando nāma nāmena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap12:11.4":{"pli":"upa