{"tha-ap424":{"tha-ap424:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap424'><header><ul><li class='division'>{}</li>"},"tha-ap424:0.2":{"pli":"Sakiṃsammajjakavagga ","html":"<li>{}</li></ul>"},"tha-ap424:0.3":{"pli":"Ekadussadāyakattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap424:1.1":{"pli":"“Nagare haṃsavatiyā, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap424:1.2":{"pli":"ahosiṃ tiṇahārako; ","html":"<span class='verse-line'>{}</span>"},"tha-ap424:1.3":{"pli":"Tiṇahārena jīvāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap424:1.4":{"pli":"tena posemi dārake. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap424:2.1":{"pli":"Padumuttaro nāma jino, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap424:2.2":{"pli":"sabbadhammāna pāragū; ","html":"<span class='verse-line'>{}</span>"},"tha-ap424:2.3":{"pli":"Tamandhakāraṃ nāsetvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap424:2.4":{"pli":"uppajji lokanāyako. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap424:3.1":{"pli":"Sake ghare nisīditvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap424:3.2":{"pli":"evaṃ cintesi tāvade; ","html":"<span class='verse-line'>{}</span>"},"tha-ap424:3.3":{"pli":"‘Buddho loke samuppanno, ","html":"<span class='verse-line'>{}</span>"},"tha-ap424:3.4":{"pli":"deyyadhammo na vijjati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap424:4.1":{"pli":"Idaṃ me sāṭakaṃ ekaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap424:4.2":{"pli":"natthi me koci dāyako; ","html":"<span class='verse-line'>{}</span>"},"tha-ap424:4.3":{"pli":"Dukkho nirayasamphasso, ","html":"<span class='verse-line'>{}</span>"},"tha-ap424:4.4":{"pli":"ropayissāmi dakkhiṇaṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap424:5.1":{"pli":"Evāhaṃ cintayitvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap424:5.2":{"pli":"sakaṃ cittaṃ pasādayiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap424:5.3":{"pli":"Ekaṃ dussaṃ gahetvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap424:5.4":{"pli":"buddhaseṭṭhassadāsahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap424:6.1":{"pli":"Ekaṃ dussaṃ daditvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap424:6.2":{"pli":"ukkuṭṭhiṃ sampavattayiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap424:6.3":{"pli":"‘Yadi buddho tuvaṃ vīra, ","html":"<span class='verse-line'>{}</span>"},"tha-ap424:6.4":{"pli":"tārehi maṃ mahāmuni’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap424:7.1":{"pli":"Padumuttaro lokavidū, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap424:7.2":{"pli":"āhutīnaṃ paṭiggaho; ","html":"<span class='verse-line'>{}</span>"},"tha-ap424:7.3":{"pli":"Mama dānaṃ pakittento, ","html":"<span class='verse-line'>{}</span>"},"tha-ap424:7.4":{"pli":"akā me anumodanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap424:8.1":{"pli":"‘Iminā ekadussena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap424:8.2":{"pli":"cetanāpaṇidhīhi ca; ","html":"<span class='verse-line'>{}</span>"},"tha-ap424:8.3":{"pli":"Kappasatasahassāni, ","html":"<span class='verse-line'>{}</span>"},"tha-ap424:8.4":{"pli":"vinipātaṃ na gacchasi. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap424:9.1":{"pli":"Chattiṃsakkhattuṃ devindo, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap424:9.2":{"pli":"devarajjaṃ karissasi; ","html":"<span class='verse-line'>{}</span>"},"tha-ap424:9.3":{"pli":"Tettiṃsakkhattuṃ rājā ca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap424:9.4":{"pli":"cakkavattī bhavissasi. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap424:10.1":{"pli":"Padesarajjaṃ vipulaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap424:10.2":{"pli":"gaṇanāto asaṅkhiyaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap424:10.3":{"pli":"Devaloke manusse vā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap424:10.4":{"pli":"saṃsaranto tuvaṃ bhave. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap424:11.1":{"pli":"Rūpavā guṇasampanno, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap424:11.2":{"pli":"anavakkantadehavā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap424:11.3":{"pli":"Akkhobhaṃ amitaṃ dussaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap424:11.4":{"pli":"labhissasi yadicchakaṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap424:12.1":{"pli":"Idaṃ vatvāna sambuddho, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap424:12.2":{"pli":"jalajuttamanāmako; ","html":"<span class='verse-line'>{}</span>"},"tha-ap424:12.3":{"pli":"Nabhaṃ abbhuggamī vīro, ","html":"<span class='verse-line'>{}</span>"},"tha-ap424:12.4":{"pli":"haṃsarājāva ambare. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap424:13.1":{"pli":"Yaṃ yaṃ yonupapajjāmi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap424:13.2":{"pli":"devattaṃ atha mānusaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap424:13.3":{"pli":"Bhoge me ūnatā natthi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap424:13.4":{"pli":"ekadussassidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap424:14.1":{"pli":"Paduddhāre paduddhāre, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap424:14.2":{"pli":"dussaṃ nibbattate mamaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap424:14.3":{"pli":"Heṭṭhā dussamhi tiṭṭhāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap424:14.4":{"pli":"uparicchadanaṃ mama. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap424:15.1":{"pli":"Cakkavāḷaṃ upādāya, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap424:15.2":{"pli":"sakānanaṃ sapabbataṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap424:15.3":{"pli":"Icchamāno cahaṃ ajja, ","html":"<span class='verse-line'>{}</span>"},"tha-ap424:15.4":{"pli":"dussehacchā