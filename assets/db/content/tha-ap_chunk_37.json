},"tha-ap429:2.3":{"pli":"Dhunanto vākacīrāni, ","html":"<span class='verse-line'>{}</span>"},"tha-ap429:2.4":{"pli":"gacchāmi ambare tadā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap429:3.1":{"pli":"Buddhaseṭṭhassa upari, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap429:3.2":{"pli":"gantuṃ na visahāmahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap429:3.3":{"pli":"Pakkhīva selamāsajja, ","html":"<span class='verse-line'>{}</span>"},"tha-ap429:3.4":{"pli":"gamanaṃ na labhāmahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap429:4.1":{"pli":"Udake vokkamitvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap429:4.2":{"pli":"evaṃ gacchāmi ambare; ","html":"<span class='verse-line'>{}</span>"},"tha-ap429:4.3":{"pli":"Na me idaṃ bhūtapubbaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap429:4.4":{"pli":"iriyāpathavikopanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap429:5.1":{"pli":"Handa metaṃ gavesissaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap429:5.2":{"pli":"appevatthaṃ labheyyahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap429:5.3":{"pli":"Orohanto antalikkhā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap429:5.4":{"pli":"saddamassosi satthuno. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap429:6.1":{"pli":"Sarena rajanīyena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap429:6.2":{"pli":"savanīyena vaggunā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap429:6.3":{"pli":"Aniccataṃ kathentassa, ","html":"<span class='verse-line'>{}</span>"},"tha-ap429:6.4":{"pli":"taññeva uggahiṃ tadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap429:6.5":{"pli":"Aniccasaññamuggayha, ","html":"<span class='verse-line'>{}</span>"},"tha-ap429:6.6":{"pli":"agamāsiṃ mamassamaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap429:7.1":{"pli":"Yāvatāyuṃ vasitvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap429:7.2":{"pli":"tattha kālaṅkato ahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap429:7.3":{"pli":"Carime vattamānamhi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap429:7.4":{"pli":"saddhammassavanaṃ sariṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap429:8.1":{"pli":"Tena kammena sukatena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap429:8.2":{"pli":"cetanāpaṇidhīhi ca; ","html":"<span class='verse-line'>{}</span>"},"tha-ap429:8.3":{"pli":"Jahitvā mānusaṃ dehaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap429:8.4":{"pli":"tāvatiṃsamagacchahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap429:9.1":{"pli":"Tiṃsakappasahassāni, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap429:9.2":{"pli":"devaloke ramiṃ ahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap429:9.3":{"pli":"Ekapaññāsakkhattuñca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap429:9.4":{"pli":"devarajjamakārayiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap429:10.1":{"pli":"Ekavīsatikkhattuñca, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap429:10.2":{"pli":"cakkavattī ahosahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap429:10.3":{"pli":"Padesarajjaṃ vipulaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap429:10.4":{"pli":"gaṇanāto asaṅkhiyaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap429:11.1":{"pli":"Anubhomi sakaṃ puññaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap429:11.2":{"pli":"sukhitohaṃ bhavābhave; ","html":"<span class='verse-line'>{}</span>"},"tha-ap429:11.3":{"pli":"Anussarāmi taṃ saññaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap429:11.4":{"pli":"saṃsaranto bhavābhave; ","html":"<span class='verse-line'>{}</span>"},"tha-ap429:11.5":{"pli":"Na koṭiṃ paṭivijjhāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap429:11.6":{"pli":"nibbānaṃ accutaṃ padaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap429:12.1":{"pli":"Pitugehe nisīditvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap429:12.2":{"pli":"samaṇo bhāvitindriyo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap429:12.3":{"pli":"Kathaṃsa paridīpento, ","html":"<span class='verse-line'>{}</span>"},"tha-ap429:12.4":{"pli":"aniccatamudāhari. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap429:13.1":{"pli":"‘Aniccā vata saṅkhārā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap429:13.2":{"pli":"uppādavayadhammino; ","html":"<span class='verse-line'>{}</span>"},"tha-ap429:13.3":{"pli":"Uppajjitvā nirujjhanti, ","html":"<span class='verse-line'>{}</span>"},"tha-ap429:13.4":{"pli":"tesaṃ vūpasamo sukho’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap429:14.1":{"pli":"Saha gāthaṃ suṇitvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap429:14.2":{"pli":"pubbasaññamanussariṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap429:14.3":{"pli":"Ekāsane nisīditvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap429:14.4":{"pli":"arahattamapāpuṇiṃ. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap429:15.1":{"pli":"<b>Jātiyā sattavassena</b>, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap429:15.2":{"pli":"arahattamapāpuṇiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap429:15.3":{"pli":"Upasampādayī buddho, ","html":"<span class='verse-line'>{}</span>"},"tha-ap429:15.4":{"pli":"dhammassavanassidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap429:16.1":{"pli":"Satasahassito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap429:16.2":{"pli":"yaṃ dhammamasuṇiṃ tadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap429:16.3":{"pli":"Duggatiṃ nābhijānāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap429:16.4":{"pli":"dhammassavanassidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap429:17.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap429:17.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap429:17.3":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap429:18.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap429:18.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap429:18.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap429:19.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap429:19.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap429:19.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap429:20.1":{"pli":"Itthaṃ sudaṃ āyasmā ekadhammassavaniyo thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap429:21.1":{"pli":"Ekadhammassavaniyattherassāpadānaṃ sattamaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"tha-ap43":{"tha-ap43:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap43'><header><ul><li class='division'>{}</li>"},"tha-ap43:0.2":{"pli":"Upālivagga ","html":"<li>{}</li></ul>"},"tha-ap43:0.3":{"pli":"1 Bhāgineyyupālittheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap43:1.1":{"pli":"“Khīṇāsavasahassehi, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap43:1.2":{"pli":"parivuto lokanāyako; ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:1.3":{"pli":"Vivekamanuyutto so, ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:1.4":{"pli":"gacchate paṭisallituṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap43:2.1":{"pli":"Ajinena nivatthohaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap43:2.2":{"pli":"tidaṇḍaparidhārako; ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:2.3":{"pli":"Bhikkhusaṅghaparibyūḷhaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:2.4":{"pli":"addasaṃ lokanāyakaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap43:3.1":{"pli":"Ekaṃsaṃ ajinaṃ katvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap43:3.2":{"pli":"sire katvāna añjaliṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:3.3":{"pli":"Sambuddhaṃ abhivādetvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:3.4":{"pli":"santhaviṃ lokanāyakaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap43:4.1":{"pli":"Yathāṇḍajā ca saṃsedā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap43:4.2":{"pli":"opapātī jalābujā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:4.3":{"pli":"Kākādipakkhino sabbe, ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:4.4":{"pli":"antalikkhacarā sadā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap43:5.1":{"pli":"‘Ye keci pāṇabhūtatthi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap43:5.2":{"pli":"saññino vā asaññino; ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:5.3":{"pli":"Sabbe te tava ñāṇamhi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:5.4":{"pli":"anto honti samogadhā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap43:6.1":{"pli":"Gandhā ca pabbateyyā ye, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap43:6.2":{"pli":"himavantanaguttame; ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:6.3":{"pli":"Sabbe te tava sīlamhi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:6.4":{"pli":"kalāyapi na yujjare. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap43:7.1":{"pli":"Mohandhakārapakkhando, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap43:7.2":{"pli":"ayaṃ loko sadevako; ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:7.3":{"pli":"Tava ñāṇamhi jotante, ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:7.4":{"pli":"andhakārā vidhaṃsitā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap43:8.1":{"pli":"Yathā atthaṅgate sūriye, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap43:8.2":{"pli":"honti sattā tamogatā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:8.3":{"pli":"Evaṃ buddhe anuppanne, ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:8.4":{"pli":"hoti loko tamogato. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap43:9.1":{"pli":"Yathodayanto ādicco, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap43:9.2":{"pli":"vinodeti tamaṃ sadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:9.3":{"pli":"Tatheva tvaṃ buddhaseṭṭha, ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:9.4":{"pli":"viddhaṃsesi tamaṃ sadā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap43:10.1":{"pli":"Padhānapahitattosi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap43:10.2":{"pli":"buddho loke sadevake; ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:10.3":{"pli":"Tava kammābhiraddhena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:10.4":{"pli":"tosesi janataṃ bahuṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap43:11.1":{"pli":"Taṃ sabbaṃ anumoditvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap43:11.2":{"pli":"padumuttaro mahāmuni; ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:11.3":{"pli":"Nabhaṃ abbhuggamī dhīro, ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:11.4":{"pli":"haṃsarājāva ambare. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap43:12.1":{"pli":"Abbhuggantvāna sambuddho, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap43:12.2":{"pli":"mahesi padumuttaro; ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:12.3":{"pli":"Antalikkhe ṭhito satthā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:12.4":{"pli":"imā gāthā abhāsatha. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap43:13.1":{"pli":"Yenidaṃ thavitaṃ ñāṇaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap43:13.2":{"pli":"opammehi samāyutaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:13.3":{"pli":"Tamahaṃ kittayissāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:13.4":{"pli":"suṇātha mama bhāsato. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap43:14.1":{"pli":"‘Aṭṭhārasañca khattuṃ so, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap43:14.2":{"pli":"devarājā bhavissati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:14.3":{"pli":"Pathabyā rajjaṃ tisataṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:14.4":{"pli":"vasudhaṃ āvasissati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap43:15.1":{"pli":"Pañcavīsatikkhattuñca, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap43:15.2":{"pli":"cakkavattī bhavissati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:15.3":{"pli":"Padesarajjaṃ vipulaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:15.4":{"pli":"gaṇanāto asaṅkhiyaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap43:16.1":{"pli":"Kappasatasahassamhi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap43:16.2":{"pli":"okkākakulasambhavo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:16.3":{"pli":"Gotamo nāma gottena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:16.4":{"pli":"satthā loke bhavissati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap43:17.1":{"pli":"Tusitā hi cavitvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap43:17.2":{"pli":"sukkamūlena codito; ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:17.3":{"pli":"Hīnova jātiyā santo, ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:17.4":{"pli":"upāli nāma hessati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap43:18.1":{"pli":"So pacchā pabbajitvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap43:18.2":{"pli":"virājetvāna pāpakaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:18.3":{"pli":"Sabbāsave pariññāya, ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:18.4":{"pli":"nibbāyissatināsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap43:19.1":{"pli":"Tuṭṭho ca gotamo buddho, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap43:19.2":{"pli":"sakyaputto mahāyaso; ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:19.3":{"pli":"Vinayādhigataṃ tassa, ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:19.4":{"pli":"etadagge ṭhapessati’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap43:20.1":{"pli":"Saddhāyāhaṃ pabbajito, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap43:20.2":{"pli":"katakicco anāsavo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:20.3":{"pli":"Sabbāsave pariññāya, ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:20.4":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap43:21.1":{"pli":"Bhagavā cānukampī maṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap43:21.2":{"pli":"vinayehaṃ visārado; ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:21.3":{"pli":"Sakakammābhiraddho ca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:21.4":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap43:22.1":{"pli":"Saṃvuto pātimokkhamhi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap43:22.2":{"pli":"indriyesu ca pañcasu; ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:22.3":{"pli":"Dhāremi vinayaṃ sabbaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:22.4":{"pli":"kevalaṃ ratanākaraṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap43:23.1":{"pli":"Mamañca guṇamaññāya, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap43:23.2":{"pli":"satthā loke anuttaro; ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:23.3":{"pli":"Bhikkhusaṅghe nisīditvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:23.4":{"pli":"etadagge ṭhapesi maṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap43:24.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap43:24.2":{"pli":"vimokkhāpi ca aṭṭhime; ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:24.3":{"pli":"Chaḷabhiññā sacchikatā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap43:24.4":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap43:25.1":{"pli":"Itthaṃ sudaṃ āyasmā upāli thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap43:26.1":{"pli":"Bhāgineyyupālittherassāpadānaṃ paṭhamaṃ. ","html":"<p class='endsutta'>{}</p></article>"}}}