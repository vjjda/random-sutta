{"cnd2":{"cnd2:0.1":{"pli":"Cūḷaniddesa ","html":"<article id='cnd2'><header><ul><li class='division'>{}</li>"},"cnd2:0.2":{"pli":"Pārāyanavaggagāthā ","html":"<li>{}</li></ul>"},"cnd2:0.3":{"pli":"Pucchā ","html":"<h1 class='sutta-title'>{}</h1></header>"},"cnd2:1.0.1":{"pli":"1. Ajitamāṇavapucchā ","html":"<h2>{}</h2>"},"cnd2:1.1":{"pli":"“Kenassu nivuto loko, ","html":"<blockquote class='gatha'><p data-counter='1'><span class='verse-line'>{}</span>"},"cnd2:1.2":{"pli":"(iccāyasmā ajito) ","html":"<span class='speaker'>{}</span>"},"cnd2:1.3":{"pli":"Kenassu nappakāsati; ","html":"<span class='verse-line'>{}</span>"},"cnd2:1.4":{"pli":"Kissābhilepanaṃ brūsi, ","html":"<span class='verse-line'>{}</span>"},"cnd2:1.5":{"pli":"Kiṃsu tassa mahabbhayaṃ”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:2.1":{"pli":"“Avijjāya nivuto loko, ","html":"<p data-counter='2'><span class='verse-line'>{}</span>"},"cnd2:2.2":{"pli":"(ajitāti bhagavā) ","html":"<span class='speaker'>{}</span>"},"cnd2:2.3":{"pli":"Vevicchā pamādā nappakāsati; ","html":"<span class='verse-line'>{}</span>"},"cnd2:2.4":{"pli":"Jappābhilepanaṃ brūmi, ","html":"<span class='verse-line'>{}</span>"},"cnd2:2.5":{"pli":"Dukkhamassa mahabbhayaṃ”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:3.1":{"pli":"“Savanti sabbadhi sotā, ","html":"<p data-counter='3'><span class='verse-line'>{}</span>"},"cnd2:3.2":{"pli":"(iccāyasmā ajito) ","html":"<span class='speaker'>{}</span>"},"cnd2:3.3":{"pli":"Sotānaṃ kiṃ nivāraṇaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:3.4":{"pli":"Sotānaṃ saṃvaraṃ brūhi, ","html":"<span class='verse-line'>{}</span>"},"cnd2:3.5":{"pli":"Kena sotā pidhiyyare”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:4.1":{"pli":"“Yāni sotāni lokasmiṃ, ","html":"<p data-counter='4'><span class='verse-line'>{}</span>"},"cnd2:4.2":{"pli":"(ajitāti bhagavā) ","html":"<span class='speaker'>{}</span>"},"cnd2:4.3":{"pli":"Sati tesaṃ nivāraṇaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:4.4":{"pli":"Sotānaṃ saṃvaraṃ brūmi, ","html":"<span class='verse-line'>{}</span>"},"cnd2:4.5":{"pli":"Paññāyete pidhiyyare”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:5.1":{"pli":"“Paññā ceva sati cāpi, ","html":"<p data-counter='5'><span class='verse-line'>{}</span>"},"cnd2:5.2":{"pli":"(iccāyasmā ajito) ","html":"<span class='speaker'>{}</span>"},"cnd2:5.3":{"pli":"Nāmarūpañca mārisa; ","html":"<span class='verse-line'>{}</span>"},"cnd2:5.4":{"pli":"Etaṃ me puṭṭho pabrūhi, ","html":"<span class='verse-line'>{}</span>"},"cnd2:5.5":{"pli":"Katthetaṃ uparujjhati”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:6.1":{"pli":"“Yametaṃ pañhaṃ apucchi, ","html":"<p data-counter='61'><span class='verse-line'>{}</span>"},"cnd2:6.2":{"pli":"ajita taṃ vadāmi te; ","html":"<span class='verse-line'>{}</span>"},"cnd2:6.3":{"pli":"Yattha nāmañca rūpañca, ","html":"<span class='verse-line'>{}</span>"},"cnd2:6.4":{"pli":"asesaṃ uparujjhati; ","html":"<span class='verse-line'>{}</span>"},"cnd2:6.5":{"pli":"Viññāṇassa nirodhena, ","html":"<span class='verse-line'>{}</span>"},"cnd2:6.6":{"pli":"etthetaṃ uparujjhati”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:7.1":{"pli":"“Ye ca saṅkhātadhammāse, ","html":"<p data-counter='71'><span class='verse-line'>{}</span>"},"cnd2:7.2":{"pli":"ye ca sekhā puthū idha; ","html":"<span class='verse-line'>{}</span>"},"cnd2:7.3":{"pli":"Tesaṃ me nipako iriyaṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd2:7.4":{"pli":"puṭṭho pabrūhi mārisa”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:8.1":{"pli":"“Kāmesu nābhigijjheyya, ","html":"<p data-counter='81'><span class='verse-line'>{}</span>"},"cnd2:8.2":{"pli":"Manasānāvilo siyā; ","html":"<span class='verse-line'>{}</span>"},"cnd2:8.3":{"pli":"Kusalo sabbadhammānaṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd2:8.4":{"pli":"Sato bhikkhu paribbaje”ti. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"cnd2:8.5":{"pli":"Ajitamāṇavapucchā paṭhamā. ","html":"<p class='endsutta'>{}</p>"},"cnd2:9.0":{"pli":"2. Tissametteyyamāṇavapucchā ","html":"<h2>{}</h2>"},"cnd2:9.1":{"pli":"“Kodha santusito loke, ","html":"<blockquote class='gatha'><p data-counter='1'><span class='verse-line'>{}</span>"},"cnd2:9.2":{"pli":"(iccāyasmā tissametteyyo) ","html":"<span class='speaker'>{}</span>"},"cnd2:9.3":{"pli":"Kassa no santi iñjitā; ","html":"<span class='verse-line'>{}</span>"},"cnd2:9.4":{"pli":"Ko ubhantamabhiññāya, ","html":"<span class='verse-line'>{}</span>"},"cnd2:9.5":{"pli":"Majjhe mantā na lippati; ","html":"<span class='verse-line'>{}</span>"},"cnd2:9.6":{"pli":"Kaṃ brūsi mahāpurisoti, ","html":"<span class='verse-line'>{}</span>"},"cnd2:9.7":{"pli":"Ko idha sibbinimaccagā”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:10.1":{"pli":"“Kāmesu brahmacariyavā, ","html":"<p data-counter='2'><span class='verse-line'>{}</span>"},"cnd2:10.2":{"pli":"(metteyyāti bhagavā) ","html":"<span class='speaker'>{}</span>"},"cnd2:10.3":{"pli":"Vītataṇho sadā sato; ","html":"<span class='verse-line'>{}</span>"},"cnd2:10.4":{"pli":"Saṅkhāya nibbuto bhikkhu, ","html":"<span class='verse-line'>{}</span>"},"cnd2:10.5":{"pli":"Tassa no santi iñjitā. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:11.1":{"pli":"So ubhantamabhiññāya, ","html":"<p data-counter='31'><span class='verse-line'>{}</span>"},"cnd2:11.2":{"pli":"Majjhe mantā na lippati; ","html":"<span class='verse-line'>{}</span>"},"cnd2:11.3":{"pli":"Taṃ brūmi mahāpurisoti, ","html":"<span class='verse-line'>{}</span>"},"cnd2:11.4":{"pli":"So idha sibbinimaccagā”ti. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"cnd2:11.5":{"pli":"Tissametteyyamāṇavapucchā dutiyā. ","html":"<p class='endsutta'>{}</p>"},"cnd2:12.0":{"pli":"3. Puṇṇakamāṇavapucchā ","html":"<h2>{}</h2>"},"cnd2:12.1":{"pli":"“Anejaṃ mūladassāviṃ, ","html":"<blockquote class='gatha'><p data-counter='1'><span class='verse-line'>{}</span>"},"cnd2:12.2":{"pli":"(iccāyasmā puṇṇako) ","html":"<span class='speaker'>{}</span>"},"cnd2:12.3":{"pli":"Atthi pañhena āgamaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:12.4":{"pli":"Kiṃ nissitā isayo manujā, ","html":"<span class='verse-line'>{}</span>"},"cnd2:12.5":{"pli":"Khattiyā brāhmaṇā devatānaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:12.6":{"pli":"Yaññamakappayiṃsu puthūdha loke, ","html":"<span class='verse-line'>{}</span>"},"cnd2:12.7":{"pli":"Pucchāmi taṃ bhagavā brūhi metaṃ”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:13.1":{"pli":"“Ye kecime isayo manujā, ","html":"<p data-counter='2'><span class='verse-line'>{}</span>"},"cnd2:13.2":{"pli":"(puṇṇakāti bhagavā) ","html":"<span class='speaker'>{}</span>"},"cnd2:13.3":{"pli":"Khattiyā brāhmaṇā devatānaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:13.4":{"pli":"Yaññamakappayiṃsu puthūdha loke, ","html":"<span class='verse-line'>{}</span>"},"cnd2:13.5":{"pli":"Āsīsamānā puṇṇaka itthattaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:13.6":{"pli":"Jaraṃ sitā yaññamakappayiṃsu”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:14.1":{"pli":"“Ye kecime isayo manujā, ","html":"<p data-counter='3'><span class='verse-line'>{}</span>"},"cnd2:14.2":{"pli":"(iccāyasmā puṇṇako) ","html":"<span class='speaker'>{}</span>"},"cnd2:14.3":{"pli":"Khattiyā brāhmaṇā devatānaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:14.4":{"pli":"Yaññamakappayiṃsu puthūdha loke, ","html":"<span class='verse-line'>{}</span>"},"cnd2:14.5":{"pli":"Kaccisu te bhagavā yaññapathe appamattā; ","html":"<span class='verse-line'>{}</span>"},"cnd2:14.6":{"pli":"Atāruṃ jātiñca jarañca mārisa, ","html":"<span class='verse-line'>{}</span>"},"cnd2:14.7":{"pli":"Pucchāmi taṃ bhagavā brūhi metaṃ”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:15.1":{"pli":"“Āsīsanti thomayanti abhijappanti juhanti, ","html":"<p data-counter='4'><span class='verse-line'>{}</span>"},"cnd2:15.2":{"pli":"(puṇṇakāti bhagavā) ","html":"<span class='speaker'>{}</span>"},"cnd2:15.3":{"pli":"Kāmābhijappanti paṭicca lābhaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:15.4":{"pli":"Te yājayogā bhavarāgarattā, ","html":"<span class='verse-line'>{}</span>"},"cnd2:15.5":{"pli":"Nātariṃsu jātijaranti brūmi”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:16.1":{"pli":"“Te ce nātariṃsu yājayogā, ","html":"<p data-counter='5'><span class='verse-line'>{}</span>"},"cnd2:16.2":{"pli":"(iccāyasmā puṇṇako) ","html":"<span class='speaker'>{}</span>"},"cnd2:16.3":{"pli":"Yaññehi jātiñca jarañca mārisa; ","html":"<span class='verse-line'>{}</span>"},"cnd2:16.4":{"pli":"Atha ko carahi devamanussaloke, ","html":"<span class='verse-line'>{}</span>"},"cnd2:16.5":{"pli":"Atāri jātiñca jarañca mārisa; ","html":"<span class='verse-line'>{}</span>"},"cnd2:16.6":{"pli":"Pucchāmi taṃ bhagavā brūhi metaṃ”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:17.1":{"pli":"“Saṅkhāya lokasmi paroparāni, ","html":"<p data-counter='6'><span class='verse-line'>{}</span>"},"cnd2:17.2":{"pli":"(puṇṇakāti bhagavā) ","html":"<span class='speaker'>{}</span>"},"cnd2:17.3":{"pli":"Yassiñjitaṃ natthi kuhiñci loke; ","html":"<span class='verse-line'>{}</span>"},"cnd2:17.4":{"pli":"Santo vidhūmo anīgho nirāso, ","html":"<span class='verse-line'>{}</span>"},"cnd2:17.5":{"pli":"Atāri so jātijaranti brūmī”ti. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"cnd2:17.6":{"pli":"Puṇṇakamāṇavapucchā tatiyā. ","html":"<p class='endsutta'>{}</p>"},"cnd2:18.0":{"pli":"4. Mettagūmāṇavapucchā ","html":"<h2>{}</h2>"},"cnd2:18.1":{"pli":"“Pucchāmi taṃ bhagavā brūhi metaṃ, ","html":"<blockquote class='gatha'><p data-counter='1'><span class='verse-line'>{}</span>"},"cnd2:18.2":{"pli":"(iccāyasmā mettagū) ","html":"<span class='speaker'>{}</span>"},"cnd2:18.3":{"pli":"Maññāmi taṃ vedaguṃ bhāvitattaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:18.4":{"pli":"Kuto nu dukkhā samudāgatā ime, ","html":"<span class='verse-line'>{}</span>"},"cnd2:18.5":{"pli":"Ye keci lokasmimanekarūpā”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:19.1":{"pli":"“Dukkhassa ve maṃ pabhavaṃ apucchasi, ","html":"<p data-counter='2'><span class='verse-line'>{}</span>"},"cnd2:19.2":{"pli":"(mettagūti bhagavā) ","html":"<span class='speaker'>{}</span>"},"cnd2:19.3":{"pli":"Taṃ te pavakkhāmi yathā pajānaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:19.4":{"pli":"Upadhinidānā pabhavanti dukkhā, ","html":"<span class='verse-line'>{}</span>"},"cnd2:19.5":{"pli":"Ye keci lokasmimanekarūpā. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:20.1":{"pli":"Yo ve avidvā upadhiṃ karoti, ","html":"<p data-counter='31'><span class='verse-line'>{}</span>"},"cnd2:20.2":{"pli":"Punappunaṃ dukkhamupeti mando; ","html":"<span class='verse-line'>{}</span>"},"cnd2:20.3":{"pli":"Tasmā pajānaṃ upadhiṃ na kayirā, ","html":"<span class='verse-line'>{}</span>"},"cnd2:20.4":{"pli":"Dukkhassa jātippabhavānupassī”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:21.1":{"pli":"“Yaṃ taṃ apucchimha akittayī no, ","html":"<p data-counter='41'><span class='verse-line'>{}</span>"},"cnd2:21.2":{"pli":"Aññaṃ taṃ pucchāma tadiṅgha brūhi; ","html":"<span class='verse-line'>{}</span>"},"cnd2:21.3":{"pli":"‘Kathaṃ nu dhīrā vitaranti oghaṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd2:21.4":{"pli":"Jātiṃ jaraṃ sokapariddavañca’; ","html":"<span class='verse-line'>{}</span>"},"cnd2:21.5":{"pli":"Taṃ me muni sādhu viyākarohi, ","html":"<span class='verse-line'>{}</span>"},"cnd2:21.6":{"pli":"Tathā hi te vidito esa dhammo”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:22.1":{"pli":"“Kittayissāmi te dhammaṃ, ","html":"<p data-counter='5'><span class='verse-line'>{}</span>"},"cnd2:22.2":{"pli":"(mettagūti bhagavā) ","html":"<span class='speaker'>{}</span>"},"cnd2:22.3":{"pli":"Diṭṭhe dhamme anītihaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:22.4":{"pli":"Yaṃ viditvā sato caraṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd2:22.5":{"pli":"Tare loke visattikaṃ”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:23.1":{"pli":"“Tañcāhaṃ abhinandāmi, ","html":"<p data-counter='61'><span class='verse-line'>{}</span>"},"cnd2:23.2":{"pli":"mahesi dhammamuttamaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:23.3":{"pli":"Yaṃ viditvā sato caraṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd2:23.4":{"pli":"tare loke visattikaṃ”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:24.1":{"pli":"“Yaṃ kiñci sampajānāsi, ","html":"<p data-counter='7'><span class='verse-line'>{}</span>"},"cnd2:24.2":{"pli":"(mettagūti bhagavā) ","html":"<span class='speaker'>{}</span>"},"cnd2:24.3":{"pli":"Uddhaṃ adho tiriyañcāpi majjhe; ","html":"<span class='verse-line'>{}</span>"},"cnd2:24.4":{"pli":"Etesu nandiñca nivesanañca, ","html":"<span class='verse-line'>{}</span>"},"cnd2:24.5":{"pli":"Panujja viññāṇaṃ bhave na tiṭṭhe. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:25.1":{"pli":"Evaṃvihārī sato appamatto, ","html":"<p data-counter='81'><span class='verse-line'>{}</span>"},"cnd2:25.2":{"pli":"Bhikkhu caraṃ hitvā mamāyitāni; ","html":"<span class='verse-line'>{}</span>"},"cnd2:25.3":{"pli":"Jātiṃ jaraṃ sokapariddavañca, ","html":"<span class='verse-line'>{}</span>"},"cnd2:25.4":{"pli":"Idheva vidvā pajaheyya dukkhaṃ”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:26.1":{"pli":"“Etābhinandāmi vaco mahesino, ","html":"<p data-counter='91'><span class='verse-line'>{}</span>"},"cnd2:26.2":{"pli":"Sukittitaṃ gotamanūpadhīkaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:26.3":{"pli":"Addhā hi bhagavā pahāsi dukkhaṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd2:26.4":{"pli":"Tathā hi te vidito esa dhammo. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:27.1":{"pli":"Te cāpi nūnappajaheyyu dukkhaṃ, ","html":"<p data-counter='101'><span class='verse-line'>{}</span>"},"cnd2:27.2":{"pli":"Ye tvaṃ muni aṭṭhitaṃ ovadeyya; ","html":"<span class='verse-line'>{}</span>"},"cnd2:27.3":{"pli":"Taṃ taṃ namassāmi samecca nāga, ","html":"<span class='verse-line'>{}</span>"},"cnd2:27.4":{"pli":"Appeva maṃ bhagavā aṭṭhitaṃ ovadeyya”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:28.1":{"pli":"“Yaṃ brāhmaṇaṃ vedagumābhijaññā, ","html":"<p data-counter='111'><span class='verse-line'>{}</span>"},"cnd2:28.2":{"pli":"Akiñcanaṃ kāmabhave asattaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:28.3":{"pli":"Addhā hi so oghamimaṃ atāri, ","html":"<span class='verse-line'>{}</span>"},"cnd2:28.4":{"pli":"Tiṇṇo ca pāraṃ akhilo akaṅkho. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:29.1":{"pli":"Vidvā ca yo vedagū naro idha, ","html":"<p data-counter='121'><span class='verse-line'>{}</span>"},"cnd2:29.2":{"pli":"Bhavābhave saṅgamimaṃ visajja; ","html":"<span class='verse-line'>{}</span>"},"cnd2:29.3":{"pli":"So vītataṇho anīgho nirāso, ","html":"<span class='verse-line'>{}</span>"},"cnd2:29.4":{"pli":"Atāri so jātijaranti brūmī”ti. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"cnd2:29.5":{"pli":"Mettagūmāṇavapucchā catutthī. ","html":"<p class='endsutta'>{}</p>"},"cnd2:30.0":{"pli":"5. Dhotakamāṇavapucchā ","html":"<h2>{}</h2>"},"cnd2:30.1":{"pli":"“Pucchāmi taṃ bhagavā brūhi metaṃ, ","html":"<blockquote class='gatha'><p data-counter='1'><span class='verse-line'>{}</span>"},"cnd2:30.2":{"pli":"(iccāyasmā dhotako) ","html":"<span class='speaker'>{}</span>"},"cnd2:30.3":{"pli":"Vācābhikaṅkhāmi mahesi tuyhaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:30.4":{"pli":"Tava sutvāna nigghosaṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd2:30.5":{"pli":"Sikkhe nibbānamattano”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:31.1":{"pli":"“Tenahātappaṃ karohi, ","html":"<p data-counter='2'><span class='verse-line'>{}</span>"},"cnd2:31.2":{"pli":"(dhotakāti bhagavā) ","html":"<span class='speaker'>{}</span>"},"cnd2:31.3":{"pli":"Idheva nipako sato; ","html":"<span class='verse-line'>{}</span>"},"cnd2:31.4":{"pli":"Ito sutvāna nigghosaṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd2:31.5":{"pli":"Sikkhe nibbānamattano”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:32.1":{"pli":"“Passāmahaṃ devamanussaloke, ","html":"<p data-counter='31'><span class='verse-line'>{}</span>"},"cnd2:32.2":{"pli":"Akiñcanaṃ brāhmaṇamiriyamānaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:32.3":{"pli":"Taṃ taṃ namassāmi samantacakkhu, ","html":"<span class='verse-line'>{}</span>"},"cnd2:32.4":{"pli":"Pamuñca maṃ sakka kathaṅkathāhi”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:33.1":{"pli":"“Nāhaṃ sahissāmi pamocanāya, ","html":"<p data-counter='41'><span class='verse-line'>{}</span>"},"cnd2:33.2":{"pli":"Kathaṅkathiṃ dhotaka kañci loke; ","html":"<span class='verse-line'>{}</span>"},"cnd2:33.3":{"pli":"Dhammañca seṭṭhaṃ abhijānamāno, ","html":"<span class='verse-line'>{}</span>"},"cnd2:33.4":{"pli":"Evaṃ tuvaṃ oghamimaṃ taresi”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:34.1":{"pli":"“Anusāsa brahme karuṇāyamāno, ","html":"<p data-counter='51'><span class='verse-line'>{}</span>"},"cnd2:34.2":{"pli":"Vivekadhammaṃ yamahaṃ vijaññaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:34.3":{"pli":"Yathāhaṃ ākāsova abyāpajjamāno, ","html":"<span class='verse-line'>{}</span>"},"cnd2:34.4":{"pli":"Idheva santo asito careyyaṃ”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:35.1":{"pli":"“Kittayissāmi te santiṃ, ","html":"<p data-counter='6'><span class='verse-line'>{}</span>"},"cnd2:35.2":{"pli":"(dhotakāti bhagavā) ","html":"<span class='speaker'>{}</span>"},"cnd2:35.3":{"pli":"Diṭṭhe dhamme anītihaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:35.4":{"pli":"Yaṃ viditvā sato caraṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd2:35.5":{"pli":"Tare loke visattikaṃ”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:36.1":{"pli":"“Tañcāhaṃ abhinandāmi, ","html":"<p data-counter='71'><span class='verse-line'>{}</span>"},"cnd2:36.2":{"pli":"mahesi santimuttamaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:36.3":{"pli":"Yaṃ viditvā sato caraṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd2:36.4":{"pli":"tare loke visattikaṃ”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:37.1":{"pli":"“Yaṃ kiñci sampajānāsi, ","html":"<p data-counter='8'><span class='verse-line'>{}</span>"},"cnd2:37.2":{"pli":"(dhotakāti bhagavā) ","html":"<span class='speaker'>{}</span>"},"cnd2:37.3":{"pli":"Uddhaṃ adho tiriyañcāpi majjhe; ","html":"<span class='verse-line'>{}</span>"},"cnd2:37.4":{"pli":"Etaṃ viditvā saṅgoti loke, ","html":"<span class='verse-line'>{}</span>"},"cnd2:37.5":{"pli":"Bhavābhavāya mākāsi taṇhan”ti. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"cnd2:37.6":{"pli":"Dhotakamāṇavapucchā pañcamī. ","html":"<p class='endsutta'>{}</p>"},"cnd2:38.0":{"pli":"6. Upasīvamāṇavapucchā ","html":"<h2>{}</h2>"},"cnd2:38.1":{"pli":"“Eko ahaṃ sakka mahantamoghaṃ, ","html":"<blockquote class='gatha'><p data-counter='1'><span class='verse-line'>{}</span>"},"cnd2:38.2":{"pli":"(iccāyasmā upasīvo) ","html":"<span class='speaker'>{}</span>"},"cnd2:38.3":{"pli":"Anissito no visahāmi tārituṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:38.4":{"pli":"Ārammaṇaṃ brūhi samantacakkhu, ","html":"<span class='verse-line'>{}</span>"},"cnd2:38.5":{"pli":"Yaṃ nissito oghamimaṃ tareyyaṃ”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:39.1":{"pli":"“Ākiñcaññaṃ pekkhamāno satimā, ","html":"<p data-counter='2'><span class='verse-line'>{}</span>"},"cnd2:39.2":{"pli":"(upasīvāti bhagavā) ","html":"<span class='speaker'>{}</span>"},"cnd2:39.3":{"pli":"Natthīti nissāya tarassu oghaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:39.4":{"pli":"Kāme pahāya virato kathāhi, ","html":"<span class='verse-line'>{}</span>"},"cnd2:39.5":{"pli":"Taṇhakkhayaṃ nattamahābhipassa”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:40.1":{"pli":"“Sabbesu kāmesu yo vītarāgo, ","html":"<p data-counter='3'><span class='verse-line'>{}</span>"},"cnd2:40.2":{"pli":"(iccāyasmā upasīvo) ","html":"<span class='speaker'>{}</span>"},"cnd2:40.3":{"pli":"Ākiñcaññaṃ nissito hitvā maññaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:40.4":{"pli":"Saññāvimokkhe paramedhimutto, ","html":"<span class='verse-line'>{}</span>"},"cnd2:40.5":{"pli":"Tiṭṭhe nu so tattha anānuyāyī”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:41.1":{"pli":"“Sabbesu kāmesu yo vītarāgo, ","html":"<p data-counter='4'><span class='verse-line'>{}</span>"},"cnd2:41.2":{"pli":"(upasīvāti bhagavā) ","html":"<span class='speaker'>{}</span>"},"cnd2:41.3":{"pli":"Ākiñcaññaṃ nissito hitvā maññaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:41.4":{"pli":"Saññāvimokkhe paramedhimutto, ","html":"<span class='verse-line'>{}</span>"},"cnd2:41.5":{"pli":"Tiṭṭheyya so tattha anānuyāyī”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:42.1":{"pli":"“Tiṭṭhe ce so tattha anānuyāyī, ","html":"<p data-counter='51'><span class='verse-line'>{}</span>"},"cnd2:42.2":{"pli":"Pūgampi vassānaṃ samantacakkhu; ","html":"<span class='verse-line'>{}</span>"},"cnd2:42.3":{"pli":"Tattheva so sītisiyā vimutto, ","html":"<span class='verse-line'>{}</span>"},"cnd2:42.4":{"pli":"Cavetha viññāṇaṃ tathāvidhassa”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:43.1":{"pli":"“Acci yathā vātavegena khittā, ","html":"<p data-counter='6'><span class='verse-line'>{}</span>"},"cnd2:43.2":{"pli":"(upasīvāti bhagavā) ","html":"<span class='speaker'>{}</span>"},"cnd2:43.3":{"pli":"Atthaṃ paleti na upeti saṅkhaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:43.4":{"pli":"Evaṃ munī nāmakāyā vimutto, ","html":"<span class='verse-line'>{}</span>"},"cnd2:43.5":{"pli":"Atthaṃ paleti na upeti saṅkhaṃ”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:44.1":{"pli":"“Atthaṅgato so uda vā so natthi, ","html":"<p data-counter='71'><span class='verse-line'>{}</span>"},"cnd2:44.2":{"pli":"Udāhu ve sassatiyā arogo; ","html":"<span class='verse-line'>{}</span>"},"cnd2:44.3":{"pli":"Taṃ me munī sādhu viyākarohi, ","html":"<span class='verse-line'>{}</span>"},"cnd2:44.4":{"pli":"Tathā hi te vidito esa dhammo”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:45.1":{"pli":"“Atthaṅgatassa na pamāṇamatthi, ","html":"<p data-counter='8'><span class='verse-line'>{}</span>"},"cnd2:45.2":{"pli":"(upasīvāti bhagavā) ","html":"<span class='speaker'>{}</span>"},"cnd2:45.3":{"pli":"Yena naṃ vajjuṃ taṃ tassa natthi; ","html":"<span class='verse-line'>{}</span>"},"cnd2:45.4":{"pli":"Sabbesu dhammesu samūhatesu, ","html":"<span class='verse-line'>{}</span>"},"cnd2:45.5":{"pli":"Samūhatā vādapathāpi sabbe”ti. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"cnd2:45.6":{"pli":"Upasīvamāṇavapucchā chaṭṭhī. ","html":"<p class='endsutta'>{}</p>"},"cnd2:46.0":{"pli":"7. Nandamāṇavapucchā ","html":"<h2>{}</h2>"},"cnd2:46.1":{"pli":"“Santi loke munayo, ","html":"<blockquote class='gatha'><p data-counter='1'><span class='verse-line'>{}</span>"},"cnd2:46.2":{"pli":"(iccāyasmā nando) ","html":"<span class='speaker'>{}</span>"},"cnd2:46.3":{"pli":"Janā vadanti tayidaṃ kathaṃsu; ","html":"<span class='verse-line'>{}</span>"},"cnd2:46.4":{"pli":"Ñāṇūpapannaṃ muni no vadanti, ","html":"<span class='verse-line'>{}</span>"},"cnd2:46.5":{"pli":"Udāhu ve jīvitenūpapannaṃ”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:47.1":{"pli":"“Na diṭṭhiyā na sutiyā na ñāṇena, ","html":"<p data-counter='21'><span class='verse-line'>{}</span>"},"cnd2:47.2":{"pli":"Munīdha nanda kusalā vadanti; ","html":"<span class='verse-line'>{}</span>"},"cnd2:47.3":{"pli":"Visenikatvā anīghā nirāsā, ","html":"<span class='verse-line'>{}</span>"},"cnd2:47.4":{"pli":"Caranti ye te munayoti brūmi”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:48.1":{"pli":"“Ye kecime samaṇabrāhmaṇāse, ","html":"<p data-counter='3'><span class='verse-line'>{}</span>"},"cnd2:48.2":{"pli":"(iccāyasmā nando) ","html":"<span class='speaker'>{}</span>"},"cnd2:48.3":{"pli":"Diṭṭhassutenāpi vadanti suddhiṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:48.4":{"pli":"Sīlabbatenāpi vadanti suddhiṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd2:48.5":{"pli":"Anekarūpena vadanti suddhiṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:48.6":{"pli":"Kaccissu te bhagavā tattha yatā carantā, ","html":"<span class='verse-line'>{}</span>"},"cnd2:48.7":{"pli":"Atāru jātiñca jarañca mārisa; ","html":"<span class='verse-line'>{}</span>"},"cnd2:48.8":{"pli":"Pucchāmi taṃ bhagavā brūhi metaṃ”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:49.1":{"pli":"“Ye kecime samaṇabrāhmaṇāse, ","html":"<p data-counter='4'><span class='verse-line'>{}</span>"},"cnd2:49.2":{"pli":"(nandāti bhagavā) ","html":"<span class='speaker'>{}</span>"},"cnd2:49.3":{"pli":"Diṭṭhassutenāpi vadanti suddhiṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:49.4":{"pli":"Sīlabbatenāpi vadanti suddhiṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd2:49.5":{"pli":"Anekarūpena vadanti suddhiṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:49.6":{"pli":"Kiñcāpi te tattha yatā caranti, ","html":"<span class='verse-line'>{}</span>"},"cnd2:49.7":{"pli":"Nātariṃsu jātijaranti brūmi”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:50.1":{"pli":"“Ye kecime samaṇabrāhmaṇāse, ","html":"<p data-counter='5'><span class='verse-line'>{}</span>"},"cnd2:50.2":{"pli":"(iccāyasmā nando) ","html":"<span class='speaker'>{}</span>"},"cnd2:50.3":{"pli":"Diṭṭhassutenāpi vadanti suddhiṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:50.4":{"pli":"Sīlabbatenāpi vadanti suddhiṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd2:50.5":{"pli":"Anekarūpena vadanti suddhiṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:50.6":{"pli":"Te ce muni brūsi anoghatiṇṇe, ","html":"<span class='verse-line'>{}</span>"},"cnd2:50.7":{"pli":"Atha ko carahi devamanussaloke; ","html":"<span class='verse-line'>{}</span>"},"cnd2:50.8":{"pli":"Atāri jātiñca jarañca mārisa, ","html":"<span class='verse-line'>{}</span>"},"cnd2:50.9":{"pli":"Pucchāmi taṃ bhagavā brūhi metaṃ”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:51.1":{"pli":"“Nāhaṃ sabbe samaṇabrāhmaṇāse, ","html":"<p data-counter='6'><span class='verse-line'>{}</span>"},"cnd2:51.2":{"pli":"(nandāti bhagavā) ","html":"<span class='speaker'>{}</span>"},"cnd2:51.3":{"pli":"Jātijarāya nivutāti brūmi; ","html":"<span class='verse-line'>{}</span>"},"cnd2:51.4":{"pli":"Ye sīdha diṭṭhaṃ va sutaṃ mutaṃ vā, ","html":"<span class='verse-line'>{}</span>"},"cnd2:51.5":{"pli":"Sīlabbataṃ vāpi pahāya sabbaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:51.6":{"pli":"Anekarūpampi pahāya sabbaṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd2:51.7":{"pli":"Taṇhaṃ pariññāya anāsavāse; ","html":"<span class='verse-line'>{}</span>"},"cnd2:51.8":{"pli":"Te ve narā oghatiṇṇāti brūmi”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:52.1":{"pli":"“Etābhinandāmi vaco mahesino, ","html":"<p data-counter='71'><span class='verse-line'>{}</span>"},"cnd2:52.2":{"pli":"Sukittitaṃ gotamanūpadhīkaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:52.3":{"pli":"Ye sīdha diṭṭhaṃ va sutaṃ mutaṃ vā, ","html":"<span class='verse-line'>{}</span>"},"cnd2:52.4":{"pli":"Sīlabbataṃ vāpi pahāya sabbaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:52.5":{"pli":"Anekarūpampi pahāya sabbaṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd2:52.6":{"pli":"Taṇhaṃ pariññāya anāsavāse; ","html":"<span class='verse-line'>{}</span>"},"cnd2:52.7":{"pli":"Ahampi te oghatiṇṇāti brūmī”ti. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"cnd2:52.8":{"pli":"Nandamāṇavapucchā sattamā. ","html":"<p class='endsutta'>{}</p>"},"cnd2:53.0":{"pli":"8. Hemakamāṇavapucchā ","html":"<h2>{}</h2>"},"cnd2:53.1":{"pli":"“Ye me pubbe viyākaṃsu, ","html":"<blockquote class='gatha'><p data-counter='1'><span class='verse-line'>{}</span>"},"cnd2:53.2":{"pli":"(iccāyasmā hemako) ","html":"<span class='speaker'>{}</span>"},"cnd2:53.3":{"pli":"Huraṃ gotamasāsanā; ","html":"<span class='verse-line'>{}</span>"},"cnd2:53.4":{"pli":"Iccāsi iti bhavissati, ","html":"<span class='verse-line'>{}</span>"},"cnd2:53.5":{"pli":"Sabbaṃ taṃ itihītihaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:53.6":{"pli":"Sabbaṃ taṃ takkavaḍḍhanaṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd2:53.7":{"pli":"Nāhaṃ tattha abhiramiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:54.1":{"pli":"Tvañca me dhammamakkhāhi, ","html":"<p data-counter='21'><span class='verse-line'>{}</span>"},"cnd2:54.2":{"pli":"taṇhānigghātanaṃ muni; ","html":"<span class='verse-line'>{}</span>"},"cnd2:54.3":{"pli":"Yaṃ viditvā sato caraṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd2:54.4":{"pli":"tare loke visattikaṃ”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:55.1":{"pli":"“Idha diṭṭhasutamutaviññātesu, ","html":"<p data-counter='31'><span class='verse-line'>{}</span>"},"cnd2:55.2":{"pli":"Piyarūpesu hemaka; ","html":"<span class='verse-line'>{}</span>"},"cnd2:55.3":{"pli":"Chandarāgavinodanaṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd2:55.4":{"pli":"Nibbānapadamaccutaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:56.1":{"pli":"Etadaññāya ye satā, ","html":"<p data-counter='41'><span class='verse-line'>{}</span>"},"cnd2:56.2":{"pli":"Diṭṭhadhammābhinibbutā; ","html":"<span class='verse-line'>{}</span>"},"cnd2:56.3":{"pli":"Upasantā ca te sadā, ","html":"<span class='verse-line'>{}</span>"},"cnd2:56.4":{"pli":"Tiṇṇā loke visattikan”ti. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"cnd2:56.5":{"pli":"Hemakamāṇavapucchā aṭṭhamā. ","html":"<p class='endsutta'>{}</p>"},"cnd2:57.0":{"pli":"9. Todeyyamāṇavapucchā ","html":"<h2>{}</h2>"},"cnd2:57.1":{"pli":"“Yasmiṃ kāmā na vasanti, ","html":"<blockquote class='gatha'><p data-counter='1'><span class='verse-line'>{}</span>"},"cnd2:57.2":{"pli":"(iccāyasmā todeyyo) ","html":"<span class='speaker'>{}</span>"},"cnd2:57.3":{"pli":"Taṇhā yassa na vijjati; ","html":"<span class='verse-line'>{}</span>"},"cnd2:57.4":{"pli":"Kathaṅkathā ca yo tiṇṇo, ","html":"<span class='verse-line'>{}</span>"},"cnd2:57.5":{"pli":"Vimokkho tassa kīdiso”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:58.1":{"pli":"“Yasmiṃ kāmā na vasanti, ","html":"<p data-counter='2'><span class='verse-line'>{}</span>"},"cnd2:58.2":{"pli":"(todeyyāti bhagavā) ","html":"<span class='speaker'>{}</span>"},"cnd2:58.3":{"pli":"Taṇhā yassa na vijjati; ","html":"<span class='verse-line'>{}</span>"},"cnd2:58.4":{"pli":"Kathaṅkathā ca yo tiṇṇo, ","html":"<span class='verse-line'>{}</span>"},"cnd2:58.5":{"pli":"Vimokkho tassa nāparo”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:59.1":{"pli":"“Nirāsaso so uda āsasāno, ","html":"<p data-counter='31'><span class='verse-line'>{}</span>"},"cnd2:59.2":{"pli":"Paññāṇavā so uda paññakappī; ","html":"<span class='verse-line'>{}</span>"},"cnd2:59.3":{"pli":"Muniṃ ahaṃ sakka yathā vijaññaṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd2:59.4":{"pli":"Taṃ me viyācikkha samantacakkhu”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:60.1":{"pli":"“Nirāsaso so na ca āsasāno, ","html":"<p data-counter='41'><span class='verse-line'>{}</span>"},"cnd2:60.2":{"pli":"Paññāṇavā so na ca paññakappī; ","html":"<span class='verse-line'>{}</span>"},"cnd2:60.3":{"pli":"Evampi todeyya muniṃ vijāna, ","html":"<span class='verse-line'>{}</span>"},"cnd2:60.4":{"pli":"Akiñcanaṃ kāmabhave asattan”ti. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"cnd2:60.5":{"pli":"Todeyyamāṇavapucchā navamā. ","html":"<p class='endsutta'>{}</p>"},"cnd2:61.0":{"pli":"10. Kappamāṇavapucchā ","html":"<h2>{}</h2>"},"cnd2:61.1":{"pli":"“Majjhe sarasmiṃ tiṭṭhataṃ, ","html":"<blockquote class='gatha'><p data-counter='1'><span class='verse-line'>{}</span>"},"cnd2:61.2":{"pli":"(iccāyasmā kappo) ","html":"<span class='speaker'>{}</span>"},"cnd2:61.3":{"pli":"Oghe jāte mahabbhaye; ","html":"<span class='verse-line'>{}</span>"},"cnd2:61.4":{"pli":"Jarāmaccuparetānaṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd2:61.5":{"pli":"Dīpaṃ pabrūhi mārisa; ","html":"<span class='verse-line'>{}</span>"},"cnd2:61.6":{"pli":"Tvañca me dīpamakkhāhi, ","html":"<span class='verse-line'>{}</span>"},"cnd2:61.7":{"pli":"Yathāyidaṃ nāparaṃ siyā”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:62.1":{"pli":"“Majjhe sarasmiṃ tiṭṭhataṃ, ","html":"<p data-counter='2'><span class='verse-line'>{}</span>"},"cnd2:62.2":{"pli":"(kappāti bhagavā) ","html":"<span class='speaker'>{}</span>"},"cnd2:62.3":{"pli":"Oghe jāte mahabbhaye; ","html":"<span class='verse-line'>{}</span>"},"cnd2:62.4":{"pli":"Jarāmaccuparetānaṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd2:62.5":{"pli":"Dīpaṃ pabrūmi kappa te. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:63.1":{"pli":"Akiñcanaṃ anādānaṃ, ","html":"<p data-counter='31'><span class='verse-line'>{}</span>"},"cnd2:63.2":{"pli":"etaṃ dīpaṃ anāparaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:63.3":{"pli":"Nibbānaṃ iti naṃ brūmi, ","html":"<span class='verse-line'>{}</span>"},"cnd2:63.4":{"pli":"jarāmaccuparikkhayaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:64.1":{"pli":"Etadaññāya ye satā, ","html":"<p data-counter='41'><span class='verse-line'>{}</span>"},"cnd2:64.2":{"pli":"Diṭṭhadhammābhinibbutā; ","html":"<span class='verse-line'>{}</span>"},"cnd2:64.3":{"pli":"Na te māravasānugā, ","html":"<span class='verse-line'>{}</span>"},"cnd2:64.4":{"pli":"Na te mārassa paddhagū”ti. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"cnd2:64.5":{"pli":"Kappamāṇavapucchā dasamā. ","html":"<p class='endsutta'>{}</p>"},"cnd2:65.0":{"pli":"11. Jatukaṇṇimāṇavapucchā ","html":"<h2>{}</h2>"},"cnd2:65.1":{"pli":"“Sutvānahaṃ vīramakāmakāmiṃ, ","html":"<blockquote class='gatha'><p data-counter='1'><span class='verse-line'>{}</span>"},"cnd2:65.2":{"pli":"(iccāyasmā jatukaṇṇi) ","html":"<span class='speaker'>{}</span>"},"cnd2:65.3":{"pli":"Oghātigaṃ puṭṭhumakāmamāgamaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:65.4":{"pli":"Santipadaṃ brūhi sahajanetta, ","html":"<span class='verse-line'>{}</span>"},"cnd2:65.5":{"pli":"Yathātacchaṃ bhagavā brūhi metaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:66.1":{"pli":"Bhagavā hi kāme abhibhuyya iriyati, ","html":"<p data-counter='21'><span class='verse-line'>{}</span>"},"cnd2:66.2":{"pli":"Ādiccova pathaviṃ tejī tejasā; ","html":"<span class='verse-line'>{}</span>"},"cnd2:66.3":{"pli":"Parittapaññassa me bhūripañña, ","html":"<span class='verse-line'>{}</span>"},"cnd2:66.4":{"pli":"Ācikkha dhammaṃ yamahaṃ vijaññaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:66.5":{"pli":"Jātijarāya idha vippahānaṃ”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:67.1":{"pli":"“Kāmesu vinaya gedhaṃ, ","html":"<p data-counter='3'><span class='verse-line'>{}</span>"},"cnd2:67.2":{"pli":"(jatukaṇṇīti bhagavā) ","html":"<span class='speaker'>{}</span>"},"cnd2:67.3":{"pli":"Nekkhammaṃ daṭṭhu khemato; ","html":"<span class='verse-line'>{}</span>"},"cnd2:67.4":{"pli":"Uggahitaṃ nirattaṃ vā, ","html":"<span class='verse-line'>{}</span>"},"cnd2:67.5":{"pli":"Mā te vijjittha kiñcanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:68.1":{"pli":"Yaṃ pubbe taṃ visosehi, ","html":"<p data-counter='41'><span class='verse-line'>{}</span>"},"cnd2:68.2":{"pli":"pacchā te māhu kiñcanaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:68.3":{"pli":"Majjhe ce no gahessasi, ","html":"<span class='verse-line'>{}</span>"},"cnd2:68.4":{"pli":"upasanto carissasi. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:69.1":{"pli":"Sabbaso nāmarūpasmiṃ, ","html":"<p data-counter='51'><span class='verse-line'>{}</span>"},"cnd2:69.2":{"pli":"Vītagedhassa brāhmaṇa; ","html":"<span class='verse-line'>{}</span>"},"cnd2:69.3":{"pli":"Āsavāssa na vijjanti, ","html":"<span class='verse-line'>{}</span>"},"cnd2:69.4":{"pli":"Yehi maccuvasaṃ vaje”ti. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"cnd2:69.5":{"pli":"Jatukaṇṇimāṇavapucchā ekādasamā. ","html":"<p class='endsutta'>{}</p>"},"cnd2:70.0":{"pli":"12. Bhadrāvudhamāṇavapucchā ","html":"<h2>{}</h2>"},"cnd2:70.1":{"pli":"“Okañjahaṃ taṇhacchidaṃ anejaṃ, ","html":"<blockquote class='gatha'><p data-counter='1'><span class='verse-line'>{}</span>"},"cnd2:70.2":{"pli":"(iccāyasmā bhadrāvudho) ","html":"<span class='speaker'>{}</span>"},"cnd2:70.3":{"pli":"Nandiñjahaṃ oghatiṇṇaṃ vimuttaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:70.4":{"pli":"Kappañjahaṃ abhiyāce sumedhaṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd2:70.5":{"pli":"Sutvāna nāgassa apanamissanti ito. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:71.1":{"pli":"Nānājanā janapadehi saṅgatā, ","html":"<p data-counter='21'><span class='verse-line'>{}</span>"},"cnd2:71.2":{"pli":"Tava vīra vākyaṃ abhikaṅkhamānā; ","html":"<span class='verse-line'>{}</span>"},"cnd2:71.3":{"pli":"Tesaṃ tuvaṃ sādhu viyākarohi, ","html":"<span class='verse-line'>{}</span>"},"cnd2:71.4":{"pli":"Tathā hi te vidito esa dhammo”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:72.1":{"pli":"“Ādānataṇhaṃ vinayetha sabbaṃ, ","html":"<p data-counter='3'><span class='verse-line'>{}</span>"},"cnd2:72.2":{"pli":"(bhadrāvudhāti bhagavā) ","html":"<span class='speaker'>{}</span>"},"cnd2:72.3":{"pli":"Uddhaṃ adho tiriyañcāpi majjhe; ","html":"<span class='verse-line'>{}</span>"},"cnd2:72.4":{"pli":"Yaṃ yañhi lokasmimupādiyanti, ","html":"<span class='verse-line'>{}</span>"},"cnd2:72.5":{"pli":"Teneva māro anveti jantuṃ. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:73.1":{"pli":"Tasmā pajānaṃ na upādiyetha, ","html":"<p data-counter='41'><span class='verse-line'>{}</span>"},"cnd2:73.2":{"pli":"Bhikkhu sato kiñcanaṃ sabbaloke; ","html":"<span class='verse-line'>{}</span>"},"cnd2:73.3":{"pli":"Ādānasatte iti pekkhamāno, ","html":"<span class='verse-line'>{}</span>"},"cnd2:73.4":{"pli":"Pajaṃ imaṃ maccudheyye visattan”ti. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"cnd2:73.5":{"pli":"Bhadrāvudhamāṇavapucchā dvādasamā. ","html":"<p class='endsutta'>{}</p>"},"cnd2:74.0":{"pli":"13. Udayamāṇavapucchā ","html":"<h2>{}</h2>"},"cnd2:74.1":{"pli":"“Jhāyiṃ virajamāsīnaṃ, ","html":"<blockquote class='gatha'><p data-counter='1'><span class='verse-line'>{}</span>"},"cnd2:74.2":{"pli":"(iccāyasmā udayo) ","html":"<span class='speaker'>{}</span>"},"cnd2:74.3":{"pli":"Katakiccaṃ anāsavaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:74.4":{"pli":"Pāraguṃ sabbadhammānaṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd2:74.5":{"pli":"Atthi pañhena āgamaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:74.6":{"pli":"Aññāvimokkhaṃ pabrūhi, ","html":"<span class='verse-line'>{}</span>"},"cnd2:74.7":{"pli":"Avijjāya pabhedanaṃ”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:75.1":{"pli":"“Pahānaṃ kāmacchandānaṃ, ","html":"<p data-counter='2'><span class='verse-line'>{}</span>"},"cnd2:75.2":{"pli":"(udayāti bhagavā) ","html":"<span class='speaker'>{}</span>"},"cnd2:75.3":{"pli":"Domanassāna cūbhayaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:75.4":{"pli":"Thinassa ca panūdanaṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd2:75.5":{"pli":"Kukkuccānaṃ nivāraṇaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:76.1":{"pli":"Upekkhāsatisaṃsuddhaṃ, ","html":"<p data-counter='31'><span class='verse-line'>{}</span>"},"cnd2:76.2":{"pli":"dhammatakkapurejavaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:76.3":{"pli":"Aññāvimokkhaṃ pabrūmi, ","html":"<span class='verse-line'>{}</span>"},"cnd2:76.4":{"pli":"avijjāya pabhedanaṃ”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:77.1":{"pli":"“Kiṃsu saṃyojano loko, ","html":"<p data-counter='41'><span class='verse-line'>{}</span>"},"cnd2:77.2":{"pli":"kiṃsu tassa vicāraṇaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:77.3":{"pli":"Kissassa vippahānena, ","html":"<span class='verse-line'>{}</span>"},"cnd2:77.4":{"pli":"nibbānaṃ iti vuccati”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:78.1":{"pli":"“Nandisaṃyojano loko, ","html":"<p data-counter='51'><span class='verse-line'>{}</span>"},"cnd2:78.2":{"pli":"vitakkassa vicāraṇaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:78.3":{"pli":"Taṇhāya vippahānena, ","html":"<span class='verse-line'>{}</span>"},"cnd2:78.4":{"pli":"nibbānaṃ iti vuccati”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:79.1":{"pli":"“Kathaṃ satassa carato, ","html":"<p data-counter='61'><span class='verse-line'>{}</span>"},"cnd2:79.2":{"pli":"viññāṇaṃ uparujjhati; ","html":"<span class='verse-line'>{}</span>"},"cnd2:79.3":{"pli":"Bhagavantaṃ puṭṭhumāgamma, ","html":"<span class='verse-line'>{}</span>"},"cnd2:79.4":{"pli":"taṃ suṇoma vaco tava”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:80.1":{"pli":"“Ajjhattañca bahiddhā ca, ","html":"<p data-counter='71'><span class='verse-line'>{}</span>"},"cnd2:80.2":{"pli":"Vedanaṃ nābhinandato; ","html":"<span class='verse-line'>{}</span>"},"cnd2:80.3":{"pli":"Evaṃ satassa carato, ","html":"<span class='verse-line'>{}</span>"},"cnd2:80.4":{"pli":"Viññāṇaṃ uparujjhatī”ti. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"cnd2:80.5":{"pli":"Udayamāṇavapucchā terasamā. ","html":"<p class='endsutta'>{}</p>"},"cnd2:81.0":{"pli":"14. Posālamāṇavapucchā ","html":"<h2>{}</h2>"},"cnd2:81.1":{"pli":"“Yo atītaṃ ādisati, ","html":"<blockquote class='gatha'><p data-counter='1'><span class='verse-line'>{}</span>"},"cnd2:81.2":{"pli":"(iccāyasmā posālo) ","html":"<span class='speaker'>{}</span>"},"cnd2:81.3":{"pli":"Anejo chinnasaṃsayo; ","html":"<span class='verse-line'>{}</span>"},"cnd2:81.4":{"pli":"Pāraguṃ sabbadhammānaṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd2:81.5":{"pli":"Atthi pañhena āgamaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:82.1":{"pli":"Vibhūtarūpasaññissa, ","html":"<p data-counter='21'><span class='verse-line'>{}</span>"},"cnd2:82.2":{"pli":"sabbakāyappahāyino; ","html":"<span class='verse-line'>{}</span>"},"cnd2:82.3":{"pli":"Ajjhattañca bahiddhā ca, ","html":"<span class='verse-line'>{}</span>"},"cnd2:82.4":{"pli":"natthi kiñcīti passato; ","html":"<span class='verse-line'>{}</span>"},"cnd2:82.5":{"pli":"Ñāṇaṃ sakkānupucchāmi, ","html":"<span class='verse-line'>{}</span>"},"cnd2:82.6":{"pli":"kathaṃ neyyo tathāvidho”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:83.1":{"pli":"“Viññāṇaṭṭhitiyo sabbā, ","html":"<p data-counter='3'><span class='verse-line'>{}</span>"},"cnd2:83.2":{"pli":"(posālāti bhagavā) ","html":"<span class='speaker'>{}</span>"},"cnd2:83.3":{"pli":"Abhijānaṃ tathāgato; ","html":"<span class='verse-line'>{}</span>"},"cnd2:83.4":{"pli":"Tiṭṭhantamenaṃ jānāti, ","html":"<span class='verse-line'>{}</span>"},"cnd2:83.5":{"pli":"Vimuttaṃ tapparāyaṇaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:84.1":{"pli":"Ākiñcaññasambhavaṃ ñatvā, ","html":"<p data-counter='41'><span class='verse-line'>{}</span>"},"cnd2:84.2":{"pli":"Nandī saṃyojanaṃ iti; ","html":"<span class='verse-line'>{}</span>"},"cnd2:84.3":{"pli":"Evametaṃ abhiññāya, ","html":"<span class='verse-line'>{}</span>"},"cnd2:84.4":{"pli":"Tato tattha vipassati; ","html":"<span class='verse-line'>{}</span>"},"cnd2:84.5":{"pli":"Etaṃ ñāṇaṃ tathaṃ tassa, ","html":"<span class='verse-line'>{}</span>"},"cnd2:84.6":{"pli":"Brāhmaṇassa vusīmato”ti. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"cnd2:84.7":{"pli":"Posālamāṇavapucchā cuddasamā. ","html":"<p class='endsutta'>{}</p>"},"cnd2:85.0":{"pli":"15. Mogharājamāṇavapucchā ","html":"<h2>{}</h2>"},"cnd2:85.1":{"pli":"“Dvāhaṃ sakkaṃ apucchissaṃ, ","html":"<blockquote class='gatha'><p data-counter='1'><span class='verse-line'>{}</span>"},"cnd2:85.2":{"pli":"(iccāyasmā mogharājā) ","html":"<span class='speaker'>{}</span>"},"cnd2:85.3":{"pli":"Na me byākāsi cakkhumā; ","html":"<span class='verse-line'>{}</span>"},"cnd2:85.4":{"pli":"Yāvatatiyañca devīsi, ","html":"<span class='verse-line'>{}</span>"},"cnd2:85.5":{"pli":"Byākarotīti me sutaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:86.1":{"pli":"Ayaṃ loko paro loko, ","html":"<p data-counter='21'><span class='verse-line'>{}</span>"},"cnd2:86.2":{"pli":"brahmaloko sadevako; ","html":"<span class='verse-line'>{}</span>"},"cnd2:86.3":{"pli":"Diṭṭhiṃ te nābhijānāti, ","html":"<span class='verse-line'>{}</span>"},"cnd2:86.4":{"pli":"gotamassa yasassino. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:87.1":{"pli":"Evaṃ abhikkantadassāviṃ, ","html":"<p data-counter='31'><span class='verse-line'>{}</span>"},"cnd2:87.2":{"pli":"atthi pañhena āgamaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:87.3":{"pli":"Kathaṃ lokaṃ avekkhantaṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd2:87.4":{"pli":"maccurājā na passati”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:88.1":{"pli":"“Suññato lokaṃ avekkhassu, ","html":"<p data-counter='41'><span class='verse-line'>{}</span>"},"cnd2:88.2":{"pli":"Mogharāja sadā sato; ","html":"<span class='verse-line'>{}</span>"},"cnd2:88.3":{"pli":"Attānudiṭṭhiṃ ūhacca, ","html":"<span class='verse-line'>{}</span>"},"cnd2:88.4":{"pli":"Evaṃ maccutaro siyā; ","html":"<span class='verse-line'>{}</span>"},"cnd2:88.5":{"pli":"Evaṃ lokaṃ avekkhantaṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd2:88.6":{"pli":"Maccurājā na passatī”ti. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"cnd2:88.7":{"pli":"Mogharājamāṇavapucchā pannarasamā. ","html":"<p class='endsutta'>{}</p>"},"cnd2:89.0":{"pli":"16. Piṅgiyamāṇavapucchā ","html":"<h2>{}</h2>"},"cnd2:89.1":{"pli":"“Jiṇṇohamasmi abalo vītavaṇṇo, ","html":"<blockquote class='gatha'><p data-counter='1'><span class='verse-line'>{}</span>"},"cnd2:89.2":{"pli":"(iccāyasmā piṅgiyo) ","html":"<span class='speaker'>{}</span>"},"cnd2:89.3":{"pli":"Nettā na suddhā savanaṃ na phāsu; ","html":"<span class='verse-line'>{}</span>"},"cnd2:89.4":{"pli":"Māhaṃ nassaṃ momuho antarāva, ","html":"<span class='verse-line'>{}</span>"},"cnd2:89.5":{"pli":"Ācikkha dhammaṃ yamahaṃ vijaññaṃ; ","html":"<span class='verse-line'>{}</span>"},"cnd2:89.6":{"pli":"Jātijarāya idha vippahānaṃ”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:90.1":{"pli":"“Disvāna rūpesu vihaññamāne, ","html":"<p data-counter='2'><span class='verse-line'>{}</span>"},"cnd2:90.2":{"pli":"(piṅgiyāti bhagavā) ","html":"<span class='speaker'>{}</span>"},"cnd2:90.3":{"pli":"Ruppanti rūpesu janā pamattā; ","html":"<span class='verse-line'>{}</span>"},"cnd2:90.4":{"pli":"Tasmā tuvaṃ piṅgiya appamatto, ","html":"<span class='verse-line'>{}</span>"},"cnd2:90.5":{"pli":"Jahassu rūpaṃ apunabbhavāya”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:91.1":{"pli":"“Disā catasso vidisā catasso, ","html":"<p data-counter='31'><span class='verse-line'>{}</span>"},"cnd2:91.2":{"pli":"Uddhaṃ adho dasa disā imāyo; ","html":"<span class='verse-line'>{}</span>"},"cnd2:91.3":{"pli":"Na tuyhaṃ adiṭṭhaṃ asutaṃ amutaṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd2:91.4":{"pli":"Atho aviññātaṃ kiñcanamatthi loke; ","html":"<span class='verse-line'>{}</span>"},"cnd2:91.5":{"pli":"Ācikkha dhammaṃ yamahaṃ vijaññaṃ, ","html":"<span class='verse-line'>{}</span>"},"cnd2:91.6":{"pli":"Jātijarāya idha vippahānaṃ”. ","html":"<span class='verse-line'>{}</span></p>"},"cnd2:92.1":{"pli":"“Taṇhādhipanne manuje pekkhamāno, ","html":"<p data-counter='4'><span class='verse-line'>{}</span>"},"cnd2:92.2":{"pli":"(piṅgiyāti bhagavā) ","html":"<span class='speaker'>{}</span>"},"cnd2:92.3":{"pli":"Santāpajāte jarasā parete; ","html":"<span class='verse-line'>{}</span>"},"cnd2:92.4":{"pli":"Tasmā tuvaṃ piṅgiya appamatto, ","html":"<span class='verse-line'>{}</span>"},"cnd2:92.5":{"pli":"Jahassu taṇhaṃ apunabbhavāyā”ti. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"cnd2:92.6":{"pli":"Piṅgiyamāṇavapucchā soḷasamā. ","html":"<p class='endsutta'>{}</p></article>"}}}