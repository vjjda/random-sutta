{"tha-ap413":{"tha-ap413:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap413'><header><ul><li class='division'>{}</li>"},"tha-ap413:0.2":{"pli":"Bhaddālivagga ","html":"<li>{}</li></ul>"},"tha-ap413:0.3":{"pli":"Bhaddālittheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap413:1.1":{"pli":"“Sumedho nāma sambuddho, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap413:1.2":{"pli":"aggo kāruṇiko muni; ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:1.3":{"pli":"Vivekakāmo lokaggo, ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:1.4":{"pli":"himavantamupāgami. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap413:2.1":{"pli":"Ajjhogāhetvā himavaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap413:2.2":{"pli":"sumedho lokanāyako; ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:2.3":{"pli":"Pallaṅkaṃ ābhujitvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:2.4":{"pli":"nisīdi purisuttamo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap413:3.1":{"pli":"Samādhiṃ so samāpanno, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap413:3.2":{"pli":"sumedho lokanāyako; ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:3.3":{"pli":"Sattarattindivaṃ buddho, ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:3.4":{"pli":"nisīdi purisuttamo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap413:4.1":{"pli":"Khāribhāraṃ gahetvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap413:4.2":{"pli":"vanamajjhogahiṃ ahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:4.3":{"pli":"Tatthaddasāsiṃ sambuddhaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:4.4":{"pli":"oghatiṇṇamanāsavaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap413:5.1":{"pli":"Sammajjaniṃ gahetvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap413:5.2":{"pli":"sammajjitvāna assamaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:5.3":{"pli":"Catudaṇḍe ṭhapetvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:5.4":{"pli":"akāsiṃ maṇḍapaṃ tadā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap413:6.1":{"pli":"Sālapupphaṃ āharitvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap413:6.2":{"pli":"maṇḍapaṃ chādayiṃ ahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:6.3":{"pli":"Pasannacitto sumano, ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:6.4":{"pli":"abhivandiṃ tathāgataṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap413:7.1":{"pli":"Yaṃ vadanti sumedhoti, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap413:7.2":{"pli":"bhūripaññaṃ sumedhasaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:7.3":{"pli":"Bhikkhusaṅghe nisīditvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:7.4":{"pli":"imā gāthā abhāsatha. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap413:8.1":{"pli":"Buddhassa giramaññāya, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap413:8.2":{"pli":"sabbe devā samāgamuṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:8.3":{"pli":"Asaṃsayaṃ buddhaseṭṭho, ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:8.4":{"pli":"dhammaṃ deseti cakkhumā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap413:9.1":{"pli":"Sumedho nāma sambuddho, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap413:9.2":{"pli":"āhutīnaṃ paṭiggaho; ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:9.3":{"pli":"Devasaṅghe nisīditvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:9.4":{"pli":"imā gāthā abhāsatha. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap413:10.1":{"pli":"‘Yo me sattāhaṃ maṇḍapaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap413:10.2":{"pli":"dhārayī sālachāditaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:10.3":{"pli":"Tamahaṃ kittayissāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:10.4":{"pli":"suṇātha mama bhāsato. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap413:11.1":{"pli":"Devabhūto manusso vā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap413:11.2":{"pli":"hemavaṇṇo bhavissati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:11.3":{"pli":"Pahūtabhogo hutvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:11.4":{"pli":"kāmabhogī bhavissati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap413:12.1":{"pli":"Saṭṭhi nāgasahassāni, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap413:12.2":{"pli":"sabbālaṅkārabhūsitā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:12.3":{"pli":"Suvaṇṇakacchā mātaṅgā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:12.4":{"pli":"hemakappanavāsasā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap413:13.1":{"pli":"Ārūḷhā gāmaṇīyehi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap413:13.2":{"pli":"tomaraṅkusapāṇibhi; ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:13.3":{"pli":"Sāyaṃ pāto upaṭṭhānaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:13.4":{"pli":"āgamissantimaṃ naraṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:13.5":{"pli":"Tehi nāgehi parivuto, ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:13.6":{"pli":"ramissati ayaṃ naro. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap413:14.1":{"pli":"Saṭṭhi assasahassāni, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap413:14.2":{"pli":"sabbālaṅkārabhūsitā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:14.3":{"pli":"Ājānīyāva jātiyā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:14.4":{"pli":"sindhavā sīghavāhino. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap413:15.1":{"pli":"Ārūḷhā gāmaṇīyehi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap413:15.2":{"pli":"illiyācāpadhāribhi; ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:15.3":{"pli":"Parivāressantimaṃ niccaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:15.4":{"pli":"buddhapūjāyidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap413:16.1":{"pli":"Saṭṭhi rathasahassāni, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap413:16.2":{"pli":"sabbālaṅkārabhūsitā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:16.3":{"pli":"Dīpā athopi veyagghā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:16.4":{"pli":"sannaddhā ussitaddhajā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap413:17.1":{"pli":"Ārūḷhā gāmaṇīyehi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap413:17.2":{"pli":"cāpahatthehi vammibhi; ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:17.3":{"pli":"Parivāressantimaṃ niccaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:17.4":{"pli":"buddhapūjāyidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap413:18.1":{"pli":"Saṭṭhi gāmasahassāni, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap413:18.2":{"pli":"paripuṇṇāni sabbaso; ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:18.3":{"pli":"Pahūtadhanadhaññāni, ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:18.4":{"pli":"susamiddhāni sabbaso; ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:18.5":{"pli":"Sadā pātubhavissanti, ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:18.6":{"pli":"buddhapūjāyidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap413:19.1":{"pli":"Hatthī assā rathā pattī, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap413:19.2":{"pli":"senā ca caturaṅginī; ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:19.3":{"pli":"Parivāressantimaṃ niccaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:19.4":{"pli":"buddhapūjāyidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap413:20.1":{"pli":"Aṭṭhārase kappasate, ",