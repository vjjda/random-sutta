":{"pli":"Tisso vijjā anuppattā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:30.4":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap413:31.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap413:31.2":{"pli":"vimokkhāpi ca aṭṭhime; ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:31.3":{"pli":"Chaḷabhiññā sacchikatā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap413:31.4":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap413:32.1":{"pli":"Itthaṃ sudaṃ āyasmā bhaddālitthero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap413:33.1":{"pli":"Bhaddālittherassāpadānaṃ paṭhamaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"tha-ap414":{"tha-ap414:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap414'><header><ul><li class='division'>{}</li>"},"tha-ap414:0.2":{"pli":"Bhaddālivagga ","html":"<li>{}</li></ul>"},"tha-ap414:0.3":{"pli":"Ekachattiyattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap414:1.1":{"pli":"“Candabhāgānadītīre, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap414:1.2":{"pli":"assamo sukato mama; ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:1.3":{"pli":"Susuddhapulinākiṇṇo, ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:1.4":{"pli":"pannasālā sumāpitā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap414:2.1":{"pli":"Uttānakūlā nadikā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap414:2.2":{"pli":"supatitthā manoramā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:2.3":{"pli":"Macchakacchapasampannā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:2.4":{"pli":"susumāranisevitā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap414:3.1":{"pli":"Acchā dīpī ca mayūrā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap414:3.2":{"pli":"karavīkā ca