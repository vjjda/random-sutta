,"tha-ap414:29.3":{"pli":"Assamā abhinikkhamma, ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:29.4":{"pli":"idaṃ vacanamabraviṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap414:30.1":{"pli":"‘Buddho loke samuppanno, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap414:30.2":{"pli":"dvattiṃsavaralakkhaṇo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:30.3":{"pli":"Etha sabbe gamissāma, ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:30.4":{"pli":"sammāsambuddhasantikaṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap414:31.1":{"pli":"Ovādapaṭikarā te, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap414:31.2":{"pli":"sadhamme pāramiṃ gatā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:31.3":{"pli":"Sādhūti sampaṭicchiṃsu, ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:31.4":{"pli":"uttamatthagavesakā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap414:32.1":{"pli":"Jaṭābhārabharitā te, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap414:32.2":{"pli":"ajinuttaravāsanā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:32.3":{"pli":"Uttamatthaṃ gavesantā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:32.4":{"pli":"nikkhamiṃsu vanā tadā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap414:33.1":{"pli":"Bhagavā tamhi samaye, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap414:33.2":{"pli":"atthadassī mahāyaso; ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:33.3":{"pli":"Catusaccaṃ pakāsento, ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:33.4":{"pli":"deseti amataṃ padaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap414:34.1":{"pli":"Setacchattaṃ gahetvāna, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap414:34.2":{"pli":"buddhaseṭṭhassa dhārayiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:34.3":{"pli":"Ekāhaṃ dhārayitvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:34.4":{"pli":"buddhaseṭṭhaṃ avandahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap414:35.1":{"pli":"Atthadassī tu bhagavā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap414:35.2":{"pli":"lokajeṭṭho narāsabho; ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:35.3":{"pli":"Bhikkhusaṅghe nisīditvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:35.4":{"pli":"imā gāthā abhāsatha. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap414:36.1":{"pli":"‘Yo me chattaṃ adhāresi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap414:36.2":{"pli":"pasanno sehi pāṇibhi; ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:36.3":{"pli":"Tamahaṃ kittayissāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:36.4":{"pli":"suṇātha mama bhāsato. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap414:37.1":{"pli":"Imassa jāyamānassa, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap414:37.2":{"pli":"devatte atha mānuse; ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:37.3":{"pli":"Dhāressati sadā chattaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:37.4":{"pli":"chattadānassidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap414:38.1":{"pli":"Sattasattatikappāni, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap414:38.2":{"pli":"devaloke ramissati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:38.3":{"pli":"Sahassakkhattuṃ rājā ca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:38.4":{"pli":"cakkavattī bhavissati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap414:39.1":{"pli":"Sattasattatikkhattuñca, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap414:39.2":{"pli":"devarajjaṃ karissati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:39.3":{"pli":"Padesarajjaṃ vipulaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:39.4":{"pli":"gaṇanāto asaṅkhiyaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap414:40.1":{"pli":"Aṭṭhārase kappasate, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap414:40.2":{"pli":"gotamo sakyapuṅgavo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:40.3":{"pli":"Tamandhakāraṃ nāsento, ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:40.4":{"pli":"uppajjissati cakkhumā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap414:41.1":{"pli":"Tassa dhammesu dāyādo, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap414:41.2":{"pli":"oraso dhammanimmito; ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:41.3":{"pli":"Sabbāsave pariññāya, ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:41.4":{"pli":"viharissatināsavo’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap414:42.1":{"pli":"Yato ahaṃ kammamakaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap414:42.2":{"pli":"chattaṃ buddhassa dhārayaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:42.3":{"pli":"Etthantare na jānāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:42.4":{"pli":"setacchattaṃ adhāritaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap414:43.1":{"pli":"Idaṃ pacchimakaṃ mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap414:43.2":{"pli":"carimo vattate bhavo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:43.3":{"pli":"Chattadhāraṇamajjāpi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:43.4":{"pli":"vattate niccakālikaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap414:44.1":{"pli":"Aho me sukataṃ kammaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap414:44.2":{"pli":"atthadassissa tādino; ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:44.3":{"pli":"Sabbāsavā parikkhīṇā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:44.4":{"pli":"natthi dāni punabbhavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap414:45.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap414:45.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:45.3":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap414:46.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap414:46.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:46.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap414:47.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap414:47.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:47.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap414:48.1":{"pli":"Itthaṃ sudaṃ āyasmā ekachattiyo thero imā gāthāyo abhāsitthāti; ","html":"<p>{}</p>"},"tha-ap414:49.1":{"pli":"Ekachattiyattherassāpadānaṃ dutiyaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"tha-ap415":{"tha-ap415:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap415'><header><ul><li class='division'>{}</li>"},"tha-ap415:0.2":{"pli":"Bhaddālivagga ","html":"<li>{}</li></ul>"},"tha-ap415:0.3":{"pli":"3 Tiṇasūlakachādaniyattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap415:1.1":{"pli":"“Jātiṃ jarañca maraṇaṃ, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap415:1.2":{"pli":"paccavekkhiṃ ahaṃ tadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:1.3":{"pli":"Ekako abhinikkhamma, ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:1.4":{"pli":"pabbajiṃ anagāriyaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap415:2.1":{"pli":"Caramānonupubbena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap415:2.2":{"pli":"gaṅgātīraṃ upāgamiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:2.3":{"pli":"Tatthaddasāsiṃ pathaviṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:2.4":{"pli":"gaṅgātīre samunnataṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap415:3.1":{"pli":"Assamaṃ tattha māpetvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap415:3.2":{"pli":"vasāmi assame ahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:3.3":{"pli":"Sukato caṅkamo mayhaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:3.4":{"pli":"nānādijagaṇāyuto. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap415:4.1":{"pli":"Mamupenti ca vissatthā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap415:4.2":{"pli":"kūjanti ca manoharaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:4.3":{"pli":"Ramamāno saha tehi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:4.4":{"pli":"vasāmi assame ahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap415:5.1":{"pli":"Mama assamasāmantā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap415:5.2":{"pli":"migarājā catukkamo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:5.3":{"pli":"Āsayā abhinikkhamma, ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:5.4":{"pli":"gajji so asanī viya. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap415:6.1":{"pli":"Nadite migarāje ca, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap415:6.2":{"pli":"hāso me udapajjatha; ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:6.3":{"pli":"Migarājaṃ gavesanto, ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:6.4":{"pli":"addasaṃ lokanāyakaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap415:7.1":{"pli":"Disvānāhaṃ devadevaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap415:7.2":{"pli":"tissaṃ lokagganāyakaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:7.3":{"pli":"Haṭṭho haṭṭhena cittena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:7.4":{"pli":"pūjayiṃ nāgakesaraṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap415:8.1":{"pli":"Uggacchantaṃva sūriyaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap415:8.2":{"pli":"sālarājaṃva pupphitaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:8.3":{"pli":"Osadhiṃva virocantaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:8.4":{"pli":"santhaviṃ lokanāyakaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap415:9.1":{"pli":"‘Tava ñāṇena sabbaññu, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap415:9.2":{"pli":"mocesimaṃ sadevakaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:9.3":{"pli":"Tavaṃ ārādhayitvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:9.4":{"pli":"jātiyā parimuccare. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap415:10.1":{"pli":"Adassanena sabbaññu, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap415:10.2":{"pli":"buddhānaṃ sabbadassinaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:10.3":{"pli":"Patantivīcinirayaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:10.4":{"pli":"rāgadosehi ophuṭā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap415:11.1":{"pli":"Tava dassanamāgamma, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap415:11.2":{"pli":"sabbaññu lokanāyaka; ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:11.3":{"pli":"Pamuccanti bhavā sabbā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:11.4":{"pli":"phusanti amataṃ padaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap415:12.1":{"pli":"Yadā buddhā cakkhumanto, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap415:12.2":{"pli":"uppajjanti pabhaṅkarā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:12.3":{"pli":"Kilese jhāpayitvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:12.4":{"pli":"ālokaṃ dassayanti te’. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap415:13.1":{"pli":"Kittayitvāna sambuddhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap415:13.2":{"pli":"tissaṃ lokagganāyakaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:13.3":{"pli":"Haṭṭho haṭṭhena cittena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:13.4":{"pli":"tiṇasūlaṃ apūjayiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap415:14.1":{"pli":"Mama saṅkappamaññāya, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap415:14.2":{"pli":"tisso lokagganāyako; ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:14.3":{"pli":"Sakāsane nisīditvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:14.4":{"pli":"imā gāthā abhāsatha. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap415:15.1":{"pli":"‘Yo maṃ pupphehi chādesi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap415:15.2":{"pli":"pasanno sehi pāṇibhi; ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:15.3":{"pli":"Tamahaṃ kittayissāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:15.4":{"pli":"suṇātha mama bhāsato. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap415:16.1":{"pli":"Pañcavīsatikkhattuṃ so, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap415:16.2":{"pli":"devarajjaṃ karissati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:16.3":{"pli":"Pañcasattatikkhattuñca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:16.4":{"pli":"cakkavattī bhavissati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap415:17.1":{"pli":"Padesarajjaṃ vipulaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap415:17.2":{"pli":"gaṇanāto asaṅkhiyaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:17.3":{"pli":"Tassa kammanissandena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:17.4":{"pli":"pupphānaṃ pūjanāya ca. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap415:18.1":{"pli":"Sīsaṃnhāto cayaṃ poso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap415:18.2":{"pli":"pupphamākaṅkhate yadi; ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:18.3":{"pli":"Puññakammena saṃyuttaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:18.4":{"pli":"purato pātubhavissati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap415:19.1":{"pli":"Yaṃ yaṃ icchati kāmehi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap415:19.2":{"pli":"taṃ taṃ pātubhavissati; ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:19.3":{"pli":"Saṅkappaṃ paripūretvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:19.4":{"pli":"nibbāyissatināsavo’. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap415:20.1":{"pli":"Aṭṭhārasamaṃ bhāṇavāraṃ. ","html":"<p class='endsutta'>{}</p>"},"tha-ap415:21.1":{"pli":"Kilese jhāpayitvāna, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap415:21.2":{"pli":"sampajāno patissato; ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:21.3":{"pli":"Ekāsane nisīditvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:21.4":{"pli":"arahattamapāpuṇiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap415:22.1":{"pli":"Caṅkamanto nipajjanto, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap415:22.2":{"pli":"nisinno uda vā ṭhito; ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:22.3":{"pli":"Buddhaseṭṭhaṃ saritvāna, ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:22.4":{"pli":"viharāmi ahaṃ sadā. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap415:23.1":{"pli":"Cīvare piṇḍapāte ca, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap415:23.2":{"pli":"paccaye sayanāsane; ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:23.3":{"pli":"Tattha me ūnatā natthi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:23.4":{"pli":"buddhapūjāyidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap415:24.1":{"pli":"So dāni patto amataṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap415:24.2":{"pli":"santaṃ padamanuttaraṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:24.3":{"pli":"Sabbāsave pariññāya, ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:24.4":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap415:25.1":{"pli":"Dvenavute ito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap415:25.2":{"pli":"yaṃ pupphamabhipūjayiṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:25.3":{"pli":"Duggatiṃ nābhijānāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:25.4":{"pli":"buddhapūjāyidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap415:26.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap415:26.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:26.3":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap415:27.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap415:27.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:27.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap415:28.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap415:28.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap415:28.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap415:29.1":{"pli":"Itthaṃ sudaṃ āyasmā tiṇasūlakachādaniyo thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap415:30.1":{"pli":"Tiṇasūlakachādaniyattherassāpadānaṃ tatiyaṃ. ","html":"<p class='endsutta'>{}</p></article>"}},"tha-ap416":{"tha-ap416:0.1":{"pli":"Therāpadāna ","html":"<article id='tha-ap416'><header><ul><li class='division'>{}</li>"},"tha-ap416:0.2":{"pli":"Bhaddālivagga ","html":"<li>{}</li></ul>"},"tha-ap416:0.3":{"pli":"Madhumaṃsadāyakattheraapadāna ","html":"<h1 class='sutta-title'>{}</h1></header>"},"tha-ap416:1.1":{"pli":"“Nagare bandhumatiyā, ","html":"<blockquote class='gatha'><p><span class='verse-line'>{}</span>"},"tha-ap416:1.2":{"pli":"sūkariko ahosahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap416:1.3":{"pli":"Ukkoṭakaṃ randhayitvā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap416:1.4":{"pli":"madhumaṃsamhi okiriṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap416:2.1":{"pli":"Sannipātaṃ ahaṃ gantvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap416:2.2":{"pli":"ekaṃ pattaṃ gahesahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap416:2.3":{"pli":"Pūrayitvāna taṃ pattaṃ, ","html":"<span class='verse-line'>{}</span>"},"tha-ap416:2.4":{"pli":"bhikkhusaṅghassadāsahaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap416:3.1":{"pli":"Yottha therataro bhikkhu, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap416:3.2":{"pli":"niyyādesi mamaṃ tadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap416:3.3":{"pli":"Iminā pattapūrena, ","html":"<span class='verse-line'>{}</span>"},"tha-ap416:3.4":{"pli":"labhassu vipulaṃ sukhaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap416:4.1":{"pli":"Duve sampattiyo bhutvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap416:4.2":{"pli":"sukkamūlena codito; ","html":"<span class='verse-line'>{}</span>"},"tha-ap416:4.3":{"pli":"Pacchime vattamānamhi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap416:4.4":{"pli":"kilese jhāpayissati. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap416:5.1":{"pli":"Tattha cittaṃ pasādetvā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap416:5.2":{"pli":"tāvatiṃsamagacchahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap416:5.3":{"pli":"Tattha bhutvā pivitvā ca, ","html":"<span class='verse-line'>{}</span>"},"tha-ap416:5.4":{"pli":"labhāmi vipulaṃ sukhaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap416:6.1":{"pli":"Maṇḍape rukkhamūle vā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap416:6.2":{"pli":"pubbakammaṃ anussariṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap416:6.3":{"pli":"Annapānābhivasso me, ","html":"<span class='verse-line'>{}</span>"},"tha-ap416:6.4":{"pli":"abhivassati tāvade. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap416:7.1":{"pli":"Idaṃ pacchimakaṃ mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap416:7.2":{"pli":"carimo vattate bhavo; ","html":"<span class='verse-line'>{}</span>"},"tha-ap416:7.3":{"pli":"Idhāpi annapānaṃ me, ","html":"<span class='verse-line'>{}</span>"},"tha-ap416:7.4":{"pli":"vassate sabbakālikaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap416:8.1":{"pli":"Teneva madhudānena, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap416:8.2":{"pli":"sandhāvitvā bhave ahaṃ; ","html":"<span class='verse-line'>{}</span>"},"tha-ap416:8.3":{"pli":"Sabbāsave pariññāya, ","html":"<span class='verse-line'>{}</span>"},"tha-ap416:8.4":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap416:9.1":{"pli":"Ekanavutito kappe, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap416:9.2":{"pli":"yaṃ dānamadadiṃ tadā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap416:9.3":{"pli":"Duggatiṃ nābhijānāmi, ","html":"<span class='verse-line'>{}</span>"},"tha-ap416:9.4":{"pli":"madhudānassidaṃ phalaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap416:10.1":{"pli":"Kilesā jhāpitā mayhaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap416:10.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap416:10.3":{"pli":"viharāmi anāsavo. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap416:11.1":{"pli":"Svāgataṃ vata me āsi, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap416:11.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap416:11.3":{"pli":"kataṃ buddhassa sāsanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap416:12.1":{"pli":"Paṭisambhidā catasso, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap416:12.2":{"pli":"…pe… ","html":"<span class='verse-line'>{}</span>"},"tha-ap416:12.3":{"pli":"kataṃ buddhassa sāsanaṃ”. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"tha-ap416:13.1":{"pli":"Itthaṃ sudaṃ āyasmā madhumaṃsadāyako thero imā gāthāyo abhāsitthāti. ","html":"<p>{}</p>"},"tha-ap416:14.1":{"pli":"Madhumaṃsadāyakattherassāpadānaṃ catutthaṃ. ","html":"<p class='endsutta'>{}</p></article>"}}}