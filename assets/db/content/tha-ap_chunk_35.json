":"Madhu bhisamhā savati, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap414:19.2":{"pli":"khīrasappi muḷālibhi; ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:19.3":{"pli":"Dibbagandhaṃ sampavantā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:19.4":{"pli":"sobhayanti mamassamaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap414:20.1":{"pli":"Pulinā sobhanā tattha, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap414:20.2":{"pli":"ākiṇṇā jalasevitā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:20.3":{"pli":"Opupphā pupphitā senti, ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:20.4":{"pli":"sobhayantā mamassamaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap414:21.1":{"pli":"Jaṭābhārena bharitā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap414:21.2":{"pli":"ajinuttaravāsanā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:21.3":{"pli":"Vākacīradharā sabbe, ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:21.4":{"pli":"sobhayanti mamassamaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap414:22.1":{"pli":"Yugamattamapekkhantā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap414:22.2":{"pli":"nipakā santavuttino; ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:22.3":{"pli":"Kāmabhoge anapekkhā, ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:22.4":{"pli":"vasanti mama assame. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap414:23.1":{"pli":"Parūḷhakacchanakhalomā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap414:23.2":{"pli":"paṅkadantā rajassirā; ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:23.3":{"pli":"Rajojalladharā sabbe, ","html":"<span class='verse-line'>{}</span>"},"tha-ap414:23.4":{"pli":"vasanti mama assame. ","html":"<span class='verse-line'>{}</span></p>"},"tha-ap414:24.1":{"pli":"Abhiññāpāramippattā, ","html":"<p><span class='verse-line'>{}</span>"},"tha-ap414:2