:19.3":{"pli":"Paṭiyattavaramaggena, ","html":"<span class='verse-line'>{}</span>"},"bv26:19.4":{"pli":"bodhimūlamupehiti. ","html":"<span class='verse-line'>{}</span></p>"},"bv26:20.1":{"pli":"Tato padakkhiṇaṃ katvā, ","html":"<p><span class='verse-line'>{}</span>"},"bv26:20.2":{"pli":"bodhimaṇḍaṃ anuttaro; ","html":"<span class='verse-line'>{}</span>"},"bv26:20.3":{"pli":"Aparājitaṭṭhānamhi, ","html":"<span class='verse-line'>{}</span>"},"bv26:20.4":{"pli":"bodhipallaṅkamuttame; ","html":"<span class='verse-line'>{}</span>"},"bv26:20.5":{"pli":"Pallaṅkena nisīditvā, ","html":"<span class='verse-line'>{}</span>"},"bv26:20.6":{"pli":"bujjhissati mahāyaso. ","html":"<span class='verse-line'>{}</span></p>"},"bv26:21.1":{"pli":"Imassa janikā mātā, ","html":"<p><span class='verse-line'>{}</span>"},"bv26:21.2":{"pli":"māyā nāma bhavissati; ","html":"<span class='verse-line'>{}</span>"},"bv26:21.3":{"pli":"Pitā suddhodano nāma, ","html":"<span class='verse-line'>{}</span>"},"bv26:21.4":{"pli":"ayaṃ hessati gotamo. ","html":"<span class='verse-line'>{}</span></p>"},"bv26:22.1":{"pli":"Anāsavā vītarāgā, ","html":"<p><span class='verse-line'>{}</span>"},"bv26:22.2":{"pli":"santacittā samāhitā; ","html":"<span class='verse-line'>{}</span>"},"bv26:22.3":{"pli":"Kolito upatisso ca, ","html":"<span class='verse-line'>{}</span>"},"bv26:22.4":{"pli":"aggā hessanti sāvakā; ","html":"<span class='verse-line'>{}</span>"},"bv26:22.5":{"pli":"Ānando nāmupaṭṭhāko, ","html":"<span class='verse-line'>{}</span>"},"bv26:22.6":{"pli":"upaṭṭhissatimaṃ jinaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv26:23.1":{"pli":"Khemā uppalavaṇṇā ca, ","html":"<p><span class='verse-line'>{}</span>"},"bv26:23.2":{"pli":"aggā hessanti sāvikā; ","html":"<span class='verse-line'>{}</span>"},"bv26:23.3":{"pli":"Anāsavā santacittā, ","html":"<span class='verse-line'>{}</span>"},"bv26:23.4":{"pli":"vītarāgā samāhitā; ","html":"<span class='verse-line'>{}</span>"},"bv26:23.5":{"pli":"Bodhi tassa bhagavato, ","html":"<span class='verse-line'>{}</span>"},"bv26:23.6":{"pli":"assatthoti pavuccati. ","html":"<span class='verse-line'>{}</span></p>"},"bv26:24.1":{"pli":"Citto hatthāḷavako ca, ","html":"<p><span class='verse-line'>{}</span>"},"bv26:24.2":{"pli":"aggā hessantupaṭṭhakā; ","html":"<span class='verse-line'>{}</span>"},"bv26:24.3":{"pli":"Nandamātā ca uttarā, ","html":"<span class='verse-line'>{}</span>"},"bv26:24.4":{"pli":"aggā hessantupaṭṭhikā’. ","html":"<span class='verse-line'>{}</span></p>"},"bv26:25.1":{"pli":"Idaṃ sutvāna vacanaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"bv26:25.2":{"pli":"assamassa mahesino; ","html":"<span class='verse-line'>{}</span>"},"bv26:25.3":{"pli":"Āmoditā naramarū, ","html":"<span class='verse-line'>{}</span>"},"bv26:25.4":{"pli":"buddhabījaṃ kira ayaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv26:26.1":{"pli":"Ukkuṭṭhisaddā pavattanti, ","html":"<p><span class='verse-line'>{}</span>"},"bv26:26.2":{"pli":"apphoṭenti hasanti ca; ","html":"<span class='verse-line'>{}</span>"},"bv26:26.3":{"pli":"Katañjalī namassanti, ","html":"<span class='verse-line'>{}</span>"},"bv26:26.4":{"pli":"dasasahassī sadevakā. ","html":"<span class='verse-line'>{}</span></p>"},"bv26:27.1":{"pli":"‘Yadimassa lokanāthassa, ","html":"<p><span class='verse-line'>{}</span>"},"bv26:27.2":{"pli":"virajjhissāma sāsanaṃ; ","html":"<span class='verse-line'>{}</span>"},"bv26:27.3":{"pli":"Anāgatamhi addhāne, ","html":"<span class='verse-line'>{}</span>"},"bv26:27.4":{"pli":"hessāma sammukhā imaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv26:28.1":{"pli":"Yathā manussā nadiṃ tarantā, ","html":"<p><span class='verse-line'>{}</span>"},"bv26:28.2":{"pli":"Paṭititthaṃ virajjhiya; ","html":"<span class='verse-line'>{}</span>"},"bv26:28.3":{"pli":"Heṭṭhā titthe gahetvāna, ","html":"<span class='verse-line'>{}</span>"},"bv26:28.4":{"pli":"Uttaranti mahānadiṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv26:29.1":{"pli":"Evamevaṃ mayaṃ sabbe, ","html":"<p><span class='verse-line'>{}</span>"},"bv26:29.2":{"pli":"yadi muñcāmimaṃ jinaṃ; ","html":"<span class='verse-line'>{}</span>"},"bv26:29.3":{"pli":"Anāgatamhi addhāne, ","html":"<span class='verse-line'>{}</span>"},"bv26:29.4":{"pli":"hessāma sammukhā imaṃ’. ","html":"<span class='verse-line'>{}</span></p>"},"bv26:30.1":{"pli":"Tassāpi vacanaṃ sutvā, ","html":"<p><span class='verse-line'>{}</span>"},"bv26:30.2":{"pli":"bhiyyo cittaṃ pasādayiṃ; ","html":"<span class='verse-line'>{}</span>"},"bv26:30.3":{"pli":"Uttariṃ vatamadhiṭṭhāsiṃ, ","html":"<span class='verse-line'>{}</span>"},"bv26:30.4":{"pli":"dasapāramipūriyā. ","html":"<span class='verse-line'>{}</span></p>"},"bv26:31.1":{"pli":"Evamahaṃ saṃsaritvā, ","html":"<p><span class='verse-line'>{}</span>"},"bv26:31.2":{"pli":"parivajjento anācaraṃ; ","html":"<span class='verse-line'>{}</span>"},"bv26:31.3":{"pli":"Dukkarañca kataṃ mayhaṃ, ","html":"<span class='verse-line'>{}</span>"},"bv26:31.4":{"pli":"bodhiyāyeva kāraṇā. ","html":"<span class='verse-line'>{}</span></p>"},"bv26:32.1":{"pli":"Nagaraṃ bārāṇasī nāma, ","html":"<p><span class='verse-line'>{}</span>"},"bv26:32.2":{"pli":"kikī nāmāsi khattiyo; ","html":"<span class='verse-line'>{}</span>"},"bv26:32.3":{"pli":"Vasate tattha nagare, ","html":"<span class='verse-line'>{}</span>"},"bv26:32.4":{"pli":"sambuddhassa mahākulaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv26:33.1":{"pli":"Brāhmaṇo brahmadattova, ","html":"<p><span class='verse-line'>{}</span>"},"bv26:33.2":{"pli":"āsi buddhassa so pitā; ","html":"<span class='verse-line'>{}</span>"},"bv26:33.3":{"pli":"Dhanavatī nāma janikā, ","html":"<span class='verse-line'>{}</span>"},"bv26:33.4":{"pli":"kassapassa mahesino. ","html":"<span class='verse-line'>{}</span></p>"},"bv26:34.1":{"pli":"Duve vassasahassāni, ","html":"<p><span class='verse-line'>{}</span>"},"bv26:34.2":{"pli":"agāraṃ ajjha so vasi; ","html":"<span class='verse-line'>{}</span>"},"bv26:34.3":{"pli":"Haṃso yaso sirinando, ","html":"<span class='verse-line'>{}</span>"},"bv26:34.4":{"pli":"tayo pāsādamuttamā. ","html":"<span class='verse-line'>{}</span></p>"},"bv26:35.1":{"pli":"Tisoḷasasahassāni, ","html":"<p><span class='verse-line'>{}</span>"},"bv26:35.2":{"pli":"Nāriyo samalaṅkatā; ","html":"<span class='verse-line'>{}</span>"},"bv26:35.3":{"pli":"Sunandā nāma sā nārī, ","html":"<span class='verse-line'>{}</span>"},"bv26:35.4":{"pli":"Vijitaseno nāma atrajo. ","html":"<span class='verse-line'>{}</span></p>"},"bv26:36.1":{"pli":"Nimitte caturo disvā, ","html":"<p><span class='verse-line'>{}</span>"},"bv26:36.2":{"pli":"pāsādenābhinikkhami; ","html":"<span class='verse-line'>{}</span>"},"bv26:36.3":{"pli":"Sattāhaṃ padhānacāraṃ, ","html":"<span class='verse-line'>{}</span>"},"bv26:36.4":{"pli":"acarī purisuttamo. ","html":"<span class='verse-line'>{}</span></p>"},"bv26:37.1":{"pli":"Brahmunā yācito santo, ","html":"<p><span class='verse-line'>{}</span>"},"bv26:37.2":{"pli":"kassapo lokanāyako; ","html":"<span class='verse-line'>{}</span>"},"bv26:37.3":{"pli":"Vatti cakkaṃ mahāvīro, ","html":"<span class='verse-line'>{}</span>"},"bv26:37.4":{"pli":"migadāye naruttamo. ","html":"<span class='verse-line'>{}</span></p>"},"bv26:38.1":{"pli":"Tisso ca bhāradvājo ca, ","html":"<p><span class='verse-line'>{}</span>"},"bv26:38.2":{"pli":"ahesuṃ aggasāvakā; ","html":"<span class='verse-line'>{}</span>"},"bv26:38.3":{"pli":"Sabbamitto nāmupaṭṭhāko, ","html":"<span class='verse-line'>{}</span>"},"bv26:38.4":{"pli":"kassapassa mahesino. ","html":"<span class='verse-line'>{}</span></p>"},"bv26:39.1":{"pli":"Anuḷā uruvelā ca, ","html":"<p><span class='verse-line'>{}</span>"},"bv26:39.2":{"pli":"ahesuṃ aggasāvikā; ","html":"<span class='verse-line'>{}</span>"},"bv26:39.3":{"pli":"Bodhi tassa bhagavato, ","html":"<span class='verse-line'>{}</span>"},"bv26:39.4":{"pli":"nigrodhoti pavuccati. ","html":"<span class='verse-line'>{}</span></p>"},"bv26:40.1":{"pli":"Sumaṅgalo ghaṭikāro ca, ","html":"<p><span class='verse-line'>{}</span>"},"bv26:40.2":{"pli":"ahesuṃ aggupaṭṭhakā; ","html":"<span class='verse-line'>{}</span>"},"bv26:40.3":{"pli":"Vicitasenā bhaddā ca, ","html":"<span class='verse-line'>{}</span>"},"bv26:40.4":{"pli":"ahesuṃ aggupaṭṭhikā. ","html":"<span class='verse-line'>{}</span></p>"},"bv26:41.1":{"pli":"Uccattanena so buddho, ","html":"<p><span class='verse-line'>{}</span>"},"bv26:41.2":{"pli":"vīsatiratanuggato; ","html":"<span class='verse-line'>{}</span>"},"bv26:41.3":{"pli":"Vijjulaṭṭhīva ākāse, ","html":"<span class='verse-line'>{}</span>"},"bv26:41.4":{"pli":"candova gahapūrito. ","html":"<span class='verse-line'>{}</span></p>"},"bv26:42.1":{"pli":"Vīsativassasahassāni, ","html":"<p><span class='verse-line'>{}</span>"},"bv26:42.2":{"pli":"āyu tassa mahesino; ","html":"<span class='verse-line'>{}</span>"},"bv26:42.3":{"pli":"Tāvatā tiṭṭhamāno so, ","html":"<span class='verse-line'>{}</span>"},"bv26:42.4":{"pli":"tāresi janataṃ bahuṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv26:43.1":{"pli":"Dhammataḷākaṃ māpayitvā, ","html":"<p><span class='verse-line'>{}</span>"},"bv26:43.2":{"pli":"sīlaṃ datvā vilepanaṃ; ","html":"<span class='verse-line'>{}</span>"},"bv26:43.3":{"pli":"Dhammadussaṃ nivāsetvā, ","html":"<span class='verse-line'>{}</span>"},"bv26:43.4":{"pli":"dhammamālaṃ vibhajjiya. ","html":"<span class='verse-line'>{}</span></p>"},"bv26:44.1":{"pli":"Dhammavimalamādāsaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"bv26:44.2":{"pli":"ṭhapayitvā mahājane; ","html":"<span class='verse-line'>{}</span>"},"bv26:44.3":{"pli":"Keci nibbānaṃ patthentā, ","html":"<span class='verse-line'>{}</span>"},"bv26:44.4":{"pli":"passantu me alaṅkaraṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv26:45.1":{"pli":"Sīlakañcukaṃ datvāna, ","html":"<p><span class='verse-line'>{}</span>"},"bv26:45.2":{"pli":"jhānakavacavammitaṃ; ","html":"<span class='verse-line'>{}</span>"},"bv26:45.3":{"pli":"Dhammacammaṃ pārupitvā, ","html":"<span class='verse-line'>{}</span>"},"bv26:45.4":{"pli":"datvā sannāhamuttamaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv26:46.1":{"pli":"Satiphalakaṃ datvāna, ","html":"<p><span class='verse-line'>{}</span>"},"bv26:46.2":{"pli":"tikhiṇañāṇakuntimaṃ; ","html":"<span class='verse-line'>{}</span>"},"bv26:46.3":{"pli":"Dhammakhaggavaraṃ datvā, ","html":"<span class='verse-line'>{}</span>"},"bv26:46.4":{"pli":"sīlasaṃsaggamaddanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv26:47.1":{"pli":"Tevijjābhūsanaṃ datvāna, ","html":"<p><span class='verse-line'>{}</span>"},"bv26:47.2":{"pli":"āveḷaṃ caturo phale; ","html":"<span class='verse-line'>{}</span>"},"bv26:47.3":{"pli":"Chaḷabhiññābharaṇaṃ datvā, ","html":"<span class='verse-line'>{}</span>"},"bv26:47.4":{"pli":"dhammapupphapiḷandhanaṃ. ","html":"<span class='verse-line'>{}</span></p>"},"bv26:48.1":{"pli":"Saddhammapaṇḍaracchattaṃ, ","html":"<p><span class='verse-line'>{}</span>"},"bv26:48.2":{"pli":"datvā pāpanivāraṇaṃ; ","html":"<span class='verse-line'>{}</span>"},"bv26:48.3":{"pli":"Māpayitvābhayaṃ pupphaṃ, ","html":"<span class='verse-line'>{}</span>"},"bv26:48.4":{"pli":"nibbuto so sasāvako. ","html":"<span class='verse-line'>{}</span></p>"},"bv26:49.1":{"pli":"Eso hi sammāsambuddho, ","html":"<p><span class='verse-line'>{}</span>"},"bv26:49.2":{"pli":"appameyyo durāsado; ","html":"<span class='verse-line'>{}</span>"},"bv26:49.3":{"pli":"Eso hi dhammaratano, ","html":"<span class='verse-line'>{}</span>"},"bv26:49.4":{"pli":"svākkhāto ehipassiko. ","html":"<span class='verse-line'>{}</span></p>"},"bv26:50.1":{"pli":"Eso hi saṅgharatano, ","html":"<p><span class='verse-line'>{}</span>"},"bv26:50.2":{"pli":"suppaṭipanno anuttaro; ","html":"<span class='verse-line'>{}</span>"},"bv26:50.3":{"pli":"Sabbaṃ tamantarahitaṃ, ","html":"<span class='verse-line'>{}</span>"},"bv26:50.4":{"pli":"nanu rittā sabbasaṅkhārā. ","html":"<span class='verse-line'>{}</span></p>"},"bv26:51.1":{"pli":"Mahākassapo jino satthā, ","html":"<p data-counter='10081'><span class='verse-line'>{}</span>"},"bv26:51.2":{"pli":"Setabyārāmamhi nibbuto; ","html":"<span class='verse-line'>{}</span>"},"bv26:51.3":{"pli":"Tatthevassa jinathūpo, ","html":"<span class='verse-line'>{}</span>"},"bv26:51.4":{"pli":"Yojanubbedhamuggato”ti. ","html":"<span class='verse-line'>{}</span></p></blockquote>"},"bv26:52.1":{"pli":"Kassapassa bhagavato vaṃso catuvīsatimo. ","html":"<p class='endsutta'>{}</p></article>"}}}